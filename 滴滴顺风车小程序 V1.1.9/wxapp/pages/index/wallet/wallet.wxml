<view class="top">
    <view class="t-img">
        <image class="t-img" src="/images/qb.png"></image>
    </view>
    <view class="t-aito">
        <view class="t-a-top">
            <text>押金</text>
        </view>
        <view class="t-a-b">
            <text>{{info.deposit}}</text>
            <text class="font"> 元</text>
        </view>
    </view>
    <view class="t-marin">
        <view class="t-a-top">
            <text>账户</text>
        </view>
        <view class="t-a-b">
            <text>{{info.account_amount}}</text>
            <text class="font"> 元</text>
        </view>
    </view>
    <view class="t-righta">
        <view class="t-a-top">
            <text>红包</text>
        </view>
        <view class="t-a-b">
            <text>{{info.redpacked}}</text>
            <text class="font"> 元</text>
        </view>
    </view>
</view>
<view class="boxa">
    <view class="box">
        <view class="b-auto">
            <view bindtap="recharge" class="b-a-top">
                <view class="b-a-t-logo">
                    <image class="riding-img" src="/images/cz.png"></image>
                </view>
                <view class="b-a-font">
                    <text>充值</text>
                </view>
                <view class="b-a-right">
                    <view class="b-a-you">
                        <image class="you-img" src="/images/you.png"></image>
                    </view>
                </view>
            </view>
            <view bindtap="deposit" class="b-a-topa">
                <view class="b-a-t-logo">
                    <image class="riding-img" src="/images/tx.png"></image>
                </view>
                <view class="b-a-font">
                    <text>提现</text>
                </view>
                <view class="b-a-right">
                    <view class="b-a-you">
                        <image class="you-img" src="/images/you.png"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
<view class="boxa">
    <view class="time">
        <view class="b-auto">
            <view bindtap="Detailed" class="b-a-topa">
                <view class="b-a-t-logo">
                    <image class="ridinga-img" src="/images/mx.png"></image>
                </view>
                <view class="b-a-font">
                    <text>明细记录</text>
                </view>
                <view class="b-a-right">
                    <view class="b-a-you">
                        <image class="you-img" src="/images/you.png"></image>
                    </view>
                    <view class="b-a-y-font"></view>
                </view>
            </view>
        </view>
    </view>
</view>
