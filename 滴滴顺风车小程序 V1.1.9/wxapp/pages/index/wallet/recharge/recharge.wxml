<view class="top">
    <view class="t-top">
        <text>充值金额</text>
    </view>
    <view class="t-bott">
        <view class="t-b-font">
            <text>￥</text>
        </view>
        <view class="t-b-input">
            <input bindinput="recharge" class="inut" focus="{{focus}}" type="number"></input>
        </view>
    </view>
</view>
<view class="box">
    <view class="b-box">
        <view class="b-t">
            <text>充值到</text>
        </view>
        <radio-group bindchange="radioChange" class="radio-group">
            <view class="b-t">
                <view class="b-red">
                    <label class="radio">
                        <radio class="radio" color="#61A9FE" value="1"></radio>
                    </label>
                </view>
                <view class="re-fota">
                    <text>押金</text>
                </view>
            </view>
        </radio-group>
    </view>
</view>
<form bindsubmit="information" reportSubmit="true">
    <view class="save">
        <button class="bottom" formType="submit">充值</button>
    </view>
</form>
