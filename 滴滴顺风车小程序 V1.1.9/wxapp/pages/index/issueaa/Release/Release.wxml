<view>
    <view class="map">
        <view>
            <map showLocation bindcontroltap="controltap" bindmarkertap="markertap" bindregionchange="regionchange" controls="{{controls}}" id="map" latitude="{{yval}}" longitude="{{xval}}" markers="{{markers}}" polyline="{{polyline}}" scale="14" style="{{style}}"></map>
        </view>
        <cover-view bindtap="locth" class="location">
            <cover-image class="location-img" src="/images/location.png"></cover-image>
        </cover-view>
        <view wx:if="{{ntype==2}}">
            <cover-view bindtap="daohang" class="pull-down">
        导航
      </cover-view>
        </view>
    </view>
    <view class="marin-top"></view>
    <view class="name">
        <view class="origin">
            <view class="origin-top">
                <view class="originasa">
                    <image class="origin-pnga" src="/images/yuan.png"></image>
                </view>
                <view class="origin-right">
                    <view class="or-top">
                        <view class="or-t-top">
                            <text>{{info.starting_place}}</text>
                        </view>
                        <view class="or-t-tbott">
                            <text>{{info.begin_addr}}</text>
                        </view>
                    </view>
                </view>
            </view>
            <view wx:if="{{info.station.length!==0}}">
                <radio-group bindchange="radioChange" class="radio-group">
                    <label class="radio" wx:for="{{info.station}}" wx:key="userInfoListId">
                        <view class="origin-aotu">
                            <view class="originasa">
                                <image class="origisn-pnga" src="/images/aaa.png"></image>
                            </view>
                            <view class="origin-right">
                                <view class="or-top">
                                    <view class="or-t-top">
                                        <view class="widt">
                                            <text>{{item.end_place}}</text>
                                        </view>
                                    </view>
                                    <view class="or-t-tbott">
                                        <text>{{item.end_addr}}</text>
                                    </view>
                                    <view class="radok">
                                        <text class="rerw"> {{item.money}} </text> 元
                  </view>
                                </view>
                            </view>
                        </view>
                    </label>
                </radio-group>
            </view>
            <view class="origin-bottom">
                <view class="originasa">
                    <image class="origin-pnga" src="/images/quan.png"></image>
                </view>
                <view class="origin-right">
                    <view class="or-bott">
                        <view class="or-left">
                            <view>
                                <text>{{info.end_place}}</text>
                            </view>
                            <view class="or-l-bott">
                                <text>{{info.end_addr}}</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="message">
        <view class="box">
            <view class="b-auto">
                <view class="b-a-top">
                    <view class="b-a-font">
                        <text>出发时间</text>
                    </view>
                    <view class="b-a-right">
                        <view class="b-a-y-font">
                            <text class="num"> {{info.begin_time}}</text>
                        </view>
                    </view>
                </view>
                <view class="b-a-topa">
                    <view class="b-a-font">
                        <text>{{ntype==1?'乘车人数':'座位数'}}</text>
                    </view>
                    <view class="b-a-right">
                        <view wx:if="{{ntype==1}}">
                            <view class="b-a-y-font">
                                <text class="num"> {{info.number}} 人</text>
                            </view>
                        </view>
                        <view wx:if="{{ntype==2}}">
                            <view class="b-a-y-font">
                                <text class="num"> {{info.now_num}} / {{info.number}}</text>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="b-a-topb">
                    <view class="b-a-font">
                        <text>座位价格</text>
                    </view>
                    <view class="b-a-right">
                        <view class="b-a-y-font">
                            <text class="num"> {{info.money}} 元 / 人</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="marina">
        <view class="box">
            <view class="b-autob">
                <view class="remark">
                    <view class="re-top-font">
                        <text class="comment">备注：</text>
                    </view>
                    <view>
                        <text class="commeant">{{info.note}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view wx:if="{{info.isreceipt!=='1'}}">
        <view class="gpck">
            <text class="gpck-font">{{ntype==1?'接单车主':'购买乘客'}}</text>
        </view>
        <view wx:if="{{ntype==1}}">
            <view class="bott-box">
                <view class="box-num">
                    <text>1</text>
                </view>
                <view class="box-font">
                    <text>{{info.wx_nickname}}</text>
                </view>
                <view bindtap="phone" class="box-lave" data-phone="{{info.mobile}}">
                    <text>联系TA</text>
                </view>
            </view>
        </view>
        <view wx:if="{{ntype==2}}">
            <view class="bott-box" wx:for="{{info.data}}" wx:key="userInfoListId">
                <view class="box-num">
                    <text>{{index+1}}</text>
                </view>
                <view class="box-font">
                    <text>{{item.wx_nickname}}</text>
                </view>
                <view bindtap="separate" class="box-lave" data-nid="{{item.nid}}">
                    <text>开始行程</text>
                </view>
            </view>
        </view>
        <view class="bott-kong"></view>
        <view wx:if="{{ntype==1}}">
            <view wx:if="{{info.isstart==1}}">
                <view wx:if="{{info.isreceipt==2}}">
                    <view class="bott">
                        <view bindtap="{{info.istransfer==3?'dj':info.isreceipt==1?'ts':'Unable'}}" class="b-lefzxt">
                            <text>取消订单</text>
                        </view>
                        <view bindtap="phone" class="b-righta" data-phone="{{info.mobile}}">
                            <text>联系车主</text>
                        </view>
                    </view>
                </view>
                <view wx:if="{{info.isreceipt==1}}">
                    <view class="bott">
                        <view bindtap="cancel" class="b-lefzxt">
                            <text>取消订单</text>
                        </view>
                        <view bindtap="amend" class="b-righta">
                            <text>修改订单</text>
                        </view>
                    </view>
                </view>
            </view>
            <view wx:if="{{info.isstart==2||info.isstart==4}}">
                <view class="bott">
                    <view bindtap="{{info.istransfer==3?'dj':'complaint'}}" class="b-lefzxt" data-nid="{{info.nid}}" data-ntype="1">
                        <text>未到达目的地</text>
                    </view>
                    <view bindtap="{{info.istransfer==3?'dj':'arrive'}}" class="b-righta">
                        <text>已到达目的地</text>
                    </view>
                </view>
            </view>
            <view wx:if="{{info.isstart==3}}">
                <view class="bott">
                    <button bindtap="" class="b-sub-no-d">行程结束</button>
                </view>
            </view>
        </view>
        <view wx:if="{{ntype==2}}">
            <view wx:if="{{info.setout==0&&info.isreceipt1!=='3'}}">
                <view class="bott">
                    <view bindtap="Unable" class="b-lefzxt">
                        <text>取消订单</text>
                    </view>
                    <view bindtap="amend" class="b-righta">
                        <text>修改订单</text>
                    </view>
                </view>
            </view>
            <view wx:if="{{info.isreceipt1!=='1'}}">
                <button bindtap="{{info.istransfer==3?'ts':info.is_flag==2?'ts':'Unable'}}" class="b-sub-no-d">无法出行</button>
            </view>
        </view>
    </view>
</view>
<cover-view bindtap="hideModal" catchtouchmove="preventTouchMove" class="modal-mask" wx:if="{{showModal}}"></cover-view>
<cover-view class="modal-selectionbar" wx:if="{{selectionbar}}">
    <cover-view class="m-top">
        <cover-view bindtap="abolish" class="m-t-x">
      取消
    </cover-view>
        <cover-view bindtap="yes" class="m-t-r">
      确定
    </cover-view>
    </cover-view>
    <cover-view bindtap="bindtap" class="boxaaa" data-ipid="{{index}}" wx:for="{{ntype==1?casArray:casArraya}}" wx:key="userInfoListId">
        <cover-view class="{{ipid==index?'t-font':'ttfont'}}">{{item}}</cover-view>
    </cover-view>
</cover-view>
<cover-view bindtap="hideModal" catchtouchmove="preventTouchMove" class="modal-mask" wx:if="{{cancel_order}}"></cover-view>
<cover-view class="modal-trip" wx:if="{{cancel_order}}">
    <cover-view class="c-trip">
    {{identity=='车主'?'乘客':'车主'}}要求取消行程,您是否同意
  </cover-view>
    <cover-view class="c-tripmar">
        <cover-view class="topaa">
            <cover-view class="b-trip">●</cover-view>
            <cover-view class="b-trip-text">{{info.starting_place}}</cover-view>
        </cover-view>
        <cover-view class="ctrip">
            <cover-view class="b-trip-rad">●</cover-view>
            <cover-view class="b-trip-text">{{info.end_place}}</cover-view>
        </cover-view>
    </cover-view>
    <cover-view class="c-cottom">
        <cover-view bindtap="iphone" class="c-ctrip" data-mobile="{{info.mobile}}">
      联系车主
    </cover-view>
        <cover-view bindtap="consent" class="c-ctripa" data-nid="{{info.nid}}">
      同意
    </cover-view>
        <cover-view bindtap="refuse" class="c-ctripb" data-nid="{{info.nid}}">
      拒绝
    </cover-view>
    </cover-view>
</cover-view>
