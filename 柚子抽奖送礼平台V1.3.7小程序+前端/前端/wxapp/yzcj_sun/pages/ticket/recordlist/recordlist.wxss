page {
    background: #f0f0f0;
}

.container {
    margin-top: 20rpx;
}

.list {
    position: relative;
    padding: 30rpx 20rpx;
}

.list::after {
    content: "";
    position: absolute;
    left: 20rpx;
    bottom: 0;
    right: 0;
    height: 1px;
    background: #e6e6e6;
}

.list-l {
    display: flex;
    justify-content: space-between;
    line-height: 54rpx;
}

page .list:last-child::after {
    background: #fff;
}

.txt-right {
    text-align: right;
}