.nav {
    border-top: 1rpx solid #ddd;
    display: flex;
    border-bottom: 1rpx solid #ddd;
    height: 90rpx;
    align-items: center;
    background: #fff;
}

.nav>view {
    font-size: 32rpx;
    width: 55%;
    text-align: center;
    height: 100%;
    line-height: 90rpx;
}

.list-title {
    font-size: 30rpx;
    display: flex;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    height: 60rpx;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.play_img {
    flex: 0 0 auto;
    width: 140rpx;
    height: 140rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f7f7f7;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.play_img image {
    max-height: 120rpx;
}

.list-msg {
    display: flex;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.list-body {
    flex: 1 1 auto;
    min-width: 0;
}

.list-name {
    font-size: 30rpx;
}

.list-type {
    font-size: 28rpx;
    color: #999;
}

.list-num {
    color: #999;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.list-time {
    color: #999;
    font-size: 28rpx;
    display: flex;
    padding: 0 30rpx;
    border-bottom: 10rpx solid #f0f0f0;
    height: 60rpx;
    justify-content: space-between;
    align-items: center;
}

.isMask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
}

#isLogin {
    position: fixed;
    width: 480rpx;
    height: 320rpx;
    background: #fff;
    top: 45%;
    left: 48%;
    margin-left: -265rpx;
    margin-top: -185rpx;
    z-index: 1001;
    padding: 50rpx 50rpx;
}

.isLoginBtn {
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
}

.isLoginBtn button {
    background: #fff;
    width: 100%;
    height: 68repx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-right: 0rpx;
    margin-left: 0rpx;
    font-size: 28rpx;
    margin-top: 50rpx;
    color: #4bad37;
    border: 2rpx solid #4bad37;
}

.loginTitle {
    font-size: 34rpx;
}

.isAgary {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #666;
    margin-top: 30rpx;
}

.isAgary>text {
    margin-right: 20rpx;
}

.list-btn {
    color: #fff;
    background: #d25446;
    width: 150rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 30rpx;
    position: absolute;
    bottom: 90rpx;
    right: 30rpx;
    padding: 0;
    font-size: 28rpx;
}

.list-btn1 {
    color: #fff;
    background: #d25446;
    width: 200rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 30rpx;
    position: absolute;
    bottom: 90rpx;
    right: 30rpx;
    padding: 0;
    font-size: 28rpx;
}

.gift-list {
    position: relative;
}