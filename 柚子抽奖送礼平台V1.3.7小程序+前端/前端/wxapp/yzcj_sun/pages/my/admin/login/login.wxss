page {
    height: 100%;
}

.container {
    position: relative;
    width: 100%;
    height: 100%;
}

.bg {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.input-box {
    position: absolute;
    z-index: 11;
    height: 170rpx;
    border: 1rpx solid #57d3fd;
    border-radius: 20rpx;
    top: 50%;
    left: 50%;
    width: 600rpx;
    margin-left: -300rpx;
    background: rgba(255,255,255,0.4);
}

.input-list {
    display: flex;
    height: 85rpx;
    align-items: center;
    padding: 0 30rpx;
}

.input-list:first-child {
    border-bottom: 1rpx solid #57d3fd;
}

.img {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.input-list input {
    flex: 1 1 auto;
    font-size: 28rpx;
}

button {
    position: absolute;
    z-index: 11;
    height: 86rpx;
    border: 1rpx solid #57d3fd;
    border-radius: 20rpx;
    top: 50%;
    left: 50%;
    width: 600rpx;
    margin-left: -300rpx;
    background: #57d3fd;
    margin-top: 230rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}