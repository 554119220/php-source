<view class="container">
    <view class="list-2">
        <view class="flex-0-0">订单状态：</view>
        <view class="flex-1-1">待发货</view>
    </view>
    <view class="list-2">
        <view class="flex-0-0">下单时间：</view>
        <view class="flex-1-1">2018-05-22</view>
    </view>
    <view class="list-3">
        <view class="flex-0-0">发货地址：</view>
        <view class="flex-1-1">福建9号福集美区杏林湾营运中心99号</view>
    </view>
    <view class="list-2">
        <view class="flex-0-0">中 奖 人：</view>
        <view class="flex-1-1 color_999999">我 12345679800</view>
    </view>
    <view class="list" wx:for="{{list3}}">
        <image src="{{item.imgSrc}}"></image>
        <view class="list-body">
            <view class="list-name eellipsis">{{item.name}}</view>
            <view class="list-msg">
                <view>
                    <view class="list-price">¥ {{item.price}}</view>
                    <view class="list-num">销量：{{item.num}}</view>
                </view>
                <button></button>
            </view>
        </view>
    </view>
    <button class="btn">确认发货</button>
</view>
