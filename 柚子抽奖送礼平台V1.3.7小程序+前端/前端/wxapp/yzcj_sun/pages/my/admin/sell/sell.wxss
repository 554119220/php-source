page {
    border-top: 1rpx solid #ddd;
}

.list {
    display: flex;
    padding: 30rpx;
    border-bottom: 1rpx solid #ddd;
    position: relative;
}

.list image {
    flex: 0 0 auto;
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.list-body {
    flex: 1 1 auto;
    min-width: 0;
    line-height: 40rpx;
}

.list-name {
    font-size: 28rpx;
}

.list-num {
    font-size: 24rpx;
    color: #999999;
}

.list-msg {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-price {
    font-size: 28rpx;
    color: #fe5e02;
    font-weight: bold;
}

.btn1 {
    color: #fff;
    background: #ff5046;
    font-size: 28rpx;
    border-radius: 10rpx;
    width: 120rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
    position: relative;
}

.btn {
    color: #fff;
    background: #ff5046;
    font-size: 26rpx;
    border-radius: 10rpx;
    width: 120rpx;
    height: 60rpx;
    padding: 0;
    line-height: 60rpx;
    text-align: center;
    position: relative;
}

.yibtn {
    color: #fff;
    background: #fe5e02;
    font-size: 28rpx;
    border-radius: 30rpx;
    width: 150rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
    margin-left: 5px;
    margin-top: 10rpx;
    position: relative;
}

.btx_box {
    display: flex;
}

.btx_box button {
    margin-right: 5rpx;
}

.bg_999 {
    background: #999!important;
}

.list-bottom {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    height: 106rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid #ddd;
}

.on {
    color: #2aaefd;
}

.list-bottom input {
    width: 360rpx;
    height: 50rpx;
    line-height: 50rpx;
    border: 1rpx solid #cccccb;
    font-size: 26rpx;
    padding: 0 10rpx;
}

.swiper-tab {
    display: flex;
    height: 82rpx;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
}

.swiper-tab>view {
    text-align: center;
    width: 50%;
    position: relative;
    height: 82rpx;
    line-height: 82rpx;
}

.swiper-tab>view::before {
    content: "";
    position: absolute;
    top: 28rpx;
    bottom: 28rpx;
    width: 1rpx;
    left: 0;
    background: #3daddd;
}

.swiper-tab>view:first-child::before {
    background: #fff;
}

swiper {
    height: 100%;
}