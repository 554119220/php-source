.container {
    padding-bottom: 98rpx;
}

.swiper-tab {
    display: flex;
    height: 82rpx;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
}

.swiper-tab>view {
    text-align: center;
    width: 33.33%;
    position: relative;
    height: 82rpx;
    line-height: 82rpx;
}

.swiper-tab>view::before {
    content: "";
    position: absolute;
    top: 28rpx;
    bottom: 28rpx;
    width: 1rpx;
    left: 0;
    background: #3daddd;
}

.swiper-tab>view:first-child::before {
    background: #fff;
}

.on {
    color: #2aaefd;
}

.fix-bottom {
    position: fixed;
    height: 98rpx;
    display: flex;
    bottom: 0;
    right: 0;
    left: 0;
    box-shadow: 0 0 1rpx rgba(0,0,0,0.3);
    justify-content: space-between;
    line-height: 34rpx;
    align-items: center;
}

.fix-list {
    width: 33.3%;
    text-align: center;
    color: #999999;
}

.fix-list.active {
    color: #57d3fd;
}

.img {
    width: 44rpx;
    height: 44rpx;
}

.list {
    display: flex;
    padding: 30rpx;
    border-bottom: 10rpx solid #f5f5f5;
    position: relative;
}

.list image {
    flex: 0 0 auto;
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.list-body {
    flex: 1 1 auto;
    min-width: 0;
}

.list-name {
    font-size: 33rpx;
    height: 80rpx;
    line-height: 40rpx;
}

.list-num {
    font-size: 26rpx;
    color: #999999;
}

.list-msg {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-price {
    font-size: 28rpx;
    color: #fe5e02;
    font-weight: bold;
}

.btn1 {
    color: #fff;
    background: #fe5e02;
    font-size: 28rpx;
    border-radius: 4rpx;
    width: 150rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
}

.yibtn {
    color: #fff;
    background: #fe5e02;
    font-size: 28rpx;
    border-radius: 30rpx;
    width: 150rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
    margin-left: 5px;
    margin-top: 10rpx;
}

.btn2 {
    color: #fff;
    background: #dddddd;
    font-size: 28rpx;
    border-radius: 4rpx;
    width: 250rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
}

swiper {
    height: 100%;
}