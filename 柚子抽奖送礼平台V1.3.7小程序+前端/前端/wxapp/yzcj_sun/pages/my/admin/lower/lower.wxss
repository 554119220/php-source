page {
    border-top: 1rpx solid #ddd;
}

.list {
    display: flex;
    padding: 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.list image {
    flex: 0 0 auto;
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.list-body {
    flex: 1 1 auto;
    min-width: 0;
    line-height: 40rpx;
}

.list-name {
    font-size: 28rpx;
}

.list-num {
    font-size: 24rpx;
    color: #999999;
}

.list-msg {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-price {
    font-size: 28rpx;
    color: #fe5e02;
    font-weight: bold;
}

.btn1 {
    color: #fff;
    background: #ff5046;
    font-size: 28rpx;
    border-radius: 10rpx;
    width: 120rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
}

.btn {
    color: #fff;
    background: #ff5046;
    font-size: 26rpx;
    border-radius: 10rpx;
    width: 120rpx;
    height: 60rpx;
    padding: 0;
    line-height: 60rpx;
    text-align: center;
}

.btx_box {
    display: flex;
}

.btx_box button:first-child {
    margin-right: 20rpx;
}

.bg_999 {
    background: #999!important;
}

.list-bottom {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    height: 106rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid #ddd;
}

.list-bottom input {
    width: 360rpx;
    height: 50rpx;
    line-height: 50rpx;
    border: 1rpx solid #cccccb;
    font-size: 26rpx;
    padding: 0 10rpx;
}