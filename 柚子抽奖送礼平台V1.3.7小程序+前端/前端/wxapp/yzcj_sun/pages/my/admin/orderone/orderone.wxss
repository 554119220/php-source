page {
    border-top: 1rpx solid #ddd;
}

.list {
    display: flex;
    padding: 30rpx;
    border-bottom: 1rpx solid #ddd;
    border-top: 1rpx solid #ddd;
}

.list image {
    flex: 0 0 auto;
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.list-body {
    flex: 1 1 auto;
    min-width: 0;
}

.list-name {
    font-size: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    margin-bottom: 55rpx;
}

.list-num {
    font-size: 24rpx;
    color: #999999;
}

.list-msg {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-price {
    font-size: 28rpx;
    color: #fe5e02;
    font-weight: bold;
}

.btn1 {
    color: #fff;
    background: #fe5e02;
    font-size: 28rpx;
    border-radius: 4rpx;
    width: 150rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    text-align: center;
}

.btn {
    color: #fff;
    background: #ff5046;
    font-size: 32rpx;
    border-radius: 4rpx;
    width: 360rpx;
    height: 70rpx;
    padding: 0;
    line-height: 70rpx;
    text-align: center;
    margin: 100rpx auto;
}

.list-2 {
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
}

.flex-0-0 {
    flex: 0 0 auto;
    color: #999999;
}

.flex-1-1 {
    flex: 1 1 auto;
    min-width: 0;
}

.list-3 {
    display: flex;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    align-items: flex-start;
}

.tishi {
    text-align: center;
    margin-top: 30rpx;
}