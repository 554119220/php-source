.richEditor {
    background: #fff;
    padding-bottom: 20rpx;
    border: 1rpx solid #bbb;
    border-radius: 4rpx;
}

.richEditor .richEditor-edit {
    width: 100%;
    border-bottom: 1rpx solid #eee;
    background: #fff;
}

.richEditor .richEditor-edit .richEditor-edit-group {
    display: flex;
    padding: 20rpx;
}

.richEditor .richEditor-edit .richEditor-edit-group view {
    border: 1rpx solid #bbb;
}

.richEditor .richEditor-content {
}

.richEditor .richEditor-content .richEditor-textarea {
    width: 96%;
    margin: 0 auto;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.richEditor .richEditor-content .richEditor-img {
    width: 96%;
    margin: 0 auto;
}

.richEditor .richEditor-content .richEditor-img image {
    width: 100%;
}