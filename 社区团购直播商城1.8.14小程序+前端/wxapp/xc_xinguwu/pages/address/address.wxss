.top {
    height: 20rpx;
}

.address {
    width: 94%;
    background-color: #fff;
    margin: 0 auto 20rpx auto;
    border-radius: 15rpx;
}

.active {
    color: #f23921;
}

text {
    color: #bcbcbc;
}

.name {
    padding-top: 10rpx;
    padding-left: 20rpx;
}

.name text:nth-child(2) {
    margin-left: 450rpx;
}

.address_detail {
    padding: 20rpx 0 20rpx 20rpx;
}

.btn {
    display: flex;
    padding: 20rpx 0 20rpx 20rpx;
}

.btn radio {
    width: 78%;
}

.btn view {
    width: 10%;
    text-align: center;
    border-radius: 10rpx;
}

.modify {
    width: 40rpx;
    height: 40rpx;
}

.new_address {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 40rpx;
}

.new_address view {
    width: 65%;
    height: 70rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 70rpx;
    border-radius: 10rpx;
    background-color: #f23921;
    color: white;
}