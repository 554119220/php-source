@import "../../../__wuBaseWxss__/2.wxss";

.top {
    height: 2rpx;
    background: #f8f8f8;
}

.favourable-tab-box {
    display: flex;
    background: #fff;
}

.favourable-tab-nav {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    text-align: center;
    color: #505050;
    background: #fff;
}

.favour {
    border-right: 1rpx solid #eaeaea;
}

.on {
    color: #f23921;
}

.on view {
    border-bottom: 5rpx solid #bcaa8a;
    width: 24%;
    margin: 0 auto;
}

.outdate {
    opacity: 0.4;
}

.outdate-img {
    position: absolute;
    left: 280rpx;
    top: 60rpx;
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    transform: rotate(-26deg);
    display: none;
}

.outdate-img image {
    width: 100%;
    height: 100%;
    margin-top: 30rpx;
}

.outdate-img1 {
    display: block;
}

.number {
    display: flex;
}

.info {
    width: 300rpx;
    margin-left: 10rpx;
}

.info-detail {
    margin-top: 10rpx;
    color: #888;
}

.date {
    color: #929292;
}

.shop {
    width: 40rpx;
    margin-left: -50rpx;
}

.shop image {
    width: 100%;
    height: 40rpx;
    margin-top: 20rpx;
}

.discount {
    width: 240rpx;
}

.dis-detail {
    padding-top: 20rpx;
}

.money {
    color: #fff;
    width: 120rpx;
    text-align: center;
}

.unit {
    color: #fff;
}

.kind {
    padding: 0 10rpx;
    color: #fff;
    border-radius: 10rpx;
}

.click {
    background: #fff;
    width: 120rpx;
    margin: 0 auto;
    margin-top: 15rpx;
    text-align: center;
    padding: 5rpx 20rpx;
    border-radius: 40rpx;
}