@import "../../../__wuBaseWxss__/2.wxss";

.top {
    height: 2rpx;
    background: #f8f8f8;
}

.nonuse {
    display: flex;
    width: 90%;
    margin: 0 auto;
    background: #fff;
    height: 80rpx;
    border-radius: 15rpx;
    padding: 0 20rpx;
    margin-top: 20rpx;
    line-height: 80rpx;
    justify-content: space-between;
    color: #666;
}

.select {
    margin-top: 15rpx;
}

.favourable-tab-box {
    display: flex;
    background: #fff;
}

.favourable-tab-nav {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    text-align: center;
    color: #505050;
    background: #fff;
}

.favour {
    border-right: 1rpx solid #eaeaea;
}

.on {
    color: #f23921;
}

.on view {
    border-bottom: 5rpx solid #bcaa8a;
    width: 24%;
    margin: 0 auto;
}

.aaa .noUse {
    width: 86%;
    margin: 0 auto;
    padding: 20rpx;
    border-radius: 10rpx;
    border: 1rpx solid #dadada;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}

.aaa .clicked {
    border: 1rpx solid #f23921;
}

.aaa .choose-dis {
    height: 550rpx;
    width: 92%;
    margin: 0 auto;
}

.aaa .dis-list {
    padding: 20rpx;
    border: 1rpx solid #dadada;
    display: flex;
    margin-bottom: 20rpx;
    align-items: center;
    border-radius: 10rpx;
    justify-content: space-between;
    position: relative;
}

.aaa .selected-img {
    width: 80rpx;
    height: 65rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.aaa .dis-selected {
    border: 1rpx solid #fb5750;
}

.aaa .dis-left {
    width: 70%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.aaa .dis-info,.aaa .dis-date {
    line-height: 35rpx;
    color: #888;
}

.aaa .dis-right text {
    color: #fb5750;
}

.aaa .dis-right view {
    display: flex;
    align-items: baseline;
    color: #fb5750;
}

.aaa .dis-bottom {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    margin-top: 10rpx;
}