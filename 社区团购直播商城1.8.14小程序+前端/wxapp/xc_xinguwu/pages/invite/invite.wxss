.line {
    height: 20rpx;
}

.bargain {
    background: #fff;
    width: 90%;
    margin: 0 auto;
    padding: 25rpx 0;
    border-radius: 15rpx;
}

.bargain-info {
    width: 85%;
    margin: 0 auto;
    padding: 20rpx;
    background: #f9f9f9;
    border-radius: 15rpx;
    display: flex;
}

.bargain-info image {
    width: 185rpx;
    height: 165rpx;
}

.content {
    width: 64%;
    margin-left: 20rpx;
    line-height: 35rpx;
}

.content-name {
    height: 70rpx;
    line-height: 35rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.lowest {
    color: #999;
    margin-top: 20rpx;
}

.now-price {
    color: #f04043;
    font-weight: bold;
}

.userinfo {
    display: flex;
    align-items: center;
    width: 90%;
    margin: 0 auto;
    margin-top: 40rpx;
}

.userinfo image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 140rpx;
}

.userinfo text {
    color: #f04043;
}

.user-content {
    width: 70%;
    margin-left: 30rpx;
}

.user-content-head {
    display: flex;
    justify-content: space-between;
}

.short-of {
    text-align: right;
}

.schedule {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.progress {
    width: 230rpx;
    height: 30rpx;
    background: #fcb8b9;
    border-radius: 30rpx;
}

.underway {
    height: 30rpx;
    background: #f04043;
    border-radius: 30rpx;
}

.success {
    width: 485rpx;
    height: 70rpx;
    background: #f04043;
    text-align: center;
    line-height: 70rpx;
    margin: 0 auto;
    margin-top: 50rpx;
    color: #fff;
    border-radius: 15rpx;
}

.share {
    display: flex;
    width: 80%;
    margin: 0 auto;
    justify-content: space-between;
    margin-top: 50rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.share view {
    width: 45%;
    text-align: center;
    color: #fff;
    border-radius: 15rpx;
}

.share view:nth-child(1) {
    background: #f04043;
}

.share view:nth-child(2) {
    background: #f04043;
}

.count-down {
    color: #999;
    text-align: center;
    margin-top: 20rpx;
}

.friends-title {
    text-align: center;
    width: 85%;
    margin: 0 auto;
    background: #f9f9f9;
    border-radius: 10rpx;
    margin-top: 50rpx;
    padding: 20rpx;
}

.friends {
    width: 85%;
    margin: 0 auto;
    background: #f9f9f9;
    border-radius: 10rpx;
    padding: 20rpx;
    max-height: 510rpx;
}

.friends-list {
    display: flex;
    padding: 15rpx 0;
}

.friends image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
}

.friends-content {
    width: 75%;
    margin-left: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.friends-content-left {
    width: 60%;
}

.friends-content-left view:nth-child(1) {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.friends-content-left view:nth-child(2) {
    color: #999;
}

.friends-content text {
    color: #f04043;
}

.share button {
    width: 45%;
    font-size: 4vw;
    padding: 0;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #f04043;
    color: #fff;
}

.share button::after {
    border: 0;
}

.cut-success {
    width: 70%;
    background: #fff;
    border-radius: 15rpx;
    position: fixed;
    top: 15vh;
    left: 15%;
    z-index: 5;
    padding-bottom: 50rpx;
}

.success {
    width: 265rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: -40rpx;
    color: #fff;
    background: #ef3333;
    border-radius: 15rpx;
}

.suc-close {
    position: fixed;
    right: 13%;
    top: 13.5vh;
    z-index: 6;
    width: 60rpx;
    height: 60rpx;
}

.hint {
    width: 70%;
    height: 240rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.congratulation {
    text-align: center;
    margin-top: 50rpx;
}

.congratulation text {
    color: #ef3333;
}

.s-toshare {
    width: 265rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 15rpx;
    color: #fff;
    background: #f04043;
    text-align: center;
    margin: 0 auto;
    margin-top: 60rpx;
    letter-spacing: 5rpx;
}

.share-button {
    width: 50%;
    text-align: center;
    background: #ef3333;
    color: white;
    font-size: 3.5vw;
    line-height: 100rpx;
    border-radius: 0;
}