.page {
    position: relative;
    background: #fff;
    padding-bottom: 20rpx;
}

.search {
    width: 90%;
    height: 50rpx;
    display: flex;
    position: relative;
    z-index: 1;
    background: #f8f8f8;
    margin: 0 auto;
    padding: 15rpx 20rpx;
    border-radius: 15rpx;
}

icon {
    position: absolute;
    right: 120rpx;
    top: 15rpx;
    z-index: 2;
}

.r_search {
    margin-left: 45rpx;
    line-height: 50rpx;
    font-size: 4vw;
    padding: 0px;
}

.r_search::after {
    border: none;
}

.plc {
    font-size: 3.5vw;
}

.search-input {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 3.5vw;
    width: 82%;
}

.line {
    height: 4rpx;
    background: #f8f8f8;
    margin-top: 20rpx;
}

.his-title {
    display: flex;
    width: 95%;
    margin-top: 20rpx;
    padding: 0 20rpx;
    justify-content: space-between;
}

.local {
    width: 92%;
    margin: 0 auto;
}

.history {
    float: left;
    padding: 5rpx 30rpx;
    background: #f8f8f8;
    border-radius: 15rpx;
    color: #000;
    text-align: center;
    width: auto;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.fg {
    clear: both;
}

.clear {
    font-size: 3.5vw;
    padding: 0 10rpx;
    text-align: center;
}

.clear image {
    width: 40rpx;
    height: 40rpx;
}

.all-search {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 80rpx;
    padding: 0 10rpx;
}

.showdetail {
    width: 49%;
    background: #fff;
    margin-top: 20rpx;
}

.img {
    width: 100%;
}

.title {
    line-height: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin: 10rpx 0 10rpx 10rpx;
}

.sale {
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
}

.price {
    color: #f23921;
}

.saled {
    color: #b2b2b2;
}