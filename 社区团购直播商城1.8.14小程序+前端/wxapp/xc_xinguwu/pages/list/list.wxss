.search {
    width: 90%;
    height: 50rpx;
    display: flex;
    position: relative;
    z-index: 1;
    background: #fff;
    color: #e3e3e3;
    margin: 0 auto;
    top: 20rpx;
    padding: 15rpx 20rpx;
    border-radius: 15rpx;
}

input {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 3.5vw;
    width: 86%;
}

.psection {
    color: #e1e1e1;
}

icon {
    position: absolute;
    right: 30rpx;
    top: 20rpx;
    z-index: 2;
}

.list {
    display: flex;
    margin-top: 40rpx;
    height: 78vh;
}

.list-tab-box {
    width: 25%;
}

.list-tab-nav {
    text-align: center;
    padding: 20rpx 0;
    color: #838383;
    background: #fbfbfb;
}

.on {
    color: #838383;
    border-left: 6rpx solid red;
    background: #fff;
}

.list-content {
    background: #fff;
    width: 75%;
}

.head {
    width: 82%;
    margin: 0 auto;
    margin-top: 40rpx;
}

.head image {
    width: 200rpx;
    height: 50rpx;
}

.all {
    display: flex;
    flex-wrap: wrap;
    width: 90%;
    margin: 0 auto;
    margin-top: 20rpx;
}

.sale {
    width: 33.333%;
    text-align: center;
    margin-top: 10rpx;
}

.sale image {
    width: 140rpx;
    height: 140rpx;
    margin: 0 auto;
}

.s_text {
    margin-top: 10rpx;
    color: #838383;
}