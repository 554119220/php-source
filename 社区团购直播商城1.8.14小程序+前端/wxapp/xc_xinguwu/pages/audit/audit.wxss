.audit-banner {
    width: 100%;
    height: 420rpx;
}

.introduce {
    background: #fff;
    padding: 20rpx 0;
}

.introduce-title {
    display: flex;
    width: 94%;
    margin: 0 auto;
}

.vertical {
    width: 15rpx;
    height: 40rpx;
    background: #d51f28;
    margin-right: 30rpx;
}

.introduce-bar {
    line-height: 40rpx;
}

.introduce-list {
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
    display: flex;
}

.introduce-list-top {
    margin-top: 20rpx;
}

.introduce-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.introduce-right {
    width: 88%;
    display: flex;
    justify-content: space-between;
    line-height: 50rpx;
}

.arrow {
    width: 20rpx;
    height: 30rpx;
    margin-top: 10rpx;
}

.details {
    background: #fff;
    padding: 30rpx 0;
    margin-top: 20rpx;
}

.merchant-detail {
    width: 90%;
    margin: 0 auto;
    height: 370rpx;
    margin-top: 30rpx;
}

.btn-img {
    padding: 0;
    position: fixed;
    right: 30rpx;
    bottom: 200rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

.btn-img image {
    border-radius: 80rpx;
    width: 80rpx;
    height: 80rpx;
}

button::after {
    border: 0;
}

.introduced {
    padding: 20rpx;
    letter-spacing: 4rpx;
    background: #fff;
}