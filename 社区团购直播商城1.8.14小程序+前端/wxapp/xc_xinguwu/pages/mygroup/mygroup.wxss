.my-group-box {
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    border-top: 1rpx solid #f9f9f9;
    background: #fff;
    z-index: 5;
}

.my-group-box text {
    color: #f2f2f2;
}

.my-group-nav {
    height: 90rpx;
    width: 33%;
    text-align: center;
    line-height: 90rpx;
    color: #444;
}

.on view {
    color: #f04043;
    margin: 0 auto;
    width: 80%;
    text-align: center;
    height: 88rpx;
    border-bottom: 1rpx solid #f04043;
}

.all-order-list {
    position: absolute;
    left: 0;
    top: 90rpx;
    width: 100%;
    z-index: 4;
}

.all-order-list .order-list:last-child {
    margin-bottom: 20rpx;
}

.order-list {
    background: #fff;
    margin-top: 20rpx;
}

.id {
    color: #888;
}

.order-center {
    display: flex;
    padding: 20rpx;
    background: #f9f9f9;
}

.order-center image {
    width: 195rpx;
    height: 165rpx;
}

.order-head {
    display: flex;
    width: 94%;
    margin: 0 auto;
    justify-content: space-between;
    padding: 25rpx 0;
    align-items: center;
}

.open-time {
    font-weight: bold;
}

.count {
    margin-left: 120rpx;
    color: #5d5d5d;
}

.state {
    color: #f04043;
}

.content {
    width: 70%;
    margin-left: 3%;
}

.content-head {
    display: flex;
    margin-top: 10rpx;
}

.content-name {
    width: 70%;
    position: relative;
}

.group-kind {
    width: 85rpx;
    height: 35rpx;
    line-height: 35rpx;
    position: absolute;
    left: 0;
    top: 0;
    color: #f04043;
    border: 1rpx solid #f04043;
    text-align: center;
    border-radius: 8rpx;
}

.content-name text {
    text-indent: 100rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
    font-weight: bold;
}

.content-price {
    width: 30%;
    text-align: right;
}

.money {
    font-weight: bold;
}

.size {
    color: #505050;
    margin-top: 25rpx;
}

.order-bottom {
    padding: 20rpx 0;
    display: flex;
    width: 94%;
    margin: 0 auto;
    align-items: center;
    justify-content: space-between;
}

.again-group {
    width: 160rpx;
    height: 60rpx;
    border-radius: 15rpx;
    color: #f04043;
    border: 1rpx solid;
    text-align: center;
    line-height: 60rpx;
}

.group {
    position: relative;
    width: 50%;
    z-index: 0;
    height: 75rpx;
}

.group image {
    width: 75rpx;
    height: 75rpx;
    border: 4rpx solid #fff;
    border-radius: 75rpx;
}

.group image:nth-child(1) {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 5;
}

.group image:nth-child(2) {
    position: absolute;
    left: 55rpx;
    top: 0;
    z-index: 4;
}

.group image:nth-child(3) {
    position: absolute;
    left: 115rpx;
    top: 0;
    z-index: 3;
}

.group image:nth-child(4) {
    position: absolute;
    left: 170rpx;
    top: 0;
    z-index: 2;
}

.group image:nth-child(5) {
    position: absolute;
    left: 225rpx;
    top: 0;
    z-index: 1;
}

.int-friends button {
    background: #fff;
    color: #f04043;
    border: 1rpx solid #f04043;
    border-radius: 15rpx;
    height: 65rpx;
    line-height: 65rpx;
    padding: 0;
    width: 160rpx;
}

.group-count-down {
    display: flex;
    padding: 20rpx 25rpx 0 25rpx;
    justify-content: space-between;
}

.group-count-down text {
    color: #f04043;
}