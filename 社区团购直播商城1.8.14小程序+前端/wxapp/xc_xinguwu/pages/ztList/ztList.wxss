.vertical .zt-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 20rpx;
    position: fixed;
    left: 0;
    top: 0;
    width: 710rpx;
    z-index: 6;
}

.vertical .zt-menu .menu-logo {
    display: flex;
    align-items: center;
}

.vertical .zt-menu .menu-logo image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.vertical .zt-menu .menu-name {
    display: flex;
    align-items: center;
}

.vertical .zt-menu .menu-name image {
    width: 30rpx;
    height: 15rpx;
    margin-left: 20rpx;
}

.vertical .menu {
    position: fixed;
    top: 80rpx;
    left: 0;
    width: 100%;
    z-index: 5;
    border-top: 1rpx solid #f7f7f7;
}

.vertical .menu .menu-list {
    background: #fff;
}

.vertical .menu .menu-list view {
    padding: 20rpx 0;
    width: 92%;
    margin: 0 auto;
    border-bottom: 1rpx solid #f0f0f0;
}

.vertical .menu .on {
    background: #fbfbfb;
    color: #f84444;
}

.vertical .zt {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 20rpx 0 20rpx;
    flex-wrap: wrap;
    position: absolute;
    left: 0;
    top: 80rpx;
    width: 710rpx;
}

.vertical .zt .ztList {
    width: 48%;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.vertical .zt .ztList .zt-main {
    width: 100%;
    height: 340rpx;
    position: relative;
    overflow: hidden;
}

.vertical .zt-main-img {
    width: 100%;
    height: 340rpx;
}

.vertical .video-mask {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
    opacity: 0.3;
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
}

.vertical .video-mask image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 30rpx;
}

.vertical .ztList .zt-content {
    padding: 20rpx 0;
    background: #fff;
}

.vertical .zt-name {
    width: 92%;
    margin: 0 auto;
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.vertical .ztList .zt-content .zt-bottom {
    display: flex;
    color: #999;
    width: 92%;
    margin: 0 auto;
}

.vertical .zt-see {
    display: flex;
    align-items: center;
    margin-right: 50rpx;
}

.vertical .zt-see image {
    width: 30rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.vertical .zt-good {
    display: flex;
    align-items: center;
}

.vertical .zt-good image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.shadow {
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.3;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
}

.row .zt-menu {
    display: flex;
    white-space: nowrap;
    background: #fff;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
}

.row .menu-list {
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    text-align: center;
    color: #989898;
}

.row .zt-menu .on view {
    border-bottom: 1rpx solid #f84444;
    height: 89rpx;
    line-height: 89rpx;
    color: #f84444;
    font-size: 4.5vw;
    font-weight: bold;
}

.row .zt {
    position: absolute;
    left: 0;
    top: 120rpx;
    width: 100%;
    z-index: 4;
}

.row .ztList {
    margin-bottom: 20rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    justify-content: space-between;
}

.row .zt-main {
    width: 210rpx;
    height: 210rpx;
    border-radius: 10rpx;
    position: relative;
    overflow: hidden;
}

.row .zt-content {
    width: 445rpx;
}

.row .zt-name {
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-top: 10rpx;
}

.row .zt-info {
    height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #9b9b9b;
    margin-top: 15rpx;
}

.row .zt-bottom {
    display: flex;
    color: #f84444;
    margin-top: 15rpx;
}

.row .zt-see {
    display: flex;
    align-items: center;
    margin-right: 50rpx;
}

.row .zt-see image {
    width: 30rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.row .zt-good {
    display: flex;
    align-items: center;
}

.row .zt-good image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.bottom-line {
    height: 120rpx;
}

.row .zt-main-img {
    width: 100%;
    height: 100%;
}

.row .video-mask {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
    opacity: 0.3;
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
}

.row .video-mask image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
}