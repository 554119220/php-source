<view class="top"></view>
<view>
    <radio-group>
        <view bindtap="chooseCatalog" class="address {{item.ison==1?'active':''}}" data-index="{{index}}" wx:for="{{address}}" wx:key="id">
            <view class="name">
                <text>{{item.name}}</text>
                <text>{{item.phone}}</text>
            </view>
            <view class="address_detail">
                <text>{{item.region}}{{item.detail}}</text>
            </view>
        </view>
    </radio-group>
</view>
<view class="new_address">
    <view bindtap="addAddre">+ 添加新地址</view>
</view>
