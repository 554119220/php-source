.top {
    background: #fff;
    margin-top: 4rpx;
    height: 80rpx;
    padding: 0 20rpx;
    display: flex;
    line-height: 80rpx;
    align-items: center;
    justify-content: space-between;
    padding-top: 20rpx;
}

.top-bg {
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
}

.top .left {
    display: flex;
    align-items: center;
    width: auto;
}

.top .goodimg {
    width: 80rpx;
    height: 80rpx;
}

.top .text {
    margin-left: 20rpx;
    letter-spacing: 4rpx;
    margin-right: 10rpx;
}

.start {
    width: 30rpx;
    padding: 14rpx;
}

.top .start-text {
    color: #999;
}

.edit {
    background: #fff;
    padding: 40rpx 20rpx 20rpx 20rpx;
}

.edit textarea {
    height: 100rpx;
}

.edit .img-area {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 40rpx;
}

.edit .img-area .img-area-item {
    width: 180rpx;
    height: 180rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
}

.edit .img-area .img-area-item image {
    width: 100%;
    height: 100%;
}

.edit .img-area .img-area-item icon {
    position: relative;
    top: 20rpx;
    left: 160rpx;
}

.edit .add-image image {
    width: 140rpx;
}

.edit .anonymity {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 4rpx;
    border-top: 1rpx solid #eee;
    display: flex;
    align-items: center;
}

.edit .anonymity text {
    font-size: 30rpx;
    letter-spacing: 4rpx;
    color: #999;
    margin-right: 20rpx;
}

.logistics {
    padding: 20rpx;
    margin-top: 20rpx;
    background: #fff;
}

.logistics .header {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    letter-spacing: 2rpx;
    border-bottom: 1rpx solid #eee;
}

.body .body-item {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    justify-content: space-between;
}

.body .body-item .start-area {
    display: flex;
}

.logistics .btn {
    margin-top: 200rpx;
    margin-bottom: 60rpx;
}

.logistics .btn button {
    height: 100rpx;
    border-radius: 50rpx;
    background: #ff4040;
    color: #fff;
    letter-spacing: 6rpx;
}