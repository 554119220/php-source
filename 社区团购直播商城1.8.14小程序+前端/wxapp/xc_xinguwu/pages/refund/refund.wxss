.page {
    min-height: 100%;
}

.content {
    width: 100%;
    background-color: #fff;
    display: flex;
    margin-top: 20rpx;
}

.main {
    width: 30%;
    height: 180rpx;
    padding: 10rpx 0 10rpx 0rpx;
    margin-top: 20rpx;
}

.main image {
    width: 80%;
    margin: 0 auto;
    height: 100%;
}

.title {
    width: 70%;
    padding: 20rpx 0 10rpx 0;
}

.color {
    display: flex;
    margin-top: 10rpx;
    color: #b6b6b6;
}

.size {
    margin-left: 40rpx;
}

.tot {
    font-size: 3vw;
}

.total {
    color: #ff0101;
}

.t_money {
    width: 100%;
    height: 60rpx;
    background-color: #fff;
    margin-top: 10rpx;
    line-height: 60rpx;
}

.t_money text:nth-child(1) {
    padding-left: 20rpx;
    color: #595959;
    font-size: 3vw;
}

.total1 {
    color: #ff0101;
    margin-left: 20rpx;
}

.mask {
    background-color: #000000;
    width: 100%;
    height: 50vh;
    position: fixed;
    bottom: 50vh;
    opacity: 0.2;
}

.choose {
    width: 100%;
    height: 50vh;
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    z-index: 10;
}

.state {
    width: 100%;
    height: 240rpx;
    margin-top: 10rpx;
    background-color: #fff;
}

.state textarea {
    padding: 20rpx 0 0 20rpx;
    font-size: 3vw;
}

.reason {
    text-align: center;
    padding-top: 20rpx;
}

.reason text {
    color: #000000;
    font-size: 4vw;
}

.t_reason {
    width: 100%;
    background-color: #fff;
    margin-top: 10px;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
}

.t_reason text:nth-child(1) {
    padding-left: 20rpx;
    color: #777777;
    font-size: 3vw;
}

.middle {
    padding-left: 20rpx;
    color: #777777;
    font-size: 3vw;
    width: 520rpx;
}

.right {
    margin-left: 50rpx;
}

.all {
    margin-top: 30rpx;
    padding-left: 20rpx;
}

.all text {
    color: #4c4c4c;
}

radio {
    position: absolute;
    right: 20rpx;
}

.close {
    width: 60%;
    background-color: #f92929;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    margin: 0 auto;
    margin-top: 70rpx;
    text-align: center;
    border-radius: 15rpx;
}

button {
    width: 70%;
    left: 15%;
    position: fixed;
    bottom: 50rpx;
    background-color: #f23921;
    color: white;
    font-size: 4vw;
}

.look {
    height: 30vh;
    overflow: hidden;
}