page {
    color: #444;
}

.box-title {
    display: flex;
    white-space: nowrap;
}

.nav {
    width: 28%;
    background: #f8f8f8;
    text-align: center;
    height: 90rpx;
    position: relative;
    display: inline-block;
    margin-bottom: 20rpx;
}

.ing {
    height: 90rpx;
}

.ing view {
    height: 30rpx;
    line-height: 30rpx;
}

.ing view:nth-child(1) {
    margin-top: 15rpx;
}

.caret {
    width: 0;
    height: 0;
    border: 18rpx solid transparent;
    border-top-color: #f04043;
    position: absolute;
    left: 42%;
    bottom: -36rpx;
    z-index: 5;
    display: none;
}

.on {
    background: #f04043;
    color: #fff;
}

.on .caret {
    display: block;
}

.line {
    height: 20rpx;
    background: #fff;
    margin-top: -20rpx;
}

.activity {
    display: flex;
    background: #fff;
    padding: 25rpx 20rpx 25rpx 20rpx;
    border-bottom: 1rpx solid #e2e2e2;
    margin-top: -20rpx;
    justify-content: space-between;
}

.logo {
}

.logo image {
    width: 175rpx;
    height: 45rpx;
}

.count-down {
}

.count-down text {
    color: #444;
    background: #f8f8f8;
    padding: 5rpx;
    border-radius: 5rpx;
}

.all-list {
    background: #fff;
}

.list {
    width: 90%;
    margin: 0 auto;
    padding: 20rpx 0;
    display: flex;
    border-bottom: 1rpx solid #e2e2e2;
}

.main {
    width: 185rpx;
    height: 170rpx;
}

.content {
    width: 68%;
    margin-left: 4%;
}

.content-name {
    line-height: 35rpx;
    height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.schedule-pe {
    display: flex;
    align-items: center;
    padding: 18rpx 0;
}

.schedule {
    width: 280rpx;
    height: 30rpx;
    color: #fff;
    line-height: 30rpx;
    text-align: center;
    border-radius: 30rpx;
    background: #fcb8b9;
    position: relative;
    overflow: hidden;
}

.percent {
    background: #f04043;
    position: absolute;
    left: 0;
    top: 0;
    text-align: center;
    border-radius: 30rpx;
    z-index: 0;
}

.percent-num {
    position: absolute;
    left: 34%;
    top: 0;
    z-index: 1;
}

.price {
    display: flex;
    justify-content: space-between;
}

.money {
    display: flex;
    align-items: center;
    width: 60%;
}

.newp {
    color: #f04043;
    width: 50%;
}

.oldp {
    width: 50%;
}

.finish {
    background: #d8d8d8;
    color: #fff;
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
}

.now {
    background: #f04043;
    color: #fff;
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
}

.begining {
    color: #fff;
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
    background: #f09340;
}