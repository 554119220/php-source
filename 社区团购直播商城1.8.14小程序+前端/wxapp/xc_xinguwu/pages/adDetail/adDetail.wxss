page {
    background: #fff;
}

.video {
    width: 750rpx;
    height: 560rpx;
}

.detail-title {
    width: 630rpx;
    margin: 0 auto;
    text-align: center;
    padding: 20rpx 0;
    font-weight: bold;
    color: #444;
}

.detail-info {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #888;
}

.see,.good {
    display: flex;
    align-items: center;
    width: 150rpx;
    justify-content: center;
}

.see image {
    width: 30rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.good image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.see {
    margin-left: 50rpx;
}

.detail-content {
    padding: 50rpx 20rpx;
}

.click {
    text-align: center;
}

.click image {
    margin: 0 auto;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
}

.bottom-banner {
    padding: 20rpx;
    margin-top: 30rpx;
}

.bottom-banner image {
    width: 100%;
    height: 200rpx;
    border-radius: 10rpx;
}

.cut-line {
    height: 20rpx;
    background: #fbfbfb;
}

.tj-title {
    padding: 20rpx;
    font-weight: bold;
}

.detail-bottom-line {
    height: 50rpx;
}

.zt {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    flex-wrap: wrap;
}

.zt .ztList {
    width: 48%;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.zt .ztList .zt-main {
    width: 100%;
    height: 340rpx;
}

.ztList .zt-content {
    padding: 20rpx 10rpx;
    background: #fafafa;
}

.ztList .zt-content .zt-bottom {
    display: flex;
    color: #999;
}

.zt-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    height: 70rpx;
    line-height: 35rpx;
}

.zt-see {
    display: flex;
    align-items: center;
    margin-right: 50rpx;
}

.zt-see image {
    width: 30rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.zt-good {
    display: flex;
    align-items: center;
}

.zt-good image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}