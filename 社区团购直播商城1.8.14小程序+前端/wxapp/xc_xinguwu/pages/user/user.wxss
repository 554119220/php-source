.banner {
    width: 100%;
    height: 570rpx;
    position: relative;
    background: #fff;
    border-bottom: 2rpx solid #f8f8f8;
}

.banner-img {
    width: 100%;
    height: 330rpx;
}

.user {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.photo_wrap {
    width: 200rpx;
    height: 200rpx;
    border: 4rpx solid #fff;
    border-radius: 200rpx;
    overflow: hidden;
    margin: 0 auto;
    margin-top: 210rpx;
}

.photo {
    width: 100%;
    height: 100%;
}

.nickname {
    height: 160rpx;
    padding-top: 30rpx;
    text-align: center;
}

.nickname text {
    color: #444;
    font-weight: bold;
}

.order {
    background: #fff;
    margin-top: 2rpx;
    padding-bottom: 20rpx;
}

.toOrder navigator {
    display: flex;
    padding: 20rpx 0 20rpx 20rpx;
}

.my {
    margin-left: 20rpx;
    color: #939393;
}

.right {
    margin-left: 70%;
    color: #939393;
}

.order_list {
    display: flex;
    margin-top: 20rpx;
}

.orderlist {
    width: 25%;
}

.orderlist image {
    margin: 0 auto;
}

.list {
    display: flex;
    margin-top: 10rpx;
}

.list view {
    width: 25%;
    text-align: center;
}

.hot-sale {
    width: 100%;
    margin-top: 40rpx;
    padding: 10rpx 0 10rpx 0;
    background: #fff;
}

.h_sale {
    width: 94%;
    margin: 0 auto;
    display: flex;
}

.h_sale image {
    width: 40rpx;
}

.h_sale view {
    margin-left: 10rpx;
    line-height: 50rpx;
    font-weight: 900;
    font-size: 4vw;
}

.introduce {
    width: 50%;
    margin-left: 20rpx;
    font-size: 3vw;
    color: #939393;
}

.center {
    width: 100%;
    height: 20vh;
    margin-top: 20rpx;
}

.center image {
    width: 100%;
    height: 100%;
}

.service {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
}

.btn {
    width: 20%;
    padding: 20rpx 0;
    font-size: 3vw;
    background: #fff;
    margin-top: 3rpx;
    margin: 0;
    border-radius: 0;
}

.btn image {
    margin: 0 auto;
    margin-top: 15rpx;
}

.voucher {
    width: 70rpx;
}

.voucher1 {
    width: 60rpx;
}

button[class="btn"]::after {
    border: 0;
}