<view class="nav">
    <view bindtap="changeNav" class="nav-item {{navIndex==index?'on':''}}" data-index="{{index}}" wx:for="{{nav}}">{{item.text}}({{item.num}})</view>
</view>
<view class="list">
    <view class="list-item" wx:for="{{list}}">
        <view class="avatar">
            <image src="{{item.avatarurl}}"></image>
        </view>
        <view class="info">
            <view class="header">
                <view class="nickname">{{item.nickname}}</view>
                <view class="createtime">{{item.createtime}}</view>
            </view>
            <view class="grade">
                <image mode="widthFix" src="../../images/starrating_s.png" wx:if="{{gra<item.goodcom}}" wx:for="{{grade}}" wx:for-item="gra"></image>
            </view>
            <view class="text">
                <text selectable space>{{item.text}}</text>
            </view>
            <view class="imgs" wx:if="{{item.imgs}}">
                <image mode="aspectFill" src="{{img}}" wx:for="{{item.imgs}}" wx:for-item="img"></image>
            </view>
            <view style="position:relative" wx:if="{{item.reply}}">
                <view class="reply">
                    <view class="reply-item">
                        <view>商家回复:
              <text>{{item.reply}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
