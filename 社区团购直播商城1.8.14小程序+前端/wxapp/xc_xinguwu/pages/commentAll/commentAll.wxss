.on {
    color: #fc1f1f;
}

.nav {
    margin-top: 2rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-flow: wrap;
    background: #fff;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.nav .nav-item {
    background: #eee;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    margin-right: 36rpx;
}

.list {
    background: #fff;
    padding: 20rpx;
}

.list-item {
    display: flex;
    align-items: flex-start;
}

.list-item .avatar {
    width: 70rpx;
}

.list-item .avatar image {
    border-radius: 50%;
}

.list-item .info {
    width: 640rpx;
}

.list-item .info .header {
    display: flex;
    justify-content: space-between;
}

.list-item .info .header .nickname {
    font-size: 30rpx;
}

.list-item .info .header .createtime {
    font-size: 26rpx;
    color: #aaa;
}

.list-item .info .grade {
    display: flex;
    margin-top: 10rpx;
}

.list-item .info .grade image {
    width: 30rpx;
    margin-right: 10rpx;
}

.list-item .info .text {
    margin-top: 10rpx;
}

.list-item .info .imgs {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.list-item .info .imgs image {
    width: 190rpx;
    height: 190rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.list-item .reply {
    padding: 20rpx;
    background: #eee;
    border-radius: 6rpx;
    margin-top: 20rpx;
}

.list-item .reply .reply-item {
    line-height: 40rpx;
}

.list-item .reply::before {
    position: absolute;
    font-family: simsun;
    content: "â—†";
    top: -20rpx;
    z-index: 4;
    display: block;
    font-size: 30rpx;
    color: #eee;
}

.list-item .reply .reply-item view {
    color: #fc1f1f;
}