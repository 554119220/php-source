page {
    background: #fff;
}

.statistics {
    display: flex;
    align-items: center;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f9f9f9;
}

.statistics-list {
    width: 25%;
    text-align: center;
}

.on {
    border-bottom: 1rpx solid #f23921;
}

.total-box {
    text-align: center;
    padding: 50rpx 0;
    border-bottom: 20rpx solid #f9f9f9;
}

.total-num {
    color: #f23921;
    font-size: 60rpx;
}

.hint {
    color: #999;
}

.statistics-head {
    padding: 30rpx 25rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.statistic-order {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 25rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.statistic-order image {
    width: 110rpx;
    height: 90rpx;
}

.statistic-content {
    width: 550rpx;
}

.statistic-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.sailed-num {
    margin-top: 20rpx;
}

.sailed-num text {
    color: #f23921;
}

.num-box {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.num-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.num-left {
    letter-spacing: 2rpx;
}

.num-detail {
    color: #888;
}

.bottom-line {
    height: 120rpx;
}