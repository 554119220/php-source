.orderBanner {
    background: #fff;
    padding: 25rpx 20rpx;
}

.state-box {
    display: flex;
    align-items: center;
    color: #888;
}

.state-box .supplier-wait-send {
    width: 88rpx;
    height: 88rpx;
}

.state-box .supplier-settle {
    width: 74rpx;
    height: 82rpx;
}

.state-box .supplier-settled {
    width: 77rpx;
    height: 78rpx;
}

.state-right {
    margin-left: 45rpx;
}

.state text {
    color: #f23921;
}

.state-hint {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.order-info {
    color: #888;
}

.order-id {
    display: flex;
    align-items: center;
}

.order-id image {
    width: 27rpx;
    height: 27rpx;
    margin-left: 35rpx;
}

.order-info {
    margin-top: 30rpx;
}

.order-time {
    margin-top: 10rpx;
}

.order-list-main {
    display: flex;
    align-items: flex-start;
    padding: 20rpx;
    justify-content: space-between;
    background: #fff;
    margin-top: 20rpx;
}

.order-list-main image {
    width: 110rpx;
    height: 90rpx;
}

.content {
    width: 555rpx;
}

.order-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.sailed-num {
    margin-top: 20rpx;
}

.sailed-num text {
    color: #f23921;
}

.num-box {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.num-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.num-left {
    letter-spacing: 2rpx;
}

.num-detail {
    color: #888;
}

.total-num {
    text-align: right;
    margin-top: 10rpx;
}

.total-num text {
    color: #f23921;
}

.alter-address-top {
    background: #fff;
    padding: 20rpx;
    border-top: 20rpx solid #f9f9f9;
}

.alter-top {
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.left-list {
    display: flex;
    align-items: center;
    color: #888;
}

.left-list view {
    width: 13rpx;
}

.alter-right {
    width: 550rpx;
}

.top-right {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 570rpx;
}

.tell {
    display: flex;
    align-items: center;
    color: #f23921;
}

.tell image {
    width: 17rpx;
    height: 27rpx;
    margin-right: 20rpx;
    border: 1rpx solid;
}

.alter-bottom {
    display: flex;
    align-items: flex-start;
    margin-top: 10rpx;
}

.address-detail {
    width: 570rpx;
}

.toAlter {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    color: #f23921;
}

.toAlter image {
    width: 24rpx;
    height: 24rpx;
    margin-left: 15rpx;
}

.remark-box {
    background: #fff;
    display: flex;
    padding: 10rpx 20rpx;
    align-items: center;
    margin-top: 20rpx;
}

.remark-left {
    color: #888;
}

.remark-box input {
    margin-left: 30rpx;
}

.make-sure {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background: #f23921;
    border-radius: 45rpx;
    margin: 100rpx auto 30rpx auto;
    color: #fff;
    letter-spacing: 5rpx;
}