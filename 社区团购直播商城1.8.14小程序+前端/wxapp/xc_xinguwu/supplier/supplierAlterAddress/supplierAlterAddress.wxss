.alter-address-top {
    background: #fff;
    padding: 40rpx 20rpx;
    border-top: 20rpx solid #f9f9f9;
}

.alter-top {
    display: flex;
    align-items: center;
}

.left-list {
    display: flex;
    align-items: center;
    color: #888;
}

.left-list view {
    width: 13rpx;
}

.alter-right {
    width: 550rpx;
}

.top-right {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 570rpx;
}

.tell {
    display: flex;
    align-items: center;
    color: #f23921;
}

.tell image {
    width: 17rpx;
    height: 27rpx;
    margin-right: 20rpx;
    border: 1rpx solid;
}

.alter-bottom {
    display: flex;
    align-items: flex-start;
    margin-top: 10rpx;
}

.address-detail {
    width: 570rpx;
}

.alter-box {
    background: #fff;
    margin-top: 20rpx;
    padding: 0 25rpx;
}

.alter-box .alter-list:last-child {
    border: 0;
}

.alter-list {
    display: flex;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #e4e4e4;
}

.alter-list input {
    width: 500rpx;
}

.list-left {
    width: 180rpx;
    color: #888;
}

.submit {
    width: 705rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
    font-size: 3.5vw;
    background: #f23921;
    border-radius: 45rpx;
    margin-top: 500rpx;
}