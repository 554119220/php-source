.orderSite-nav {
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
}

.order-site {
    width: 25%;
    text-align: center;
}

.onNav {
    color: #ff1d1d;
}

.search-box {
    padding: 20rpx;
}

.search-main {
    background: #fff;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 35rpx;
}

.order-list {
    background: #fff;
    margin-bottom: 20rpx;
}

.order-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1rpx solid #e9e9e9;
    color: #888;
}

.order-left {
    display: flex;
    align-items: center;
}

.order-id {
    margin-right: 30rpx;
}

.state {
    width: 95rpx;
    height: 40rpx;
    position: relative;
}

.state image {
    width: 100%;
    height: 100%;
}

.state view {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    color: #fff;
    text-align: center;
    line-height: 40rpx;
}

.order-list-main {
    display: flex;
    align-items: flex-start;
    padding: 20rpx;
    justify-content: space-between;
}

.order-list-main image {
    width: 110rpx;
    height: 90rpx;
}

.content {
    width: 550rpx;
}

.order-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.sailed-num {
    margin-top: 20rpx;
}

.sailed-num text {
    color: #f23921;
}

.num-box {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.num-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.num-left {
    letter-spacing: 2rpx;
}

.num-detail {
    color: #888;
}

.total-num {
    text-align: right;
}

.total-num text {
    color: #f23921;
}

.order-bottom {
    padding: 30rpx 20rpx;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    border-top: 1rpx solid #E6E6E6;
}

.delivery {
    padding: 5rpx 15rpx;
    border: 1rpx solid #888;
    border-radius: 10rpx;
    color: #888;
}