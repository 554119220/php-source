page {
    background: #fff;
}

.allpy-banner {
    width: 750rpx;
    border-bottom: 10rpx solid #f9f9f9;
}

.allpy-banner image {
    width: 100%;
    height: 100%;
}

.apply-box {
    padding: 0 40rpx;
}

.apply-title {
    margin-top: 45rpx;
}

.apply-title text {
    color: #f04043;
}

.apply-ipt {
    padding: 10rpx 30rpx;
    border: 1rpx solid #e8e8e8;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

.get-code {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    justify-content: space-between;
}

.code-ipt {
    width: 390rpx;
    padding: 10rpx 20rpx;
    border: 1rpx solid #e8e8e8;
    border-radius: 10rpx;
}

.code-btn {
    width: 205rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    border: 1rpx solid #e8e8e8;
    border-radius: 10rpx;
}

.agreement {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 45rpx;
}

.agreement icon {
    margin-right: 15rpx;
}

.agreement text {
    color: #f93d3d;
}

.submit {
    background: #fc1f1f;
    border-radius: 45rpx;
    height: 90rpx;
    width: 560rpx;
    margin: 0 auto;
    color: #fff;
    font-size: 3.5vw;
    letter-spacing: 5rpx;
    line-height: 90rpx;
    margin-top: 30rpx;
}

.submit::after {
    border: 0;
}

.model {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    z-index: 2;
    background: rgba(47,47,47,0.3);
}

.agreement-box {
    width: 555rpx;
    background: #fff;
    margin: 0 auto;
    border-radius: 10rpx;
    margin-top: 150rpx;
    padding: 0 50rpx;
    margin-bottom: 10rpx;
    padding-bottom: 40rpx;
}

.agreement-title {
    padding-top: 80rpx;
    text-align: center;
    color: #f04043;
}

.agreement-list {
    margin-top: 35rpx;
}

.agree-btn {
    width: 440rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin: 0 auto;
    border-radius: 45rpx;
    background: #f04043;
    color: #fff;
    text-align: center;
    margin-top: 65rpx;
}

.think {
    text-align: center;
    color: #888;
    margin-top: 5rpx;
}