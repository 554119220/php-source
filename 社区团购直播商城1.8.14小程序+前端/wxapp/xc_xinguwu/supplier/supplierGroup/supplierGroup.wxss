.group-nav {
    display: flex;
    background: #fff;
    height: 90rpx;
    align-items: center;
}

.shu {
    color: #ebebeb;
}

.nav-list {
    width: 49.9%;
    text-align: center;
}

.onNav {
    color: #f93d3d;
}

.group-box {
    padding: 0 20rpx;
    background: #fff;
    margin-top: 20rpx;
}

.head-img {
    width: 105rpx;
    height: 105rpx;
    border-radius: 50%;
}

.group-box .group-list:last-child {
    border: 0;
}

.group-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #e9e9e9;
}

.group-content {
    width: 560rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
}

.group-tell {
    margin-top: 10rpx;
}

.group-content image {
    width: 24rpx;
    height: 26rpx;
}

.invite {
    width: 700rpx;
    height: 90rpx;
    background: #f93d3d;
    border-radius: 45rpx;
    line-height: 90rpx;
    color: #fff;
    position: fixed;
    left: 25rpx;
    bottom: 55rpx;
    font-size: 3.5vw;
}

.app-box {
    display: flex;
    align-items: center;
}

.applay {
    width: 105rpx;
    height: 50rpx;
    border-radius: 25rpx;
    text-align: center;
    line-height: 50rpx;
    border: 1rpx solid #fb2c2c;
    color: #fb2c2c;
}

.ignore {
    color: #888;
    margin-left: 30rpx;
}

.allIgnore {
    width: 700rpx;
    height: 90rpx;
    background: #D6D6D6;
    border-radius: 45rpx;
    line-height: 90rpx;
    color: #fff;
    position: fixed;
    left: 25rpx;
    bottom: 55rpx;
    font-size: 3.5vw;
}

.allIgnore ::after {
    border: 0;
}