page {
    color: #444;
}

.detail-top {
    background: #fff;
    padding: 0 30rpx;
}

.state-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0;
}

.state-info {
    font-size: 3vw;
    margin-top: 10rpx;
}

.state-img {
    width: 85rpx;
    height: 89rpx;
}

.state-img1 {
    width: 81rpx;
    height: 72rpx;
}

.state-img2 {
    width: 89rpx;
    height: 75rpx;
}

.state-img3 {
    width: 72rpx;
    height: 72rpx;
}

.state-content {
    width: 570rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.order-state text {
    color: #ff3636;
}

.make-money text {
    color: #ff3636;
    font-weight: bold;
}

.order-info-box {
    padding: 20rpx 0;
    border-top: 1rpx solid #e6e6e6;
    font-size: 3vw;
}

.info-list {
    margin-top: 5rpx;
}

.user-info {
    background: #fff;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
}

.user-title {
    font-size: 4vw;
}

.user-box {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top: 20rpx;
}

.user-content {
    width: 610rpx;
}

.user-head-img {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
}

.user-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.user-head image {
    width: 21rpx;
    height: 22rpx;
    margin-left: 20rpx;
}

.user-tell {
    display: flex;
    align-items: center;
}

.user-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.user-address {
    width: 570rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-bottom image {
    width: 19rpx;
    height: 23rpx;
}

.goods-box {
    background: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.goods-list {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #efefef;
}

.goods-img {
    width: 230rpx;
    height: 170rpx;
    border-radius: 20rpx;
}

.content {
    width: 440rpx;
}

.content-head {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.goods-name {
    width: 320rpx;
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.content-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 40rpx;
}

.goods-price {
    color: #ff3636;
}

.goods-bottom {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 20rpx 0;
}

.goods-bottom text {
    color: #ff3636;
}

.total-price {
    margin-left: 30rpx;
}

.remark {
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    margin-top: 20rpx;
}

.remark view {
    height: 50rpx;
    line-height: 50rpx;
}

.remark input {
    width: 620rpx;
    height: 50rpx;
    line-height: 50rpx;
    min-height: 50rpx;
}

.plc {
    line-height: 50rpx;
}

.bottom-btn {
    width: 706rpx;
    height: 90rpx;
    background: rgba(255,54,54,1);
    border-radius: 45rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}

.bottom-btn1 {
    width: 706rpx;
    height: 90rpx;
    background: rgba(214,214,214,1);
    border-radius: 45rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}

.bottom-line {
    height: 50rpx;
}