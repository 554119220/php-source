.search-box {
    background: #fff;
    padding: 20rpx 0;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
}

.search {
    display: flex;
    align-items: center;
    border: 1rpx solid #ebebeb;
    width: 620rpx;
    margin: 0 auto;
    padding: 10rpx 30rpx;
    border-radius: 55rpx;
}

.search input {
    margin-left: 30rpx;
    width: 85%;
}

.line {
    height: 120rpx;
}

.order-box {
    padding: 0 20rpx;
}

.order-list {
    background: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
}

.list-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ececec;
}

.head-main {
    display: flex;
    align-items: center;
}

.head-main .id {
    margin-right: 30rpx;
}

.list-main {
    display: flex;
    padding: 30rpx;
    align-items: center;
    justify-content: space-between;
}

.list-main image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 20rpx;
}

.list-content {
    width: 370rpx;
}

.list-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    height: 80rpx;
    line-height: 40rpx;
}

.list-size {
    font-size: 20rpx;
    margin-top: 5rpx;
}

.list-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;
}

.list-price {
    display: flex;
    align-items: center;
}

.now-price {
    color: #FF3636;
    font-size: 24rpx;
    margin-right: 20rpx;
}

.old-price {
    color: #CDCDCD;
    font-size: 20rpx;
    text-decoration: line-through;
}

.num {
    color: #888;
}

.bottom-line {
    height: 120rpx;
}

.bottom {
    display: flex;
    align-items: center;
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 710rpx;
    padding: 10rpx 20rpx;
    justify-content: space-between;
}

.bottom-left {
    display: flex;
    align-items: center;
    line-height: 40rpx;
}

.bottom-left view {
    margin-left: 30rpx;
}

.bottom-left text {
    color: #FF3636;
}

.makeSure {
    background: #FF3636;
    width: 280rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0;
    color: #fff;
    border-radius: 35rpx;
    font-size: 3.5vw;
    letter-spacing: 5rpx;
}

.makeSure::after {
    border: 0;
}