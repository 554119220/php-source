.nav {
    display: flex;
    align-items: center;
    background: #fff;
    height: 90rpx;
}

.nav-list {
    width: 25%;
    text-align: center;
}

.on text {
    color: #ff3636;
    padding: 10rpx 30rpx;
    box-shadow: 0 0 5rpx rgba(0,0,0,0.3);
    border-radius: 40rpx;
}

.sell-box {
    margin-top: 20rpx;
    padding: 0 25rpx;
}

.sell-banner {
    height: 234rpx;
    position: relative;
}

.sell-banner image {
    width: 100%;
    height: 100%;
}

.banner-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.banner-content {
    width: 490rpx;
    color: #fff;
}

.banner-head {
    display: flex;
    justify-content: space-between;
}

.banner-bottom {
    display: flex;
    justify-content: space-between;
    font-size: 5vw;
    letter-spacing: 5rpx;
    margin-top: 5rpx;
}

.goods-box {
    margin-top: 20rpx;
}

.goods-title {
    color: #888;
}

.goods-list {
    background: #fff;
    margin-top: 20rpx;
    box-shadow: -1px 2px 3px 0px rgba(52,52,52,0.12);
    border-radius: 20rpx;
}

.goods-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
}

.goods-main image {
    width: 83rpx;
    height: 63rpx;
    border-radius: 10rpx;
}

.content {
    display: flex;
    align-items: center;
    width: 530rpx;
    justify-content: space-between;
}

.total-num {
    width: 360rpx;
    display: flex;
}

.goods-name {
    width: 245rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.make-money {
    color: #FF3636;
}

.s-list-box {
    padding: 10rpx 30rpx 30rpx 20rpx;
    border-top: 1rpx solid #E4E4E4;
}

.s-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;
    font-size: 3vw;
}

.s-list-price {
    color: #FF3636;
}

.bottom-line {
    height: 100rpx;
}