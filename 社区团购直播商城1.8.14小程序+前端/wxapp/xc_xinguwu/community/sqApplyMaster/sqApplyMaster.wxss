.main {
    width: 100%;
    height: 100vh;
    position: relative;
}

.main image {
    width: 100%;
    height: 100%;
}

.apply-box {
    width: 690rpx;
    background: #fff;
    position: absolute;
    left: 30rpx;
    bottom: 60rpx;
    border-radius: 20rpx;
    padding-bottom: 45rpx;
}

.apply-box input {
    text-align: right;
    width: 450rpx;
}

.apply-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

picker {
    width: 70%;
    text-align: right;
}

.submit {
    width: 550rpx;
    height: 90rpx;
    margin: 0 auto;
    margin-top: 45rpx;
    border-radius: 45rpx;
    background: linear-gradient(#f86243,#f3266a);
    color: #fff;
    padding: 0;
    font-size: 3.5vw;
    line-height: 90rpx;
}

.submit::after {
    border: 0;
}

.list-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 75%;
    height: 50rpx;
}

.list-content view {
    width: 90%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: right;
}

.list-content image {
    width: 15rpx;
    height: 25rpx;
}