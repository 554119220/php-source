.nav {
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    height: 90rpx;
    text-align: center;
    background: #fff;
    width: 100%;
    z-index: 5;
}

.nav-list {
    width: 25%;
}

.on text {
    box-shadow: 0px 1rpx 5rpx 0px rgba(55,55,55,0.12);
    border-radius: 30px;
    color: #ff3636;
    padding: 10rpx 25rpx;
}

.line {
    height: 110rpx;
}

.data-banner {
    width: 705rpx;
    margin: 0 auto;
    position: relative;
    height: 234rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.data-banner image {
    width: 100%;
    height: 100%;
}

.banner-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 10;
}

.toDetail {
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    display: flex;
    align-items: center;
    color: #fff;
    font-size: 20rpx;
}

.toDetail image {
    width: 25rpx;
    height: 26rpx;
    margin-right: 20rpx;
}

.recent {
    width: 710rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    background: #fff;
    border-radius: 20rpx;
}

.recent-title {
    padding: 20rpx 30rpx;
    text-align: right;
    color: #888;
}

.canvas {
    width: 710rpx;
    height: 200px;
}

.data-box {
    width: 710rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    background: #fff;
    border-radius: 20rpx;
}

.deposit {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #E9E9E9;
    padding: 20rpx 30rpx;
}

.deposit image {
    width: 34rpx;
    height: 35rpx;
}

.deposit .deposit-content {
    display: flex;
    width: 600rpx;
    justify-content: space-between;
}

.data-total {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
}

.data-total image {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
}

.data-total .total-content {
    display: flex;
    width: 600rpx;
    justify-content: space-between;
}

.price {
    color: #ff3636;
}

.toDeposit {
    width: 665rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin: 0 auto;
    background: #ff3636;
    border-radius: 45rpx;
    color: #fff;
    margin-top: 50rpx;
}