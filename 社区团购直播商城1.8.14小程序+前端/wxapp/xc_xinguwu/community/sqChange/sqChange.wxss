.change-banner {
    position: relative;
    height: 320rpx;
}

.banner-bg {
    width: 100%;
    height: 100%;
}

.banner-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.search {
    display: flex;
    align-items: center;
    background: #f66943;
    border-radius: 60rpx;
    padding: 10rpx 40rpx;
    width: 630rpx;
    margin: 0 auto;
    color: #fff;
}

.search .plc {
    color: #fff;
}

.search input {
    margin-left: 20rpx;
    width: 90%;
}

.banner-selected {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 710rpx;
    padding: 20rpx;
    color: #fff;
}

.banner-selected .head-img {
    width: 115rpx;
    height: 115rpx;
    border-radius: 50%;
}

.banner-selected .selected-content {
    width: 510rpx;
}

.banner-selected .content-head {
    display: flex;
    align-items: center;
}

.selected-address {
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.group-box {
    width: 710rpx;
    border-radius: 20rpx;
    background: #fff;
    margin-top: -30rpx;
    position: relative;
    top: -50rpx;
    z-index: 5;
    left: 20rpx;
}

.group-box .group-list:last-child {
    border: 0;
}

.group-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    font-size: 3.2vw;
    border-bottom: 1rpx solid #E9E9E9;
}

.group-list image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.group-list .group-content {
    width: 500rpx;
    display: flex;
    align-items: center;
}

.group-list .content-head {
    display: flex;
    align-items: center;
}

.group-list .content-name {
    font-weight: bold;
}

.group-list .content-bottom {
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.group-list .content-left {
    width: 420rpx;
}

.distance {
    text-align: right;
    color: #f66943;
}

.distance text {
    font-weight: bold;
    color: #f66943;
}