.sportParticulars-box {
    padding: 30rpx 20rpx;
}

.list-box {
    background: #fff;
    padding-bottom: 40rpx;
    border-radius: 10rpx;
}

.list {
    border-bottom: 1rpx solid #ececec;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
}

.detail-left {
    width: 60%;
}

.name {
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.date {
    color: #888;
    margin-top: 10rpx;
}

.cost {
    font-size: 5vw;
    color: #444;
    font-weight: bold;
}

.get {
    font-size: 5vw;
    color: #f93d3d;
    font-weight: bold;
}