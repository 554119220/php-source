<view class="banner">
    <view class="banner-user">
        <image src="{{avatarutl}}"></image>
        <view class="user-content">
            <view class="user-name font4_5">{{nickname}}</view>
            <view class="user-id">ID:{{userid}}</view>
        </view>
    </view>
</view>
<view class="container">
    <view class="step">
        <view class="step-list">
            <view class="step-name">今日步数</view>
            <view class="font_05 step-num">{{step}}</view>
        </view>
        <view class="step-list">
            <view class="step-name">累计步数</view>
            <view class="font_05 step-num">{{totalstep}}</view>
        </view>
    </view>
    <view class="coin">
        <view class="coin-left">
            <image src="{{images.sport_icon}}"></image>动力币
      <text>{{coin}}</text>
        </view>
        <navigator class="toDetail" hoverClass="none" url="../sportParticulars/sportParticulars">明细</navigator>
    </view>
    <view class="bottom-box">
        <navigator class="btn" url="../sportMilitary/sportMilitary">
            <button>
                <image class="btn1" src="../images/sport-btn1.png"></image>
        兑换记录
      </button>
        </navigator>
        <navigator class="btn" url="../sportCombat/sportCombat">
            <button>
                <image class="btn2" src="../images/sport-btn2.png"></image>
        我的战绩
      </button>
        </navigator>
        <navigator class="btn" url="../sportRecord/sportRecord">
            <button>
                <image class="btn3" src="../images/sport-btn3.png"></image>
        步数记录
      </button>
        </navigator>
        <navigator class="btn" url="/xc_xinguwu/pages/address/address">
            <button>
                <image class="btn4" src="../images/sport-btn4.png"></image>
        地址管理
      </button>
        </navigator>
        <view class="btn">
            <button openType="share">
                <image class="btn5" src="../images/sport-btn5.png"></image>
        邀请好友
      </button>
        </view>
        <view class="btn">
            <button openType="contact">
                <image class="btn6" src="../images/sport-btn6.png"></image>
        在线客服
      </button>
        </view>
    </view>
</view>
<view class="bottom-line"></view>
<import src="/we7/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
