page {
    color: #444;
}

.banner {
    background: #f74e34;
    height: 290rpx;
    color: #fff;
}

.banner-user {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    padding-top: 40rpx;
}

.banner-user image {
    width: 120rpx;
    height: 120rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
    margin-right: 30rpx;
}

.user-name {
    font-weight: bold;
}

.user-id {
    margin-left: 20rpx;
}

.container {
    padding: 0 20rpx;
}

.step {
    background: #fff;
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-radius: 10rpx;
    margin-top: -75rpx;
}

.step .step-list:last-child {
    border: 0;
}

.step-list {
    text-align: center;
    border-right: 1rpx solid #efefef;
    width: 50%;
}

.step-name {
    color: #888;
}

.step-num {
    font-weight: bold;
}

.coin {
    background: #fff;
    border-radius: 10rpx;
    padding: 20rpx 30rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
}

.coin-left {
    display: flex;
    align-items: center;
}

.coin-left image {
    margin-right: 20rpx;
}

.coin-left text {
    color: #f74e34;
}

.toDetail {
    width: 120rpx;
    height: 60rpx;
    background: #f74e34;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    border-radius: 50rpx;
}

.bottom-box {
    background: #fff;
    border-radius: 10rpx;
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.bottom-box button {
    background: #fff;
    padding: 0;
    width: 100%;
    height: 100%;
    font-size: 3.5vw;
}

.bottom-box button::after {
    border: 0;
}

.bottom-box .btn {
    width: 33.33%;
    height: 200rpx;
}

.bottom-box .btn image {
    margin: 0 auto;
}

