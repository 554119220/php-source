.container {
    padding: 20rpx;
}

.search {
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
}

.record-box {
}

.record-list {
    background: #fff;
    border-radius: 10rpx;
    margin-top: 20rpx;
}

.record-head {
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 3vw;
}

.head-left {
}

.head-right {
    display: flex;
    align-items: center;
}

.state {
    color: #f93d3d;
}

.state1 {
    background: #f93d3d;
    padding: 10rpx;
    margin-left: 20rpx;
    color: #fff;
    border-radius: 10rpx;
}

.state2 {
    background: #d4d4d4;
    padding: 10rpx;
    margin-left: 20rpx;
    color: #fff;
    border-radius: 10rpx;
}

.record-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
}

.record-bottom image {
    width: 200rpx;
    height: 145rpx;
}

.record-bottom .content {
    width: 420rpx;
}

.name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.cost {
    margin-top: 15rpx;
    color: #f93d3d;
}

.cost text {
    color: #f93d3d;
    font-weight: bold;
    margin-right: 5rpx;
}