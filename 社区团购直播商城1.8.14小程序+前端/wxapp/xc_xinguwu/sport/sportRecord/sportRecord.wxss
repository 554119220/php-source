.container {
    padding: 20rpx 25rpx;
}

.record-head {
    background: #fff;
    border-radius: 10rpx;
    background: #fff;
}

.record-head .head-list {
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #e3e3e3;
}

.record-head .head-list:last-child {
    border: 0;
}

.record-head .head-list .head-step {
    color: #f93d3d;
}

.step-box {
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}

.step-list {
}

.step-list-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #e8e8e8;
}

.step-list-head .date {
    font-weight: bold;
}

.step-list-head .h-arrows {
    width: 20rpx;
    height: 30rpx;
}

.step-list-head .s-arrows {
    width: 30rpx;
    height: 15rpx;
}

.step-detail {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e8e8e8;
}

.detail-list {
    padding: 15rpx 30rpx;
    display: flex;
    justify-content: space-between;
    color: #888;
}