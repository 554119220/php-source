.sport-container {
    padding: 20rpx 25rpx;
}

.sport-top {
    background: #fff;
    padding: 40rpx 0;
    border-radius: 10rpx;
}

.sport-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.sport-head .head-left {
    display: flex;
    align-items: center;
    place-content: 30rpx;
}

.sport-head .head-left image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
    margin-left: 30rpx;
}

.sport-head .head-left text {
    color: #f93d3d;
}

.sport-rule {
    background: #f93d3d;
    color: #fff;
    height: 55rpx;
    line-height: 55rpx;
    display: flex;
    align-items: center;
    padding: 5rpx 20rpx;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
}

.sport-rule image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

.step-box {
    width: 280rpx;
    height: 280rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    position: relative;
}

.step-box .step-bg {
    width: 100%;
    height: 250rpx;
}

.step-box .step-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    text-align: center;
    color: #f93d3d;
}

.step-box .step-text {
    margin-top: 85rpx;
}

.step-number {
    margin-top: 5rpx;
}

.step-logo {
    width: 50rpx;
    height: 60rpx;
    margin: 0 auto;
    margin-top: 25rpx;
}

.update-step {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #888;
    padding: 20rpx 0;
}

.update-step image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.step-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: -30rpx;
}

.btn-list {
    width: 200rpx;
    height: 80rpx;
    position: relative;
}

.btn-bg {
    width: 100%;
    height: 100%;
}

.btn-list-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f93d3d;
}

.btn-list-main button {
    background: #fff;
    width: 110rpx;
    margin: 0 auto;
    padding: 0;
    font-size: 3.5vw;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60rpx;
    line-height: 60rpx;
    color: #f93d3d;
}

.btn-list-main button::after {
    border: 0;
}

.change-btn {
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.invite-btn {
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.help-box {
    padding: 0 25rpx;
    background: #fff;
    margin-top: -30rpx;
    border-radius: 10rpx;
}

.all-help {
    padding-top: 50rpx;
    padding-bottom: 30rpx;
}

.help-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.help-list image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.help-list view {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1rpx dashed #f93d3d;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f93d3d;
    font-size: 5vw;
}

.today-text {
    text-align: center;
    color: #888;
    padding-bottom: 30rpx;
}

.switch {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    background: #fff;
    margin-top: 20rpx;
    border-radius: 10rpx;
    justify-content: space-between;
    font-size: 4vw;
    font-weight: bold;
}

switch {
    zoom: 0.8;
}

.n-join-sport {
    background: #fff;
    padding: 0 30rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
}

.n-join-sport .join-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.n-join-sport .join-head view:nth-child(1) {
    font-weight: bold;
    font-size: 4vw;
}

.n-join-sport .join-head view:nth-child(2) {
    color: #888;
}

.join-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.join-list {
    width: 310rpx;
    height: 190rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
    margin-bottom: 20rpx;
}

.join-list image {
    width: 100%;
    height: 100%;
}

.join-main {
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.join-main view {
    padding-left: 20rpx;
    color: #f93d3d;
    font-weight: bold;
}

.join-main view:nth-child(1) {
    margin-top: 20rpx;
}

.change-box {
    padding: 0 30rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    background: #fff;
    padding-bottom: 20rpx;
}

.change-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.change-head view:nth-child(1) {
    font-weight: bold;
    font-size: 4vw;
}

.change-head view:nth-child(2) {
    color: #888;
}

.all-change {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 20rpx;
}

.change-list {
    width: 300rpx;
    margin-bottom: 20rpx;
}

.change-list image {
    width: 300rpx;
    height: 190rpx;
    border-radius: 10rpx;
}

.change-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #f93d3d;
}

.change-saled {
    display: flex;
    align-items: center;
}

.change-name {
    color: #888;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 10rpx 0;
}

.change-saled view:nth-child(1) {
    width: 25rpx;
    height: 25rpx;
    line-height: 25rpx;
    font-size: 16rpx;
    border-radius: 50%;
    border: 1rpx solid;
    text-align: center;
}

.change-line {
    height: 1rpx;
    border-bottom: 1rpx solid #d8d8d8;
}

.c-model {
    position: fixed;
    left: 100rpx;
    width: 550rpx;
    top: 150rpx;
    background: #fff;
    z-index: 6;
    border-radius: 10rpx;
}

.c-model-close {
    text-align: right;
    padding: 0 20rpx;
    font-size: 5vw;
}

.model-success {
    text-align: center;
    font-weight: bold;
    font-size: 4.5vw;
}

.main-img {
    width: 360rpx;
    height: 240rpx;
    margin: 0 auto;
}

.model-head {
    display: flex;
    justify-content: space-between;
    padding: 0 50rpx;
    margin-top: 30rpx;
}

.model-head text {
    color: #f93d3d;
}

.challenge-box {
    margin-top: 20rpx;
}

.chall-list {
    padding: 0 50rpx;
}

.cha-left-head {
    display: flex;
    justify-content: space-between;
}

.cha-left-head text {
    color: #f93d3d;
    font-weight: bold;
}

.cha-left-head image {
    width: 35rpx;
    height: 35rpx;
    border-radius: 50%;
}

.c-sure {
    width: 400rpx;
    height: 80rpx;
    text-align: center;
    line-height: 70rpx;
    color: #fff;
    border-radius: 50rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    background: #f93d3d;
}

.bottom-line {
    height: 120rpx;
}

.finished {
    width: 525rpx;
    position: fixed;
    left: 112.5rpx;
    top: 270rpx;
    background: #F27121;
    border-radius: 10rpx;
    z-index: 6;
    text-align: center;
    padding: 30rpx 20rpx;
    color: #fff;
}

.finished image {
    margin: 0 auto;
    margin-top: 10rpx;
    width: 445rpx;
    height: 220rpx;
}

.finished-title {
    font-size: 5vw;
    letter-spacing: 5rpx;
}

.toSee {
    width: 240rpx;
    height: 50rpx;
    border-radius: 25rpx;
    text-align: center;
    line-height: 50rpx;
    letter-spacing: 5rpx;
    border: 1rpx solid;
    margin: 0 auto;
    margin-top: 10rpx;
}

.close {
    position: fixed;
    left: 0;
    bottom: 380rpx;
    width: 100%;
    z-index: 6;
    text-align: center;
}