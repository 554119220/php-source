page {
    background: #fff;
}

.cha-banner {
    background: #f84439;
    color: #fff;
}

.banner-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 25rpx;
}

.cha-prize {
    display: flex;
    align-items: center;
}

.cha-prize image {
    width: 25rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

.cha-rule {
    display: flex;
    align-items: center;
}

.cha-rule image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

.today-step {
    text-align: center;
}

.unit {
    text-align: center;
    padding-bottom: 40rpx;
}

.nav {
    display: flex;
    align-items: center;
    height: 100rpx;
    background: #fff;
    border-bottom: 1rpx solid #efefef;
}

.line {
    color: #f8f8f8;
}

.nav .nav-list {
    width: 33.3%;
    text-align: center;
}

.nav .on text {
    color: #f84439;
    padding: 10rpx 20rpx;
    border-radius: 60rpx;
    box-shadow: 0 0 6rpx rgba(0,0,0,0.2);
}

.chall-box {
    padding: 30rpx 25rpx 0 25rpx;
}

.challenge-list {
    border-radius: 10rpx;
    box-shadow: 0 0 6rpx rgba(0,0,0,0.2);
    position: relative;
    padding-bottom: 20rpx;
    margin-bottom: 25rpx;
}

.cha-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
}

.before,.begining,.ending {
    width: 25rpx;
    line-height: 30rpx;
    color: #fff;
    text-align: center;
    padding: 15rpx 20rpx;
    border-bottom-left-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    position: absolute;
    top: 0;
    right: 40rpx;
}

.before {
    background: #f84439;
}

.begining {
    background: #feb854;
}

.ending {
    background: #dadada;
}

.cha-state {
    color: #f84439;
    margin-right: 95rpx;
}

.cha-name {
    font-weight: bold;
    color: #f84439;
    text-align: center;
}

.can-get {
    color: #888;
    text-align: center;
    margin-top: 10rpx;
}

.cha-count {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 10rpx;
}

.cha-count text {
    color: #888;
}

.cha-count view {
    width: 40rpx;
    height: 25rpx;
    line-height: 25rpx;
    color: #f84439;
    border: 1rpx solid #999;
    text-align: center;
    border-radius: 5rpx;
    margin: 0 10rpx;
}

.toJoin {
    text-align: center;
    width: 415rpx;
    height: 60rpx;
    background: #f84439;
    color: #fff;
    line-height: 60rpx;
    border-radius: 50rpx;
    margin: 20rpx auto;
    border: 1rpx solid #f84439;
}

.submit {
    text-align: center;
    width: 415rpx;
    height: 60rpx;
    border: 1rpx solid #f84439;
    color: #f84439;
    line-height: 60rpx;
    border-radius: 50rpx;
    margin: 20rpx auto;
}

.chall-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 70rpx;
    margin-top: 10rpx;
}

.chall-bottom text {
    color: #f84439;
}

.rule-model {
    background: #fff;
    border-radius: 10rpx;
    position: fixed;
    left: 40rpx;
    top: 120rpx;
    width: 670rpx;
    padding-bottom: 40rpx;
    z-index: 6;
}

.rule-model .rule-title {
    font-size: 4vw;
    font-weight: bold;
    text-align: center;
    padding: 40rpx 0;
}

.rule-model .rule-box {
    padding: 0 40rpx;
}

.rule-list {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.rule-num {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    line-height: 40rpx;
    color: #fff;
    background: #f84439;
    text-align: center;
}

.rule-detail {
    width: 525rpx;
}

.close-rule {
    position: fixed;
    left: 0;
    bottom: 300rpx;
    width: 100%;
    text-align: center;
    z-index: 6;
}

.bottom-line {
    height: 120rpx;
}

.container {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    z-index: 100;
    background: #eee;
    width: 100%;
}

.apply-box {
    border-radius: 10rpx;
    overflow: hidden;
    background: #fff;
    width: 700rpx;
    margin: 20rpx auto;
    height: calc(100% - 40rpx);
}

.apply-main {
    padding: 30rpx 0;
    background: #fff;
    border-bottom: 1rpx solid #e1e1e1;
    text-align: center;
}

.project-name {
    font-weight: bold;
    font-size: 3.6vw;
}

.project-time {
    margin-top: 15rpx;
}

.use {
    color: #888;
    margin-top: 50rpx;
}

.cost {
    font-weight: bold;
    font-size: 8vw;
    color: #f93d3d;
}

.apply-rule {
    background: #fff;
    padding: 0 60rpx;
    padding-bottom: 40rpx;
    position: relative;
}

.rule-title {
    padding: 40rpx 0;
    text-align: center;
    font-weight: bold;
    font-size: 4.5vw;
}

.apply-box-rule-list {
    margin-bottom: 20rpx;
}

.rule-head {
    display: flex;
    align-items: center;
    font-weight: bold;
}

.rule-head image {
    width: 28rpx;
    height: 33rpx;
    margin-right: 20rpx;
}

.rule-detail {
    padding-left: 45rpx;
    color: #888;
    margin-top: 10rpx;
}

.line {
    height: 100rpx;
}

.rule-bottom {
    width: 580rpx;
    display: flex;
    align-items: center;
    margin: 0 auto;
    justify-content: space-between;
}

.rule-bottom .toIndex {
    width: 280rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #f93d3d;
    border: 1rpx solid;
    border-radius: 60rpx;
}

.rule-bottom .toApply {
    width: 280rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    border: 1rpx solid;
    border-radius: 60rpx;
    background: #f93d3d;
}

.sport-model {
    width: 550rpx;
    height: 650rpx;
    position: fixed;
    top: 200rpx;
    left: 100rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    z-index: 10;
}

.sport-model .close {
    text-align: right;
    color: #b6b6b6;
    font-size: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.sport-model .title {
    text-align: center;
    letter-spacing: 4rpx;
    color: #444;
    font-size: 36rpx;
    font-weight: bold;
}

.sport-model>image {
    width: 300rpx;
    margin: 30rpx auto;
}

.sport-model .sport-model-text {
    width: 400rpx;
    text-align: center;
    margin: 0 auto;
    line-height: 40rpx;
    font-size: 26rpx;
}

.sport-model .sport-model-btn {
    width: 400rpx;
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 38rpx;
    background: #F93D3D;
    color: #fff;
    margin-top: 50rpx;
    font-size: 24rpx;
    letter-spacing: 6rpx;
}