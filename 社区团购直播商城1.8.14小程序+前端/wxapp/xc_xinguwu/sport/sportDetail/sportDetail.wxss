page {
    color: #444;
}

.detail-banner {
    background: #f93d3d;
    height: 200rpx;
}

.banner-main {
    display: flex;
    align-items: center;
    padding: 30rpx 20rpx;
    color: #fff;
}

.nsend {
    width: 40rpx;
    height: 35rpx;
}

.hsend {
    width: 46rpx;
    height: 38rpx;
}

.nver {
    width: 37rpx;
    height: 38rpx;
}

.hver {
    width: 36rpx;
    height: 38rpx;
}

.banner-state {
    margin-left: 30rpx;
    letter-spacing: 5rpx;
    margin-right: 55rpx;
}

.state-detail {
    font-size: 3vw;
}

.goods-box {
    background: #fff;
    border-radius: 20rpx;
    margin: 0 auto;
    margin-top: -80rpx;
    width: 94%;
    padding-bottom: 20rpx;
}

.user-box {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 35rpx 40rpx;
}

.user-box image {
    width: 20rpx;
    height: 33rpx;
    margin-top: 10rpx;
}

.user-content {
    width: 580rpx;
}

.user-content-head {
    display: flex;
    font-weight: bold;
}

.user-name {
    margin-right: 30rpx;
}

.address-detail {
    color: #888;
}

.goods-list {
    padding: 30rpx 25rpx;
    border-top: 1rpx solid #eaeaea;
    border-bottom: 1rpx solid #eaeaea;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.goods-list image {
    width: 200rpx;
    height: 140rpx;
    box-shadow: 0 0 5rpx rgba(0,0,0,0.2);
}

.content {
    width: 425rpx;
}

.gift-name {
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods-cost {
    display: flex;
    align-items: center;
    color: #f93d3d;
    margin-top: 10rpx;
}

.goods-cost text {
    font-weight: bold;
    font-size: 4vw;
    margin-right: 5rpx;
    color: #f93d3d;
}

.goods-info {
    padding: 20rpx 30rpx;
}

.voucher {
    padding: 0 30rpx;
    border-top: 1rpx solid #eaeaea;
    padding-bottom: 30rpx;
}

.voucher view {
    padding-top: 20rpx;
}

.voucher image {
    margin: 0 auto;
    width: 190rpx;
    height: 190rpx;
    margin-top: 30rpx;
}

.delivery {
    width: 710rpx;
    height: 90rpx;
    border-radius: 45rpx;
    text-align: center;
    line-height: 90rpx;
    color: #fff;
    background: #f93d3d;
    position: fixed;
    left: 20rpx;
    bottom: 80rpx;
}