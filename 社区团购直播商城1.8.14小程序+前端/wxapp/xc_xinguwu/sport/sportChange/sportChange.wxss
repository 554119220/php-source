page {
    background: #fff;
}

.change-banner {
    width: 700rpx;
    height: 290rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    position: relative;
}

.change-banner image {
    width: 100%;
    height: 100%;
}

.banner-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.record {
    width: 160rpx;
    height: 70rpx;
    background: #d82d2d;
    color: #fff;
    line-height: 70rpx;
    float: right;
    margin-right: 10rpx;
    margin-top: 40rpx;
    text-align: center;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
}

.clear {
    clear: both;
}

.my-coin {
    color: #fff;
    padding: 0 60rpx;
}

.num {
    letter-spacing: 5rpx;
}

.change-box {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 35rpx;
    flex-wrap: wrap;
}

.change-list {
    width: 50%;
    border-bottom: 1rpx solid #d8d8d8;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.change-box .change-list:nth-child(even) .change-main {
    margin-left: 6%;
}

.change-main {
    width: 94%;
}

.change-main image {
    width: 100%;
    height: 210rpx;
    border-radius: 10rpx;
}

.change-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #888;
    padding: 20rpx 0;
}

.change-bottom {
    display: flex;
    justify-content: space-between;
    color: #d82d2d;
    font-size: 3vw;
}

.saled {
    display: flex;
    align-items: center;
}

.saled view {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
    line-height: 25rpx;
    font-size: 16rpx;
    text-align: center;
    border: 1rpx solid;
    border-radius: 50%;
}

.bottom-line {
    height: 120rpx;
}