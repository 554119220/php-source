.container {
    padding: 40rpx 92.5rpx;
}

.container image {
    width: 100%;
    height: 825rpx;
    border-radius: 10rpx;
    box-shadow: 0 5rpx 0rpx rgba(0,0,0,0.2);
}

.share {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #f93d3d;
    padding: 0;
    background: #f8f8f8;
    border-radius: 50rpx;
    margin-top: 50rpx;
    border: 1rpx solid #f93d3d;
    font-size: 3.5vw;
    letter-spacing: 5rpx;
}

.share button {
    border: 0;
}

.save {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    padding: 0;
    background: #f93d3d;
    border-radius: 50rpx;
    margin-top: 30rpx;
    border: 1rpx solid #f93d3d;
    text-align: center;
    letter-spacing: 5rpx;
}