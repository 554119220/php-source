.banner {
    height: 280rpx;
    background: #f65232;
    color: #fff;
    text-align: center;
}

.total {
    font-weight: bold;
    letter-spacing: 5rpx;
    font-size: 8vw;
    padding-top: 50rpx;
}

.container {
    padding: 0 20rpx;
}

.degree {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    background: #fff;
    border-radius: 10rpx;
    margin-top: -75rpx;
    box-shadow: 0 5rpx 5rpx rgba(0,0,0,0.1);
}

.degree .degree-list:last-child {
    border: 0;
}

.degree-list {
    width: 50%;
    text-align: center;
    border-right: 1rpx solid #efefef;
}

.degree-list view:nth-child(1) {
    color: #f65232;
    font-weight: bold;
}

.degree-list view:nth-child(2) {
    color: #888;
}

.combat-box {
    margin-top: 20rpx;
}

.combat-list {
    background: #fff;
    padding: 30rpx 35rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.combat-head {
    display: flex;
    align-items: center;
}

.combat-state1 {
    padding: 0rpx 15rpx;
    background: #f65232;
    color: #fff;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.combat-state2 {
    padding: 0rpx 15rpx;
    background: #feb854;
    color: #fff;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.combat-state3 {
    padding: 0rpx 15rpx;
    background: #dfdfdf;
    color: #fff;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.project {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.combat-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-top: 30rpx;
    font-size: 3vw;
}

.now {
    margin-right: 80rpx;
    width: 270rpx;
    text-align: right;
}

.combat-bottom text {
    color: #f65232;
    font-size: 4.2vw;
}

.prize {
    width: 270rpx;
    text-align: left;
}