.scratch {
    width: 100%;
    height: 100vh;
    position: relative;
}

.scratch-bg {
    width: 100%;
    height: 100%;
}

.scratch-main {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.hasChance {
    width: 280rpx;
    height: 45rpx;
    border-radius: 25rpx;
    line-height: 45rpx;
    text-align: center;
    background: rgba(113,20,29,0.5);
    color: #fff;
    font-size: 3vw;
    margin: 0 auto;
    margin-top: 240rpx;
    letter-spacing: 5rpx;
}

.hasChance text {
    color: #f93d3d;
    font-weight: bold;
    font-size: 3.5vw;
    line-height: 45rpx;
}

.scratch-area {
    width: 710rpx;
    height: 260rpx;
    position: relative;
    margin: 0 auto;
    margin-top: 20rpx;
}

.my-scratch-bg {
    width: 100%;
    height: 100%;
}

.scarch-box {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.open {
    position: absolute;
    left: 0;
    top: 60rpx;
    z-index: 10;
    width: 100%;
    height: 45rpx;
    border: 1rpx;
}

.open image {
    width: 405rpx;
    height: 43rpx;
    margin: 0 auto;
}

.start-box {
    position: absolute;
    width: 100%;
    height: 66rpx;
    left: 0;
    bottom: 50rpx;
    z-index: 10;
}

.start {
    width: 100%;
    height: 100%;
    position: relative;
}

.start image {
    width: 400rpx;
    height: 66rpx;
    margin: 0 auto;
}

.start view {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 66rpx;
    position: absolute;
    left: 0;
    top: 0;
    color: #fff;
    letter-spacing: 8rpx;
}

.btn-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    margin-top: 15rpx;
}

.share-box {
    display: flex;
    align-items: center;
    width: 170rpx;
    height: 30rpx;
    background: transparent;
    color: #fff;
}

.share-box image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

.panel {
    display: flex;
    align-items: center;
    width: 170rpx;
    height: 30rpx;
    background: transparent;
    color: #fff;
}

.panel image {
    width: 30rpx;
    height: 25rpx;
    margin-left: 15rpx;
}

.rule-title {
    margin-top: 115rpx;
    padding-left: 85rpx;
    font-weight: bold;
    color: #74462a;
    letter-spacing: 10rpx;
    font-size: 30rpx;
}

.gift-box {
    color: #fff;
    margin-top: 20rpx;
    font-size: 3vw;
    height: 150rpx;
}

.gift-list {
    margin-bottom: 5rpx;
}

.rule-box {
    width: 620rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    height: 170rpx;
    font-size: 3vw;
    color: #fff;
}

.rule-list {
    margin-bottom: 10rpx;
    font-size: 3vw;
    color: #fff;
}

.model,.list-model,.share-model {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 15;
    background: rgba(37,37,37,0.4);
}

.success-box {
    height: 540rpx;
    width: 430rpx;
    margin: 0 auto;
    margin-top: 150rpx;
    position: relative;
}

.modle-bg {
    width: 100%;
    height: 100%;
}

.model-main {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    color: #fffa6a;
    text-align: center;
}

.success-text {
    font-weight: bold;
    margin-top: 240rpx;
    letter-spacing: 5rpx;
    font-size: 32rpx;
}

.gift-name {
    letter-spacing: 5rpx;
}

.see-gift {
    width: 290rpx;
    height: 70rpx;
    margin-left: 75rpx;
    background: #fffa6a;
    color: #f93d3d;
    line-height: 70rpx;
    border-radius: 35rpx;
    margin-top: 65rpx;
}

.close-box {
    height: 56rpx;
    margin-top: 45rpx;
}

.close-box image {
    margin: 0 auto;
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
}

.list-box {
    width: 645rpx;
    height: 790rpx;
    background: #fff;
    border-radius: 20rpx;
    margin: 0 auto;
    margin-top: 160rpx;
}

.list-head {
    height: 130rpx;
    position: relative;
    text-align: center;
    line-height: 130rpx;
    border-bottom: 1rpx solid #e2e2e2;
    font-weight: bold;
    font-size: 36rpx;
}

.list-head view {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    width: 30rpx;
    font-size: 36rpx;
}

.all-list {
    height: 610rpx;
    margin-top: 20rpx;
}

.list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 38rpx;
    margin-bottom: 20rpx;
}

.list image {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
}

.list-content {
    width: 480rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-name {
    font-size: 30rpx;
}

.list-prize {
    color: #888;
}

.list-prize text {
    color: #f93d3d;
}

.my-share-box {
    border-radius: 20rpx;
    width: 622rpx;
    height: 870rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.my-share-box image {
    width: 100%;
    height: 100%;
}

.share-close-box {
    height: 56rpx;
    margin-top: 45rpx;
}

.share-close-box image {
    margin: 0 auto;
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
}

.save-img {
    width: 380rpx;
    height: 90rpx;
    margin: 0 auto;
    background: #b51a28;
    margin-top: 40rpx;
    color: #fff;
    border-radius: 45rpx;
    text-align: center;
    line-height: 90rpx;
}