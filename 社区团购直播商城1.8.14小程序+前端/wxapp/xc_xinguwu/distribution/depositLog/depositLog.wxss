.search {
    height: 120rpx;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    display: flex;
    align-items: center;
    background: #f8f8f8;
    z-index: 5;
}

.section {
    width: 94%;
    margin: 0 auto;
    background: #fff;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 20rpx;
}

.picker {
    margin-left: 30rpx;
    width: 500rpx;
    color: #888;
    height: 60rpx;
    line-height: 60rpx;
}

.picker text {
    margin-right: 50rpx;
}

.search-btn button {
    width: 120rpx;
    height: 60rpx;
    background: #fff;
    color: #f04043;
    border: 1rpx solid;
    line-height: 60rpx;
}

button::after {
    border: 0;
}

.line {
    height: 120rpx;
}

.date {
    width: 94%;
    margin: 0 auto;
    margin-top: 20rpx;
    border-radius: 15rpx;
    overflow: hidden;
}

.month {
    padding: 20rpx;
    background: #fff;
}

.detail {
    display: flex;
    background: #fff;
    padding: 10rpx 20rpx;
    border-top: 1rpx solid #efefef;
    align-items: center;
    justify-content: space-between;
}

.day {
    color: #a8a8a8;
}

.total {
    text-align: right;
}

.received {
    color: #a8a8a8;
}

.Withdrawal {
    color: #f04043;
}