page {
    color: #444;
    background: #f9f9f9;
}

.user-info {
    padding: 20rpx;
    background: #fff;
    border-top: 4rpx solid #f9f9f9;
}

.user-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.user-info .user-head {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}

.user-info .info-content {
    display: flex;
    align-items: center;
}

.info-content .info-list {
    width: 120rpx;
    text-align: center;
}

.info-content .info-num {
    font-weight: bold;
}

.info-content .list-name {
    color: #b8b8b8;
    margin-top: 5rpx;
}

.user-name {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.user-name .attention {
    width: 135rpx;
    height: 50rpx;
    border-radius: 50rpx;
    line-height: 50rpx;
    color: #fff;
    text-align: center;
    background: #f93d3d;
}

.user-name .attentioned {
    width: 135rpx;
    height: 50rpx;
    border-radius: 50rpx;
    line-height: 50rpx;
    color: #fff;
    text-align: center;
    background: #888;
}

.intruct {
    color: #b8b8b8;
}

.none {
    display: flex;
    align-items: center;
    color: #b8b8b8;
}

.none image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 15rpx;
}

.live {
    margin-top: 20rpx;
    padding: 0 20rpx;
    background: #fff;
}

.live-head {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    justify-content: space-between;
}

.state {
    width: 170rpx;
    color: #f93d3d;
    font-weight: bold;
    border-right: 1rpx solid #e9e9e9;
}

.live-content {
    width: 500rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.live-title {
    width: 70%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: hidden;
}

.living-title {
    font-weight: bold;
}

.watching {
    color: #b8b8b8;
}

.toSee {
    width: 100rpx;
    text-align: center;
    line-height: 50rpx;
    height: 50rpx;
    color: #fff;
    background: #f93d3d;
    border-radius: 10rpx;
}

.live-img {
    display: flex;
    border-top: 1rpx solid #e9e9e9;
    padding: 20rpx 0;
}

.live-img image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
}

.dynamic {
}

.dynamic-list {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    background: #fff;
    padding: 40rpx 20rpx 20rpx 20rpx;
    margin-top: 20rpx;
}

.dynamic-list .dynamic-head-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.dynamic-list .dynamic-content {
    width: 580rpx;
}

.dy-name {
    font-weight: bold;
}

.dy-date {
    color: #b8b8b8;
}

.dy-text {
    margin-top: 10rpx;
}

.img-box {
    padding: 20rpx 0;
    display: flex;
    flex-wrap: wrap;
}

.dynamic-img {
    width: 33.33%;
    margin-bottom: 10rpx;
}

.dynamic-img image {
    width: 185rpx;
    height: 185rpx;
    margin: 0 auto;
}

.dynamic-bottom {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.admire {
    display: flex;
    align-items: center;
    color: #b8b8b8;
}

.admire image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.review {
    display: flex;
    align-items: center;
    margin-left: 50rpx;
    color: #b8b8b8;
    margin-right: 5rpx;
}

.review image {
    width: 40rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.no-dynamic {
    margin-top: 20rpx;
    background: #fff;
    height: 870rpx;
    text-align: center;
    color: #b8b8b8;
}

.no-dynamic image {
    margin: 0 auto;
    width: 420rpx;
    height: 265rpx;
    padding-top: 160rpx;
}

.add_dynamic {
    width: 80rpx;
    height: 80rpx;
    position: fixed;
    bottom: 100rpx;
    right: 40rpx;
    background: #F93D3D;
    border-radius: 50%;
    line-height: 75rpx;
    text-align: center;
    font-size: 55rpx;
    color: #fff;
    font-weight: bold;
}

.live-playback {
    height: 100rpx;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    line-height: 100rpx;
    background: #fff;
    align-items: center;
    margin-top: 20rpx;
    font-size: 32rpx;
    letter-spacing: 4rpx;
}

.live-playback view:nth-child(1) {
    display: flex;
    align-items: center;
}

.live-playback view:nth-child(1) image {
    margin-right: 20rpx;
}