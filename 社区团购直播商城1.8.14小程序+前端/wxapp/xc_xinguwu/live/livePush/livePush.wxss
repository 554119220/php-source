page {
    color: #fff;
}

.live-push {
    width: 100%;
    height: 100vh;
    left: 0;
    top: 0;
    position: fixed;
}

.live-head {
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: space-between;
}

.live-head .head-left {
}

.head-bottom {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    position: absolute;
    right: 0;
    bottom: 380rpx;
}

.hot {
    display: flex;
    align-items: center;
    height: 40rpx;
    line-height: 40rpx;
}

.good {
    display: flex;
    align-items: center;
    height: 40rpx;
    line-height: 40rpx;
    margin-left: 30rpx;
}

.hot cover-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.good cover-image {
    width: 30rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.head-top {
    display: flex;
    align-items: center;
}

.live-head .live-state {
    display: flex;
    align-items: center;
    background: #fc5f50;
    color: #fff;
    width: 140rpx;
    height: 40rpx;
    line-height: 40rpx;
    justify-content: center;
    border-radius: 10rpx;
}

.live-head .live-state .live-point {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #fff;
    margin-right: 10rpx;
}

.live-time {
    color: #fff;
    margin-left: 10rpx;
}

.head-right {
    display: flex;
    align-items: center;
}

.c-camera {
    width: 50rpx;
    height: 40rpx;
}

.dialogue {
    padding: 20rpx;
    position: fixed;
    left: 0;
    bottom: 80rpx;
    overflow-y: scroll;
    height: 260rpx;
    width: 710rpx;
}

.dialogue-list {
    display: flex;
    justify-content: flex-start;
    margin-bottom: 20rpx;
}

.name {
    height: 40rpx;
    line-height: 40rpx;
    width: 120rpx;
    text-align: right;
    color: #fc5f50;
    overflow: hidden;
    text-overflow: ellipsis;
}

.ques {
    line-height: 40rpx;
    margin-left: 20rpx;
    white-space: pre-wrap;
    width: 570rpx;
}

.live-bottom {
    height: 80rpx;
    width: 710rpx;
    padding: 0 20rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.microphone {
    width: 40rpx;
    height: 50rpx;
}

.lighting {
    width: 60rpx;
    height: 50rpx;
}

.smale {
    width: 50rpx;
    height: 50rpx;
}

.bottom-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bottom-left cover-image {
    padding: 30rpx;
}

.button {
    background: #fc5f50;
    width: 150rpx;
    text-align: center;
    line-height: 66rpx;
    height: 66rpx;
    border-radius: 10rpx;
}

.my-mode {
    width: 130rpx;
    height: 230rpx;
    position: absolute;
    bottom: 65rpx;
    margin-left: calc(50% - 140rpx);
}

.mode-list {
    width: 100%;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    bottom: 40rpx;
    margin-left: calc(50% - 64rpx);
    text-align: center;
}

.mode-list1 {
    width: 100%;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    bottom: 110rpx;
    margin-left: calc(50% - 64rpx);
    text-align: center;
}

.mode-list2 {
    width: 100%;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    bottom: 180rpx;
    margin-left: calc(50% - 32px);
    text-align: center;
}

.savelive {
    background: #000;
    width: 100%;
    height: 100vh;
    color: #444;
}

.savelive .content {
    width: 580rpx;
    background: #fff;
    position: relative;
    top: 280rpx;
    left: 85rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.savelive .content .content-head {
    background: #eee;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    letter-spacing: 4rpx;
    font-size: 34rpx;
}

.savelive .content .content-body {
    padding: 60rpx;
    display: flex;
    align-items: center;
}

.savelive .content .content-body input {
    width: 380rpx;
    margin-left: 20rpx;
}

.savelive .content .content-btn {
    padding: 30rpx;
    display: flex;
    justify-content: space-around;
}

.savelive .content .content-btn .btn-cancel {
    border: 1rpx solid #ff201a;
    border-radius: 10rpx;
    width: 160rpx;
    text-align: center;
    height: 60rpx;
    color: #ff201a;
    line-height: 60rpx;
}

.savelive .content .content-btn .btn-save {
    background: #ff201a;
    border-radius: 10rpx;
    width: 160rpx;
    text-align: center;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
}