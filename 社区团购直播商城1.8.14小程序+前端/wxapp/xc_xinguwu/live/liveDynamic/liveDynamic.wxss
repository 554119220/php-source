page {
    background: #fff;
}

.dy-head {
    border-top: 1rpx solid #f9f9f9;
    padding: 30rpx 20rpx 80rpx 20rpx;
}

.dy-head textarea {
    width: 100%;
    height: 210rpx;
}

.upload {
    display: flex;
    flex-wrap: wrap;
}

.file {
    position: relative;
}

.weui-uploader__file {
    width: 33.3%;
    height: 220rpx;
    margin-right: 0;
    margin-left: 0;
    margin-top: 20rpx;
    margin-bottom: 0;
}

.load {
    width: 220rpx;
    height: 220rpx;
    margin: 0 auto;
}

.clear {
    position: absolute;
    right: 10rpx;
    top: 0;
}

.chooseImage {
    width: 33.3%;
    margin-top: 20rpx;
}

.chooseImage view {
    width: 216rpx;
    margin: 0 auto;
    height: 216rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx dashed #d8d8d8;
}

.open {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
    border-top: 1rpx solid #ededed;
    border-bottom: 1rpx solid #ededed;
}

.open image {
    width: 25rpx;
    height: 30rpx;
}

.open-content {
    width: 640rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.wx-switch-input {
    width: 84rpx!important;
    height: 40rpx!important;
    margin: 0!important;
    padding: 0!important;
}

.wx-switch-input::before {
    width: 82rpx!important;
    height: 36rpx!important;
}

.wx-switch-input::after {
    width: 38rpx!important;
    height: 36rpx!important;
}

.remind {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ededed;
}

.remind .remind-img {
    width: 30rpx;
    height: 30rpx;
}

.remind .remind-content {
    width: 640rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.my-remind {
    display: flex;
    align-items: center;
}

.my-remind .remind-list:last-child {
    margin: 0;
}

.remind-list {
    margin-right: 20rpx;
    color: #888;
    letter-spacing: 5rpx;
}

.submit {
    width: 710rpx;
    height: 90rpx;
    border-radius: 60rpx;
    position: fixed;
    left: 20rpx;
    bottom: 40rpx;
    background: #f93d3d;
    color: #fff;
    line-height: 90rpx;
}

.submit::after {
    border: 0;
}