page {
    background: #fff;
    color: #444;
}

.nav {
    display: flex;
    padding: 20rpx 0;
    border-top: 1rpx solid #f9f9f9;
    background: #fff;
    justify-content: space-between;
    position: fixed;
    left: 0;
    width: 100%;
    top: 0;
}

.nav .nav-list {
    text-align: center;
    width: 49.9%;
    font-weight: bold;
}

.nav .nav-list:nth-child(1) {
    border-right: 1rpx solid #ebebeb;
}

.on {
    color: #f93d3d;
}

.content-line {
    height: 110rpx;
    background: #f9f9f9;
}

.user-list {
    padding: 0 20rpx;
}

.list {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.head {
    width: 105rpx;
    height: 105rpx;
}

.content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 560rpx;
    padding: 50rpx 0;
    border-bottom: 1rpx solid #f3f3f3;
}

.content-name {
    width: 240rpx;
}

.content-name view:nth-child(1) {
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.content-name view:nth-child(2) {
    color: #888;
}

.live-state {
    width: 50rpx;
    height: 45rpx;
}

.arrows {
    width: 20rpx;
    height: 40rpx;
}

.handle {
    width: 100%;
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 6;
}

.remove {
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eaeaea;
    padding: 30rpx 25rpx;
    font-weight: bold;
}

.remove image {
    width: 25rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.cancel {
    padding: 30rpx 25rpx;
    text-align: center;
    color: #999;
}