.order-detail {
    margin-top: 20rpx;
}

.order-list {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 20rpx 25rpx;
    justify-content: space-between;
}

.order-select {
    width: 60rpx;
}

.main-img {
    width: 120rpx;
    height: 120rpx;
}

.content {
    width: 470rpx;
}

.content-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.name {
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price {
    color: #f23921;
}

.content-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}

.content-bottom {
    color: #888;
}

.num {
    color: #888;
}

.message {
    background: #fff;
    padding: 30rpx 25rpx;
    margin-top: 20rpx;
}

.message .user-info {
    display: flex;
    justify-content: space-between;
}

.user-name text {
    color: #888;
    letter-spacing: 9rpx;
}

.tell {
    display: flex;
    align-items: center;
    color: #f23921;
}

.tell image {
    width: 20rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.address {
    display: flex;
    margin-top: 10rpx;
}

.address text {
    color: #888;
    width: 166rpx;
}

.services-name {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #fff;
    margin-top: 20rpx;
}

.com {
    width: 120rpx;
    color: #888;
}

.my-picker {
    width: 550rpx;
    height: 50rpx;
    margin-left: 15rpx;
    line-height: 50rpx;
}

.picker {
    width: 550rpx;
    height: 50rpx;
}

.services-name image {
    width: 20rpx;
    height: 30rpx;
}

.remark {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #fff;
    border: 1rpx solid #f9f9f9;
}

.remark-name {
    color: #888;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 105rpx;
}

.remark input {
    margin-left: 30rpx;
    width: 520rpx;
}

.courier {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #fff;
    margin-top: 20rpx;
}

.courier input {
    width: 520rpx;
    margin-left: 30rpx;
}

.courier .scan {
    width: 50rpx;
    height: 35rpx;
}

.courier .scan image {
    width: 35rpx;
    float: right;
    height: 35rpx;
}

.id {
    color: #888;
}

.sure {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0;
    margin: 0;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #f23921;
    color: #fff;
    border-radius: 0;
    letter-spacing: 5rpx;
}

.sure::after {
    border: 0;
}