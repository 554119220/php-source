page {
    background: #f9f9f9;
    color: #444;
}

.banner {
    width: 100%;
    position: relative;
    height: 750rpx;
    background: #fff;
    border-bottom: 2rpx solid #f8f8f8;
}

.banner-img {
    width: 100%;
    height: 330rpx;
}

.user {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.photo_wrap {
    width: 200rpx;
    height: 200rpx;
    border: 8rpx solid #fff;
    border-radius: 200rpx;
    overflow: hidden;
    margin: 0 auto;
    margin-top: 210rpx;
}

.photo {
    width: 100%;
    height: 100%;
}

.nickname {
    padding-top: 30rpx;
    text-align: center;
    font-weight: bold;
}

.today {
    width: 620rpx;
    height: 70rpx;
    border-radius: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    background: #f9f9f9;
    margin-top: 25rpx;
    color: #888;
}

.today .today-price {
    color: #f93d3d;
    font-weight: bold;
}

.order {
    display: flex;
    align-items: center;
    padding: 30rpx 20rpx;
}

.total-price,.total-order,.month-order {
    width: 245rpx;
    text-align: center;
}

.total-order {
    border-left: 1rpx solid #eaeaea;
    border-right: 1rpx solid #eaeaea;
}

.num {
    font-weight: bold;
}

.unit {
    margin-top: 5rpx;
    color: #888;
}

.function {
    display: flex;
    flex-wrap: wrap;
    padding: 0 20rpx;
}

.list {
    width: 33.3%;
    text-align: center;
    margin-top: 20rpx;
}

.list view {
    background: #fff;
    width: 220rpx;
    height: 220rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    position: relative;
}

.list view text {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    background: #e9e9e9;
    border-radius: 30rpx;
    padding: 0 10rpx;
    color: #fff;
}

.list image {
    margin: 0 auto;
    padding-top: 55rpx;
    padding-bottom: 20rpx;
}

.list1 image {
    width: 80rpx;
    height: 70rpx;
}

.list2 image {
    width: 60rpx;
    height: 70rpx;
}

.list3 image {
    width: 75rpx;
    height: 70rpx;
}

.list4 image {
    width: 70rpx;
    height: 60rpx;
    padding-bottom: 30rpx;
}

.list5 image {
    width: 60rpx;
    height: 65rpx;
    padding-bottom: 25rpx;
}

.list6 image {
    width: 60rpx;
    height: 70rpx;
}

.list7 image {
    width: 80rpx;
    height: 65rpx;
    padding-bottom: 25rpx;
}

.bottom-line {
    height: 20rpx;
}

.manage-code {
    position: fixed;
    left: 90rpx;
    top: 100rpx;
    width: 570rpx;
}

.manage-code image {
    width: 100%;
    height: 825rpx;
    border-radius: 10rpx;
}

.save-code {
    width: 260rpx;
    height: 80rpx;
    border-radius: 60rpx;
    color: #fff;
    font-size: 3.5vw;
    margin: 0 auto;
    margin-top: 50rpx;
    background: #f93d3d;
    line-height: 80rpx;
}

.save-code::after {
    border: 0;
}