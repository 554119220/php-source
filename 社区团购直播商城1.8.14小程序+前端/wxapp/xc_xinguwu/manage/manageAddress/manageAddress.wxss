page {
    background: #f9f9f9;
}

.message {
    background: #fff;
    padding: 30rpx 25rpx;
    margin-top: 20rpx;
}

.message .user-info {
    display: flex;
    justify-content: space-between;
}

.user-name text {
    color: #888;
    letter-spacing: 9rpx;
}

.tell {
    display: flex;
    align-items: center;
    color: #f23921;
}

.tell image {
    width: 20rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.address {
    display: flex;
    margin-top: 10rpx;
    align-items: flex-start;
}

.address text {
    color: #888;
    width: 200rpx;
}

.modify {
    padding: 0 20rpx;
    background: #fff;
    margin-top: 20rpx;
}

.modify .modify-list:last-child {
    border: 0;
}

.modify-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #e4e4e4;
    padding: 20rpx 0;
}

.modify-list view {
    color: #888;
    width: 120rpx;
}

.modify-list input {
    width: 520rpx;
}

.sure {
    background: #f23921;
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 0;
    margin: 0;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 0;
    letter-spacing: 5rpx;
}

.sure::after {
    border: 0;
}