.input-class {
    color: #ccc;
}

switch {
    zoom: 0.7;
}

.picker::after {
    content: '';
    width: 0;
    height: 0;
    border-right: 10rpx solid transparent;
    border-left: 10rpx solid transparent;
    border-top: 10rpx solid #999;
    margin-left: 16rpx;
    position: relative;
    top: 24rpx;
}

.box {
    padding-left: 20rpx;
    padding-right: 20rpx;
    background: #fff;
    margin-top: 20rpx;
}

.box:first-child {
    margin-top: 4rpx;
}

.box .box-item {
    border-top: 1rpx solid #f8f8f8;
}

.box .box-item:first-child {
    border-top: none;
}

.box .box-item .input {
    display: flex;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    justify-content: space-between;
    align-items: center;
}

.box .box-item .input input,.box .box-item .input picker {
    text-align: right;
    width: 500rpx;
}

.share-title {
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.share-img {
    width: 160rpx;
}

.img-item {
    width: 160rpx;
    position: relative;
    margin-left: 5rpx;
}

.img-item icon {
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    z-index: 10;
}

.attr-title {
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid #eee;
    height: 60rpx;
    line-height: 60rpx;
    color: #ccc;
}

.add-attr-item {
    color: #fc1f1f;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.submit {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.submit button {
    background: #fc1f1f;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    letter-spacing: 2rpx;
}

.tclass {
    display: flex;
}