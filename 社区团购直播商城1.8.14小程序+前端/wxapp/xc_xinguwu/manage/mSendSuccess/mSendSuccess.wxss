page {
    background: #f9f9f9;
    color: #444;
}

.success {
    height: 310rpx;
    background: #fff;
    border-top: 2rpx solid #f9f9f9;
}

.success-head {
    text-align: center;
    color: #f23921;
}

.success-logo {
    width: 110rpx;
    height: 90rpx;
    margin: 0 auto;
    margin-top: 35rpx;
    margin-bottom: 30rpx;
}

.handle {
    display: flex;
    width: 92%;
    margin: 0 auto;
    margin-top: 30rpx;
    padding: 20rpx 0;
    border-top: 1rpx solid #e7e7e7;
    color: #f23921;
}

.last {
    width: 49.9%;
    text-align: center;
    border-right: 1rpx solid #e5e5e5;
}

.next {
    width: 49.9%;
    text-align: center;
}

.go-on {
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    color: #888;
}

.goods-info {
    background: #fff;
}

.goods-info .goods-head {
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: space-between;
}

.head-left view:nth-child(1) {
    font-weight: bold;
}

.goods-info .head-right {
    color: #f23921;
}

.order-list {
    display: flex;
    align-items: center;
    padding: 25rpx;
    justify-content: space-between;
    background: #f8f8f8;
}

.order-list .main-img {
    width: 120rpx;
    height: 120rpx;
}

.order-list .content {
    width: 550rpx;
}

.alterModel .content {
    width: 510rpx;
}

.content .content-head {
    display: flex;
    justify-content: space-between;
}

.content .content-bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 35rpx;
}

.content-head .name {
    width: 75%;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: bold;
    white-space: nowrap;
}

.content-head .price {
    color: #f23921;
    font-weight: bold;
}

.content-bottom .kind {
    color: #888;
}

.content-bottom .num {
    color: #666565;
}

.goods-total {
    display: flex;
    justify-content: flex-end;
    padding: 25rpx;
}

.goods-total .total-num {
    margin-right: 30rpx;
}

.goods-total .total-num text {
    font-weight: bold;
    color: #f23921;
    margin: 0 10rpx;
}

.goods-total .total-price text {
    font-weight: bold;
    color: #f23921;
}

.position {
    display: flex;
    align-items: center;
    border-top: 1rpx solid #e6e6e6;
    padding: 30rpx 20rpx;
    justify-content: space-between;
    font-weight: bold;
}

.position image {
    width: 30rpx;
    height: 40rpx;
}

.user-info {
    width: 650rpx;
}

.info-head {
    display: flex;
}

.info-head view {
    width: 160rpx;
}

.remark {
    display: flex;
    align-items: center;
    width: 94%;
    margin: 0 auto;
    border-top: 1rpx solid #e6e6e6;
    padding: 20rpx 0;
}

.remark image {
    width: 35rpx;
    height: 35rpx;
}

.remark input {
    width: 640rpx;
    margin-left: 25rpx;
}

.operate {
    display: flex;
    padding: 20rpx;
    border-top: 1rpx solid #e6e6e6;
    justify-content: flex-end;
}

.operate navigator {
    color: #f23921;
    border: 1rpx solid;
    border-radius: 10rpx;
    padding: 0 20rpx;
}

.operate navigator:nth-child(1) {
    margin-right: 50rpx;
}