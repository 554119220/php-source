page {
    color: #444;
    background: #f9f9f9;
}

.on {
    color: #f23921;
}

.order-menu {
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 5;
    overflow: hidden;
    white-space: nowrap;
}

.order-menu .nav-list {
    width: 150rpx;
    text-align: center;
    display: inline-block;
}

.search {
    margin: 0 auto;
    margin-top: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 610rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 50rpx;
    background: #fff;
    border-radius: 60rpx;
}

.search input {
    width: 590rpx;
}

.search view {
    height: 45rpx;
}

.order {
    margin-top: 20rpx;
}

.order-list {
    margin-bottom: 20rpx;
    background: #fff;
}

.order-head {
    display: flex;
    align-items: center;
    width: 94%;
    margin: 0 auto;
    border-bottom: 1rpx solid #e9e9e9;
    justify-content: space-between;
    padding: 20rpx 0;
}

.order-head .id-number {
    display: flex;
    color: #888;
}

.id-number view:nth-child(1) {
    margin-right: 30rpx;
}

.order-head .order-state {
    width: 100rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    color: #fff;
    border-radius: 10rpx;
    background: linear-gradient(to right,#ff9b2d,#ff720b);
}

.user-name {
    border-bottom: 1rpx solid #e9e9e9;
    padding: 20rpx;
    color: #888;
}

.order-detail {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    width: 94%;
    margin: 0 auto;
    border-bottom: 1rpx solid #e9e9e9;
    justify-content: space-between;
}

.order-detail1 {
    border: 0;
}

.order-detail .main-img {
    width: 120rpx;
    height: 120rpx;
}

.order-detail .content {
    width: 560rpx;
}

.order-detail .content-head {
    display: flex;
    justify-content: space-between;
}

.order-detail .goods-name {
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
}

.order-detail .goods-price {
    color: #f23921;
    font-weight: bold;
}

.order-detail .content-bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}

.order-detail .goods-kind {
    color: #888;
}

.order-detail .goods-num {
    color: #666565;
}

.goods-total {
    display: flex;
    justify-content: flex-end;
    padding: 25rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.goods-total .total-num {
    margin-right: 30rpx;
}

.goods-total .total-num text {
    font-weight: bold;
    color: #f23921;
    margin: 0 10rpx;
}

.goods-total .total-price text {
    font-weight: bold;
    color: #f23921;
}

.position {
    display: flex;
    align-items: center;
    padding: 30rpx 20rpx;
    justify-content: space-between;
    font-weight: bold;
}

.position image {
    width: 30rpx;
    height: 40rpx;
}

.user-info {
    width: 650rpx;
}

.info-head {
    display: flex;
}

.info-head view {
    width: 160rpx;
}

.remark {
    display: flex;
    align-items: center;
    width: 94%;
    margin: 0 auto;
    border-top: 1rpx solid #e6e6e6;
    padding: 20rpx 0;
}

.remark image {
    width: 35rpx;
    height: 35rpx;
}

.remark input {
    width: 640rpx;
    margin-left: 25rpx;
}

.hint {
    display: flex;
    align-items: center;
    padding: 20rpx;
    color: #f23921;
}

.hint image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.reason {
    width: 94%;
    margin: 0 auto;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #e9e9e9;
    font-weight: bold;
}

.wait-bottom {
    height: 130rpx;
    padding: 0 20rpx;
    position: relative;
    border-top: 1rpx solid #e9e9e9;
}

.wait-count {
    padding: 0 20rpx;
    position: absolute;
    top: 15rpx;
    left: 120rpx;
    background: linear-gradient(to right,#ff9b2d,#ff720b);
    color: #fff;
    border-radius: 10rpx;
}

.wait-count::after {
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    right: 20rpx;
    bottom: -10rpx;
    border-top: solid 10rpx #ff720b;
    border-right: solid 10rpx transparent;
    border-left: solid 10rpx transparent;
}

.wait-modify {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-top: 75rpx;
}

.wait-modify view {
    color: #888;
    border: 1rpx solid #888;
    border-radius: 10rpx;
    margin-right: 30rpx;
    padding: 6rpx 20rpx;
}

.wait-modify view:last-child {
    margin: 0;
}

.send-bottom {
    display: flex;
    justify-content: flex-end;
    height: 100rpx;
    align-items: center;
    border-top: 1rpx solid #e9e9e9;
    padding: 0 20rpx;
}

.send-bottom view {
    color: #888;
    border: 1rpx solid #888;
    border-radius: 10rpx;
    margin-right: 30rpx;
    padding: 6rpx 20rpx;
}

.send-bottom view:last-child {
    margin: 0;
}

.refund-bottom {
    height: 130rpx;
    padding: 0 20rpx;
    position: relative;
    border-top: 1rpx solid #e9e9e9;
}

.count {
    padding: 0 20rpx;
    position: absolute;
    top: 15rpx;
    right: 50rpx;
    background: linear-gradient(to right,#ff9b2d,#ff720b);
    color: #fff;
    border-radius: 10rpx;
}

.count::after {
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    right: 20rpx;
    bottom: -10rpx;
    border-top: solid 10rpx #ff720b;
    border-right: solid 10rpx transparent;
    border-left: solid 10rpx transparent;
}

.toRefund {
    padding: 6rpx 20rpx;
    border: 1rpx solid #888;
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    border-radius: 10rpx;
    color: #888;
}