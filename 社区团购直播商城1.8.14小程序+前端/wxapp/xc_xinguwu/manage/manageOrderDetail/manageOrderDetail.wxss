page {
    background: #f9f9f9;
    color: #444;
}

.order-state {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 40rpx 30rpx;
    border-top: 2rpx solid #f9f9f9;
}

.state-img {
    width: 130rpx;
}

.state-img .wait {
    width: 80rpx;
    height: 90rpx;
}

.state-img .success {
    width: 90rpx;
    height: 90rpx;
}

.state-img .send {
    width: 85rpx;
    height: 85rpx;
}

.state-img .deliver {
    width: 90rpx;
    height: 90rpx;
}

.state-img .refund {
    width: 90rpx;
    height: 90rpx;
    border-radius: 80rpx;
    margin: 0 auto;
}

.state-text text {
    color: #f23921;
}

.state-text {
    color: #888;
}

.state {
    font-weight: bold;
    margin-bottom: 10rpx;
    color: #444;
    display: flex;
    align-items: baseline;
}

.order-detail {
    background: #fff;
    margin-top: 20rpx;
}

.order-list {
    display: flex;
    align-items: center;
    padding: 25rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid #eaeaea;
}

.order-list .main-img {
    width: 120rpx;
    height: 120rpx;
}

.order-list .content {
    width: 550rpx;
}

.alterModel .content {
    width: 510rpx;
}

.content .content-head {
    display: flex;
    justify-content: space-between;
}

.content .content-bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 35rpx;
}

.content-head .name {
    width: 75%;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: bold;
    white-space: nowrap;
}

.content-head .price {
    color: #f23921;
    font-weight: bold;
}

.content-bottom .kind {
    color: #888;
}

.content-bottom .num {
    color: #666565;
}

.order-detail .goods-total {
    display: flex;
    justify-content: flex-end;
    padding: 25rpx;
}

.goods-total .total-num {
    margin-right: 30rpx;
}

.goods-total .total-num text {
    font-weight: bold;
    color: #f23921;
    margin: 0 10rpx;
}

.goods-total .total-price text {
    font-weight: bold;
    color: #f23921;
}

.message {
    background: #fff;
    padding: 30rpx 25rpx;
    margin-top: 20rpx;
}

.message .user-info {
    display: flex;
    justify-content: space-between;
}

.user-name text {
    color: #888;
    letter-spacing: 9rpx;
}

.tell {
    display: flex;
    align-items: center;
    color: #f23921;
}

.tell image {
    width: 20rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.address {
    display: flex;
    margin-top: 10rpx;
}

.address text {
    color: #888;
    width: 166rpx;
}

.message .modify {
    display: flex;
    align-items: center;
    color: #f23921;
    justify-content: flex-end;
}

.message .modify image {
    width: 25rpx;
    height: 25rpx;
    margin-left: 10rpx;
}

.remark {
    margin-top: 20rpx;
    display: flex;
    align-items: flex-start;
    padding: 0 25rpx;
    background: #fff;
    justify-content: space-between;
    color: #888;
}

.remark view {
    padding: 20rpx 0;
}

.remark textarea {
    width: 560rpx;
    padding-top: 24rpx;
    padding-bottom: 20rpx;
}

.remark input {
    width: 560rpx;
    line-height: 90rpx;
    height: 90rpx;
}

.order-number {
    padding: 30rpx 25rpx;
    background: #fff;
    margin-top: 20rpx;
    color: #888;
}

.order-number view {
    margin-bottom: 20rpx;
}

.order-number view:last-child {
    margin: 0;
}

.id {
    display: flex;
    align-items: center;
}

.id image {
    margin-left: 50rpx;
    width: 30rpx;
    height: 30rpx;
}

.bottom-line {
    height: 120rpx;
}

.bottom {
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    text-align: center;
    justify-content: space-between;
}

.bottom .toSend {
    background: #f23921;
    width: 100%;
    color: #fff;
}

.close {
    width: 280rpx;
    text-align: center;
    color: #888;
    background: #fff;
}

.alter {
    width: 470rpx;
    text-align: center;
    background: #f23921;
    color: #fff;
}

.refund-info {
    padding: 20rpx 25rpx;
    background: #fff;
}

.refund-order-list {
    display: flex;
    align-items: center;
    padding: 25rpx;
    justify-content: space-between;
    background: #f8f8f8;
    border-radius: 10rpx;
}

.refund-info .info-title {
    padding: 10rpx 0;
    font-weight: bold;
}

.refund-order-list .main-img {
    width: 120rpx;
    height: 120rpx;
}

.refund-order-list .content {
    width: 510rpx;
}

.refund-reason {
    padding: 20rpx 0;
}

.reason-list {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    margin-top: 20rpx;
}

.reason-list text {
    width: 135rpx;
    text-align: right;
}

.reason-list image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
    border-radius: 10rpx;
}

.alterModel {
    width: 710rpx;
    background: #fff;
    position: fixed;
    left: 20rpx;
    top: 195rpx;
    z-index: 5;
    border-radius: 10rpx;
    padding: 20rpx 0;
}

.alterModel .dis {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1rpx solid #dbdbdb;
}

.alterModel .dis-ipt {
    display: flex;
    align-items: center;
    width: 120rpx;
    text-align: center;
}

.alterModel .reality {
    padding: 20rpx;
    text-align: right;
}

.plc {
    color: #cecece;
}

.alterModel .reality text {
    color: #f23921;
}

.alterModel .alter-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 10rpx;
    padding-bottom: 20rpx;
}

.alterModel .alter-bottom view {
    width: 230rpx;
    height: 70rpx;
    text-align: center;
    color: #fff;
    border-radius: 60rpx;
    line-height: 70rpx;
}

.alterModel .alter-bottom .alterCancel {
    margin-right: 50rpx;
    background: #d6d6d6;
}

.alterModel .alter-bottom .alterSure {
    background: #f23921;
}