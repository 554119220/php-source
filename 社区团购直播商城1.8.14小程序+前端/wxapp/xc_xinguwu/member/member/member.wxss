.bg {
    background: #fff;
    padding: 20rpx;
}

.bannar {
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 30rpx;
}

.bannar .header {
    margin-top: 20rpx;
    justify-content: space-between;
}

.avatar {
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
}

.bannar .header .left {
    color: #fff;
}

.bannar .header .right {
    color: #fff;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    font-size: 24rpx;
}

.bannar .progress {
    margin-top: 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.bannar .progress image {
    width: 30rpx;
}

.bannar .progress .progress-all {
    width: 530rpx;
    height: 10rpx;
    border-radius: 10rpx;
}

.bannar .progress .progress-bar {
    background: #fff;
    height: 10rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.bannar .progress .progress-value {
    background: #fff;
    border-radius: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    display: inline;
    position: relative;
    top: -50rpx;
}

.progress-max image {
    margin: 50rpx auto 0 auto;
}

.bannar-tip {
    color: #fff;
    text-align: center;
    font-size: 28rpx;
    margin-top: 30rpx;
}

.equity {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.equity-title {
    text-align: center;
    font-size: 30rpx;
    letter-spacing: 2rpx;
}

.equity-list {
    display: flex;
    padding-top: 20rpx;
    flex-wrap: wrap;
}

.equity-item {
    width: 25%;
    text-align: center;
    margin-bottom: 10rpx;
    color: #bbb;
}

.equity-item image {
    width: 40rpx;
    height: 40rpx;
    padding: 20rpx;
    border-radius: 50%;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 6rpx;
}

.cont {
    margin-top: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background: #fff;
}

.cont-scroll {
    overflow: hidden;
    white-space: nowrap;
}

.cont-scroll-item {
    width: 33.3%;
    display: inline-block;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    color: #777;
    font-size: 28rpx;
}

.on {
    color: #bd9961;
}

.cont-body {
    border-top: 4rpx solid #f8f8f8;
}

.cont-boody-list {
    padding: 30rpx;
}

.cont-body-item {
    display: flex;
    align-items: flex-end;
    font-size: 24rpx;
    color: #bbb;
}

.cont-body-item image {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.note {
    padding: 20rpx;
    line-height: 44rpx;
}