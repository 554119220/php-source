page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
}

.youzhi-item {
    margin-top: 20rpx;
    width: 100%;
    padding: 0rpx 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
}

.ques {
    width: 100%;
    display: flex;
    margin-top: 20rpx;
    line-height: 28rpx;
}

.answ {
    width: 100%;
    display: flex;
    margin-top: 10rpx;
}

.ques-word {
    width: 630rpx;
    font-size: 28rpx;
    color: #000;
    margin-left: 20rpx;
    display: -webkit-box!important;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.ques-Icon {
    width: 45rpx;
    height: 45rpx;
}

.answ-word {
    width: 630rpx;
    color: #666;
    font-size: 28rpx;
    margin-left: 20rpx;
    display: -webkit-box!important;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.leix-Date {
    width: 630rpx;
    margin-left: 65rpx;
    margin-top: 20rpx;
    color: #999;
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
}

.leix-status {
    width: 120rpx;
    height: 40rpx;
    border-radius: 10rpx;
    border: 1rpx solid #f58144;
    color: #f58144;
    font-size: 26rpx;
    text-align: center;
    line-height: 40rpx;
}