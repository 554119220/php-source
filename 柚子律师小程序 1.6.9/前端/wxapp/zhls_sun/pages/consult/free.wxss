page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
    background-color: #fff;
    margin-top: 20rpx;
    min-height: 1180rpx;
}

.form-box {
    width: 750rpx;
    background-color: #fff;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.arrow {
    width: 12rpx;
    height: 25rpx;
    margin-left: 20rpx;
    transform: rotate(90deg);
}

.row-wrap {
    width: 690rpx;
    height: 95rpx;
    padding: 0rpx 30rpx;
    border-top: 1rpx solid #eee;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
}

.label-right {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.leixing {
    width: 40rpx;
    height: 57rpx;
}

.inputDiv {
    margin-left: 30rpx;
    width: 585rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.right-word {
    margin-left: 30rpx;
}

.inputDiy {
    color: #999;
    font-size: 24rpx;
}

.label-right {
    flex: 1;
}

.xingming {
    width: 40rpx;
    height: 45rpx;
}

.sex-wrap {
    color: #999;
    font-size: 24rpx;
    display: flex;
    align-items: center;
}

.sex {
    width: 120rpx;
    background: url(http://oydnzfrbv.bkt.clouddn.com/weixuanzhogn.png) no-repeat 0rpx center;
    background-size: contain;
}

.sex:nth-child(2) {
    margin-left: 30rpx;
}

.sex.active {
    background: url(http://oydnzfrbv.bkt.clouddn.com/xuanzhongn.png) no-repeat 0rpx center;
    background-size: contain;
}

.sexWord {
    margin-left: 60rpx;
}

.shuruBox {
    width: 690rpx;
    padding: 30rpx;
    border-top: 1rpx solid #eee;
}

textarea {
    width: 100%;
}

.shuoming-word {
    position: relative;
    width: 690rpx;
    border-top: 1rpx solid #eee;
    padding: 30rpx;
}

.notice {
    width: 690rpx;
    color: #000;
    font-size: 26rpx;
}

.fufei {
    position: absolute;
    right: 30rpx;
    color: #000;
    font-size: 26rpx;
    line-height: 26rpx;
}

.save-btn {
    width: 450rpx;
    height: 80rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 20rpx;
    box-sizing: border-box;
    color: #fff;
    border-radius: 6rpx;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609efc),to(#618afb));
}

button:after {
    border: none;
}