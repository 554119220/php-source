page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
}

.ques-content {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.starImgs {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}

.consult-title {
    width: 690rpx;
    padding: 30rpx 30rpx 10rpx 30rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.consult-contents {
    width: 690rpx;
    margin: 20rpx 0rpx 20rpx 0rpx;
}

.lvshi-item {
    width: 690rpx;
    padding: 0rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
    margin-top: 20rpx;
}

.item-title {
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    margin: 30rpx 0rpx;
}

.lvshi-name {
    color: #000;
}

.lvshi-years {
    color: #999;
}

.lvshi-mes {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    position: relative;
    margin-bottom: 40rpx;
}

.lvshiImg {
    width: 120rpx;
    height: 120rpx;
    display: flex;
    border-radius: 100%;
}

.lvshi-level {
    height: 120rpx;
    margin-left: 20rpx;
    color: #666;
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.question {
    width: 160rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 20rpx;
    color: #fff;
    font-size: 30rpx;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609efc),to(#618afb));
    position: absolute;
    right: 0rpx;
}

.answer-wrap {
    width: 750rpx;
    font-size: 28rpx;
    background-color: #fff;
}

.answer-title {
    color: #999;
    padding: 30rpx 30rpx 10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}

.start-answer {
    display: inline-block;
    color: #000;
    padding: 20rpx 30rpx 30rpx 30rpx;
}

.sanjiao {
    position: absolute;
    top: -20rpx;
    width: 0;
    height: 0;
    border-right: 15rpx solid transparent;
    border-bottom: 28rpx solid #f2f2f2;
    border-left: 15rpx solid transparent;
}

.wrap {
    margin-bottom: 100rpx;
    position: relative;
}

.ask-wrap {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #666;
    border-bottom: 1rpx solid #ddd;
}

.ask-wrap:last-child {
    border: none;
}

.user-ask {
    width: 690rpx;
    margin-top: 20rpx;
}

.dateTime {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-bottom: 10rpx;
}

.consult-btn {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609dfc),to(#6189fb));
}

.starRow {
    display: flex;
    align-items: center;
}