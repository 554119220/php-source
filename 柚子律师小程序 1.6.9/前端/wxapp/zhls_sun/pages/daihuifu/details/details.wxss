page {
    background-color: #fff;
}

.container {
    width: 750rpx;
}

.mineConsult {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mcTitle {
    width: 690rpx;
    height: 58rpx;
    padding: 30rpx 30rpx 0rpx 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.leftText {
    font-size: 28rpx;
    color: #618dfb;
}

.DateTime {
    font-size: 26rpx;
    color: #999;
}

.mcContents {
    width: 690rpx;
    font-size: 28rpx;
    color: #000;
    margin: 20rpx 0rpx 20rpx 0rpx;
}

.answer-wraps {
    width: 750rpx;
    font-size: 28rpx;
    margin-top: 20rpx;
    background-color: #fff;
    min-height: 1000rpx;
}

.answer-wrap {
    width: 750rpx;
    font-size: 28rpx;
    margin-top: 20rpx;
    background-color: #fff;
    min-height: 900rpx;
}

.answer-title {
    color: #618dfb;
    padding: 20rpx 30rpx 10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.wei {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    margin-top: 100rpx;
}

.lvshi-word {
    height: 28rpx;
    margin-bottom: 10rpx;
}

.ask-btn {
    width: 140rpx;
    height: 40rpx;
    border-radius: 10rpx;
    border: 1rpx solid #618dfa;
    text-align: center;
    margin-bottom: 10rpx;
}

.start-answer {
    display: inline-block;
    color: #000;
    padding: 20rpx 30rpx 30rpx 30rpx;
    background-color: #fff;
}

.sanjiao {
    position: absolute;
    top: -20rpx;
    width: 0;
    height: 0;
    border-right: 15rpx solid transparent;
    border-bottom: 28rpx solid #f2f2f2;
    border-left: 15rpx solid transparent;
}

.wrap {
    width: 690rpx;
    margin-bottom: 100rpx;
    padding: 0rpx 30rpx;
    position: relative;
    background-color: #f2f2f2;
}

.ask-wrap {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #666;
    border-bottom: 1rpx solid #ddd;
}

.ask-wrap:last-child {
    border: none;
}

.user-ask {
    width: 690rpx;
    margin-top: 20rpx;
}

.dateTime {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-bottom: 10rpx;
}

.consult-btn {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609dfc),to(#6189fb));
}

.show-textarea {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.tex-area {
    width: 92%;
    height: 600rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 6;
    padding: 30rpx 30rpx 110rpx 30rpx;
    font-size: 30rpx;
}

.popup-contents {
    position: fixed;
    top: 460rpx;
    left: 30rpx;
    width: 690rpx;
    height: 290rpx;
    border-radius: 20rpx;
    background-color: #f2f2f2;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    color: #000;
    line-height: 32rpx;
}

.reason {
    margin: 30rpx 0rpx;
}

block {
    display: flex;
    flex-direction: row;
}

.star-wrap {
    margin-bottom: 30rpx;
}

.starImgs {
    width: 60rpx;
    height: 60rpx;
    margin: 5rpx;
}

.deter-btn {
    width: 160rpx;
    height: 60rpx;
    border-radius: 20rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #618dfb;
    border: 1rpx solid #618dfb;
}

.commentWord {
    position: absolute;
    top: 95rpx;
    left: 450rpx;
}

.push-btn {
    width: 690rpx;
    height: 90rpx;
    font-size: 32rpx;
    color: #fff;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609dfc),to(#6189fb));
    text-align: center;
    line-height: 90rpx;
    position: absolute;
    bottom: 20rpx;
    left: 30rpx;
    z-index: 99;
}