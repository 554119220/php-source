page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 750rpx;
    height: 300rpx;
    background-color: #618dfa;
    font-size: 30rpx;
    color: #fff;
}

.userinfo-avatar {
    width: 180rpx;
    height: 180rpx;
    margin-top: 20rpx;
    border-radius: 50%;
    border: 5rpx solid #fff;
    display: flex;
}

.userinfo-nickname {
    margin-top: 10rpx;
    margin-bottom: 50rpx;
    font-size: 28rpx;
    color: #fff;
}

.yuyelist {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.yuyueItem {
    width: 650rpx;
    padding: 20rpx 20rpx 30rpx 20rpx;
    height: 180rpx;
    border-radius: 10rpx;
    background-color: #fff;
    font-size: 30rpx;
    color: #000;
    margin-top: 20rpx;
    position: relative;
}

.title {
    font-size: 26rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
}

.time {
    color: #000;
    font-size: 30rpx;
    display: flex;
    flex-direction: column;
}

.time .timeRow {
    display: flex;
    align-items: center;
    line-height: 32rpx;
    margin-top: 20rpx;
}

.timeRow:nth-child(2) {
    margin-top: 10rpx;
}

.word {
    margin-left: 20rpx;
}

.time .blueDot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    background-color: #618dfb;
}

.time .orangeDot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    background-color: #f58144;
}

.contents {
    width: 100%;
    color: #999;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 30rpx;
    margin-top: 28rpx;
}

.cancle-Btn {
    width: 160rpx;
    height: 60rpx;
    border-radius: 20rpx;
    border: 1rpx solid #618dfb;
    color: #618dfb;
    background-color: #fff;
    line-height: 60rpx;
    text-align: center;
    position: absolute;
    right: 20rpx;
    top: 85rpx;
    font-size: 30rpx;
}

button:after {
    border: none;
}

.cancle-box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.popup-contents {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    min-height: 650rpx;
    background-color: #fff;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    color: #000;
    line-height: 32rpx;
}

.reason {
    width: 690rpx;
    text-align: center;
    padding-top: 30rpx;
    padding-bottom: 25rpx;
    border-bottom: 1rpx solid #eee;
}

.reason-item {
    width: 690rpx;
    height: 95rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
    background: url(http://oydnzfrbv.bkt.clouddn.com/weixuanzhogn.png) no-repeat 660rpx center;
    background-size: 30rpx 30rpx;
}

.reason-item.active {
    background: url(http://oydnzfrbv.bkt.clouddn.com/xuanzhongn.png) no-repeat 660rpx center;
    background-size: 30rpx 30rpx;
}

.submit-Btn {
    width: 450rpx;
    height: 80rpx;
    border-radius: 6rpx;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609dfc),to(#6189fb));
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    margin-top: 55rpx;
}