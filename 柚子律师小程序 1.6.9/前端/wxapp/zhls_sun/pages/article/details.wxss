page {
    background-color: #fff;
    min-height: 100%;
}

.container {
    width: 750rpx;
}

.article-wrap {
    width: 750rpx;
    padding: 40rpx 0rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    width: 690rpx;
    min-height: 120rpx;
    border-bottom: 1rpx solid #eee;
    padding: 0rpx 30rpx;
    position: relative;
}

.header .titleWord {
    color: #000;
    font-size: 30rpx;
}

.header .dateWord {
    color: #666;
    font-size: 26rpx;
    text-align: right;
    margin: 10rpx 0;
}

.contents {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.imgWrap {
    width: 690rpx;
    height: 460rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.contentsImg {
    width: 690rpx;
    height: 460rpx;
    overflow: hidden;
}

.contentsWord {
    color: #666;
    font-size: 26rpx;
}