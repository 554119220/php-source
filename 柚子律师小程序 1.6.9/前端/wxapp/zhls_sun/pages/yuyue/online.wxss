page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
    background-color: #fff;
    margin-top: 20rpx;
    min-height: 1170rpx;
    font-size: 26rpx;
    color: #000;
}

.shuruBox {
    width: 690rpx;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

textarea {
    width: 100%;
}

.row-wrap {
    width: 690rpx;
    height: 95rpx;
    padding: 0rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
}

.leixing {
    width: 40rpx;
    height: 56rpx;
    display: flex;
}

.dateImg {
    width: 40rpx;
    height: 45rpx;
}

.timeImg {
    width: 40rpx;
}

.right-word {
    margin-left: 30rpx;
}

.datePicker {
    width: 400rpx;
    height: 95rpx;
    line-height: 95rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.datePicker:nth-child(2) {
}

.input {
    margin-left: 30rpx;
}

.xingming {
    width: 40rpx;
    height: 45rpx;
}

.sex-wrap {
    color: #999;
    font-size: 24rpx;
    display: flex;
    align-items: center;
}

.sex {
    width: 120rpx;
}

.sex:nth-child(2) {
    margin-left: 30rpx;
}

.sex.active {
    color: red;
}

.sexWord {
    margin-left: 60rpx;
}

.notice {
    width: 690rpx;
    padding: 30rpx;
    color: #000;
    font-size: 26rpx;
}

.save-btn {
    width: 450rpx;
    height: 80rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 20rpx;
    box-sizing: border-box;
    color: #fff;
    border-radius: 6rpx;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#609efc),to(#618afb));
}

button:after {
    border: none;
}

.icon-wrap {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
}