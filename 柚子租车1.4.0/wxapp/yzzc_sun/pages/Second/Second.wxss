page {
    background: #ffffff;
}

text {
    color: #d68561;
}

.container {
    width: 750rpx;
    height: 100%;
    font-size: 22rpx;
    color: #000;
}

.filter_view {
    position: fixed;
    top: 0;
    background: #ffffff;
    box-shadow: 0 5rpx 3rpx #ececec;
    z-index: 7;
}

.filter {
    height: 100rpx;
    width: 750rpx;
    background: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.filter>view {
    display: flex;
    align-items: center;
}

.arrow {
    width: 23rpx;
    height: 14rpx;
    margin-left: 10rpx;
}

.options {
    display: none;
    width: 750rpx;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height: 100rpx;
    background: #fff;
}

.options>view {
    font-size: 22rpx;
    color: #666666;
}

.block {
    display: fixed;
    top: 100rpx;
}

@keyframes slidown {
    from {
        transform: translateY(-15%);
    }

    to {
        transform: translateY(0%);
    }
}

.slidown {
    display: block;
    animation: slidown .2s ease-in both;
}

@keyframes slidup {
    from {
        transform: translateY(0%);
    }

    to {
        transform: translateY(-15%);
    }
}

.slidup {
    display: block;
    animation: slidup .2s ease-in both;
    height: 0px;
}

.main {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    background: #ffffff;
    padding-top: 190rpx;
    padding-bottom: 20rpx;
}

.main_i {
    padding: 28rpx;
    padding-right: 50rpx;
    display: flex;
    border-bottom: 4rpx solid #fcfcfc;
}

.i_img {
    width: 250rpx;
    height: 200rpx;
    background: bisque;
    margin-right: 20rpx;
}

.flex_space {
    display: flex;
    justify-content: space-between;
    height: 70rpx;
    align-items: center;
}

.label {
    height: 45rpx;
    text-align: center;
    line-height: 45rpx;
    background: #eb6300;
    color: #ffffff;
    padding: 0 10rpx;
    border-radius: 10rpx;
}

.i_info {
    flex: 1;
}

.top_10 {
    margin-top: 10rpx;
}

.search_view {
    width: 750rpx;
    height: 80rpx;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.search_input {
    width: 525rpx;
    height: 54rpx;
    line-height: 54rpx;
    border-radius: 27rpx;
    background-color: #f7f7f7;
    color: #999999;
    padding-left: 75rpx;
}

.search_icon {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    left: 60rpx;
    top: 39rpx;
    z-index: 3;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 6;
    color: #fff;
}

.search_button {
    background: #999999;
    line-height: 54rpx;
    border-radius: 29rpx;
    background-color: #f7f7f7;
    color: #999999;
    font-size: 22rpx;
    margin: 0;
    margin-left: 20rpx;
    padding: 0 25rpx;
}