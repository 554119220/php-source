.containers {
    display: flex;
    flex-direction: column;
}

.label_view {
    display: flex;
    flex-direction: column;
}

.title {
    background: #f8f8f8;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 20rpx;
    color: #000;
    font-size: 24rpx;
}

.label {
    padding: 0 20rpx;
    height: 100rpx;
    background: #ffffff;
    flex: 1;
    font-size: 26rpx;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.sumbit {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 710rpx;
    height: 80rpx;
    z-index: 2;
    background: #ffffff;
    color: #FF525C;
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    font-size: 28rpx;
    font-weight: bold;
    align-items: center;
}

radio {
    width: 38rpx;
    height: 38rpx;
    border-radius: 50%;
}

radio .wx-radio-input {
    width: 38rpx;
    height: 38rpx;
    border-radius: 50%;
}

radio .wx-radio-input.wx-radio-input-checked {
    background: #FF525C;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}