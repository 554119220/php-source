@import "../../../../we7/js/wxParse.wxss";

.containers {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    font-size: 24rpx;
    padding-bottom: 100rpx;
}

.swiper {
    width: 750rpx;
    height: 500rpx;
}

.swiper_img {
    width: 750rpx;
    height: 500rpx;
}

.info_view {
    background: #ffffff;
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.info_view>view {
    margin: 10rpx 0;
}

.info_name {
    display: flex;
    height: 45rpx;
    align-items: center;
}

.border {
    border: 2rpx solid #ba6c21;
    padding: 8rpx;
    border-radius: 10rpx;
    margin-left: 10rpx;
}

.shrink {
    flex-grow: 0;
    align-self: baseline;
}

text {
    color: #d68561;
}

.title {
    background: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    height: 60rpx;
}

.basic_view {
    display: flex;
    justify-content: space-around;
    padding: 25rpx 0;
    background: #ffffff;
}

.basic_view>view {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 80rpx;
    font-size: 32rpx;
    color: #ffffff;
    line-height: 80rpx;
    width: 750rpx;
    display: flex;
    align-items: center;
}

.content_view {
    padding: 10rpx 20rpx;
}

.homes {
    width: 44rpx;
    height: 44rpx;
}

.foot_margin {
    width: 100rpx;
    display: flex;
    height: 80rpx;
    justify-content: center;
    background: #ffffff;
    align-items: center;
}

.foot_right {
    background: #ec6200;
    text-align: center;
    flex: 1;
}