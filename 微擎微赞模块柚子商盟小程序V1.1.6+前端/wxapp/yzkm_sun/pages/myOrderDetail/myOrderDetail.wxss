page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    width: 750rpx;
}

.a-order {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
    border-top: 1rpx solid #eee;
}

.orderTitle {
    width: 690rpx;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #000;
}

.order-number {
    color: #666;
    font-size: 26rpx;
}

.statusWord {
    color: #FF552E;
    font-size: 28rpx;
}

.goodsList {
    width: 690rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0rpx 30rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.goodsImg {
    width: 130rpx;
    height: 130rpx;
}

.goodsMes {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.goodsName {
    font-size: 30rpx;
    color: #000;
}

.price-guige {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.price {
    font-size: 32rpx;
    color: #FF552E;
}

.num {
    color: #999;
    font-size: 26rpx;
    position: absolute;
    right: 30rpx;
}

.kuaidiAddress {
    padding: 30rpx 30rpx;
    display: flex;
    flex-direction: column;
    width: 690rpx;
    font-size: 28rpx;
    color: #666;
    background-color: #fff;
    position: relative;
}

.positionIcon {
    width: 30rpx;
    height: 40rpx;
    position: absolute;
    left: 30rpx;
    top: 40rpx;
}

.name-number {
    display: flex;
    width: 640rpx;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-left: 50rpx;
}

.conphone {
    width: 640rpx;
    margin-left: 50rpx;
}

.shipping-address {
    margin-left: 50rpx;
    margin-top: 10rpx;
}

.bottomBorder {
    width: 750rpx;
    height: 10rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}

.peisong {
    font-size: 28rpx;
    color: #000;
    background-color: #fff;
    width: 690rpx;
    padding: 30rpx;
    margin-top: 20rpx;
}

.peisong view {
    margin-bottom: 7rpx;
}

.peisongWord {
    font-size: 26rpx;
    color: #999;
}

.liuyan {
    width: 690rpx;
    height: 100rpx;
    font-size: 28rpx;
    color: #000;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 0rpx 30rpx;
    display: flex;
    align-items: center;
}

.footer-box {
    width: 750rpx;
    height: 100rpx;
    background-color: #ce0000;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
}

.btn {
    min-width: 180rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size: 26rpx;
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
}

.cancel-btn {
    color: #333;
    border: 1rpx solid #333;
}

.topay-btn {
    color: #ce0000;
    border: 1rpx solid #ce0000;
}