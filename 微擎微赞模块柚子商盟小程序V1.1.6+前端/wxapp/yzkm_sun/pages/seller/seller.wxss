@import "../index/index.wxss";

.platBox {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    color: #fff;
    margin: 0 0 20rpx;
}

.rzBj {
    width: 100%;
    height: 375rpx;
}

.platForm {
    width: 70rpx;
    height: 70rpx;
    margin: 20rpx;
    display: flex;
    border-radius: 100%;
}

.platName {
    font-size: 30rpx;
    margin: 0 30rpx 10rpx;
}

.platMes {
    font-size: 26rpx;
    color: #fff;
}

.inBtn {
    width: 480rpx;
    height: 90rpx;
    background: rgba(255,85,46,1);
    border-radius: 10rpx;
    text-align: center;
    line-height: 90rpx;
    color: #fff;
    font-size: 34rpx;
    margin: 20rpx 30rpx 30rpx;
}

.sellerList {
    width: 100%;
    background-color: #fff;
    margin-top: 0rpx;
}

.show-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.rulesBox {
    width: 92%;
    background-color: #fff;
    position: fixed;
    top: 310rpx;
    left: 30rpx;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 30rpx;
}

.paySuccess {
    font-size: 36rpx;
    color: #ce0000;
    margin-top: 30rpx;
}

.scrollView {
    height: 260rpx;
    margin-bottom: 30rpx;
}

.contentsText {
    font-size: 26rpx;
    color: #999;
    display: inline-block;
    padding: 10rpx 30rpx;
    word-break: break-all;
}