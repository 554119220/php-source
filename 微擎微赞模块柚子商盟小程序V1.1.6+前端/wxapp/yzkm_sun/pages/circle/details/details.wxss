@import "../circle.wxss";

.top {
    background-color: #fff;
}

.contents text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.imgswrap {
    margin: 20rpx 0rpx;
}

.contentsImgs {
    width: 100%;
    display: flex;
    margin-top: 20rpx;
}

.contentsImgs:nth-child(1) {
    margin-top: 0rpx;
}

.bottom-wrap {
    display: flex;
    justify-content: flex-start;
}

.bottomBox {
    margin-right: 50rpx;
}

.center {
    background-color: #fff;
    margin: 20rpx 0rpx;
}

.phone_Row {
    height: 90rpx;
    font-size: 26rpx;
    color: #999;
    padding: 0rpx 30rpx;
    justify-content: space-between;
}

.text_box {
    height: 60rpx;
    color: #ff552e;
    font-size: 24rpx;
    padding: 0rpx 30rpx;
}

.bottom {
    background-color: #fff;
}

.title_box {
    height: 80rpx;
    padding: 0rpx 30rpx;
}

.title {
    border-left: 6rpx solid #ffb825;
    padding-left: 10rpx;
    font-size: 30rpx;
    color: #000;
}

.comments_list {
    padding: 0rpx 0rpx 30rpx;
}

.comments_item {
    padding: 20rpx 30rpx 0rpx;
    border-bottom: 1rpx solid #eee;
}

.comments_item:nth-last-child(1) {
    border-bottom: none;
}

.header_box {
    width: 100rpx;
    height: 100rpx;
}

.headerImg {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    border-radius: 50%;
}

.nickName {
    font-size: 30rpx;
    color: #000;
}

.dateTime {
    font-size: 26rpx;
    color: #999;
    margin-top: 5rpx;
}

.com_contents {
    margin-top: 10rpx;
    padding-bottom: 40rpx;
    font-size: 30rpx;
    color: #666;
}

.nd {
    margin-left: 20rpx;
}

.footer_box {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
}

.leftBox {
    width: 490rpx;
    display: flex;
    justify-content: center;
    font-size: 26rpx;
    color: #000;
}

.leftBox text {
    margin-left: 20rpx;
}

.item-box {
    margin-left: 50rpx;
}

.bohao_box {
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    width: 260rpx;
    background-color: #ffb825;
    color: #fff;
    font-size: 34rpx;
}

.footer_icon {
    width: 50rpx;
    height: 50rpx;
}

.share-btn {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    opacity: 0;
}

.collectText {
    line-height: 50rpx;
}