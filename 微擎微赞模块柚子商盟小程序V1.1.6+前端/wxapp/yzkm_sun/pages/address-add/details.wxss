page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    width: 750rpx;
}

.kuaidiAddress {
    padding: 30rpx 30rpx;
    display: flex;
    flex-direction: column;
    width: 690rpx;
    font-size: 28rpx;
    color: #000;
    margin-top: 20rpx;
    background-color: #fff;
    position: relative;
}

.positionIcon {
    width: 30rpx;
    height: 40rpx;
    position: absolute;
    left: 30rpx;
    top: 40rpx;
}

.name-number {
    display: flex;
    width: 640rpx;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-left: 50rpx;
}

.shipping-address {
    margin-left: 50rpx;
    margin-top: 10rpx;
}

.bottomBorder {
    width: 750rpx;
    height: 10rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}

.addNew {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin-top: 30rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    background-color: #ffb825;
    color: #fff;
}