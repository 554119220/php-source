.item {
    width: 200rpx;
    height: 100rpx;
    background: rgba(189,185,185,1);
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.item.active {
    background: rgba(255,85,46,1);
}

.buy {
    font-size: 26rpx;
}

.hei80 {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    padding-bottom: 30rpx;
    height: 80rpx;
    background: #fff;
}

.payBtn {
    width: 600rpx;
    height: 80rpx;
    background: rgba(255,85,46,1);
    border-radius: 10rpx;
    color: #fff;
    line-height: 80rpx;
}

button::after {
    border: none;
}

.expireTime {
    font-size: 26rpx;
    color: #999;
    bottom: 140rpx;
