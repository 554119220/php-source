}

.card {
    width: 690rpx;
    height: 360rpx;
    top: 20rpx;
    left: 30rpx;
}

.img {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
    display: flex;
}

.cardWord {
    font-size: 60rpx;
    color: #fff;
    margin: -243rpx auto 0;
    z-index: 11;
    text-align: center;
}

.detailsWord {
    font-size: 26rpx;
    color: #fff;
    margin: 20rpx auto 0;
    z-index: 11;
    text-align: center;
}

.label_row {
    width: 690rpx;
    height: 90rpx;
    background-color: #eee;
