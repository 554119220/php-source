}

.inputbox {
    width: 100%;
    color: #333;
    font-size: 26rpx;
    margin: 0 0 0 56rpx;
    flex: 1;
}

.activeBtn {
    width: 90rpx;
    height: 50rpx;
    background: rgba(255,85,46,1);
    border-radius: 10rpx;
