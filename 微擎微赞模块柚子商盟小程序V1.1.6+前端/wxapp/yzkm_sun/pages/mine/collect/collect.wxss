@import "../../circle/circle.wxss";

.wrap {
}

.statusBox {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    font-size: 30rpx;
    color: #000;
    padding: 0rpx;
    background-color: #fff;
}

.status-item {
    width: 50%;
    height: 100%;
    text-align: center;
}

.status-item.active {
    border-bottom: 4rpx solid #ce0000;
    box-sizing: border-box;
}

.swiper {
    min-height: 500rpx;
}

.goodsItem {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex: 1 1 auto;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
}

.goodsWrap {
    width: 150rpx;
    height: 150rpx;
    margin: 30rpx;
}

.goodsImg {
    display: flex;
    width: 150rpx;
    border-radius: 10rpx;
}

.rightMes {
    width: 540rpx;
    display: flex;
    flex-direction: column;
}

.sellerName {
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin: 20rpx 30rpx 20rpx 0rpx;
}

.makePhone {
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 20rpx;
    background-color: #ffb825;
    color: #fff;
    font-size: 30rpx;
}

button::after {
    border: none;
}

.seller_address {
    display: flex;
    font-size: 26rpx;
    color: #999;
    align-items: center;
    margin: 0rpx 30rpx 20rpx 0rpx;
}

.dingwei {
    width: 20rpx;
    display: flex;
}

.addWord {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 10rpx;
    width: 390rpx;
}

.juli {
    color: #ce0000;
    margin-left: 70rpx;
}

.starRow {
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
    margin-right: 30rpx;
}

.starImgs {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.hot {
    color: #999;
}

.people {
    color: #ce0000;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 12;
    background: #fff;
    font-size: 30rpx;
}

.dbTit {
    line-height: 90rpx;
    color: #fff;
    background: #ffb825;
    text-align: center;
}

.dbTit_cancle {
    left: 30rpx;
}

.dbItem {
    padding: 20rpx 30rpx;
    height: 300rpx;
    border-bottom: 1rpx solid #eee;
}

.dbItem textarea {
    width: 100%;
    height: 100%;
}

.cancel {
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ffb825;
    border-radius: 10rpx;
    color: #fff;
    margin: 50rpx auto;
}

button::after {
    border: none;
}