.topBox{
  background-color: #fff;
}
.swiper_box {
  width: 100%;
  height: 380rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block; 
  overflow: hidden;
  height: 380rpx;
}
/*轮播图下方文字  */
.sellerMes{
  padding-bottom: 20rpx 
}
.goodName{
  font-size: 30rpx;
  color: #000;
  margin: 20rpx 30rpx 10rpx;
  }
.goodStatus{
  font-size: 26rpx;
  color: #999;
  margin: 0rpx 30rpx;
  justify-content: space-between;
}
.price{
  color: #ff552e;
}
.yunfei{
  margin-left: 30rpx;
}
.xiaoliang{
  margin-left: 30rpx;
}

/*发货说明  */
.itemRow{
  height: 80rpx;
  padding: 0rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
  margin: 20rpx 0rpx;
}
.left{
  font-size: 30rpx;
  color: #000;
  padding-left: 10rpx;
  border-left: 6rpx solid #ffb62b;
}
.right{
  font-size: 30rpx;
  color: #999;
}
/*商品详情样式  */
.bottomBox{
  background-color: #fff;
}
.title{
  height: 80rpx;
  padding: 0rpx 30rpx;
  font-size: 30rpx;
  color: #000;
  
}
.title text{
  padding-left: 10rpx;
  border-left: 6rpx solid #ffb62b;
}
.goodsWrap{
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}
.goodsText{
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: flex;
}

.goodsImg{
  width: 100%;
  height: 230rpx;
  display: flex;
   margin-bottom: 20rpx; 
}
/*底部立即购买样式  */
.footer_box{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #ffb62b;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}

/*隐藏的规格栏  */
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pop-goods-info{
  width: 710rpx;
  min-height: 290rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-left: 30rpx; */
  /* padding: 30rpx 0; */
  border-bottom: 1px solid #eee;
}
.pop-img-box{
  width: 230rpx;
  height: 230rpx;
  margin: 30rpx 30rpx 30rpx 0rpx;
}
.pop-img-box .goods-thumbnail{
  width: 230rpx;
  height: 230rpx; 
}
.pop-goods-title{
  width: 410rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:30rpx;
  color:#000;
}
.pop-goods-price{
  font-size:30rpx;
  color:#ff552e;
  margin-top:5rpx;  
}
.pop-goods-num{
  color: #999;
  font-size: 26rpx;
  margin-top:5rpx;  
}
.pop-goods-close{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.closeImg{
  width: 30rpx;
  height: 30rpx;
}
/*尺码规格  */
.size-label-box{
  width: 710rpx;
  color:#000;
  font-size: 28rpx;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  margin: 20rpx 0rpx;
  /* padding-left: 30rpx; */
  /* padding: 30rpx 0 20rpx 30rpx; */
}
.size-label-box .label-item-box{
  display: flex;
  /* margin-left: 30rpx; */
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  color: #666;
  background-color: #f3f3f3;
  padding: 14rpx 20rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  margin-right: 20rpx;
}
.size-label-box .label-item.active{
  color: #fff;
  background-color: #ff552e;
}
.buy-num-box{
   width: 710rpx;
   display: flex;
   justify-content: space-between;
   padding: 30rpx 0rpx 40rpx 0; 
   border-top: 1px solid #eee;
   margin-top: 20rpx;
   align-items: center; 
}
.num-label{
  font-size:28rpx;
  color:#000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
  margin: 0rpx 5rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 600rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size:32rpx;
  color:#fff;
  background-color: #ffb825;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.buy-join-btn{
  width: 600rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size:32rpx;
  color:#fff;
  background-color: #ffb62b;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}
