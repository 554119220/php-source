/* yzkm_sun/pages/circle/circle.wxss */
/* 导航模块开始 */
.browseRow{
height: 80rpx;
text-align: right;
font-size: 28rpx;
justify-content: flex-end;
/* float: right; */
padding: 0 30rpx; 
background-color: #fff;

}
.totalBrow{
color: #ffb825;
}
.totalPost{
color: #ffb825;
}
.postBox{
margin: 0 0 0 20rpx;
}
.classify {
width: 100%;
background: #fff;
margin: 0 0 10rpx 0;
}

.classify swiper-item {
width: 100%;
height: 100%;
}

.classify swiper-item view {
width: 20%;
height: 50%;
float: left;
}

.classify swiper-item view .classify_logo {
width: 100%;
height: 90rpx;
}

.classify swiper-item view .classify_logo image {
width: 75rpx;
height: 75rpx;
border-radius: 10rpx;
}

.classify swiper-item view .classify_name {
width: 100%;
height: 60rpx;
line-height: 50rpx;
font-size: 28rpx;
color: #666;
}

/*顶部切换栏  */
.statusBox{
  display: flex;
  padding: 0rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  font-size: 30rpx;
  color: #000;
  border-bottom:  1rpx solid #eee;
  box-sizing: border-box;
  background-color: #fff;
}
.status-item{
  height: 100%;
  line-height: 90rpx;
}
.status-item.active{
  border-bottom: 4rpx solid #ffb825;
  box-sizing: border-box;
}

/*底部样式  */
.quanziItem{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.oneRow{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #000;
  padding: 30rpx 30rpx 0rpx;
}
.header{
  width: 100rpx;
  height: 100rpx;
}
.headerImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  display: flex;
}
.header-name{
  display: flex;
  align-items: center;
}
.name{
  margin: 0rpx 30rpx;
}
.comment-btn{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #ffb825;
  color: #fff;
}
.contents{
  font-size: 30rpx;
  color: #666;
  margin: 30rpx 30rpx 10rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.img-container{
  /* width: 100%; */
  display: flex;
  flex-wrap: wrap; 
  padding: 10rpx 0rpx 0rpx 30rpx;
}
.contentImgs-box{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}
.contentImgs{
  width: 150rpx;
  height: 150rpx;
  display: flex;
}
.address-date{
  display: flex;
  color: #999;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx 10rpx;
}
.address-wrap{
  display: flex;
  align-items: center;
}
.address{
  font-size: 26rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0rpx 10rpx; 
}
.date{
  font-size: 24rpx;
}
.dingwei{
  width: 20rpx;
  display: flex;
}
.bottom-wrap{
  padding: 0rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 65rpx;
  color: #999;
  font-size: 24rpx;
  border-top: 1rpx solid #eee;
}
.bottomBox{
  display: flex;
  align-items: center;
}
.bottomBox text{
  margin-left: 20rpx;
}
.detailsBox{
  font-size: 30rpx;
}
.seeIcon{
  width: 40rpx;
}
.zanIcon{
  width: 30rpx;
}
.commentIcon{
  width: 30rpx;
}

/*底部弹窗栏  */
.drawer_screen {width:100%;height:100%;position:fixed;top:0;left:0;z-index:10;background:#000;opacity:0.5;overflow:hidden;}
.drawer_box {width:100%;overflow:hidden;position:fixed;top:0;left:0;z-index:12;background:#fff;font-size:30rpx;}
.dbTit{ line-height: 90rpx;color: #fff; background:#ffb825;text-align: center}
.dbTit_cancle{left: 30rpx;}
.dbItem{ padding: 20rpx 30rpx; height: 300rpx;border-bottom: 1rpx solid #eee;}
.dbItem textarea{ width:100%; height:100%;}
.cancel{width: 80%;height: 80rpx;line-height:80rpx;background-color: #ffb825;border-radius: 10rpx;color: #fff;margin: 50rpx auto;}
button::after{border: none;}