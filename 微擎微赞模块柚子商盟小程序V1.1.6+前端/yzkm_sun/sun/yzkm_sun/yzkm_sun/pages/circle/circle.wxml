<view>

    <!--顶部新增分类信息 -->
<!-- 导航模块开始 -->
 <!-- <view class='browseRow flex-center border_b'>
<view>总浏览量：<text class='totalBrow'>0</text></view>
<view class='postBox'>总发帖量：<text class='totalPost'>1422</text></view>
</view>  -->
 <swiper class='classify' style='height:{{height}}rpx' autoplay="true" interval="4000" duration="1000" circular="true">
<block wx:for="{{nav}}" wx:key="unique">
<swiper-item>
<block wx:for="{{item}}" wx:key="{{item.value}}">
<view class='flex-center-col'bindtap='goclassDetails' data-id='{{item.id}}'>
<view class='classify_logo rel'>
<image class='ab udlr' mode='aspectFill' src='{{url + item.post_img}}'></image>
</view>
 <view class='classify_name gobyndsingle center'>{{item.post_name}}</view> 
</view>
</block>
</swiper-item>
</block>
</swiper> 


    <view class='statusBox'>
            <view class='status-item {{currentIndex==index?"active":""}}'
             wx:for="{{statusType}}" 
            bindtap='statusTap' data-index="{{index}}"  wx:key=' '>{{item}}</view>
    </view> 




    <view class='quanziItem'  wx:for="{{list}}" 
            bindtap='details' wx:key=' '  data-id="{{item.id}}" >
        <view class='oneRow'>
            <view class='header-name'>
                <view class='header' >
                <!-- <image class='contentImgs' src="{{item.head_img}}" ></image>      -->
                        <image class='headerImg' src='{{item.head_img}}'></image>    
                 </view>
                <text class='name'>{{item.head_name}}</text>
            </view>
            <view class='comment-btn' data-statu='open'   data-id="{{item.id}}" catchtap='writeComments'>我要评论</view>
        </view>
        <view class='contents'>  
          {{item.content}}
        </view>
        <view class='img-container'>
            <view class='contentImgs-box'   wx:for="{{item.imgs}}"  wx:for-index=" " wx:for-item="item1"   wx:key=' '>
             <image class='contentImgs' src="{{url}}{{item1}}" ></image>    
                <!-- <image class='contentImgs' src='http://oydnzfrbv.bkt.clouddn.com/quanzitupian.png'></image> -->
            </view> 
        </view>
        
        <view class='address-date'>
            <view class='address-wrap'>
                <view style='width:20rpx;'>
                    <image class='dingwei' mode="widthFix" src='../../resource/images/index/zuobiao.png'></image>
                </view>
                <text class='address'>{{item.address}}</text>
            </view> 
            <text class='date'>{{item.time_ss}}</text>
        </view>
        <view class='bottom-wrap'>
            <view class='bottomBox'>
                <image class='seeIcon' mode='widthFix' src='../../resource/images/circle/see.png'></image>
                <text>{{item.browse}}</text>
            </view>
            <!-- 点赞 -->
            <view class='bottomBox'>
                <image catchtap='praise'  data-idx="{{index}}" class='zanIcon' mode='widthFix' src='../../resource/images/circle/zan.png'></image>
                <text>{{item.praise}}</text>
            </view>
            <view class='bottomBox'>
                <image class='commentIcon' mode='widthFix' src='../../resource/images/circle/com.png'></image>
                <text>{{item.shuliang}}</text>
            </view>
            <view class='detailsBox'>
                <text>查看详情</text>
            </view>
        </view>
    </view>
    <!--隐藏的弹窗  -->
    <form bindsubmit='bindSubmit'>
    <view class='drawer_screen' bindtap='close' data-statu='close' wx:if='{{showModalStatus}}'></view>
        <view class='drawer_box' animation="{{animationData}}" wx:if="{{showModalStatus}}">
            <view class='dbTit rel'><view class='dbTit_cancle ab' catchtap='cancleBtn' data-statu='close'>取消</view>发表评论</view>
            <view class='dbItem'>
                <textarea name='contents' placeholder-class='diyHolder' maxlength='-1' placeholder='请输入评论内容'
                 adjust-position='true' cursor-spacing='100' ></textarea>
            </view>
        <button form-type='submit' class='cancel' bindtap='close'  data-statu='close'>确定</button>
    </view>
    </form>
    <!--自定义tabBar模版-->
    <import src="../template/template.wxml"/>
    <view style='height:98rpx;'>
        <template is="tabBar" data="{{tabBar:bindData.tabBar}}"/>
    </view>
</view>