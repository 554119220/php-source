/* 导航模块开始 */

/*顶部切换栏  */

.scrollView{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  white-space: nowrap; 
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.scrollBox{
  min-width: 100%;  
  display: inline-block;
  /* padding-left: 30rpx;  
  padding-right: 30rpx;  */
}
.type-navbar{
  display: flex;
  flex-direction: row; 
   /* justify-content: space-between;    */
  align-items: center; 
  height: 100rpx; 
}
.type-box{
  line-height: 100rpx;
  display: flex;
  /* justify-content: space-between;  */
  align-items: center;
  position: relative;
  box-sizing: border-box;
}
.type-box:last-child{
  margin-right: 30rpx;
}
.type-navbar-item{
   margin: 0 auto;
   text-align: center;
   font-size: 30rpx;
   color: #000003;
   /* box-sizing: border-box; */
}
.type-navbar-item.type-item-on{
   box-sizing: border-box;
   border-bottom: 4rpx solid rgba(254,223,8,1); 
}

.statusBox{
  display: flex;
  padding: 0rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  font-size: 30rpx;
  color: #000;
  border-bottom:  1rpx solid #eee;
  box-sizing: border-box;
  background-color: #fff;
}
.status-item{
  height: 100%;
  line-height: 90rpx;
}
.status-item.active{
  border-bottom: 4rpx solid #ffb825;
  box-sizing: border-box;
}

/*底部样式  */
.quanziItem{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.oneRow{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #000;
  padding: 30rpx 30rpx 0rpx;
}
.header{
  width: 100rpx;
  height: 100rpx;
}
.headerImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  display: flex;
}
.header-name{
  display: flex;
  align-items: center;
}
.name{
  margin: 0rpx 30rpx;
}
.comment-btn{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #ffb825;
  color: #fff;
}
.contents{
  font-size: 30rpx;
  color: #666;
  margin: 30rpx 30rpx 10rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.img-container{
  /* width: 100%; */
  display: flex;
  flex-wrap: wrap; 
  padding: 10rpx 0rpx 0rpx 30rpx;
}
.contentImgs-box{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}
.contentImgs{
  width: 150rpx;
  height: 150rpx;
  display: flex;
}
.address-date{
  display: flex;
  color: #999;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx 10rpx;
}
.address-wrap{
  display: flex;
  align-items: center;
}
.address{
  font-size: 26rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0rpx 10rpx; 
}
.date{
  font-size: 24rpx;
}
.dingwei{
  width: 20rpx;
  display: flex;
}
.bottom-wrap{
  padding: 0rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 65rpx;
  color: #999;
  font-size: 24rpx;
  border-top: 1rpx solid #eee;
}
.bottomBox{
  display: flex;
  align-items: center;
}
.bottomBox text{
  margin-left: 20rpx;
}
.detailsBox{
  font-size: 30rpx;
}
.seeIcon{
  width: 40rpx;
}
.zanIcon{
  width: 30rpx;
}
.commentIcon{
  width: 30rpx;
}

/*底部弹窗栏  */
.drawer_screen {width:100%;height:100%;position:fixed;top:0;left:0;z-index:10;background:#000;opacity:0.5;overflow:hidden;}
.drawer_box {width:100%;overflow:hidden;position:fixed;bottom:0rpx;left:0;z-index:12;background:#fff;font-size:30rpx;}
.dbTit{ line-height: 90rpx;color: #fff; background:#ffb825;text-align: center}
.dbTit_cancle{left: 30rpx;}
.dbItem{ padding: 20rpx 30rpx; height: 300rpx;border-bottom: 1rpx solid #eee;}
.dbItem textarea{ width:100%; height:100%;}
.cancel{width: 80%;height: 80rpx;line-height:80rpx;background-color: #ffb825;border-radius: 10rpx;color: #fff;margin: 50rpx auto;}
button::after{border: none;}