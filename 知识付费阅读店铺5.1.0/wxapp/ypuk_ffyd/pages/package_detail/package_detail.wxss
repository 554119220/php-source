@import "../../resource/wxParse/wxParse.wxss";

.packageThumb {
    height: 400rpx;
}

.packageThumbimg {
    width: 100%;
    height: 400rpx;
}

.packageInfo {
    background: #fff;
    padding: 20rpx 30rpx 10rpx;
}

.packageInfo .packageTitle {
    font-size: 36rpx;
}

.packageInfo .packageIntro {
    color: #787878;
    font-size: 13px;
    margin: 10rpx 0;
}

.packageInfo .packageBottom {
    color: #787878;
    font-size: 13px;
}

.packageContent {
    background: #fff;
    padding: 20rpx 40rpx;
    margin-bottom: 134rpx;
}

.packageContent .packageDesc {
    font-size: 14px;
    margin: 20rpx 0;
}

.packageArticle {
    margin-bottom: 20rpx;
}

.navTab {
    height: 100rpx;
    background: #fff;
    width: 100%;
    border-bottom: 1px solid #eee;
}

.navItem {
    display: inline-block;
    background: #fff;
    width: 30%;
    color: #777;
    text-align: center;
    font-size: 14px;
    margin: 0 10%;
    line-height: 47px;
}

.navSelected {
    border-bottom: 4px solid #ef6e5f;
    color: #000;
    font-weight: bold;
}

.packageBuy {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    z-index: 100;
    font-size: 16px;
    padding: 20rpx;
}

.packageBuybtn {
    background: #ef6e5f;
    color: #fff;
    text-align: center;
    padding: 20rpx 0;
    border-radius: 10rpx;
    font-size: 14px;
}

.packageBuybtn.disable {
    background: #bbb;
}

.clear_fixed {
    height: 130rpx;
    width: 100%;
}