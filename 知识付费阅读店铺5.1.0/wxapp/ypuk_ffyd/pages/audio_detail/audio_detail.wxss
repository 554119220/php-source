@import "../../resource/wxParse/wxParse.wxss";

.articleInfo {
    background: #fff;
    padding: 20rpx 30rpx;
}

.articleInfo .articleTitle {
    font-size: 36rpx;
}

.articleInfo .articleIntro {
    font-size: 14px;
    margin-top: 10rpx;
    color: #787878;
}

.articleInfo .middleLayout {
    margin: 10rpx 10rpx 20rpx 0;
}

.articleInfo .articleView {
    color: #777;
    font-size: 28rpx;
    margin-top: 12rpx;
}

.articleInfo .articleView .leftText {
    float: left;
}

.articleInfo .articleView .rightText {
    float: right;
}

.PreviewLayout {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 474rpx;
    z-index: 2;
}

.PreviewLayout .PreviewBg {
    background: #000;
    width: 100%;
    height: 100%;
    opacity: 0.5;
}

.PreviewLayout .PreviewText {
    font-size: 14px;
    position: absolute;
    top: 180rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 60%;
    color: #fff;
    text-align: center;
}

.bottomLayout {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
}

.bottomLayout .sharearticle {
    float: right;
    margin: 20rpx 0;
    margin-right: 50rpx;
}

.bottomLayout .shareBtn,.bottomLayout .shareBtn::after {
    position: relative;
    width: auto;
    height: auto;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: none;
    -webkit-tap-highlight-color: transparent;
    background-color: transparent;
    border: none!important;
    color: #333;
}

.bottomLayout .shareIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .shareText {
    float: left;
    margin-left: 10rpx;
    margin-top: 12rpx;
    color: #777;
    font-size: 14px;
}

.bottomLayout .addFav,.bottomLayout .addComment {
    float: right;
    margin: 20rpx 0;
    margin-right: 60rpx;
    font-size: 14px;
}

.bottomLayout .favIcon,.bottomLayout .commentIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .favText,.bottomLayout .commentText {
    float: left;
    margin-left: 10rpx;
    margin-top: 4rpx;
    color: #777;
}

.buyArticle {
    background: #fff;
    padding: 30rpx 0 40rpx;
}

.buyArticle .buyBtn {
    padding: 20rpx;
    border: 1px solid #ef6e5f;
    color: #ef6e5f;
    text-align: center;
    font-size: 14px;
    width: 340rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}

.audioView {
    width: 100%;
}

.audioThumb {
    position: relative;
    margin: 30rpx auto 0rpx;
    width: 288rpx;
    height: 288rpx;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 2px 6px -2px #777;
}

.audioThumb .audioImg {
    width: 260rpx;
    height: 260rpx;
    border-radius: 50%;
    margin: 14rpx;
}

.audioThumb .audioImg.animation {
    animation: circle 5s infinite linear;
}

.audioThumb .playAudio {
    position: absolute;
    width: 90rpx;
    height: 90rpx;
    top: 0;
    left: 0;
    right: 0;
    margin: auto;
    bottom: 0;
}

@keyframes circle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(-360deg);
    }
}

.pro {
    margin: 20rpx auto 0;
    text-align: center;
    font-size: 14px;
}

.proleft {
    width: 20%;
}

.proright {
    width: 20%;
}

.procenter {
    width: 50%;
}

.proleft,.procenter,.proright {
    display: inline-block;
    vertical-align: middle;
}

.articleContent {
    background: #fff;
    padding: 20rpx 40rpx;
}

.articleContent .articleDesc {
    font-size: 14px;
    margin: 20rpx 0;
}