@import "../../resource/wxParse/wxParse.wxss";

.articleInfo {
    background: #fff;
    padding: 20rpx 30rpx;
}

.articleInfo .articleTitle {
    font-size: 36rpx;
}

.articleInfo .articleIntro {
    font-size: 14px;
    margin-top: 10rpx;
    color: #787878;
}

.articleInfo .middleLayout {
    margin: 10rpx 10rpx 20rpx 0;
}

.articleInfo .articleView {
    color: #777;
    font-size: 28rpx;
    margin-top: 12rpx;
}

.articleInfo .articleView .leftText {
    float: left;
}

.articleInfo .articleView .rightText {
    float: right;
}

.videoView {
    width: 100%;
    margin-bottom: -20rpx;
}

.PreviewLayout {
    position: relative;
    width: 100%;
    height: 450rpx;
}

.PreviewLayout .PreviewBg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.VideoPicLayout {
    position: relative;
    width: 100%;
    height: 450rpx;
}

.VideoPicPlay {
    width: 100rpx;
    height: 100rpx;
    z-index: 99;
    position: absolute;
    margin: 0 auto;
    left: 0;
    right: 0;
    top: 160rpx;
}

.VideoPic {
    width: 750rpx;
    height: 502rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
}

.PreviewLayout .PreviewImg {
    width: 750rpx;
    height: 502rpx;
}

.bottomLayout {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
}

.bottomLayout .sharearticle {
    float: right;
    margin: 20rpx 0;
    margin-right: 50rpx;
}

.bottomLayout .shareBtn,.bottomLayout .shareBtn::after {
    position: relative;
    width: auto;
    height: auto;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: none;
    -webkit-tap-highlight-color: transparent;
    background-color: transparent;
    border: none!important;
    color: #333;
}

.bottomLayout .shareIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .shareText {
    float: left;
    margin-left: 10rpx;
    margin-top: 12rpx;
    color: #777;
    font-size: 14px;
}

.bottomLayout .addFav,.bottomLayout .addComment {
    float: right;
    margin: 20rpx 0;
    margin-right: 60rpx;
    font-size: 14px;
}

.bottomLayout .favIcon,.bottomLayout .commentIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .favText,.bottomLayout .commentText {
    float: left;
    margin-left: 10rpx;
    margin-top: 4rpx;
    color: #777;
}

.buyArticle {
    background: #fff;
    padding: 30rpx 0 40rpx;
}

.buyArticle .buyBtn {
    padding: 20rpx;
    border: 1px solid #ef6e5f;
    color: #ef6e5f;
    text-align: center;
    font-size: 14px;
    width: 340rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}