.regionSelect {
    font-size: 14px;
    background: #fff;
    box-shadow: 0 2px 5px -4px #777;
    margin-bottom: 20rpx;
}

.regionItem {
    float: left;
    text-align: center;
    width: 50%;
    padding: 20rpx 0;
}

.regionItem .picker {
    color: #666;
}

.regionItem .picker .arrow {
    width: 26rpx;
    height: 26rpx;
    margin-left: 4rpx;
    vertical-align: top;
    margin-top: 10rpx;
    display: inline-block;
}

.pickerText {
    overflow: hidden;
    display: inline-block;
}

.searchBar {
    background: #fff;
    padding: 20rpx 0 60rpx;
    box-shadow: 0 3px 5px -4px #777;
}

.searchLayout {
    width: 560rpx;
    margin: 0 auto;
    position: relative;
}

.search_input {
    background: #f6f6f6;
    font-size: 14px;
    padding: 12rpx 40rpx 12rpx;
    color: #bfbfbf;
    border-radius: 14rpx;
}

.searchIco {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    z-index: 99;
}