@import "../../resource/wxParse/wxParse.wxss";

.articleInfo {
    background: #fff;
    padding: 20rpx 30rpx 20rpx;
}

.articleInfo .articleTitle {
    font-size: 36rpx;
}

.articleInfo .articlePrice {
    color: #efc273;
    float: left;
}

.articleInfo .articlePrice .priceico {
    font-size: 24rpx;
}

.articleInfo .middleLayout {
    margin: 20rpx 10rpx 20rpx 0;
}

.articleInfo .articleView {
    color: #777;
    font-size: 28rpx;
    margin-top: 12rpx;
}

.articleInfo .articleView .leftText {
    float: left;
}

.articleInfo .articleView .rightText {
    float: right;
}

.articleContent {
    background: #fff;
    padding: 20rpx 40rpx;
}

.articleContent .articlePicList {
    font-size: 14px;
    margin: 20rpx 0;
}

.articlePicList .articlePicItem {
    float: left;
    margin-right: 10rpx;
    position: relative;
}

.articlePicList .articlePicItem:nth-child(3n) {
    margin-right: 0;
}

.articlePicList .articlePicItem .articlePicImg {
    width: 216rpx;
    height: 216rpx;
}

.otherPicnumBg {
    height: 216rpx;
    color: #fff;
    width: 216rpx;
    background: #fff;
    top: 0;
    left: 0;
    position: absolute;
    opacity: 0.4;
}

.otherPicnumText {
    font-size: 20px;
    position: absolute;
    top: 80rpx;
    left: 0;
    right: 0;
    color: #ef6e5f;
    text-align: center;
    z-index: 1;
}

.bottomLayout {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
}

.bottomLayout .sharearticle {
    float: right;
    margin: 20rpx 0;
    margin-right: 50rpx;
}

.bottomLayout .shareBtn,.bottomLayout .shareBtn::after {
    position: relative;
    width: auto;
    height: auto;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: none;
    -webkit-tap-highlight-color: transparent;
    background-color: transparent;
    border: none!important;
    color: #333;
}

.bottomLayout .shareIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .shareText {
    float: left;
    margin-left: 10rpx;
    margin-top: 12rpx;
    color: #777;
    font-size: 14px;
}

.bottomLayout .addFav,.bottomLayout .addComment {
    float: right;
    margin: 20rpx 0;
    margin-right: 60rpx;
    font-size: 14px;
}

.bottomLayout .favIcon,.bottomLayout .commentIcon {
    float: left;
    width: 50rpx;
    height: 50rpx;
}

.bottomLayout .favText,.bottomLayout .commentText {
    float: left;
    margin-left: 10rpx;
    margin-top: 4rpx;
    color: #777;
}

.buyArticle {
    background: #fff;
    padding: 30rpx 0 40rpx;
}

.buyArticle .buyBtn {
    padding: 20rpx;
    border: 1px solid #ef6e5f;
    color: #ef6e5f;
    text-align: center;
    font-size: 14px;
    width: 360rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}