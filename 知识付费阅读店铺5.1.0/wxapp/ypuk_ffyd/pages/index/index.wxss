@import "../../resource/wxParse/wxParse.wxss";

.HelpExamineIndex {
    background: #fff;
    padding: 20rpx;
}

.topBg {
    background: #fff;
}

.SwiperLayout {
    margin-top: 155rpx;
    padding-bottom: 20px;
    z-index: 9;
}

.swiper {
    height: 266rpx;
}

.articleType {
    background: #fff;
    display: table;
    width: 80%;
    padding: 0 10% 40rpx;
    font-size: 14px;
    color: #ef6e5f;
}

.articleType .typeItem {
    text-align: center;
    display: table-cell;
}

.typeItem .typeIcon {
    width: 70rpx;
    height: 70rpx;
}

.typeItem .typeName {
    font-size: 26rpx;
}

.top-bar {
    background: #fff;
    width: 100%;
    height: 120rpx;
    padding-top: 10rpx;
    overflow: hidden;
}

.top-bar-item {
    display: inline-block;
    background: #fff;
    width: 30%;
    color: #777;
    text-align: center;
    font-size: 14px;
    margin: 0 10%;
    line-height: 47px;
    position: relative;
    height: 100rpx;
}

.top-bar-item-Selected {
    color: #000;
    font-weight: bold;
}

.top-bar-item .circular {
    width: 90rpx;
    height: 6rpx;
    border-radius: 10rpx;
    margin: 0 auto;
}

.top-bar-item-Selected .circular {
    background-color: #ef6e5f;
}

.searchType {
    position: absolute;
    width: 60rpx;
    font-size: 14px;
    color: #ef6e5f;
    padding: 16rpx 10rpx 0rpx 42rpx;
}

.searchBar {
    background: #fff;
    padding: 20rpx 0 60rpx;
    box-shadow: 0 5px 7px -4px #777;
}

.searchBar.absolute {
    position: absolute;
    z-index: 99;
    width: 100%;
    top: 0;
}

.searchLayout {
    width: 560rpx;
    margin: 0 auto;
    position: relative;
}

.search_input {
    background: #f6f6f6;
    font-size: 14px;
    padding: 12rpx 40rpx 12rpx 130rpx;
    color: #bfbfbf;
    border-radius: 14rpx;
}

.searchIco {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    z-index: 99;
}

.catType {
    display: flex;
    white-space: nowrap;
    padding: 0 0 40rpx;
    font-size: 14px;
    color: #ef6e5f;
    background: #fff;
    margin-bottom: 20rpx;
}

.catItem {
    display: inline-block;
    margin: 0 40rpx;
    text-align: center;
}

.catItem .catIcon {
    width: 70rpx;
    height: 70rpx;
}

.catItem .catName {
    font-size: 26rpx;
}

.recommendList .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: -4rpx;
}

.recommendList .wx-swiper-dot {
    width: 40rpx;
    display: inline-flex;
    height: 8rpx;
    vertical-align: sub;
}

.recommendList .wx-swiper-dot::before {
    content: '';
    background: #e5e5e5;
    flex-grow: 1;
}

.recommendList .wx-swiper-dot-active::before {
    content: '';
    background: #ef6e5f;
    flex-grow: 1;
}