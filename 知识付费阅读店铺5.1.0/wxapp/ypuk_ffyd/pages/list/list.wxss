.top-bar {
    height: 100rpx;
    background: #fff;
    width: 100%;
    border-bottom: 1px solid #eee;
}

.top-bar-item {
    display: inline-block;
    background: #fff;
    width: 14%;
    color: #777;
    text-align: center;
    font-size: 14px;
    margin: 0 3%;
    line-height: 47px;
}

.top-bar-item-Selected {
    border-bottom: 4px solid #ef6e5f;
    color: #000;
    font-weight: bold;
}

.searchBar {
    background: #fff;
    padding: 20rpx 0 60rpx;
    box-shadow: 0 3px 5px -4px #777;
}

.searchLayout {
    width: 560rpx;
    margin: 0 auto;
    position: relative;
}

.search_input {
    background: #f6f6f6;
    font-size: 14px;
    padding: 12rpx 40rpx 12rpx;
    color: #bfbfbf;
    border-radius: 14rpx;
}

.searchIco {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    z-index: 99;
}