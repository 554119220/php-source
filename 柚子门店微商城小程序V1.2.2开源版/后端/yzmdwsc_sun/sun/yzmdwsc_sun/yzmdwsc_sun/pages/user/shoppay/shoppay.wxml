<!--yzmdwsc_sun/pages/user/shoppay/shoppay.wxml-->
<view class="container">
  <view>
    <view class="session">
      <view class="sesTop">
        <image src="{{url}}{{settings.ddmd_img}}" class="uthumb"/>
        <text>{{settings.ddmd_title}}</text>
      </view>
      <view class="SesBol">
        <view>付款</view>
        <view class="price">
          <text>￥</text>
          <input type="text" bindinput='bindPrice' name='price' value="{{price}}" auto-focus='true'/>
        </view>
        <view class="toPay" bindtap='toPay'>微信支付</view>
      </view>
    </view>
  </view>
</view>