<!--yzmdwsc_sun/pages/user/myorder/myorder.wxml-->
<view class="container">
  <view>
    <view class="order-nav">
      <view data-index="{{index}}" bindtap="bargainTap" wx:for="{{nav}}" wx:key="">
       <text class="nav {{curIndex ===index ?'on':''}}" >{{item}}</text>
      </view>
    </view>
    <!--全部-->
    <view class="order-cont">
      <view wx:if="{{order==''}}">
        <image src="../../../../style/images/barno.png"  class="no"/>
      </view>
      <view class="list" wx:for="{{order}}" wx:for-index="index" wx:key="" data-id='{{item.id}}'  wx:if="{{all!=''}}" >
        <view class="order-num">
          <view>订单号：{{item.orderformid}}</view>
          <view>
            <text wx:if="{{item.order_status==0}}">待支付</text>
            <text wx:if="{{item.order_status==1}}">待发货</text>
            <text wx:if="{{item.order_status==2}}">待收货</text>
            <text wx:if="{{item.order_status==3}}">已完成</text>
            <text wx:if="{{item.order_status==4}}">退款中</text>
            <text wx:if="{{item.order_status==5}}">已退款</text>
            <text wx:if="{{item.order_status==6}}">退款拒绝</text>
            <text wx:if="{{item.order_status==7}}">订单取消</text>
          </view>
        </view>
   
        <view class="list-up" wx:for="{{item.detail}}" wx:for-item="itm"  data-id='{{item.id}}' bindtap='toOrderdet'>
          <view  class="list-left">
            <view class="goodsImg">
              <image src="{{url}}{{itm.pic}}" class="img"/> 
            </view>
            <view class="left-det">
              <view class="left-title">{{itm.gname}}</view>
              <view>
                <view  class="style" wx:if="{{itm.spec_value}}">
                  <text>{{itm.spec_value}}：{{itm.spec_value1}}</text>
                </view>
              </view>
              <view class="price">￥{{itm.unit_price}}</view>
              <view class="_comment" wx:if="{{item.order_status==3&&item.is_pingjia==0&&itm.is_pingjia==0}}" data-order_id='{{item.id}}' data-order_detail_id='{{itm.id}}' catchtap="topingjia">评价晒单</view>
            </view>
          </view>
          <view class="list-right">
            <view>X {{itm.num}}</view>
          </view>
        </view> 
        
        <view class="list-down" wx:if="{{item.order_status==0}}"> 
          <view class="btn cancel" bindtap='toCancel' data-order_id='{{item.id}}' data-index="{{index}}">取消订单</view>
          <view class="btn submit" data-order_id='{{item.id}}' bindtap='topay' >立即支付</view>
        </view>
        <view class="list-down" wx:if="{{item.order_status==1}}">
          <button class="btn cancel" open-type='contact'>联系商家</button>
        </view>
        <view class="list-down" wx:if="{{item.order_status==2}}">
          <view class="btn cancel" bindtap='toqueren' data-order_id='{{item.id}}' data-index="{{index}}">确认收货</view>
          <button class="btn cancel" open-type='contact'>联系商家</button>
        </view>

        <view class="list-down" wx:if="{{item.order_status==3}}">
          <!-- <view class="btn cancel" wx:if="{{item.is_pingjia==0}}" data-order_id='{{item.id}}' bindtap='topingjia'>立即评价</view> -->
          <view class="btn cancel" bindtap='toDel' data-order_id='{{item.id}}' data-index="{{index}}">删除订单</view>
        </view>

      </view>
      
    </view>

    <view class="indexHome" bindtap='toIndex'>
    <image src="../../../../style/images/indexHome.png" />
    </view>

  </view>
</view>