.group-Pro{
  background: #fff;
  padding: 20rpx 70rpx;
  height: 44rpx;
  margin-top:10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 6rpx solid #cecece;
  position: relative;
}
.group-Pro::after{
  content: " ";
  display: inline-block;
  width: 50%;
  background: #ff7800;
  height: 6rpx;
  position: absolute;
  left: 0rpx;
  bottom: -6rpx;
}
.group-Process{
  position: relative;
  display:flex;
  justify-content: center;
}
.groupIcn{
  width: 54rpx;
  height: 44rpx;
}
.group-Proces::after{
  content: " ";
  display: inline-block;
  width:16rpx;
  background: #ff7800;
  height: 16rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -30rpx;
}
.group-Process>text{
  position: absolute;
  width: 120rpx;
  bottom: -70rpx;
  font-size: 26rpx;
  text-align: center;
}
.member{
  background: #fff;
  padding: 96rpx 45rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.joinuser{
  display: flex;
}
.uthumb{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin:30rpx 25rpx;
  position: relative;
  border:1rpx dashed #cbcbcb;
}
.thumb{
  border:1rpx solid #ff7800;
}
.uthumb>image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.uthumb:first-child::after{
  content: "团长";
  display: inline-block;
  width: 50rpx;
  height: 28rpx;
  color: #fff;
  background: #ff7800;
  font-size: 20rpx;
  position: absolute;
  left: -18rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 8rpx;
  border:1rpx solid #fff; 
}
