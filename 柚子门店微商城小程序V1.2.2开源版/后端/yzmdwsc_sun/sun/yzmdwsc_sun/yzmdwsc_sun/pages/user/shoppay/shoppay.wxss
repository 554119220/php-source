/* yzmdwsc_sun/pages/user/shoppay/shoppay.wxss */
.container{
  border-top:1rpx solid #999;
}
.session{
  background: #fff;
  width: 690rpx;
  border-radius: 4rpx;
  margin:20rpx auto;
}
.uthumb{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.sesTop{
  height: 100rpx;
  padding-left: 60rpx;
  border-bottom: 1rpx solid #ececec;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 700;
}
.SesBol{
  padding: 60rpx;
  width: 570rpx;
  margin:0rpx auto;
}
.price{
  width: 100%;
  border-bottom: 1rpx solid #ececec;
  font-size: 64rpx;
  line-height: 64rpx;
  font-weight: 700;
  display: flex;
  padding:40rpx 0rpx;
}
.price>input{
  height: 64rpx;
  vertical-align: text-bottom;
}
.toPay{
  margin-top:40rpx;
  width: 100%;
  background: #1aad19;
  font-size: 36rpx;
  color: #fff;
  height: 92rpx;
  line-height: 92rpx;
  text-align:  center;
  border:1rpx solid rgb(20,134,19);
  border-radius: 10rpx;
}