    <!--工作台主体-->
    <view class="session" wx:if="{{isHxstaff==1}}">
      <view class="session-title">
        <text>数据看板</text>
        <text class='addManager' bindtap='toManager'>添加核销员</text>
      </view>
      <view class="session-cont">
        <view class="list" wx:for="{{data.tongji}}" wx:for-index="index" wx:key="" bindtap='toOrderlist' data-index="{{index}}">
          <text class="list-title">{{item.title}}</text>
          <text class="list-item {{index==4?'delivery':''}}" >{{item.detail}}</text>
        </view>
      </view>
    </view>
    <view class="session finance" wx:if="{{isHxstaff==1}}">
      <view class="session-title">
        <text>财务看板</text>
      </view>
      <view class="session-cont">
        <view class="list" wx:for="{{data.sale_tongji}}" wx:for-index="index" wx:key="">
          <text class="list-title">{{item.title}}</text>
          <text class="list-item">{{item.detail}}</text>
        </view>
       <!-- <view class="list cash">
          <image src="../../../../style/images/icon35.png" />
          <text class="list-title">提现</text>
        </view>-->
      </view>
    </view>

  </view>
