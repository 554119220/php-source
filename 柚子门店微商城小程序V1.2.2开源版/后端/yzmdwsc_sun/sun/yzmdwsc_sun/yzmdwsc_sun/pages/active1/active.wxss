.goods{
  background: #f3f3f5;
  height: 120rpx;
  width: 538rpx;
  display: flex;
  padding: 20rpx;
}
.goodsImg{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.goodsTitle{
  width:398rpx;
  height: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top:2rpx;
}
.goodsRight{
  width: 398rpx;
}
.goodsDown{
  width: 398rpx;
  display: flex;
  justify-content: space-between;
  margin-top:20rpx;
}
.toBuy{
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 34rpx;
  color: #fff;
  background: #ff7800;
  font-weight: 700;
}
.price{
  font-size: 34rpx;
  color: #ff7800;
  font-weight: 700;
}
.oldPrice{
  position: relative;
  display: inline-block;
  font-size: 26rpx;
  font-weight: 500;
  color:#999;
  margin-top:18rpx;
}
.oldPrice::before{
  content: " ";
  display: inline-block;
  height: 2rpx;
  width:100%;
  background: #999;
  position: absolute;
  top:10rpx;
  transform: rotate(3deg)
}
