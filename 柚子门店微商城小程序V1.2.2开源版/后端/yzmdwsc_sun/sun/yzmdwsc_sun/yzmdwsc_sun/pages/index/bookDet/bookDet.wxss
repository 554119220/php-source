/* yzmdwsc_sun/pages/index/goodsDet/goodsDet.wxss */

.header {
  position: relative;
}

.page {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  height: 36rpx;
  width: 90rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 18rpx;
}

swiper, .slide-image {
  height: 750rpx;
  width: 750rpx;
}

.icn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
}

.sesUp {
  background: #fff;
  padding: 0rpx 20rpx 0rpx 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 40rpx;
  line-height: 48rpx;
}

.titleSec {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
  color: #999;
}

.price {
  font-size: 34rpx;
  font-weight: 700;
  color: #ff7800;
}

.guarantee {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.guarantee>view {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  width: 236rpx;
}

.sesDown {
  padding-bottom: 150rpx;
}

.secTitle {
  margin-top: 20rpx;
  background: #fff;
  height: 90rpx;
  width: 750rpx;
  line-height: 90rpx;
  text-align: center;
  color: #ff7800;
  font-weight: 700;
  font-size: 32rpx;
  border-bottom: 1rpx solid #dcdcdc;
}

.cont image {
  width: 750rpx;
}

/**/

.bottomNav {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 98rpx;
  background: #fff;
  z-index: 999;
  display: flex;
  box-shadow: 0 -3rpx 3rpx 0rpx rgba(180, 180, 180, 0.21);
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 8rpx;
  margin-bottom: 4rpx;
}

.btnGroup {
  display: flex;
  width: 278rpx;
}

.btnGroup button {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 0rpx;
  padding-right: 0rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  font-size: 20rpx;
  line-height: 22rpx;
  align-items: center;
  background: #fff;
  border-radius: 0rpx;
  color: #8c8c8c;
}

.btnGroup button::after {
  border: none;
}

.curOrder {
  width: 472rpx;
  height: 98rpx;
  background: #ff7800;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-weight: 700;
  font-size: 32rpx;
}
