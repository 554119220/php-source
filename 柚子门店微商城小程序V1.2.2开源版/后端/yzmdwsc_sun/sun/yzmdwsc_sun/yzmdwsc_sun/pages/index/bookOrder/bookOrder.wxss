/* yzmdwsc_sun/pages/index/bookOrder/bookOrder.wxss */
.goodsDet{
  display: flex;
  background: #fff;
  margin-top:10rpx;
  padding: 20rpx;
  height: 180rpx;
}
.goodsImg{
  margin-right: 20rpx;
}
.goodsImg,.goodsImg image{
  height: 180rpx;
  width: 180rpx;
  border-radius: 12rpx;
}
.goodsDown{
  height: 180rpx;
  width: 510rpx;
  position: relative;
}
.title{
  font-weight: 700;
  line-height: 42rpx;
}
.price{
  position: absolute;
  bottom:0rpx;
  font-weight: 700;
  color: #ff7800;
  font-size: 34rpx;
}
/****/
.session{
  margin-top: 20rpx;
  background: #fff;
}
.sessionList{
  display: flex;
  padding: 0rpx 20rpx;
  height: 90rpx;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
}
.sessionList:last-child{
  border-bottom: 0rpx solid #f00;
}
.secLeft{
  width: 175rpx;
}
.sessionTime{
  justify-content: space-between;
}
.hidden{
  display: none
}
.chooseTime{
  line-height: 18rpx;
}
.rightIcon{
  margin-left: 20rpx;
}
.remark{
  width: 710rpx;
  font-size: 32rpx;
}
.secRight input{
  font-size: 32rpx;
}
/********/
.bottom{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 98rpx;
  width: 750rpx;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0rpx -3rpx 3rpx 0rpx rgba(180,180,180,0.078);
  align-items: center;
}
.totalprice text{
  color: #ff7800;
  font-weight: 700;
  margin-right:50rpx;
}
.toPay{
  width: 220rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #ff7800;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  margin-left:0rpx;
  margin-right: 0rpx;
  border-radius: 0rpx;
}
.toPay::after{
  border:none;
}
.sessionTime>view.secRight{
width: 550rpx;
text-align: right;
}