<!--yzmdwsc_sun/pages/index/shareDet/shareDet.wxml-->
<view class="container">
  <view wx:for="{{goods}}" wx:key="">
    <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true" indicator-color="rgba(0,0,0,0.3)" indicator-active-color="#ff7800">
      <block wx:for="{{item.imgUrls}}" wx:key="{{index}}">
          <swiper-item>
              <image src="{{item}}" class="slide-image" mode="scaleToFill" height="374"/>
          </swiper-item>
      </block>
    </swiper>  
    <view class="title">
      {{item.title}}
    </view>

    <view class="nav-group" >
      <view>
        <text>商品详情</text>
      </view>
    </view> 
    <view class="detail">
      <image src="{{itm}}" wx:for="{{item.detail}}" wx:key="" wx:for-item="itm" mode="widthFix" />
    </view> 
    <view class="visit">
      <view class="visitBar">
        <view>
          <image src="../../../../style/images/visit.png" class="visitIcon"/>
        </view>
        <view>累计访客数：{{item.visitnum}}人</view>
      </view>
      <view class="visitUser">
        <image src="http://cgkqd.img48.wal8.com/img48/569611_20170429191245/152159562425.png" class="uthumb"/>
        <image src="http://cgkqd.img48.wal8.com/img48/569611_20170429191245/152159562425.png" class="uthumb"/>
        <image src="http://cgkqd.img48.wal8.com/img48/569611_20170429191245/152159562425.png" class="uthumb"/>
      </view>
    </view>

    <view class="fixNav">
      <button class="fixBottom" open-type='share'>
        <image src="../../../../style/images/sharebtn.png" class="sharebtn"/>
        <text>分享赚钱（<text  class="fixPrice">￥0.15</text>）</text>
      </button>
    </view>

    <view class="foot"></view>
  </view>
</view> 
