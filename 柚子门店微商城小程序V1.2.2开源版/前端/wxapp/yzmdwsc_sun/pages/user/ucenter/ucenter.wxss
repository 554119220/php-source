.container {
    background-color: #fff;
}

.header {
    position: relative;
    height: 346rpx;
}

.header_bg {
    position: absolute;
    tab-size: 0rpx;
    left: 0rpx;
    height: 346rpx;
    width: 750rpx;
    filter: blur(2rpx);
}

.header-cont {
    position: absolute;
    left: 50rpx;
    bottom: 0rpx;
    width: 550rpx;
    height: 196rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    padding: 50rpx;
}

.cards_bg {
    position: absolute;
    left: 50rpx;
    bottom: 0rpx;
    width: 650rpx;
    height: 296rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.user-info {
    display: flex;
    color: #fff;
    font-size: 32rpx;
}

.thumb {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    border: 3rpx solid #fff;
}

.user-grade {
    font-size: 30rpx;
    margin-top: 40rpx;
}

.user-grade>view {
    display: inline-block;
}

.user-grade text {
    font-size: 36rpx;
    font-weight: 700;
}

.user-grade image {
    width: 28rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.record {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
    font-size: 32rpx;
    margin-top: 30rpx;
}

.score {
    display: flex;
    flex-direction: column;
}

._record {
    width: 220rpx;
    height: 68rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2px solid #fff;
    border-radius: 10rpx;
}

.score text:nth-child(2) {
    line-height: 60rpx;
    font-size: 46rpx;
    font-weight: 700;
    margin-top: 10rpx;
}

._record image {
    width: 36rpx;
    height: 30rpx;
    margin-left: 24rpx;
}

.wrap {
    margin-top: 20rpx;
    background: #fff;
}

.list {
    padding: 0rpx 30rpx;
    height: 130rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #222;
    line-height: 46rpx;
}

.list-title {
    height: 110rpx;
    font-size: 32rpx;
    border-bottom: 1px solid #ececec;
}

.icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 28rpx;
}

.det {
    color: #999;
    font-size: 24rpx;
}

.block {
    padding: 40rpx 20rpx 20rpx;
    background: #fff;
}

.block>view:first-child {
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 26rpx;
}

.block>view:last-child {
    font-size: 26rpx;
    color: #666;
    line-height: 36rpx;
}

.hr {
    height: 20rpx;
    background-color: #f8f8f8;
}

.process {
    width: 614rpx;
    margin-left: 68rpx;
    position: relative;
    padding-top: 20rpx;
}

.process>progress {
    margin-top: 60rpx;
    width: 614rpx;
}

.totalIntegral {
    font-size: 30rpx;
    color: #ff7800;
    margin-top: 14rpx;
    text-align: right;
    font-weight: 700;
}

.progressTop {
    display: inline-block;
    position: absolute;
    height: 40rpx;
    padding: 0rpx 16rpx;
    color: #fff;
    background-color: #ff7800;
    border-radius: 10rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    font-weight: 700;
    width: auto;
    margin-left: -40rpx;
}

.progressTop::after {
    content: " ";
    display: block;
    height: 0rpx;
    width: 0rpx;
    border-left: 12rpx solid transparent;
    border-top: 12rpx solid #ff7800;
    border-right: 12rpx solid transparent;
    transform: translateX(-50%);
    margin-left: 50%;
}

.proTips {
    text-align: center;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.proTips>text {
    color: #ff7800;
}