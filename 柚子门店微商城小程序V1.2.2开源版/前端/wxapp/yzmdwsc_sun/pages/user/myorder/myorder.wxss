.order-nav {
    width: 750rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    background: #fff;
    line-height: 80rpx;
    border-top: 1rpx solid #cbcbcb;
}

.nav {
    display: inline-block;
    height: 80rpx;
    font-size: 30rpx;
    color: #666;
    font-weight: 500;
}

.on {
    box-sizing: border-box;
    color: #ff7800;
    border-bottom: 4rpx solid #ff7800;
}

.no {
    margin-top: 200rpx;
    height: 270rpx;
    width: 750rpx;
}

.order-cont {
    padding-bottom: 100rpx;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.order-num {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
}

.list-up {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
    font-weight: 700;
}

.list-left {
    display: flex;
    padding-left: 20rpx;
}

.list-right {
    padding-right: 20rpx;
}

.left-det {
    width: 460rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    color: #666;
    font-size: 24rpx;
    position: relative;
}

.style {
    display: inline-block;
    margin-right: 20rpx;
    font-weight: 500;
}

.left-title {
    color: #222;
    font-size: 28rpx;
    line-height: 36rpx;
    margin-top: 14rpx;
}

.price {
    font-size: 30rpx;
    color: #ff7800;
    position: absolute;
    bottom: 0rpx;
}

.goodsImg {
    border: 1rpx solid #ececec;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.list-down {
    height: 80rpx;
    background-color: #fff;
    display: flex;
    justify-content: flex-end;
    padding: 0rpx 20rpx;
    align-items: center;
}

.list-down .btn {
    width: 150rpx;
    height: 56rpx;
    font-size: 26rpx;
    color: #222;
    text-align: center;
    line-height: 56rpx;
    justify-content: center;
    border: 1rpx solid #666;
    margin-left: 14rpx;
    border-radius: 4rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-right: 0rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.list-down .submit {
    color: #ff7800;
    border: 1rpx solid #ff7800;
}

._comment {
    position: absolute;
    height: 40rpx;
    padding: 0rpx 10rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    border: 1rpx solid #ff7800;
    border-radius: 23rpx;
    bottom: 0rpx;
    right: -50rpx;
    color: #FF7800;
}

.d_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.d_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
    height: 0rpx;
    transition: height 0.5s ease;
}

.payBox {
    height: 550rpx;
}

.d_title {
    height: 130rpx;
    font-size: 34rpx;
    display: flex;
    padding: 0rpx 20rpx;
    align-items: center;
    justify-content: space-between;
    border-bottom: 12rpx solid #cbcbcb;
}

.dTitle {
    width: 676rpx;
    text-align: center;
    color: #222;
}

.cancel {
    width: 34rpx;
    height: 34rpx;
}

.d_content {
    height: 420rpx;
}

.choose-pay {
    background: #fff;
}

.section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
}

.radio {
    width: 730rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 32rpx;
    color: #999;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
    padding-right: 20rpx;
}

.radio radio {
    width: 48rpx;
    height: 48rpx;
}

.radio:last-child {
    border-bottom: 0rpx solid #ececec;
}

.deta {
    display: flex;
    align-items: center;
}

.wxicon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 24rpx;
    margin-right: 20rpx;
}

.d-foot {
    border-top: 1rpx solid #acacac;
    height: 130rpx;
    padding: 20rpx 20rpx;
}

.d-foot button {
    height: 90rpx;
    background: #ff7800;
    font-size: 34rpx;
    color: #fff;
}