.order-nav {
    width: 750rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    background: #fff;
    line-height: 80rpx;
    border-top: 1rpx solid #cbcbcb;
}

.nav {
    display: inline-block;
    height: 80rpx;
    font-size: 30rpx;
    color: #666;
    font-weight: 500;
}

.order-nav view {
    width: 375rpx;
    box-sizing: border-box;
    height: 68rpx;
    margin: 6rpx 0rpx;
    text-align: center;
}

.order-nav view:first-child {
    border-right: 1rpx solid #dcdcdc;
}

.on {
    box-sizing: border-box;
    color: #ff7800;
    border-bottom: 4rpx solid #ff7800;
}

.cards {
    margin: 30rpx 20rpx 30rpx;
    font-size: 24rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(255,100,15,0.11);
    background: rgb(255,241,233);
}

.card-price {
    padding: 6rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: cneter;
    border: 1px solid rgb(255,120,0);
    color: #ff7800;
    border-bottom: 0rpx dashed rgb(255,120,0);
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    position: relative;
}

.card-price:before,.card-price:after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    border-radius: 50%;
    position: absolute;
    bottom: -12rpx;
    border: 1px solid rgb(255,120,0);
    z-index: 99;
    border-left: 1px solid transparent;
    border-bottom: 1px solid transparent;
}

.card-price:before {
    left: -10rpx;
    transform: rotate(45deg);
}

.card-price:after {
    transform: rotate(-135deg);
    right: -10rpx;
}

.card-time {
    border: 1rpx solid rgb(255,120,0);
    border-top: 1rpx dashed rgb(255,120,0);
    border-radius: 0rpx 0rpx 12rpx 12rpx;
    height: 118rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    line-height: 40rpx;
    color: #666;
}

.price {
    display: flex;
    line-height: 82rpx;
    margin-top: 20rpx;
}

.price text:nth-child(1) {
    font-size: 42rpx;
    margin-top: 20rpx;
}

.price text:nth-child(2) {
    font-size: 92rpx;
}

.right {
    width: 12rpx;
    height: 22rpx;
    margin-left: 22rpx;
}

.use {
    margin-top: 54rpx;
    font-weight: 700;
}