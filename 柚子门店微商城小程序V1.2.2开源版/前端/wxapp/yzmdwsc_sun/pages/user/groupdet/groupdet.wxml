<view class="container">
    <view>
        <view class="goods">
            <view>
                <image class="goodsImg" src="{{url}}{{groupsdetail.goodsdetail.lb_img}}"></image>
            </view>
            <view class="goodsRight">
                <view class="title">{{groupsdetail.goodsdetail.goods_name}}</view>
                <view class="price">
                    <view>拼团省{{groupsdetail.goodsdetail.lj}}元</view>
                    <view>￥{{groupsdetail.goodsdetail.pintuan_price}}</view>
                </view>
            </view>
        </view>
        <view class="guarantee">
            <view wx:for="{{guarantee}}" wx:for-item="itm">
                <image class="icon" src="../../../../style/images/icon19.png"></image>
                <text>{{itm}}</text>
            </view>
        </view>
        <view bindtap="toGrouppro" class="description">
            <view>
                <view class="descTit">拼团流程<text>（若人数不足将自动退款）</text>
                </view>
                <view class="process">
                    <view>
                        <text>1</text>支付开团/参团</view>
                    <view>
                        <text>2</text>邀请参团</view>
                    <view>
                        <text>3</text>人满成团</view>
                </view>
            </view>
            <view class="descRight">
                <text>说明</text>
                <image class="rightIcon" src="../../../../style/images/right2.png"></image>
            </view>
        </view>
        <view class="group-Pro">
            <view class="group-Process group-Proces">
                <image class="groupIcn" src="../../../../style/images/group1.png"></image>
                <text>拼单</text>
            </view>
            <view class="group-Process group-Proces">
                <image class="groupIcn" src="../../../../style/images/group2.png"></image>
                <text>邀请好友</text>
            </view>
            <view class="group-Process">
                <image class="groupIcn" src="../../../../style/images/group3.png"></image>
                <text>成团发货</text>
            </view>
        </view>
        <view class="member">
            <view class="joinuser">
                <view class="uthumb {{index<groupsdetail.user_group.num?'thumb':''}}" wx:for="{{groupsdetail.user_img}}">
                    <image src="{{item}}"></image>
                </view>
            </view>
            <button class="btn" openType="share" wx:if="{{groupsdetail.user_group.status==2}}">邀请好友参团</button>
            <button class="btn over" wx:if="{{groupsdetail.user_group.status==3}}">已失效</button>
            <button class="btn" wx:if="{{groupsdetail.user_group.status==1}}">已成团</button>
        </view>
        <view bindtap="toIndex" class="indexHome">
            <image src="../../../../style/images/indexHome.png"></image>
        </view>
    </view>
</view>
