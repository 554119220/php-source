.banner,.banner image {
    width: 750rpx;
    height: 374rpx;
}

swiper,.slide-image {
    height: 374rpx;
}

.icon {
    height: 20rpx;
    width: 20rpx;
    margin-right: 6rpx;
}

.announcement {
    display: flex;
    justify-content: flex-start;
    width: 710rpx;
    padding: 0rpx 20rpx;
    height: 72rpx;
    align-items: center;
    background: #fff;
    font-size: 24rpx;
    color: #666;
    flex-wrap: wrap;
}

.announcement>view {
    width: 236rpx;
}

.classify {
    width: 720rpx;
    padding-left: 30rpx;
    background: #fff;
    margin-top: 10rpx;
    height: 82rpx;
    white-space: nowrap;
    line-height: 82rpx;
    border-bottom: 1rpx solid #ececec;
}

.cataList {
    display: inline-block;
    padding-right: 60rpx;
    font-size: 30rpx;
    color: #999;
    font-weight: 700;
}

.on {
    color: #ff7800;
}

.newsImg {
    width: 342rpx;
    height: 342rpx;
}

.session {
    background: #fff;
    margin-top: 34rpx;
}

.news {
    display: flex;
    flex-wrap: wrap;
    padding: 34rpx 20rpx 0rpx;
    width: 710rpx;
}

.newsList {
    height: 490rpx;
    width: 342rpx;
    border: 1rpx solid #dcdcdc;
    margin-bottom: 30rpx;
}

.newsList:nth-child(odd) {
    margin-right: 18rpx;
}

.newsDet {
    margin-top: 20rpx;
    padding: 0rpx 10rpx;
    height: 128rpx;
    position: relative;
}

.newsTitle {
    font-size: 26rpx;
    line-height: 34rpx;
    width: 322rpx;
    display: -webkit-box!important;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.newsPrice {
    font-size: 26rpx;
    font-weight: 700;
    color: #ff7800;
    position: absolute;
    bottom: 20rpx;
}

.newsPrice text {
    font-size: 28rpx;
}