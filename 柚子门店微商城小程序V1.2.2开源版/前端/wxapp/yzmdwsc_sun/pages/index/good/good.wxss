.classify {
    width: 750rpx;
    height: 82rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 1rpx solid #999;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
}

.cataList {
    font-size: 30rpx;
    font-weight: 700;
    color: #999;
}

.on {
    color: #ff7800;
}

.session {
    margin: 10rpx 20rpx;
}

.list {
    margin-bottom: 50rpx;
    background: #fff;
    border-radius: 18rpx;
    box-shadow: 0 0 16rpx 0 rgba(32,32,32,0.063);
}

.listImg {
    height: 400rpx;
    width: 710rpx;
    overflow: hidden;
    position: relative;
    border-radius: 18rpx 18rpx 0rpx 0rpx;
}

.goodsImg {
    width: 710rpx;
    height: 400rpx;
    border-radius: 18rpx 18rpx 0rpx 0rpx;
}

.open {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: 150rpx;
    left: 305rpx;
    z-index: 11;
}

.listImg::after {
    content: " ";
    display: block;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    background: rgba(0,0,0,0.18);
    z-index: 1;
}

.listDown {
    padding: 0rpx 22rpx;
    border-radius: 0rpx 0rpx 18rpx 18rpx;
}

.title {
    font-size: 32rpx;
    font-weight: 700;
    line-height: 48rpx;
    margin-top: 20rpx;
}

.desc {
    width: 666rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 24rpx 0rpx 40rpx;
    font-size: 30rpx;
    color: #999;
}