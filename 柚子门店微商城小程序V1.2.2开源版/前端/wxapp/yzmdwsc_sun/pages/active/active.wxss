.banner,.banner image {
    width: 750rpx;
    height: 512rpx;
}

.dynamic {
    display: flex;
    background: #fff;
    padding: 82rpx 34rpx 30rpx 24rpx;
    margin-bottom: 20rpx;
}

.dynamicLeft,.dynamicLeft image {
    height: 84rpx;
    width: 84rpx;
    border-radius: 6rpx;
    margin-right: 30rpx;
}

.dynamicRight {
    width: 578rpx;
}

.uname {
    font-size: 32rpx;
    color: #576b95;
    font-weight: 700;
    line-height: 56rpx;
}

.cont {
    font-size: 32rpx;
    line-height: 48rpx;
}

.imgList {
    margin-top: 18rpx;
    display: flex;
    flex-wrap: wrap;
}

.singelImg {
    width: 360rpx;
    margin-bottom: 10rpx;
}

.moreImgs {
    width: 158rpx;
    height: 158rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.goods {
    background: #f3f3f5;
    height: 120rpx;
    width: 538rpx;
    display: flex;
    padding: 20rpx;
}

.goodsImg {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.goodsTitle {
    width: 398rpx;
    height: 30rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 2rpx;
}

.goodsRight {
    width: 398rpx;
}

.goodsDown {
    width: 398rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.toBuy {
    width: 180rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 34rpx;
    color: #fff;
    background: #ff7800;
    font-weight: 700;
}

.price {
    font-size: 34rpx;
    color: #ff7800;
    font-weight: 700;
}

.oldPrice {
    position: relative;
    display: inline-block;
    font-size: 26rpx;
    font-weight: 500;
    color: #999;
    margin-top: 18rpx;
}

.oldPrice::before {
    content: " ";
    display: inline-block;
    height: 2rpx;
    width: 100%;
    background: #999;
    position: absolute;
    top: 10rpx;
    transform: rotate(3deg);
}

.icon {
    width: 34rpx;
    height: 30rpx;
    padding-left: 32rpx;
    display: inline-block;
}

.times {
    font-size: 26rpx;
    color: #666;
    display: flex;
    height: 64rpx;
    align-items: center;
    justify-content: space-between;
}

.icon2 {
    width: 40rpx;
    height: 40rpx;
}

.goodMin {
    margin-right: 20rpx;
}

.comment {
    background: #f3f3f5;
    width: 578rpx;
}

.goodCont {
    display: flex;
    padding: 6rpx 20rpx 0rpx;
    border-bottom: 1rpx solid #dcdcdc;
}

.goodThumb {
    height: 40rpx;
    width: 40rpx;
    border-radius: 6rpx;
    display: inline-block;
    margin: 0rpx 10rpx 6rpx 0rpx;
}

.comm {
    padding: 20rpx;
    color: #000;
    line-height: 42rpx;
    display: flex;
    width: 538rpx;
}

.comm>view:first-child {
    word-break: break-all;
}

.commName {
    color: #97aad0;
    font-weight: 700;
}

.commSend {
    position: fixed;
    bottom: 0rpx;
    background: #fff;
    height: 160rpx;
    padding: 20rpx 10rpx 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    width: 710rpx;
}

.commSend input {
    width: 560rpx;
    min-height: 64rpx;
    padding-left: 10rpx;
    border-bottom: 2rpx solid #2bc407;
    margin-bottom: 20rpx;
}

.commSend button {
    width: 100rpx;
    height: 64rpx;
    background: #2bc407;
    font-size: 28rpx;
    color: #fff;
    line-height: 64rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-right: 0rpx;
    margin-left: 0rpx;
}

.commSend .grey {
    border: 1rpx solid #999;
    background: #fff;
    color: #666;
}

.isMask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
}

#isLogin {
    position: fixed;
    width: 480rpx;
    height: 320rpx;
    background: #fff;
    top: 30%;
    left: 85rpx;
    z-index: 1001;
    padding: 50rpx 50rpx;
}

.isLoginBtn {
    display: flex;
    justify-content: space-around;
}

.isLoginBtn button {
    background: #fff;
    width: 100%;
    height: 68repx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-right: 0rpx;
    margin-left: 0rpx;
    font-size: 28rpx;
    margin-top: 50rpx;
    color: #4bad37;
}

.loginTitle {
    font-size: 34rpx;
}

.shopImg {
    height: 80rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.shopImg>image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.isAgary {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
    margin-top: 30rpx;
}

.isAgary>text {
    margin-right: 20rpx;
}