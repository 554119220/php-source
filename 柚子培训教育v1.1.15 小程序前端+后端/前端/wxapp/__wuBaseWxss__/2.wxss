.sign-box {
    display: flex;
    flex-direction: column;
    margin: 30rpx 30rpx 60rpx;
    width: 600rpx;
    background: #fff;
    border-radius: 10rpx;
}

.sign-title {
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    text-align: center;
    font-size: 30rpx;
    color: #48bcff;
    border-bottom: 1px solid #eee;
}

.admire,.sign-admire {
    padding: 20rpx 20rpx 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #969696;
    font-size: 30rpx;
    text-align: center;
}

.sign-list {
    padding: 20rpx 20rpx 40rpx;
    display: flex;
    flex-direction: column;
    color: #969696;
    font-size: 30rpx;
}

.sign-admire text,.admire text {
    line-height: 60rpx;
}

.input-item {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    margin: 0 30rpx 20rpx;
    background: #e1e1e1;
}

.input-txt {
    width: 140rpx;
    color: #383838;
    font-size: 30rpx;
}

.input-el {
    height: 90rpx;
    line-height: 90rpx;
    flex: 1;
    color: #969696;
    font-size: 30rpx;
}

.icon {
    width: 40rpx;
    height: 40rpx;
    line-height: 34rpx;
    margin-right: 20rpx;
    text-align: center;
    border-radius: 50%;
    background: #fff;
    color: #999;
    font-size: 40rpx;
    transform: rotate(45deg);
}

.input-arrow {
    width: 20rpx;
    height: 40rpx;
    margin-right: -20rpx;
}

.input-button {
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 30rpx;
    background: #48bcff;
    font-size: 34rpx;
    color: #fff;
}

.button-hover {
    opacity: 0.8;
}