.nav-box {
    padding: 40rpx 0 40rpx 30rpx;
    background: #48bcff;
}

.nav {
    width: 700rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 10rpx 0 20rpx 20rpx;
    white-space: nowrap;
    background: linear-gradient(to right,rgba(64,179,253,1),rgba(72,188,255,0));
    border-bottom-left-radius: 50rpx;
    border-top-left-radius: 50rpx;
}

.nav-item {
    display: inline-block;
    font-size: 30rpx;
    color: #fff;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    border-radius: 35rpx;
}

.choose {
    background: #0099fd;
    border-radius: 35rpx;
}

.content {
    margin: 30rpx;
}