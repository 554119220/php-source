.wrap {
    padding-top: 30rpx;
}

.teacher {
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    border-radius: 10rpx;
}

.teacher-l {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
}

.teacher-c {
    flex: 1;
    font-size: 30rpx;
    color: #383838;
}

.teacher-c>view {
    line-height: 50rpx;
}

.teacher-c>view:last-child {
    color: #969696;
}

.teacher-r {
    margin-left: 20rpx;
}

.name {
    width: 320rpx;
}

.unlike {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
}

.red {
    background: #ff5f5f;
}

.blue {
    background: #48bcff;
}

.input-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 690rpx;
    padding-top: 70rpx;
    background: #fff;
    border-radius: 10rpx;
}

.input-el {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    background: #eee;
    text-align: center;
    font-size: 30rpx;
}

.input-user {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0 60rpx;
    width: 600rpx;
}

.input-user image {
    width: 70rpx;
    height: 70rpx;
    margin-right: 30rpx;
}

.input-user view {
    flex: 1;
    font-size: 26rpx;
    color: #333;
    margin-right: 30rpx;
}

.input-user button {
    width: 70rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
    background: #FF5F5F;
    color: #fff;
}

.input-none {
    text-align: center;
    font-size: 26rpx;
    margin-bottom: 60rpx;
}

.button-hover {
    opacity: 0.8;
}