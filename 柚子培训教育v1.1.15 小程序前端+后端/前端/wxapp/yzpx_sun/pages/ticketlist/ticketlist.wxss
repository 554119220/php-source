page {
    background: #f2f2f2;
}

.wraps {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 30rpx;
}

.ticket-item {
    width: 650rpx;
    padding: 20rpx;
    margin-bottom: 30rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
}

.item-top {
    display: flex;
    flex-direction: row;
    text-align: left;
}

.item-top>view:nth-child(1) {
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #383838;
}

.item-top>button {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 30rpx;
    background: #4FBFFF;
    color: #fff;
}

.item-time {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #969696;
    text-align: left;
}

.item-name {
    line-height: 30rpx;
    font-size: 26rpx;
    color: #48BCFF;
    text-align: right;
}

.school-box {
    position: relative;
    width: 750rpx;
    max-height: 700rpx;
    padding-top: 90rpx;
    background: #fff;
    overflow-y: scroll;
}

.school-title {
    position: absolute;
    top: 0;
    width: 690rpx;
}

.school-item,.school-title {
    padding: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #f2f2f2;
    color: #383838;
    font-size: 30rpx;
}

.school-title>view:nth-child(1) {
    display: block;
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.icon {
    position: absolute;
    top: 25rpx;
    right: 0;
    width: 40rpx;
    height: 40rpx;
    line-height: 34rpx;
    margin-right: 20rpx;
    text-align: center;
    border-radius: 50%;
    background: #ccc;
    color: #f2f2f2;
    font-size: 40rpx;
    transform: rotate(45deg);
}

.prevent {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}