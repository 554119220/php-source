@import "../components/wxParse/wxParse.wxss";

.wrap {
    padding-bottom: 120rpx;
}

.banner {
    width: 750rpx;
    height: 360rpx;
}

.msg {
    padding: 30rpx;
    background: #fff;
}

.title {
    line-height: 50rpx;
    font-size: 30rpx;
    color: #383838;
}

.time {
    font-size: 26rpx;
    color: #969696;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #f2f2f2;
}

.content {
    font-size: 26rpx;
    color: #969696;
    padding-top: 20rpx;
}

.fixed {
    position: fixed;
    top: 380rpx;
    right: 60rpx;
    z-index: 999999999;
}

.fixed-item {
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
}

.fixed-item image {
    width: 25rpx;
    height: 25rpx;
    margin-top: 10rpx;
}

.fixed-item view {
    height: 35rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    color: #fff;
}

.blue {
    background: #48bcff;
}

.red {
    background: #ff6162;
}

.button-hover {
    opacity: 0.8;
}

.produce-title {
    height: 90rpx;
    border-bottom: 1px solid #eee;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.produce-title>image {
    width: 22rpx;
    height: 30rpx;
}

.produce-title>view {
    padding: 20rpx;
    font-size: 30rpx;
    color: #48bcff;
}

.recommend {
    padding: 15rpx;
    margin: 30rpx 30rpx 0 30rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 10rpx;
}

.recommend-l {
    margin-right: 20rpx;
}

.recommend-l,.recommend-l image {
    width: 240rpx;
    height: 180rpx;
}

.recommend-r {
    position: relative;
    flex: 1;
    height: 180rpx;
}

.r-title {
    font-size: 30rpx;
    color: #383838;
}

.r-time {
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #969696;
}

.r-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.reply {
    margin: 0 30rpx 30rpx;
}

.reply-top {
    display: flex;
    flex-direction: row;
}

.top-l {
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.top-r {
    flex: 1;
}

.top-r>view:nth-child(1) {
    font-size: 26rpx;
    color: #383838;
}

.top-r>view:nth-child(2) {
    font-size: 24rpx;
    color: #969696;
}

.reply-bottom {
    padding: 10rpx 0 20rpx;
    font-size: 26rpx;
    color: #383838;
    border-bottom: 1px solid #eee;
}

.load-over {
    height: 60rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #969696;
    text-align: center;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-top: 1px solid #f2f2f2;
}

.foot-a {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.foot-a image {
    width: 30rpx;
    height: 25rpx;
    margin-bottom: 10rpx;
}

.foot-a view {
    color: #969696;
    font-size: 24rpx;
}

.foot-c {
    width: 300rpx;
    height: 80rpx;
    margin-right: 30rpx;
    background: #e1e1e1;
    padding: 0 20rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
}

.foot-btn {
    width: 100rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-right: 30rpx;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.button-hover {
    opacity: 0.8;
}