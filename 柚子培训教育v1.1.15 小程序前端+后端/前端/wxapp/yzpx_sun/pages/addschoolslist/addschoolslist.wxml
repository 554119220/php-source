<view class="wrap" wx:if="{{showPage}}">
    <view class="content">
        <view bindtap="onSchoolTab" class="shadow-blue" data-idx="{{index}}" wx:for="{{list.data}}" wx:key="{{index}}">
            <view class="groom">
                <view class="groom-l">
                    <image src="{{imgLink+item.pic}}"></image>
                </view>
                <view class="groom-r">
                    <view class="groom-r1 ellips1">{{item.name}}</view>
                    <view class="double">
                        <view class="double-l ellips1">联系电话：{{item.tel}}</view>
                        <view catchtap="onShowAddTab" class="double-r {{item.admin_uid>0?'red':'blue'}}" data-idx="{{index}}">{{item.admin_uid>0?'解绑':'绑定'}}</view>
                    </view>
                    <view class="groom-r2 ellips1">{{item.address}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
<zan-popup bind:click-overlay="closeMask" show="{{addflag}}">
    <view class="input-box">
        <input bindinput="bindUidTab" class="input-el" placeholder="请输入用户ID" value="{{finduid}}"></input>
        <view class="input-user" wx:if="{{findmsg}}">
            <image src="{{findmsg.headimg}}"></image>
            <view class="ellips1">{{findmsg.user_name+'(uid:'+findmsg.id+')'}}</view>
            <button bindtap="onbindAuthTab">确定</button>
        </view>
        <view class="input-none" wx:if="{{!findmsg}}">无此用户！</view>
    </view>
</zan-popup>
<sec-login bind:watch="onloadData" isLogin="{{login}}"></sec-login>
