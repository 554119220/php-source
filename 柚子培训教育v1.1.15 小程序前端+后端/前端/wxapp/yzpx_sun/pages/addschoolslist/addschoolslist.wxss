@import "../components/SecClassItem/SecClassItem.wxss";

.content {
    margin: 30rpx;
}

.groom-l,.groom-l image {
    width: 170rpx;
    height: 170rpx;
    border-radius: 10rpx;
}

.double {
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
}

.double-l {
    flex: 1;
    color: #969696;
}

.double-r {
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    border-radius: 10rpx;
}

.red {
    background: #ff5f5f;
}

.blue {
    background: #48bcff;
}

.input-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 690rpx;
    padding-top: 70rpx;
    background: #fff;
    border-radius: 10rpx;
}

.input-el {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    background: #eee;
    text-align: center;
    font-size: 30rpx;
}

.input-user {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0 60rpx;
    width: 600rpx;
}

.input-user image {
    width: 70rpx;
    height: 70rpx;
    margin-right: 30rpx;
}

.input-user view {
    flex: 1;
    font-size: 26rpx;
    color: #333;
    margin-right: 30rpx;
}

.input-user button {
    width: 70rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
    background: #FF5F5F;
    color: #fff;
}

.input-none {
    text-align: center;
    font-size: 26rpx;
    margin-bottom: 60rpx;
}

.button-hover {
    opacity: 0.8;
}