@import "../../../__wuBaseWxss__/2.wxss";

.nav,.nav-bottom-item {
    display: flex;
    flex-direction: column;
}

.nav-top,.nav-top-item,.nav-bottom,.summer,.summer-title {
    display: flex;
    flex-direction: row;
}

.img-item-box,.img-item-box image {
    width: 750rpx;
    height: 310rpx;
}

.content {
    padding: 0 30rpx;
}

.address {
    padding: 25rpx 30rpx;
    margin: 20rpx 0 30rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-radius: 10rpx;
    background: #fff;
}

.address-l {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-right: 30rpx;
}

.address-l view:nth-child(1) {
    font-size: 30rpx;
    color: #383838;
    text-align: left;
}

.address-l view:nth-child(2) {
    font-size: 24rpx;
    color: #969696;
    text-align: left;
}

.address-r {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.gps {
    width: 45rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.nav {
    margin-bottom: 30rpx;
    background: #fff;
    color: #383838;
    border-radius: 10rpx;
}

.nav-top {
    position: relative;
}

.nav-top::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 30rpx;
    width: 630rpx;
    height: 1px;
    background: #eee;
}

.nav-top-item {
    background: #fff;
    overflow: hidden;
    padding: 40rpx 0;
    position: relative;
    flex: 1;
    justify-content: center;
    align-items: center;
}

.nav-top-item:nth-child(1):before {
    content: '';
    position: absolute;
    right: 0;
    top: 20rpx;
    width: 1px;
    height: 100rpx;
    background: #eee;
}

.nav-top-item .gift {
    position: absolute;
    top: 0;
    right: 0;
    width: 106rpx;
    height: 106rpx;
    margin-right: 0;
}

.nav-top-item image {
    width: 65rpx;
    height: 66rpx;
    margin-right: 20rpx;
}

.nav-top-item view {
    font-size: 30rpx;
}

.nav-bottom {
    padding: 40rpx 0;
}

.nav-bottom-item {
    position: relative;
    justify-content: center;
    align-items: center;
    flex: 1;
    background: #fff;
}

.nav-bottom-item::before {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    height: 100%;
    background: #eee;
}

.nav-bottom-item:last-child::before {
    width: 0;
}

.nav-bottom-item image {
    width: 50rpx;
    height: 50rpx;
}

.nav-bottom-item view {
    font-size: 26rpx;
}

.summer {
    padding: 20rpx;
    margin-bottom: 30rpx;
    background: #fff;
    border-radius: 10rpx;
}

.summer-l {
    margin-right: 20rpx;
}

.summer-l image {
    width: 150rpx;
    height: 140rpx;
}

.summer-r {
    position: relative;
    flex: 1;
}

.summer-title {
    font-size: 30rpx;
    line-height: 70rpx;
    color: #383838;
}

.summer-title .money-icon {
    padding-left: 10rpx;
    font-size: 24rpx;
    color: #ff5f5f;
}

.summer-title .money {
    text-align: right;
    color: #ff5f5f;
    font-size: 30rpx;
}

.summer-r>view:nth-child(2) {
    font-size: 26rpx;
    line-height: 46rpx;
    color: #969696;
}

.summer-r>view:nth-child(3) {
    font-size: 24rpx;
    color: #48bcff;
}

.icon-txt {
    position: absolute;
    top: -24rpx;
    right: 0;
    line-height: 40rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    color: #fff;
    background: #48bcff;
}

.btn-summer {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.card-btn {
    position: relative;
    padding: 0;
    width: 690rpx;
    height: 200rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.card-btn image {
    width: 100%;
    height: 100%;
    background: #48bcff;
}

.btn-txt {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #fff;
}

.btn-txt>view:nth-child(1) {
    font-size: 63rpx;
}

.btn-txt>view:nth-child(2) {
    font-size: 24rpx;
    line-height: 50rpx;
}

.button-hover {
    opacity: 0.8;
}