.wrap {
    padding-bottom: 100rpx;
}

.head {
    margin: 30rpx;
    padding: 30rpx 30rpx 0 30rpx;
    background: #fff;
    border-radius: 10rpx;
}

.msg {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 30rpx;
}

.name {
    font-size: 30rpx;
    color: #383838;
    margin-bottom: 10rpx;
}

.age {
    margin-bottom: 30rpx;
    font-size: 26rpx;
    color: #969696;
}

.nav {
    height: 90rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #383838;
}

.nav-item {
    flex: 1;
    text-align: center;
}

.choose {
    color: #48bcff;
}

.content {
    margin: 0 30rpx 30rpx 30rpx;
}

.introduce {
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    font-size: 26rpx;
    color: #383838;
    background: #fff;
    border-radius: 10rpx;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 15rpx 30rpx;
    border-top: 1px solid #f2f2f2;
    background: #fff;
}

.foot button {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
    background: #48bcff;
    font-size: 34rpx;
}

.fixed {
    position: fixed;
    top: 380rpx;
    right: 60rpx;
    z-index: 999999999;
}

.fixed-item {
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
}

.fixed-item image {
    width: 25rpx;
    height: 25rpx;
    margin-top: 10rpx;
}

.fixed-item view {
    height: 35rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    color: #fff;
}

.blue {
    background: #48bcff;
}

.red {
    background: #ff6162;
}

.button-hover {
    opacity: 0.8;
}