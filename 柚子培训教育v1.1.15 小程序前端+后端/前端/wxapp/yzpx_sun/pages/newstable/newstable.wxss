.wrap {
    padding-bottom: 98rpx;
}

.nav {
    width: 750rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    white-space: nowrap;
    background: #fff;
    border-bottom: 1px solid #eee;
}

.nav-item {
    display: inline-block;
    font-size: 30rpx;
    color: #383838;
    padding: 0 30rpx;
}

.choose {
    position: relative;
    color: #48bcff;
}

.choose::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 6rpx;
    background: #48bcff;
}

.content {
    margin: 0 30rpx 30rpx 30rpx;
}

.news {
    padding: 0 30rpx 20rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 10rpx;
}

.news-title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #383838;
}

.news-content,.news-time {
    line-height: 46rpx;
    font-size: 26rpx;
    color: #969696;
}

.news-time {
    text-align: right;
}