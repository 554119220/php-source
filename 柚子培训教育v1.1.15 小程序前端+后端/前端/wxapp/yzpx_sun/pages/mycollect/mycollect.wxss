@import "../components/SecClassItem/SecClassItem.wxss";

.content {
    margin: 0 30rpx 30rpx 30rpx;
}

.nav {
    width: 750rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-bottom: 1px solid #eee;
}

.nav-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #383838;
    padding: 0 30rpx;
}

.choose {
    color: #48bcff;
}

.recommend {
    padding: 15rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 10rpx;
}

.recommend-l {
    margin-right: 20rpx;
}

.recommend-l,.recommend-l image {
    width: 240rpx;
    height: 180rpx;
}

.recommend-r {
    position: relative;
    flex: 1;
    height: 180rpx;
}

.r-title {
    font-size: 30rpx;
    color: #383838;
}

.r-time {
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #969696;
}

.r-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.button-hover {
    opacity: 0.8;
}