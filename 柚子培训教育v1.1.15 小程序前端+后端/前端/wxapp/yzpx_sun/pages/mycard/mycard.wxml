<view class="wrap">
    <view bindtap="onCardTab" class="recommend shadow-blue" data-idx="{{index}}" wx:for="{{list.data}}" wx:key="{{index}}">
        <view class="recommend-l">
            <image src="{{imgLink+item.info.img_cover}}" wx:if="{{item.info.img_cover}}"></image>
        </view>
        <view class="recommend-r">
            <view class="r-title ellips2">{{item.info.prizename}}</view>
            <view class="r-time">数量： 1件</view>
            <button class="r-btn shadow-blue">查看详情</button>
        </view>
    </view>
</view>
