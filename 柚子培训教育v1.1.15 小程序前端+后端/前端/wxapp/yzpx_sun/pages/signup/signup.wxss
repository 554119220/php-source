.sign-box {
    display: flex;
    flex-direction: column;
    margin: 30rpx 30rpx 60rpx;
    background: #fff;
    border-radius: 10rpx;
}

.sign-title {
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 30rpx;
    text-align: center;
    font-size: 30rpx;
    color: #48bcff;
    border-bottom: 1px solid #eee;
}

.input-item {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    padding: 0 30rpx;
    margin: 0 30rpx 20rpx;
    background: #e1e1e1;
}

.input-txt {
    width: 140rpx;
    color: #383838;
    font-size: 30rpx;
}

.input-el {
    height: 90rpx;
    line-height: 90rpx;
    flex: 1;
    color: #969696;
    font-size: 30rpx;
}

.sign-btn {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: #48bcff;
    border-radius: 10rpx;
    font-size: 34rpx;
    color: #fff;
}

.button-hover {
    opacity: 0.8;
}