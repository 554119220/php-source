<view class="wrap" wx:if="{{!nonePage}}">
    <form bindsubmit="onSendTab" reportSubmit="true">
        <view class="sign-box shadow-blue">
            <view class="sign-title">报名信息</view>
            <view class="input-item" wx:if="{{sid==0}}">
                <text class="input-txt">分校选择:</text>
                <picker bindchange="onChangeSchoolTab" class="input-el" range="{{schoollist}}" rangeKey="name" value="{{index}}">
                    <view class="picker">{{schoollist[schoolChoose].name}}</view>
                </picker>
            </view>
            <view class="input-item">
                <text class="input-txt">课程选择:</text>
                <picker bindchange="onChangeLessonTab" class="input-el" range="{{lesson}}" rangeKey="title" value="{{index}}">
                    <view class="picker">{{lesson[lessonChoose].title}}</view>
                </picker>
            </view>
            <view class="input-item">
                <text class="input-txt">学生姓名:</text>
                <input bindinput="getName" class="input-el" placeholder="请填写学生姓名" value="{{username}}"></input>
            </view>
            <view class="input-item">
                <text class="input-txt">联系方式:</text>
                <input bindinput="getTel" class="input-el" placeholder="请填写联系电话" type="number" value="{{tel}}"></input>
            </view>
            <view class="input-item">
                <text class="input-txt">备注信息:</text>
                <input bindinput="getRemark" class="input-el" placeholder="选填" value="{{remark}}"></input>
            </view>
        </view>
        <button class="sign-btn" formType="submit">确定提交</button>
    </form>
    <sec-footer></sec-footer>
</view>
