.nav-box {
    padding: 40rpx 0 40rpx 30rpx;
    margin-bottom: 30rpx;
    background: #48bcff;
}

.nav {
    width: 700rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 10rpx 0 20rpx 20rpx;
    white-space: nowrap;
    background: linear-gradient(to right,rgba(64,179,253,1),rgba(72,188,255,0));
    border-bottom-left-radius: 50rpx;
    border-top-left-radius: 50rpx;
}

.nav-item {
    display: inline-block;
    font-size: 30rpx;
    color: #fff;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    border-radius: 35rpx;
}

.choose {
    background: #0099fd;
    border-radius: 35rpx;
}

.teacher {
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    border-radius: 10rpx;
}

.teacher-l {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
}

.teacher-c {
    flex: 1;
    font-size: 30rpx;
    color: #383838;
}

.teacher-c>view {
    line-height: 50rpx;
    text-align: left;
}

.teacher-c>view:last-child {
    color: #969696;
}

.teacher-r {
    margin-left: 20rpx;
}

.button-hover {
    opacity: 0.8;
}