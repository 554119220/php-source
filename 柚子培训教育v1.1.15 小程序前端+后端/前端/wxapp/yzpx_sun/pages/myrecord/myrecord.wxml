<view class="wrap">
    <view bindtap="onClassTab" class="list shadow-blue" data-idx="{{index}}" wx:for="{{list.data}}" wx:key="{{index}}">
        <view class="list-top ellips1">{{item.title}}
      </view>
        <view class="list-center">开课时间： {{item.showTime}}</view>
        <view class="list-center">预约校区： {{item.school}}</view>
        <view class="list-bottom">
            <view class="name ellips1">授课老师：{{item.tecaher}}</view>
            <view class="time">{{item.createtime}}</view>
        </view>
    </view>
</view>
