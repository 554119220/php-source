.wrap {
    padding: 30rpx;
}

.nav {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-bottom: 1px solid #eee;
}

.nav-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #383838;
    padding: 0 30rpx;
}

.choose {
    color: #48bcff;
}

.recommend {
    padding: 15rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 10rpx;
}

.recommend-l {
    margin-right: 20rpx;
}

.recommend-l,.recommend-l image {
    width: 240rpx;
    height: 180rpx;
}

.recommend-r {
    position: relative;
    flex: 1;
    height: 180rpx;
}

.r-title {
    font-size: 30rpx;
    color: #383838;
}

.r-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: #969696;
}

.mail {
    padding: 30rpx;
    margin: 30rpx 0 0;
    border-radius: 10rpx;
    background: #fff;
}

.name {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mail-title {
    padding-bottom: 50rpx;
}

.mail-title,.name>view:nth-child(1) {
    line-height: 40rpx;
    font-size: 30rpx;
    color: #383838;
}

.address {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background: #fff;
}

.address-l {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.address-l view:nth-child(1) {
    line-height: 30rpx;
    text-align: left;
    font-size: 30rpx;
    color: #383838;
}

.address-l view:nth-child(2) {
    font-size: 24rpx;
    color: #969696;
    text-align: left;
}

.address-r {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.gps {
    width: 45rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
    z-index: 1;
}

.foot button {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-top: 15rpx;
    font-size: 34rpx;
    color: #fff;
    background: #48bcff;
}

.double {
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: #969696;
    font-size: 30rpx;
    background: #e1e1e1;
    margin: 20rpx 0;
    padding: 0 20rpx;
}

.input-name {
    width: 160rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #333;
}

.input-el {
    height: 80rpx;
    line-height: 80rpx;
    flex: 1;
}

.button-hover {
    opacity: 0.8;
}