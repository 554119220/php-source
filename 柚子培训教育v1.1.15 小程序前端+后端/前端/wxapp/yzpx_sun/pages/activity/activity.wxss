@import "../../../__wuBaseWxss__/2.wxss";

.banner {
    width: 750rpx;
    height: 310rpx;
}

.img-item-box,.img-item-box image {
    width: 750rpx;
    height: 310rpx;
}

.info {
    position: relative;
    width: 630rpx;
    margin: 30rpx;
    padding: 0 30rpx;
    background: #fff;
    border-radius: 10rpx;
}

.info::after,.info::before {
    content: '';
    position: absolute;
    top: 50rpx;
    width: 40rpx;
    height: 40rpx;
    background: #f2f2f2;
    border-radius: 50%;
}

.info::before {
    left: -20rpx;
}

.info::after {
    right: -20rpx;
}

.info-title {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #383838;
}

.info-center {
    line-height: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 23rpx;
    color: #969696;
    border-bottom: 1px dashed #f2f2f2;
}

.center-item {
    flex: 1;
}

.red {
    color: #ff5f5f;
}

.blue {
    color: #48bcff;
}

.black {
    color: #383838;
}

.info-bottom {
    font-size: 25rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #969696;
}

.play {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 690rpx;
    margin: 30rpx 30rpx 0 30rpx;
    padding-top: 30rpx;
    background: #fff;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.wave {
    position: absolute;
    top: -18rpx;
    left: 0;
    right: 0;
    width: 100%;
    height: 20rpx;
}

.play-title {
    font-size: 34rpx;
    color: #48bcff;
    text-align: center;
}

.play-introduce {
    width: 630rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 20rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: #48bcff;
    border-radius: 20rpx;
}

.palying {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 15rpx 0 15rpx 15rpx;
}

.palying view {
    position: relative;
    width: 135rpx;
    height: 135rpx;
    line-height: 135rpx;
    margin: 15rpx;
    font-size: 76rpx;
    font-weight: 600;
    color: #969696;
    background: #f2f2f2;
    border-radius: 10rpx;
    text-align: center;
}

.num {
    position: absolute;
    top: -15rpx;
    right: -5rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    background: #d1f2f9;
    color: #48bcff;
    font-size: 30rpx;
}

.palying .choose {
    color: #fff;
    background: #48bcff;
}

.play-btn {
    width: 630rpx;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.play-btn1 {
    width: 400rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #48bcff;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}

.play-btn2 {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #ff5f5f;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}

.play-btn3 {
    width: 630rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #ff5f5f;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}

.sw-box {
    height: 260rpx;
}

.sw-item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 120rpx;
    border-bottom: 1px dashed #f2f2f2;
}

.sw>view:last-child {
    border-bottom: 0;
}

.sw-item-l {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.sw-item-r {
    flex: 1;
}

.sw-name {
    font-size: 30rpx;
    color: #383838;
}

.sw-time {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 26rpx;
    color: #969696;
}

.sw-time>view:nth-child(1) {
    flex: 1;
}

.produce {
    padding: 0 30rpx;
    margin: 0 30rpx 30rpx 30rpx;
    background: #fff;
}

.produce-title {
    height: 90rpx;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.produce-title>image {
    width: 22rpx;
    height: 30rpx;
}

.produce-title>view {
    padding: 20rpx;
    font-size: 30rpx;
    color: #48bcff;
}

.produce-content {
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #383838;
    overflow: hidden;
}

.gift-box {
    position: relative;
    background: #fff;
    width: 600rpx;
    height: 620rpx;
    border-radius: 10rpx;
}

.light {
    width: 600rpx;
    height: 460rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.light-txt {
    position: absolute;
    top: 162rpx;
    left: 232rpx;
    width: 135rpx;
    height: 135rpx;
    line-height: 135rpx;
    text-align: center;
    font-weight: 400;
    font-size: 80rpx;
    background: #48bcff;
    color: #fff;
    border-radius: 10rpx;
}

.gift-btn {
    width: 400rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 30rpx;
    text-align: center;
    color: #fff;
    background: #48bcff;
    font-size: 30rpx;
}