@import "../../../__wuBaseWxss__/2.wxss";

.sign-box {
    padding-top: 30rpx;
    width: 690rpx;
}

.input-button {
    width: 690rpx;
}

.ticket-box {
    width: 750rpx;
    max-height: 700rpx;
    padding: 30rpx 0;
    background: #f2f2f2;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}

.ticket-item {
    margin-bottom: 20rpx;
}

.wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 30rpx;
}

.box {
    width: 630rpx;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    font-size: 26rpx;
}

.buy-title {
    line-height: 60rpx;
    font-size: 30rpx;
    color: #383838;
    text-align: center;
}

.buy-time {
    line-height: 65rpx;
    color: #969696;
    text-align: center;
}

.buy-money {
    line-height: 65rpx;
    font-size: 26rpx;
    color: #ff5f5f;
    text-align: center;
}

.buy-old {
    color: #969696;
    font-size: 26rpx;
    text-align: center;
    text-decoration: line-through;
}

.prevent {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

page {
    background: #f2f2f2;
}

.wraps {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 30rpx;
}

.ticket-item {
    width: 650rpx;
    padding: 20rpx;
    margin: 0 30rpx 30rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
}

.item-top {
    display: flex;
    flex-direction: row;
    text-align: left;
}

.item-top>view:nth-child(1) {
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #383838;
}

.item-top>button {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 30rpx;
    background: #4FBFFF;
    color: #fff;
}

.item-time {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #969696;
    text-align: left;
}

.item-name {
    line-height: 30rpx;
    font-size: 26rpx;
    color: #48BCFF;
    text-align: right;
}

.school-box {
    position: relative;
    width: 750rpx;
    max-height: 700rpx;
    padding-top: 90rpx;
    background: #fff;
    overflow-y: scroll;
}

.school-title {
    position: absolute;
    top: 0;
    width: 690rpx;
}

.school-item,.school-title {
    padding: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #f2f2f2;
    color: #383838;
    font-size: 30rpx;
}

.school-title>view:nth-child(1) {
    display: block;
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.prevent {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.cancle-ticket {
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    font-size: 30rpx;
    background: #48BCFF;
    color: #fff;
    text-align: center;
}