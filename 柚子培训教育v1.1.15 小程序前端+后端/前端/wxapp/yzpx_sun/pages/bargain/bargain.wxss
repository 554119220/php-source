@import "../../../__wuBaseWxss__/2.wxss";

@import "../components/wxParse/wxParse.wxss";

.wrap {
    padding-bottom: 120rpx;
}

.wrap .fixed {
    top: 682rpx;
}

.video {
    width: 750rpx;
    height: 400rpx;
}

.lesson-msg {
    padding: 30rpx;
    margin-bottom: 30rpx;
}

.lesson-name {
    position: relative;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #383838;
}

.lesson-name image {
    position: absolute;
    top: 4rpx;
    left: 0;
    width: 40rpx;
    height: 40rpx;
}

.lesson-time {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 26rpx;
    color: #969696;
}

.txt {
    flex: 1;
}

.tips {
    font-size: 34rpx;
    color: #ff5f5f;
}

.tips text {
    font-size: 24rpx;
}

.lesson-see {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.see-l {
    flex: 1;
}

.see-l>view {
    display: flex;
    flex-direction: row;
}

.see-l>view>image,.see-l>view>view {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-right: -10rpx;
    border-radius: 50%;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    background: #ccc;
}

.see-r {
    color: #48bcff;
    font-size: 26rpx;
}

.produce {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    background: #fff;
}

.produce-title {
    height: 90rpx;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.produce-title>image {
    width: 22rpx;
    height: 30rpx;
}

.produce-title>view {
    padding: 20rpx;
    font-size: 30rpx;
    color: #48bcff;
}

.produce-content {
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #383838;
    overflow: hidden;
}

.lesson-list view {
    line-height: 40rpx;
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #383838;
    border-bottom: 1px solid #f2f2f2;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    background: #fff;
    border-top: 1px solid #f2f2f2;
}

.foot-btn2,.foot-btn3 {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}

.foot-btn4,.foot-btn5 {
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}

.w400 {
    width: 400rpx;
}

.foot-btn6 {
    width: 400rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}

.foot-btn1 {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: centere;
    justify-content: center;
    color: #969696;
    font-size: 30rpx;
    background: #fff;
}

.foot-btn1 image {
    width: 50rpx;
    height: 50rpx;
    margin: 15rpx 20rpx 0 0;
}

.foot-btn2,.foot-btn4 {
    background: #ff5f5f;
}

.foot-btn3,.foot-btn5,.foot-btn6 {
    background: #48bcff;
}

.fixed {
    position: fixed;
    top: 380rpx;
    right: 60rpx;
    z-index: 6;
}

.fixed-item {
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
}

.fixed-item image {
    width: 25rpx;
    height: 25rpx;
    margin-top: 10rpx;
}

.fixed-item view {
    height: 35rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    color: #fff;
}

.blue {
    background: #48bcff;
}

.red {
    background: #ff6162;
}

.space {
    padding-top: 120rpx;
}

.coupon-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    background: #fff;
}

.coupon-title {
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
}

.coupon-address {
    width: 690rpx;
    line-height: 60rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #48bcff;
    text-align: center;
}

.coupon-address>view:last-child {
    margin-left: 20rpx;
}

.line {
    width: 690rpx;
    height: 1px;
    background: #f2f2f2;
    margin: 0 auto;
}

.time-box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.help-btn {
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
    background: #ff5f5f;
    color: #fff;
    border-radius: 10rpx;
}

.coupon-cut-down {
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
    margin: 20rpx 0;
    background: #ff5f5f;
    color: #fff;
    border-radius: 10rpx;
}

.coupon-cut-down>text {
    display: inline-block;
    min-width: 30rpx;
    text-align: center;
}

.coupon-user {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 40rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}

.avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.nickname {
    flex: 1;
}

.nickname text {
    margin-left: 20rpx;
    color: #ff5f5f;
}

.price-box {
    position: relative;
    padding-top: 45rpx;
    width: 690rpx;
}

.price-line {
    position: relative;
    width: 690rpx;
    height: 20rpx;
    border-radius: 10rpx;
    background: #ddd;
}

.price-hover {
    position: absolute;
    right: 0;
    top: 0;
    height: 20rpx;
    border-radius: 10rpx;
    background: #48bcff;
}

.price-num {
    position: absolute;
    top: 0;
    display: inline-block;
    min-width: 100rpx;
}

.price-num-c {
    transform: translate(-45%,0);
}

.price-num-r {
    transform: translate(-90%,0);
}

.price-num view {
    position: relative;
    z-index: 1;
    height: 45rpx;
    padding: 0 10rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.price-num image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.price-now-old {
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.price-now-old>view:first-child {
    font-size: 26rpx;
    color: #999;
}

.price-now-old>view:last-child {
    font-size: 30rpx;
    color: #ff5f5f;
}

.bargain-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 570rpx;
    padding: 30rpx;
    background: #fff;
    border-radius: 10rpx;
}

.bargain-title {
    width: 630rpx;
    text-align: center;
    font-size: 30rpx;
    color: #48BCFF;
    padding-bottom: 30rpx;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #f2f2f2;
}

.bargin-msg {
    color: #969696;
    font-size: 30rpx;
}

.bargin-msg text {
    color: #48BCFF;
}

.bargain-btn {
    margin-top: 30rpx;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background: #48bcff;
}

.button-hover {
    opacity: 0.8;
}