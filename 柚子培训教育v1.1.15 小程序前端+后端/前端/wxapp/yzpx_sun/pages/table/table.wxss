.time {
    height: 225rpx;
    background: #48bcff;
    color: #fff;
}

.data {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    font-size: 50rpx;
    font-weight: 600;
}

.day {
    display: flex;
    flex-direction: row;
}

.day-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
}

.day-item-a {
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.day-item-b {
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}

.choose {
    background: #f6f6f6;
    color: #48bcff;
}

.nav {
    height: 90rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
}

.nav>view:nth-child(1) {
    position: relative;
}

.nav>view:nth-child(1)::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 1px;
    height: 100%;
    background: #f2f2f2;
}

.nav-item {
    flex: 1;
    text-align: center;
    color: #383838;
    font-size: 30rpx;
}

.nav-choose {
    color: #48bcff;
}

.shadow-blue {
    margin: 0 30rpx 30rpx 30rpx;
}

.none {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 50rpx;
}

.none-img {
    width: 160rpx;
    height: 160rpx;
}

.none-txt {
    line-height: 106rpx;
    color: #969696;
    font-size: 26rpx;
}

.none-btn {
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    color: #fff;
    background: #48bcff;
    font-size: 30rpx;
}

.button-hover {
    opacity: 0.8;
}