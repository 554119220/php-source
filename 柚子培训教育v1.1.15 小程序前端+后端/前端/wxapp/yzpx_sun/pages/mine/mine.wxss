@import "../../../__wuBaseWxss__/2.wxss";

.head {
    display: flex;
    flex-direction: row;
    background: #48bcff;
}

.head>button {
    position: relative;
    padding: 50rpx 0;
    flex: 1;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.head>button::before {
    content: '';
    position: absolute;
    top: 20%;
    right: 0;
    width: 1px;
    height: 60%;
    background: #f2f2f2;
}

.head>button:last-child::before {
    width: 0;
}

.head>button>image {
    width: 60rpx;
    height: 60rpx;
}

.head>button>view {
    line-height: 80rpx;
}

.teacher {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    margin: 30rpx;
    padding: 30rpx;
    border-radius: 10rpx;
}

.teacher image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.teacher view {
    flex: 1;
    font-size: 30rpx;
    color: #383838;
}

.bottom {
    background: #fff;
}

.bottom>button {
    padding: 30rpx 0 10rpx;
    background: #fff;
    color: #383838;
    font-size: 26rpx;
}

.bottom-box {
    margin: 0 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.shadow-blue {
    border-radius: 10rpx;
}

.button-hover {
    opacity: 0.8;
}