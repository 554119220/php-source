.wrap {
    padding: 30rpx 30rpx 0 30rpx;
}

.groom {
    display: flex;
    flex-direction: row;
    background: #fff;
    padding: 20rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
}

.groom-l {
    width: 240rpx;
    height: 230rpx;
    margin-right: 20rpx;
}

.groom-l image {
    width: 100%;
    height: 100%;
}

.groom-r {
    position: relative;
    flex: 1;
}

.btn-groom {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.groom-r {
    flex: 1;
}

.groom-r1 {
    line-height: 70rpx;
    font-size: 30rpx;
    color: #383838;
}

.groom-r2 {
    line-height: 46rpx;
    font-size: 26rpx;
    color: #969696;
}

.groom-r3 {
    position: absolute;
    bottom: 20rpx;
    font-size: 24rpx;
    color: #48bcff;
}

.groom-r4 {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    color: #969696;
}

.r4-icon {
    font-size: 24rpx;
    color: #ff5f5f;
}

.r4-price {
    font-size: 34rpx;
    color: #ff5f5f;
    margin-right: 20rpx;
}

.icon-txt {
    position: absolute;
    top: -24rpx;
    right: 0;
    line-height: 40rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    color: #fff;
    background-size: 100% 100%;
}

.ellips1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}