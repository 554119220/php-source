<view bindtap="_onClassTab" class="groom">
    <view class="groom-l">
        <image mode="aspectFill" src="{{imgLink+listItem.img}}"></image>
    </view>
    <view class="groom-r">
        <view class="groom-r1 ellips1">{{listItem.title}}</view>
        <view class="groom-r2">开课时间：{{listItem.showtime}}</view>
        <view class="groom-r4">
            <view>最低：￥</view>
            <view>{{listItem.nowmoney}}</view>
        </view>
        <view class="groom-r3">{{listItem.signnum_xn}}人参与砍价</view>
        <image class="icon-txt" src="../../../resource/images/important.png" wx:if="{{isRecommend}}"></image>
        <button class="btn btn-groom shadow-blue">参与砍价</button>
    </view>
</view>
