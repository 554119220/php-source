.groom {
    display: flex;
    flex-direction: row;
    background: #fff;
    padding: 20rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
}

.groom-l {
    width: 240rpx;
    height: 230rpx;
    margin-right: 20rpx;
}

.groom-l image {
    width: 100%;
    height: 100%;
}

.groom-r {
    position: relative;
    flex: 1;
}

.btn-groom {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    background: #48bcff;
    color: #fff;
    font-size: 30rpx;
}

.groom-r {
    flex: 1;
}

.groom-r1 {
    line-height: 70rpx;
    font-size: 30rpx;
    color: #383838;
}

.groom-r2 {
    line-height: 46rpx;
    font-size: 26rpx;
    color: #969696;
}

.groom-r3 {
    position: absolute;
    bottom: 20rpx;
    font-size: 24rpx;
    color: #48bcff;
}

.icon-txt {
    position: absolute;
    top: -24rpx;
    right: 0;
    width: 95rpx;
    height: 30rpx;
    font-size: 24rpx;
    z-index: 1;
}

.ellips1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.shadow-blue {
    box-shadow: 0px 5px 10px 0px rgba(52,162,255,0.2);
}