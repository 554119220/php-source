.wrap {
    padding-top: 30rpx;
    margin: 0 30rpx 30rpx 30rpx;
}

.active {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.active-img {
    width: 630rpx;
    height: 320rpx;
    border-radius: 10rpx;
}

.bottom {
    position: relative;
}

.active-l {
    width: 450rpx;
}

.active-title {
    margin-top: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #383838;
}

.active-r {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #fff;
    background: #48bcff;
}

.active-bottom {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-right: 20rpx;
}

.watch {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 26rpx;
    color: #969696;
}

.watch .ellips1 {
    color: #48bcff;
}

.button-hover {
    opacity: 0.8;
}