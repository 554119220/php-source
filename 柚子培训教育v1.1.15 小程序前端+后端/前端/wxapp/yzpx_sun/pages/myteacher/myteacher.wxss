.wrap {
    padding-top: 30rpx;
}

.teacher {
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    border-radius: 10rpx;
}

.teacher-l {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
}

.teacher-c {
    flex: 1;
    font-size: 30rpx;
    color: #383838;
}

.teacher-c>view {
    line-height: 50rpx;
}

.teacher-c>view:last-child {
    color: #969696;
}

.teacher-r {
    margin-left: 20rpx;
}

.name {
    width: 320rpx;
}

.unlike {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    background: #48bcff;
    font-size: 30rpx;
}

.button-hover {
    opacity: 0.8;
}