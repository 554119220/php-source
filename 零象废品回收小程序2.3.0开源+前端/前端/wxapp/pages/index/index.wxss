.homeCard {
    height: 180rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
}

.homeCard image {
    width: 120rpx;
}

.cu-reclaim {
    height: 110rpx;
    width: 220rpx;
    position: fixed;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    margin-left: auto;
    margin-right: auto;
    border-radius: 110rpx 110rpx 0 0;
    background-color: rgba(50,186,120,1);
}

.cu-reclaims {
    background-color: rgba(50,186,120,0.5);
    height: 130rpx;
    width: 260rpx;
    position: fixed;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    margin-left: auto;
    margin-right: auto;
    border-radius: 130rpx 130rpx 0 0;
}

.cu-reclaimss {
    background-color: rgba(50,186,120,0.3);
    height: 180rpx;
    width: 360rpx;
    position: fixed;
    left: 0rpx;
    right: 0rpx;
    bottom: -20rpx;
    margin-left: auto;
    margin-right: auto;
    border-radius: 180rpx 180rpx 0 0;
    animation: one-reclaim 0.6s infinite linear;
    animation-direction: alternate;
}

@-webkit-keyframes one-reclaim {
    0% {
        opacity: 0;
        transform: scale(0.5);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes one-reclaim {
    0% {
        opacity: 0;
        transform: scale(0.5);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}