<view class="padding bg-white margin-bottom">
    <view class="flex flex-wrap">
        <view class="basis-xl text-xl text-black text-bold">{{user.nickname}}</view>
        <view class="basis-xl text-gray text-xs padding-top-sm ">申请时间：{{detail.create_time}}</view>
        <view class="fl" wx:if="{{detail.status==0}}">未处理</view>
        <view class="fl text-green" wx:if="{{detail.status==1}}">已通过</view>
        <view class="fl text-red" wx:if="{{detail.status==2}}">已驳回</view>
    </view>
</view>
<view class="padding bg-white margin-bottom">
    <view class="flex flex-wrap">
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;">
            <view class="title">会员昵称:
        <text class="text-black"> {{user.nickname}}</text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;">
            <view class="title">提现金额:
        <text class="text-black "> {{detail.money}} </text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;" wx:if="{{detail.type==1}}">
            <view class="title">提现方式:
        <text class="text-black text-content"> 支付宝</text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;" wx:else>
            <view class="title">提现方式:
        <text class="text-black text-content"> 微信提现</text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;" wx:if="{{detail.type==1}}">
            <view class="title">提现人姓名:
        <text class="text-black text-content"> {{user.ali_name}}</text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm solid-bottom" style="flex-basis: 100%;" wx:if="{{detail.type==1}}">
            <view class="title">提现账号:
        <text class="text-black text-content"> {{detail.num}}</text>
            </view>
        </view>
        <view class="basis-xl text-df padding-sm " style="flex-basis: 100%;" wx:if="{{detail.status==2}}">
            <view class="title">驳回原因:
        <text class="text-black"> {{detail.describe}}</text>
            </view>
        </view>
    </view>
</view>
<button bindtap="tongguo_botton" class="margin " style="background-color:#31b977; color:#fff" wx:if="{{detail.status==0}}">
审核通过
  <text class="text-sm" wx:if="{{detail.type==1}}">(线下打款)</text>
</button>
<button bindtap="bohui_show" class="margin " style="background-color:grey; color:#fff" wx:if="{{detail.status==0}}">
  驳回
</button>
<view class="cu-modal {{showkuang?'show':''}}">
    <view class="cu-dialog">
        <view class="cu-bar bg-white justify-end">
            <view class="content">请输入驳回原因</view>
            <view bindtap="bohui_show" class="action">
                <text class="cuIcon-close text-red"></text>
            </view>
        </view>
        <view class="padding-xl">
            <input bindinput="money_input" class="radius text-center" focus="{{showkuang}}" name="userxiephone" placeholder="请输入驳回原因" type="text"></input>
        </view>
        <view class="cu-bar bg-white justify-end">
            <view class="action">
                <button bindtap="bohui_show" class="cu-btn line-green text-green">取消</button>
                <button bindtap="bohui_botton" class="cu-btn bg-green margin-left">确定</button>
            </view>
        </view>
    </view>
</view>
