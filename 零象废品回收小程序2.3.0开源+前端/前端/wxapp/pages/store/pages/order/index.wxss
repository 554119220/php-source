.flex-wrp {
    margin-top: 0rpx;
    display: flex;
    border-bottom: 1px solid rgba(0,0,0,0.05);
    border-top: 1px solid rgba(0,0,0,0.05);
    margin-bottom: 10rpx;
}

.flex-item {
    width: 260rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 27rpx;
    color: #666;
    text-align: center;
}

.flex-item-V {
    margin: 0 auto;
    width: 300rpx;
    height: 200rpx;
}

.no-more {
    text-align: center;
    padding: 20rpx 0 40rpx 0;
}

.search-c {
    text-align: center;
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #808081;
}

.search-c text {
    color: #23b8ff;
    font-size: 25rpx;
    padding: 0 12rpx;
}

.top-g {
    z-index: 9999;
}

.top-g .tabbar {
    background-color: #23b8ff;
}

.cus-add {
    margin: 8rpx 20rpx 0 30rpx;
    font-size: 42rpx;
}

.flex-item.selected {
    border-bottom: 1px solid #23b8ff;
}

.now-buy {
    z-index: 999;
}

.solid-top::after {
    border-top: 3rpx solid rgba(0,0,0,0.1);
}