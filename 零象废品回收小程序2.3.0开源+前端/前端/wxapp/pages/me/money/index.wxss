.me {
    height: 350rpx;
    text-align: center;
    font-size: 18px;
    background: #fff;
}

.userinfo {
    position: relative;
    height: 320rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.me .animation-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.userinfo-avatar {
    overflow: hidden;
    display: block;
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    margin-top: 50rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
}

.me .animation-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.choose_view {
    padding: 0;
    margin: 0;
    width: 100%;
    background: #fff;
}

button::after {
    border: none;
}