.cont {
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 1;
    filter: blur(10rpx);
}

.wrap {
    background-color: rgba(0,0,0,0.3);
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 11;
}

.storyThumb {
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    border: 12rpx solid #ff5e5e;
    margin-top: 190rpx;
}

.sport {
    animation: sport 6s linear infinite;
}

@keyframes sport {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.storyThumb>image {
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
}

.opera {
    display: flex;
    align-items: center;
    margin-left: -34rpx;
    margin-top: 336rpx;
}

.menu>image {
    width: 57rpx;
    height: 48rpx;
}

.icn>image {
    width: 68rpx;
    height: 68rpx;
}

.leftIcn>image {
    transform: rotate(180deg);
    margin-left: 74rpx;
}

.audioOpen>image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin: 0rpx 98rpx;
}

.collect>image {
    width: 48rpx;
    height: 42rpx;
    margin-left: 54rpx;
}

.progress {
    display: flex;
    align-items: center;
    margin-top: 62rpx;
    color: #fefefe;
    font-size: 24rpx;
}

.slider {
    width: 550rpx;
    margin: 0rpx 25rpx;
}

.slider::after {
    width: 10rpx;
    height: 10rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
}

.drawer_title {
    font-size: 30rpx;
    color: #222;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-weight: 700;
    border-bottom: 1rpx solid #cbcbcb;
}

.drawer_content {
    height: 410rpx;
    overflow-y: scroll;
    padding: 0rpx 20rpx;
}

.drawer_footer {
    height: 98rpx;
    line-height: 98rpx;
    font-size: 34rpx;
    border-top: 1rpx solid #cbcbcb;
    border-bottom: 0rpx solid #cbcbcb;
}

.styorList {
    padding-left: 10rpx;
    border-bottom: 1rpx solid #ececec;
    height: 92rpx;
    display: flex;
    align-items: center;
}

.styorList>image {
    width: 80rpx;
    height: 80rpx;
    border: 2rpx solid #ff5e5e;
    border-radius: 50%;
    margin-right: 20rpx;
}