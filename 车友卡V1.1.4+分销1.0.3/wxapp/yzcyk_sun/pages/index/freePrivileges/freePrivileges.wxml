<view class="container">
    <view>
        <swiper autoplay="true" circular="true" class="swiper" duration="800" indicatorActiveColor="#ff5e5e" indicatorColor="rgba(255,255,255,.7)" indicatorDots="true" interval="3000">
            <swiper-item wx:for="{{active.imgUrls}}" wx:key="{{index}}">
                <image class="slide-image" height="374" mode="scaleToFill" src="{{item}}"></image>
            </swiper-item>
        </swiper>
        <view class="block">
            <view class="title">{{active.title}}</view>
            <view class="num">
                <text>亲子卡免费领</text>
                <text>已领：{{active.num}}份</text>
            </view>
        </view>
        <view class="list">
            <view>
                <text>活动时间</text>
                <text>{{active.starttime}}至{{active.endtime}}</text>
            </view>
            <view>
                <text>年龄限制</text>
                <text>{{active.yearlimit}}岁以上</text>
            </view>
            <view>
                <text>温馨提示</text>
                <text>{{active.remark}}</text>
            </view>
        </view>
        <view class="wrap">
            <view class="shopname">{{shop.shopname}}</view>
            <view class="shopList">
                <view>
                    <image class="icon" src="../../../../style/images/icon22.png"></image>
                    <text>营业时间：{{shop.opentime}}</text>
                </view>
            </view>
            <view bindtap="toMap" class="shopList">
                <view>
                    <image class="icon" src="../../../../style/images/icon21.png"></image>
                    <text>{{shop.address}}</text>
                </view>
                <image class="icna" src="../../../../style/images/icon24.png"></image>
            </view>
            <view bindtap="toDialog" class="shopList">
                <view>
                    <image class="icon" src="../../../../style/images/icon20.png"></image>
                    <text>{{shop.phone}}</text>
                </view>
                <image class="icna" src="../../../../style/images/icon23.png"></image>
            </view>
        </view>
        <view class="rules">
            <view class="shopname">活动须知</view>
            <view class="notes">
                <rich-text nodes="{{active.notes}}"></rich-text>
            </view>
        </view>
        <view class="session">
            <view class="sessionTit">活动详情</view>
            <view class="detail">
                <rich-text nodes="{{active.detail}}"></rich-text>
            </view>
        </view>
        <view class="fixNav">
            <view class="fixLeft">
                <button bindtap="toIndex" class="nav-list">
                    <image class="icn" src="../../../../style/images/home.png"></image>
                    <text>首页</text>
                </button>
                <button class="nav-list" openType="contact">
                    <image class="icn" src="../../../../style/images/contact.png"></image>
                    <text>客服</text>
                </button>
                <button class="nav-list" openType="share">
                    <image class="icn" src="../../../../style/images/share.png"></image>
                    <text>分享</text>
                </button>
            </view>
            <view class="fixRight">
                <view class="toGroup" wx:if="{{viptype==0&&vipType!=0}}">
                    <view>亲子卡专属</view>
                </view>
                <view class="toGroup" wx:if="{{isOver==0}}">
                    <view>已结束</view>
                </view>
                <view class="toJoin" wx:if="{{viptype==1&&vipType!=0}}">
                    <view>亲子卡专属</view>
                </view>
            </view>
        </view>
        <view class="foot"></view>
    </view>
</view>
