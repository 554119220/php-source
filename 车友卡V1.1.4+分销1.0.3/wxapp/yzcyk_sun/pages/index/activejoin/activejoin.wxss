.goods {
    background: #fff;
    padding: 20rpx;
    height: 180rpx;
    display: flex;
    margin-top: 10rpx;
}

.gimg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 12rpx;
}

.gdet {
    display: flex;
    margin-left: 20rpx;
    width: 510rpx;
    height: 180rpx;
    flex-direction: column;
    justify-content: space-between;
    font-weight: 700;
    font-size: 26rpx;
    color: #ff5e5e;
}

.gdet>view:first-child {
    font-size: 30rpx;
    color: #222;
    line-height: 42rpx;
    margin-top: 6rpx;
}

.rightIcn {
    width: 12rpx;
    height: 21rpx;
}

.babyIcon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 22rpx;
}

.baby {
    background: #fff;
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    width: 710rpx;
    padding: 0rpx 20rpx;
    justify-content: space-between;
    height: 90rpx;
}

.baby>view {
    display: flex;
    align-items: center;
    width: 680rpx;
    font-size: 26rpx;
    color: #666;
}

.baby input {
    color: #222;
}

@keyframes rowup {
    0% {
        transform: translate3d(0,0,0);
    }

    100% {
        transform: translate3d(-750rpx,0rpx,0);
        display: none;
    }
}

.list {
    width: 2250rpx;
    margin: 20rpx auto;
    position: relative;
    height: 346rpx;
    overflow: hidden;
}

.list .rowup {
    animation: 10s rowup linear infinite normal;
    position: relative;
}

.item {
    height: 346rpx;
    width: 750rpx;
}