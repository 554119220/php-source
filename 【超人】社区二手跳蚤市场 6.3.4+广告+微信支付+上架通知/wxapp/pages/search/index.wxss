.container {
    padding: 0;
}

.search-icon {
    color: #888;
}

.search-box {
    background: #eee;
    padding: 8rpx 15rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    flex: 1;
    margin-right: 10px;
}

.search-box input {
    background: transparent;
    width: 85%;
    font-size: 14px;
    padding-left: 18rpx;
    display: inline-block;
    vertical-align: middle;
}

.album-zan-col {
    margin-bottom: 15rpx;
    text-align: center;
    position: relative;
}

.item-list {
    border-top: 1px solid #eee;
}

.item-album {
    max-width: 100%;
}

.item-panel {
    padding: 5px 15px;
}

.item-footer {
    padding: 10px 15px 0;
    border-top: 1px solid #eee;
}

.play-mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 94%;
    background: rgba(0,0,0,.4);
    text-align: center;
    line-height: 180rpx;
    z-index: 22;
}

.play-mask .iconfont {
    font-size: 60rpx;
    color: #fff;
}

.itemad-cover {
    width: 50%;
}

.item-distance {
    font-size: 12px;
    color: #F60;
    position: absolute;
    top: 82rpx;
    right: 30rpx;
}

.set-top {
    border: 1px solid #f60;
    padding: 0 10rpx;
}

.like-btn {
    padding: 3px 8px;
    background: #f60;
    color: #fff;
    border-radius: 10px;
    display: inline-block;
    margin-left: 3px;
    font-size: 12px;
}