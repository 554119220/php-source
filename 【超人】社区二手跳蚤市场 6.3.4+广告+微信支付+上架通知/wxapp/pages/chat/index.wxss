.container {
    padding-bottom: 0;
    height: 100vh;
    overflow: hidden;
}

.item_wrap {
    width: 100%;
    height: 150rpx;
}

.zan-btn {
    float: right;
    padding: 10rpx 20rpx;
    color: #fff;
    background: #f40;
    font-size: 14px;
}

.list-item {
    width: 100%;
    background: #fff;
    position: relative;
    padding: 25rpx 35rpx;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}

.list-item .inline {
    vertical-align: middle;
}

.item-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    display: block;
}

.item-title {
    margin-bottom: 10rpx;
    font-size: 15px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #ff4444;
}

.message_toolbar {
    width: 100%;
    background: #fff;
    position: relative;
    z-index: 999;
}

.message-input {
    float: left;
    width: 75%;
}

.message-input .txtMessage {
    border: none;
    font-size: 14px;
    width: 84%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    display: inline-block;
    vertical-align: middle;
}

#emoj {
    font-size: 22px;
    float: right;
    margin: 18rpx 15rpx 0 0;
}

.message-btn {
    float: right;
    width: 25%;
}

.message-btn .button {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #4b0;
    color: #fff;
    font-size: 16px;
    border-radius: 0;
}

.message_list {
    padding: 20rpx;
    height: calc(100vh - 250rpx);
    overflow-y: scroll;
    background: #eee;
}

.cu-chat .cu-item {
    padding: 20rpx 0 60rpx;
}

.cu-chat .cu-item>.main .content {
    word-break: break-all;
    display: block;
}

.cu-chat .cu-item .date {
    width: calc(100% - 240rpx);
    left: 120rpx;
}

.float-left .block {
    float: left;
}

.float-right .block,.close {
    float: right;
}

.message-avatar image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.message-boxes {
    padding: 15rpx;
    background: #fff;
    font-size: 14px;
    color: #333;
    line-height: 20px;
    border: 1px solid #eee;
    max-width: 50%;
    position: relative;
    border-radius: 10rpx;
    word-break: break-all;
}

.float-left .message-boxes {
    margin-left: .5rem;
}

.float-right .message-boxes {
    margin-right: .5rem;
}

.message-boxes:before {
    content: '';
    display: block;
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
}

.float-left .message-boxes:before {
    border-right: 5px solid #fff;
    position: absolute;
    left: -5px;
    top: .5rem;
}

.float-right .message-boxes:before {
    border-left: 5px solid #fff;
    position: absolute;
    right: -5px;
    top: .5rem;
}

.message-item {
    margin-bottom: 30rpx;
}

.clearfix::after {
    content: '';
    display: block;
    height: 0;
    clear: both;
}

.item-pop {
    width: 750rpx;
    background: #fff;
    padding: 20rpx 0;
    max-height: 80vh;
    overflow-y: scroll;
}

.padding {
    padding: 0 20rpx;
}

.pop-close {
    position: fixed;
    top: 5rpx;
    right: 5rpx;
}

.item-album {
    max-width: 48%;
    height: 200rpx;
    margin: 1%;
    display: inline-block;
}

.wrapper {
    height: 300rpx;
    overflow-y: scroll;
}

.WxEmojiView {
    background-color: #eee;
    padding: 20rpx;
}

.wxPreEmoji {
    height: 50rpx;
    width: 50rpx;
    margin: 10rpx 19rpx;
    display: inline-block;
}

.box-emoji {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
}

.mask {
    z-index: 98;
}

.modal {
    z-index: 99;
}