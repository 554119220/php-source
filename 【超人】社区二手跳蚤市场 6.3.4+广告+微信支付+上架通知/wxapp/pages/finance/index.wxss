.show-box {
    background: #fff;
    text-align: center;
    padding: 50rpx 0;
    border-top: 1px solid #efeff3;
}

.money {
    font-size: 30px;
    margin-bottom: 20rpx;
}

.show-bottom {
    color: #f60;
    font-size: 14px;
}

.show-inline {
    display: inline-block;
    margin-right: 40rpx;
}

.show-inline:last-child {
    margin-right: 0;
}

.deposit-btn {
    width: 80%;
    background: #f60;
    color: #fff;
    padding: 15rpx 0;
    text-align: center;
    font-size: 16px;
    border-radius: 5px;
    margin: 20rpx auto;
}

.deposit-btn.disabled {
    background-color: #f6dd8a;
    color: rgba(255,255,255,0.6);
}