.timelong {
    height: 65rpx;
    line-height: 65rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.timelong:first-child {
    border-top: 1rpx solid #ddd;
}

.time {
    display: flex;
    text-align: center;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    margin-top: 20rpx;
}

.time-list {
    border: 1rpx solid #dddddd;
    position: relative;
    width: 22%;
    padding: 10rpx 0;
    margin-right: 3%;
}

.time-list:nth-child(4n+0) {
    margin: 0;
}

.time-list.active {
    border: 1rpx solid #ff5046;
    background: #ff5046;
    color: #fff!important;
}

.time-list.active::before {
    content: "";
    bottom: -20rpx;
    position: absolute;
    left: 50%;
    margin-left: -5rpx;
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 20rpx solid #ff5046;
}

.price {
    display: flex;
    text-align: center;
    padding: 0 30rpx;
    margin-bottom: 10rpx;
    flex-wrap: wrap;
}

.price-list {
    border: 1rpx solid #dddddd;
    position: relative;
    width: 22%;
    padding: 10rpx 0;
    margin: 10rpx 3% 0 0;
}

.price-list.active {
    border: 1rpx solid #ff5046;
    color: #ff5046!important;
}

.price-list:nth-child(4n+0) {
    margin: 10rpx 0 0 0;
}

.fix-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #ff5046;
    color: #fff;
}

.intro {
    margin: 30px;
    text-align: center;
}