.title {
    height: 128rpx;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    font-size: 30rpx;
    padding: 0 30rpx;
    line-height: 128rpx;
}

.title image {
    height: 36rpx;
    width: 36rpx;
    margin-right: 30rpx;
}

.top-img {
    width: 200rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.top {
    padding: 30rpx;
    border-bottom: 10rpx solid #f5f5f5;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    width: 100%;
}

.top_name {
    position: relative;
    overflow: hidden;
    width: 480rpx;
    margin-bottom: 50rpx;
}

.list {
    height: 86rpx;
    display: flex;
    border-bottom: 1rpx solid #ddd;
    padding: 0 30rpx;
    align-items: center;
    font-size: 28rpx;
    justify-content: space-between;
}

.list input {
    margin-left: 30rpx;
    text-align: right;
}

.list2 {
    padding: 10rpx 30rpx;
    font-size: 28rpx;
    line-height: 52rpx;
}

.btn {
    margin: 80rpx 30rpx;
}