<form bindsubmit="bindSave">
    <view class="container">
        <view class="title">
            <image src="../../../resource/images/new/shoptitle.png"></image> {{buildDrink.b_name}}</view>
        <view class="top">
            <image class="top-img flex-0-0" src="{{url}}{{buildDrink.z_imgs}}"></image>
            <view class="flex-1-1">
                <view class="eellipsis font-30 top_name">{{buildDrink.drink_name}}</view>
                <view class="font-28">价格： <text class="color_ff5046 font-32 font-w">¥ {{buildDrink.drink_price}}</text>
                </view>
            </view>
        </view>
        <view class="list">
            <text class="flex-0-0">包厢号：</text>
            <input bindinput="mleInput" class="list-input flex-1-1" name="room" placeholder="请输入您的包厢号" type="text"></input>
        </view>
        <view class="list">
            <text class="flex-0-0">联系方式：</text>
            <input bindinput="mobileInput" class="list-input flex-1-1" name="tel" placeholder="请输入您的联系方式" type="text"></input>
        </view>
        <view class="list">
            <text class="flex-0-0">买家留言：</text>
            <input class="list-input flex-1-1" name="remark" placeholder="给商家留言" type="text"></input>
        </view>
        <view class="list2">
            <view>实付金额：  <text class="color_ff5046 font-32">¥ {{buildDrink.drink_price}}</text>
            </view>
            <view>可 获 得：<text class="color_ff5046 ">{{buildDrink.integral}}积分 </text>
            </view>
        </view>
        <button class=" font-34 txt-center bg_ff5046 color_fff btn" formType="submit">提交订单</button>
    </view>
</form>
