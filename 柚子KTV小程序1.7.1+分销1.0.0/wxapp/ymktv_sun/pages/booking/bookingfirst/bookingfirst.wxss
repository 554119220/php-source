.container {
    background: #f5f5f5;
    padding-bottom: 88rpx;
}

.txt-box {
    padding: 20rpx;
    background: #fff;
    margin-bottom: 10rpx;
}

.slide-image {
    height: 400rpx;
    width: 100%;
}

.three-img {
    width: 100%;
}

.title {
    margin-bottom: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid red;
    display: inline-block;
}

.one {
    padding: 30rpx;
    line-height: 50rpx;
    margin-bottom: 10rpx;
}

.one-title {
    margin-bottom: 20rpx;
}

.fix-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #ff5046;
    color: #fff;
}

.play_box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 11;
}

.btn_wrap {
    padding: 0 30rpx 20rpx 30rpx;
}

.play-container {
    display: flex;
    padding: 0 30rpx;
    align-items: center;
}

.play-container-name {
    flex: 0 0 auto;
}

.play-container-time {
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-right: 50rpx;
    padding: 20rpx 0;
}

.play-time-msg {
    border: 1rpx solid #999999;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 8rpx;
    margin: 10rpx;
    padding: 0 10rpx;
    color: #999;
}

.play-time-msg.active {
    border: 1rpx solid #ff5046;
    color: #ff5046;
}

.play_colse_btn {
    position: absolute;
    top: 10rpx;
    right: 30rpx;
}

swiper {
    height: 400rpx;
}

.shareBtn {
    padding: 10rpx 10rpx 0 10rpx;
    position: fixed;
    right: 20rpx;
    bottom: 220rpx;
    width: 60rpx;
    height: 70rpx;
    background: rgba(254,80,71,0.8);
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    border-radius: 50%;
    line-height: 30rpx;
    z-index: 9;
}

.sharePoster {
    position: fixed;
    z-index: 11;
    left: 50%;
    top: 50%;
    width: 580rpx;
    margin: 0 0 0 -290rpx;
    background: #fff;
    transform: translateY(-50%);
}

.canvas {
    position: absolute;
    top: -3000rpx;
    z-index: 9999;
}

.previewImg {
    top: 0;
    right: 0;
    bottom: 100rpx;
    left: 0;
    z-index: 99999;
    width: 100%;
    position: fixed;
}

.preview button {
    width: 40%;
    position: absolute;
    bottom: 30rpx;
    left: 30%;
    z-index: 999;
    background: #e9472c;
    color: #fff;
}

.shareBtnbot {
    margin-left: -100rpx;
