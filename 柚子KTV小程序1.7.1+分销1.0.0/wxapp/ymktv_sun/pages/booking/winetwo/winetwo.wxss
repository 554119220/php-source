.top {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 300rpx;
    position: relative;
    border-bottom: 1rpx solid #ddd;
}

.iconCamera {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.img {
    width: 100%;
    height: 300rpx;
}

.list_wrap {
    border-bottom: 10rpx solid #f5f5f5;
    padding: 0 30rpx;
}

.list {
    display: flex;
    align-items: center;
    height: 86rpx;
    border-bottom: 1rpx solid #ddd;
}

.list_wrap .list:last-child {
    border-bottom: none;
}

.list input {
    flex: 1 1 auto;
    font-size: 28rpx;
}

.picker {
    height: 86rpx;
    line-height: 86rpx;
}

.btn {
    margin: 50rpx 30rpx;
}