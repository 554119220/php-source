<view class="container">
    <image class="imgtop" src="{{url}}{{drinkData.z_imgs}}"></image>
    <view class="box1">
        <view class="font-30 font-w">{{drinkData.drink_name}}</view>
        <view>
            <text class="font-24">价格：</text>
            <text class="font-32 color_ff5046 font-w">
                <text>¥</text> {{drinkData.drink_price}}</text>
        </view>
        <view class="color_999999 font-26 box1-list">
            <text bindtap="getPhoneNumber" class="shop"> 联系商家</text>
            <image bindtap="getPhoneNumber" class="img-phone" src="../../../resource/images/new/phone.png"></image>
        </view>
    </view>
    <view class="title font-30">详细内容</view>
    <view class="list-box">
        <rich-text nodes="{{drinkData.drink_details}}"></rich-text>
    </view>
</view>
<button bindtap="goHotyes" class="fix-bottom font-34 txt-center bg_ff5046 color_fff">
  立即购买
</button>
