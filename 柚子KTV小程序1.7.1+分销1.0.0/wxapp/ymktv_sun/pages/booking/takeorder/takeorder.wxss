.container {
    background: #f5f5f5;
}

.ordermsg {
    display: flex;
    padding: 20rpx 30rpx 0 30rpx;
}

.ordermsg-img {
    width: 200rpx;
    height: 150rpx;
    overflow: hidden;
    display: flex;
    flex: 0 0 auto;
    margin-right: 30rpx;
}

.ordermsg-img image {
    max-width: 200rpx;
}

.ordermsg-body {
    flex: 1 1 auto;
    position: relative;
}

.ordermsg-price {
    position: absolute;
    bottom: 0;
    right: 10rpx;
}

.order-id {
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 10rpx;
    padding: 0 30rpx;
}

.order-id image {
    width: 40rpx;
    vertical-align: -8rpx;
    margin-right: 10rpx;
}

.order-list {
    display: flex;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    justify-content: space-between;
    height: 65rpx;
    line-height: 65rpx;
}

.order-list input {
    flex: 1 1 auto;
    text-align: right;
    height: 65rpx;
    line-height: 65rpx;
    border: none;
}

.order-last {
    padding: 0 30rpx;
    line-height: 60rpx;
}

.btn_wrap {
    padding: 80rpx 30rpx 0 30rpx;
}