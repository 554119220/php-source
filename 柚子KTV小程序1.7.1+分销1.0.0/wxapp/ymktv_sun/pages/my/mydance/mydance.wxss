.find-list {
    display: flex;
    align-items: center;
    padding: 30rpx;
    position: relative;
}

.find-img {
    width: 98rpx;
    position: relative;
    margin-right: 30rpx;
}

.find-header {
    width: 98rpx;
    border-radius: 50%;
}

.sex {
    width: 24rpx;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    background: #fff;
    border-radius: 50%;
}

.list-attention {
    border: 1rpx solid #ff5046;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    background: #fff;
    margin: 0 0 0 30rpx;
}

.list-attention.no {
    border: 1rpx solid #999999;
    color: #999!important;
}

.list-img1 {
    width: 220rpx;
    height: 220rpx;
    margin-right: 10rpx;
}

.list-img2 {
    width: 220rpx;
    height: 220rpx;
    margin-right: 20rpx;
}

.list-body {
    padding: 0 30rpx 30rpx 30rpx;
    position: relative;
    border-bottom: 10rpx solid #f5f5f5;
}

.list-msg {
    position: relative;
    overflow: hidden;
    height: 90rpx;
    padding: 0 200rpx;
}

.list-bootom {
    margin-top: 30rpx;
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    align-items: center;
    padding: 0 60rpx;
    justify-content: space-between;
}

.list-bootom image {
    width: 36rpx;
    margin-right: 12rpx;
}

.eellipsis-2 {
    line-height: 44rpx;
}

.close_box {
    position: absolute;
    top: 2rpx;
    right: 0;
    z-index: 2;
}