.balance {
    position: relative;
    height: 355rpx;
    border-top: 1rpx solid #ddd;
    border-bottom: 10rpx solid #f5f5f5;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    line-height: 60rpx;
}

.balance_detail {
    line-height: 28rpx;
    position: absolute;
    top: 0;
    right: 0;
    padding: 30rpx 30rpx 0 0;
}

.balance image {
    width: 200rpx;
    height: 170rpx;
}

.title {
    height: 90rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    font-size: 30rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #ddd;
}

.title image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.font-48 {
    font-size: 48rpx;
}

.font-72 {
    font-size: 72rpx;
}

.list {
    width: 600rpx;
    height: 180rpx;
    border: 1rpx solid #fe5e02;
    display: flex;
    align-items: center;
    margin: 40rpx auto;
}

.list_left {
    flex: 0 0 auto;
    width: 240rpx;
    text-align: center;
}

.list_right {
    height: 180rpx;
    flex: 1 1 auto;
    text-align: center;
    background: #fe5e02;
}

.list-txt {
    height: 96rpx;
    line-height: 96rpx;
    color: #fff;
}

.list button {
    background: #fff;
    width: 160rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    padding: 0;
}

.margin-left-30 {
    margin-left: 30rpx;
}

.fix_bottom_img {
    width: 100%;
    bottom: 0;
    position: fixed;
    left: 0;
    right: 0;
    z-index: -1;
}

.btn {
    background: #ff5046;
    color: #fff;
    border-radius: 20rpx;
    margin: 40rpx 70rpx 40rpx 70rpx;
}