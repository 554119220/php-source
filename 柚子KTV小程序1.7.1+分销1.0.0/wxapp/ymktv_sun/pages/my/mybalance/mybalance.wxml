<view class="container">
    <view class="balance flex-center">
        <image src="../../../resource/images/my/bigbalance.png"></image>
        <view class="font-30">余额</view>
        <view class="font-w font-36">¥ {{balance}}</view>
        <view bindtap="gobalancedetail" class="font-28 balance_detail">余额明细 >></view>
    </view>
    <view class="title">
        <image src="../../../resource/images/my/balance.png"></image>普通充值  <text class="font-28 color_999999 margin-left-30">会员充值请到入会首页充值更优惠</text>
    </view>
    <view>
        <view>
            <button bindtap="goVipthree" class="btn" style="position:relative;" wx:if="{{iscun==0}}">
                <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                    <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
                </form>
      充值
    </button>
        </view>
        <view class="list" wx:if="{{iscun!=0}}" wx:for="{{list}}">
            <view class="color_ff5046 list_left">
                <text class="font-48">¥</text>
                <text class="font-72">{{item.recharge}}</text>
            </view>
            <view class=" list_right">
                <view class="list-txt">充{{item.recharge}}送{{item.youhui}}</view>
                <button bindtap="goVipthree" class="color_ff5046" data-index="{{index}}">立即充值</button>
            </view>
        </view>
    </view>
</view>
<image class="fix_bottom_img" mode="widthFix" src="http://bmvqgd.img48.wal8.com/img48/17288183_20180408105809/152999711934.png"></image>
