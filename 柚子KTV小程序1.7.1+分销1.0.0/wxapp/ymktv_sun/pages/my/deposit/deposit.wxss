.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    border-bottom: 1rpx solid #ddd;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 2;
}

.nav>view {
    width: 33.3%;
    justify-content: center;
    display: flex;
    align-items: center;
}

.nav>view>view {
    border-bottom: 1rpx solid #fff;
}

.nav>view.color_ff5046>view {
    height: 89rpx;
    line-height: 89rpx;
    border-bottom: 1rpx solid #ff5046;
    position: relative;
}

.container {
    margin-top: 90rpx;
}

.warn {
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.listTop {
    padding: 10rpx 0;
    border-bottom: 1rpx solid #ddd;
}

.listTop>view {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    padding: 0 30rpx;
    height: 60rpx;
    align-items: center;
}

.btn1 {
    font-size: 28rpx;
    color: #fe5e02;
    background: none;
    padding: 0;
    margin: 0;
}

.btn2 {
    color: #fff;
    background: #ff5046;
    font-size: 32rpx;
    height: 50rpx;
    line-height: 50rpx;
    width: 150rpx;
    margin: 0;
    padding: 0;
}

.btn3 {
    color: #999;
    font-size: 28rpx;
    margin: 0;
    background: none;
    padding: 0;
}

.listBottom {
    display: flex;
    padding: 30rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #ddd;
    line-height: 50rpx;
    align-items: center;
}

.listBottom image {
    flex: 0 0 auto;
    width: 145rpx;
    height: 145rpx;
    margin-right: 30rpx;
}

.listBody {
    width: 500rpx;
}

.play_box {
    width: 500rpx;
    height: 360rpx;
    background: #fff;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 11;
    font-size: 28rpx;
    padding: 0 30rpx 30rpx;
    box-sizing: border-box;
}

.play_box-list {
    height: 80rpx;
    display: flex;
    align-items: center;
}

.play_box-list input {
    font-size: 28rpx;
    margin-right: 20rpx;
}

.play_box textarea {
    width: 100%;
    height: 120rpx;
    background: #f5f5f5;
    border-radius: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.btn4 {
    margin: 36rpx auto;
    padding: 0;
    width: 360rpx;
}