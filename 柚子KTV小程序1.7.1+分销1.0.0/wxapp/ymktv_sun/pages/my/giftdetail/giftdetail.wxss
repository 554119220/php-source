.container {
    background: #f5f5f5;
}

.detail {
    padding: 20rpx 0;
    background: #fff;
    margin-bottom: 10rpx;
}

.detail-title {
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid red;
    display: inline-block;
    margin: 0 30rpx 30rpx 30rpx;
}

.play_box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 11;
}

.btn_wrap {
    padding: 150rpx 30rpx 150rpx 30rpx;
}

.play-container {
    padding: 0;
    align-items: center;
}

.colose-style {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-right: 50rpx;
    padding: 0 44rpx;
}

.play-time-msg {
    border: 1rpx solid #999999;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 8rpx;
    margin: 10rpx;
    padding: 0 10rpx;
    color: #999;
}

.play-time-msg.active {
    border: 1rpx solid #ff5046;
    color: #fff;
    background: #ff5046;
}

.play_colse_btn {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    z-index: 12;
}

.msg {
    display: flex;
    align-items: center;
    padding: 30rpx;
    line-height: 55rpx;
}

.msg-title {
    line-height: 44rpx;
}

.msg-btn {
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0;
    border-radius: 60rpx;
    margin: 0 0 10rpx 0;
}

.msg_input {
    border-bottom: 1rpx solid #999;
}

.list {
    display: flex;
    padding: 20rpx 86rpx 20rpx 20rpx;
    position: relative;
    border-bottom: 1rpx solid #ddd;
}

.list-img {
    width: 130rpx;
    height: 130rpx;
    flex: 0 0 auto;
    margin-right: 50rpx;
    margin-left: 30rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #ddd;
}

.list-img image {
    max-width: 150rpx;
}

.flex-1-1 {
    position: relative;
}

.list-body {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    line-height: 46rpx;
    align-items: center;
}

.play_title {
    padding: 0 50rpx;
    height: 64rpx;
    line-height: 64rpx;
}