.title {
    height: 64rpx;
    border-bottom: 1rpx solid #ddd;
    font-size: 30rpx;
    padding: 0 30rpx;
    line-height: 64rpx;
}

.title image {
    height: 36rpx;
    width: 36rpx;
    margin-right: 20rpx;
}

.order-nav {
    height: 86rpx;
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    align-items: center;
}

.nav {
    text-align: center;
    position: relative;
    width: 33.3%;
    height: 24rpx;
    line-height: 24rpx;
    border-left: 2rpx solid #ddd;
}

.nav:first-child {
    border: none;
}

.order-list {
    display: flex;
    padding: 30rpx;
    position: relative;
    overflow: hidden;
}

.order-list-img {
    width: 150rpx;
    height: 150rpx;
    flex: 0 0 auto;
    margin-right: 30rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #ddd;
}

.order-list-img image {
    max-width: 150rpx;
}

.flex-1-1 {
    position: relative;
    overflow: hidden;
}

.order-list-body {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    line-height: 40rpx;
    align-items: center;
}

.order-btn {
    width: 120rpx;
    height: 50rpx;
    padding: 0;
    margin: 0 0 0 30rpx;
    line-height: 50rpx;
}

.list-num {
    height: 64rpx;
    line-height: 64rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    align-items: center;
}

.list-delete {
    height: 76rpx;
    display: flex;
    justify-content: flex-end;
    padding: 0 30rpx;
    align-items: center;
    border-bottom: 10rpx solid #f5f5f5;
}

.list-delete image {
    width: 28rpx;
}

.dis_flex {
    align-items: center;
}