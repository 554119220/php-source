<view class="container">
    <view class="list font-26">
        <text class="color_999999 flex-0-0">请填写收货地址：</text>
        <input class=" flex-1-1" type="text"></input>
    </view>
    <view class="list font-26">
        <text class="color_999999 flex-0-0">姓名：</text>
        <input class=" flex-1-1" type="text"></input>
    </view>
    <view class="list font-26">
        <text class="color_999999 flex-0-0">电话：</text>
        <input class=" flex-1-1" type="text"></input>
    </view>
    <view class="order-list">
        <view class="order-list-img">
            <image mode="widthFix" src="https://p1.meituan.net/movie/45f98822bd15082ae3932b6108b17a01265779.jpg"></image>
        </view>
        <view class="flex-1-1">
            <view class="font-26 eellipsis-2">{{title}}</view>
            <view class="order-list-body font-26">
                <view class="color_999999">米红色水晶草</view>
                <view class="color_999999">×1</view>
                <view>积分 <text class="color_ff5046">500</text>
                </view>
            </view>
        </view>
    </view>
    <view class="list font-26">
        <text class="color_999999 flex-0-0">订单编号：20171228</text>
    </view>
    <view class="fix-bottom font-32">
        <view class="flex-1-1 txt-center">合计：<text class="color_fc4463">500积分</text>
        </view>
        <view bindtap="showplay" class="flex-0-0 fix-bottom-btn color_fff">提交订单</view>
    </view>
</view>
<view class="  {{showplay==0?'dis_hide':'dis_show'}}">
    <view class="mask"></view>
    <view class="play_box bg_fff">
        <icon bindtap="closeplay" class="play_colse_btn" size="28" type="cancel"></icon>
        <view class="txt-center">
            <icon color="#fe5047" size="80" type="success"></icon>
        </view>
        <view class="txt-center font-26 paly_txt">
      订单支付成功
    </view>
        <view class="btn_wrap bg_fff">
            <button bindtap="goIndex" class="font-34 bg_ff5046 color_fff">返回首页</button>
        </view>
    </view>
</view>
