<form bindsubmit="bindSave" reportSubmit="true">
    <view class="container">
        <view class="ordermsg bg_fff" wx:for="{{payData}}">
            <image class="ordermsg-img" mode="aspectFill" src="{{url}}{{item.z_imgs}}"></image>
            <view class="ordermsg-body">
                <view class="title font-26 eellipsis-2">{{item.drink_name}}</view>
                <view class="ordermsg-price font-24">
                    <view>价格：<text class="font-32 color_ff5046">¥ {{item.drink_price}}</text>
                    </view>
                    <view class="flex-0-0 num-box" style="border:none">
            X <text>{{item.num}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="textarea-box">
            <textarea class="font-28" placeholder="买家留言"></textarea>
        </view>
        <view class="order-list bg_fff font-28">
            <view class="w_200 flex-0-0">房号：</view>
            <input class="flex-1-1" name="roomnum" placeholder="必填" type="text"></input>
        </view>
        <view class="order-list bg_fff font-28">
            <view class="w_200 flex-0-0">电话：</view>
            <input class="flex-1-1" name="mobile" type="text"></input>
        </view>
        <view class="order-list bg_fff font-28">
            <view class="w_200 flex-0-0">总额：￥{{allprice}}</view>
            <view></view>
        </view>
        <radio-group bindchange="radioChange" class="radio-group" name="payType">
            <label class="order-list bg_fff font-28" wx:for="{{items}}">
                <text class="flex-1-1">{{item.value}}</text>
                <radio checked="{{item.checked}}" class="flex-0-0" color="#ff5046" value="{{item.name}}"></radio>
            </label>
        </radio-group>
        <view class="bg_fff order-last font-26">
    可获得<text class="color_fc4463">积分{{integral}}</text>
        </view>
    </view>
    <view class="fix-bottom">
        <view class="font-26 flex-1-1 txt-center">实付总额<text class="color_ff5046 font-32">¥{{allprice}}</text>
        </view>
        <button class="fix-bottom-btn  flex-0-0 bg_ff5046 color_fff font-32" formType="submit" style="position:relative;">
            <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
            </form>
      立即支付
    </button>
    </view>
</form>
<login bindtogetuserinfo="updateUserInfo" modalHidden="{{is_modal_Hidden}}"></login>
