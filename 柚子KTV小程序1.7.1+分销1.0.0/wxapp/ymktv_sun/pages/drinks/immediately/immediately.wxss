.container {
    border-top: 1rpx solid #ddd;
    padding-bottom: 96rpx;
}

.ordermsg {
    display: flex;
    padding: 20rpx 30rpx 20rpx 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.ordermsg-img {
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    display: flex;
    flex: 0 0 auto;
    margin-right: 30rpx;
    border-radius: 10rpx;
}

.ordermsg-img image {
    max-width: 200rpx;
}

.ordermsg-body {
    flex: 1 1 auto;
    position: relative;
}

.ordermsg-price {
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
}

.order-id {
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 10rpx;
    padding: 0 30rpx;
}

.order-id image {
    width: 40rpx;
    vertical-align: -8rpx;
    margin-right: 10rpx;
}

.order-list {
    display: flex;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    height: 80rpx;
    line-height: 80rpx;
}

.order-list input {
    flex: 1 1 auto;
    text-align: right;
    height: 65rpx;
    line-height: 65rpx;
    border: none;
}

.order-last {
    padding: 0 30rpx;
    line-height: 60rpx;
}

.btn_wrap {
    padding: 80rpx 30rpx 0 30rpx;
}

.num-box {
    display: flex;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.num-box-munus {
    width: 38rpx;
    border-right: 1rpx solid #ddd;
    text-align: center;
    line-height: 35rpx;
}

.num-box-add {
    width: 38rpx;
    border-left: 1rpx solid #ddd;
    text-align: center;
    line-height: 46rpx;
}

.num-input {
    text-align: center;
}

.textarea-box {
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
    height: 140rpx;
    background: #fff;
}

.textarea-box textarea {
    background: #f5f5f5;
    height: 100rpx;
    padding: 20rpx;
    width: 670rpx;
    margin: 0 auto;
}

.fix-bottom {
    height: 88rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #f5f5f5;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.fix-bottom-btn {
    width: 508rpx;
    border-radius: 0;
    height: 88rpx;
    line-height: 88rpx;
}