<view class="container">
    <view class="dijiang">
        <view class="list" wx:for="{{goods}}" wx:key=" ">
            <image bindtap="choosecheck" class="list-icon flex-0-0" data-index="{{index}}" mode="widthFix" src="{{item.status==1?'../../../../ymktv_sun/resource/images/drink/choose1.png':'../../../../ymktv_sun/resource/images/drink/choose.png'}}"></image>
            <image class="list-img flex-0-0" mode="aspectFill" src="{{url}}{{item.z_imgs}}"></image>
            <view class="flex-1-1 list-body">
                <view class="list-title eellipsis font-28">{{item.drink_name}}</view>
                <view class=" lixt-num font-26">
                    <text class="color_999999  ">数量：</text>
                    <view class=" num-box">
                        <view bindtap="subbnum" class="flex-0-0 num-box-munus" data-crid="{{item.crid}}" data-index="{{index}}" style="position:relative;">
                            <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                                <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
                            </form>
                            <image mode="widthFix" src="../../../../ymktv_sun/resource/images/drink/minus.png" style="width:21rpx;"></image>
                        </view>
                        <input class="flex-1-1 num-input " data-index="{{index}}" type="text" value="{{item.numvalue}}"></input>
                        <view bindtap="addnum" class="flex-0-0 num-box-add" data-crid="{{item.crid}}" data-index="{{index}}" style="position:relative;">
                            <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                                <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
                            </form>
                            <image mode="widthFix" src="../../../../ymktv_sun/resource/images/drink/add.png" style="width:21rpx;"></image>
                        </view>
                    </view>
                </view>
                <view class="font-32 color_ff5046">¥ {{item.drink_price}}</view>
            </view>
            <icon bindtap="closeitem" class="list-close-btn" color="#999999" data-crid="{{item.crid}}" data-index="{{index}}" size="20" style="position:relative;" type="cancel">
                <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                    <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
                </form>
            </icon>
        </view>
    </view>
</view>
<view class="fix-box font-26">
    <view class="flex-1-1">
        <image bindtap="taollchose" class="list-icon flex-0-0" mode="widthFix" src="{{state==1?'../../../../ymktv_sun/resource/images/drink/choose1.png':'../../../../ymktv_sun/resource/images/drink/choose.png'}}" style="vertical-align:-5rpx"></image>
        <text class="margin-0-20">全选</text>
    合计：<text class="color_ff5046">¥ {{tools.fixTo(total)}}</text>
    </view>
    <button bindtap="goImmediately" class="fix-box-btn bg_ff5046 font-32 flex-0-0 color_fff" data-bid="{{bid}}" data-ids="{{ids}}">
        <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
            <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
        </form>
  
    去付款
  </button>
</view>
<view class="gobackindex">
    <navigator openType="redirect" style="position:relative;" url="/ymktv_sun/pages/booking/index/index">
        <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
            <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10"></button>
        </form>
        <image src="/ymktv_sun/resource/images/home2.png"></image>
    </navigator>
</view>
<wxs module="tools" src="../../../../zhy/wxs/zhy.wxs" />