.container {
    padding-bottom: 150rpx;
}

.nav-wrap {
    border-top: 1rpx solid #ddd;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.order-nav {
    height: 86rpx;
    display: flex;
    align-items: center;
}

swiper {
    height: 350rpx;
}

.slide-image {
    width: 100%;
    height: 350rpx;
}

.nav {
    text-align: center;
    position: relative;
    width: 160rpx;
    height: 30rpx;
    line-height: 24rpx;
    border-left: 2rpx solid #ddd;
    flex: 0 0 auto;
}

.nav:first-child {
    border: none;
}

.nav.active .nav-list {
    color: #fff;
    background: #ff5046;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    width: 140rpx;
    margin: -10rpx auto 0 auto;
}

.goods {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 40rpx;
}

.goods_list {
    width: 320rpx;
    margin-top: 20rpx;
    line-height: 44rpx;
}

.goods_list-img {
    width: 320rpx;
    height: 200rpx;
}

.gwc {
    display: flex;
    justify-content: space-between;
    position: relative;
}

.gwc_img {
    margin-right: 20rpx;
    position: absolute;
    z-index: 99;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.shareBtn {
    padding: 10rpx 10rpx 10rpx 10rpx;
    position: fixed;
    right: 20rpx;
    bottom: 120rpx;
    width: 60rpx;
    height: 60rpx;
    background: rgba(124,122,122,0.226);
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    border-radius: 50%;
    line-height: 60rpx;
    z-index: 9;
    display: flex;
    justify-content: center;
    align-items: center;
}