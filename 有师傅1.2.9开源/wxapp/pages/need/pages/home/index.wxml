<form bindsubmit="formSubmit" class="" reportSubmit="true">
    <card class="case">
        <item class="shadow">
            <form-group>
                <view class="title">服务类型</view>
                <picker bindchange="bindChange" range="{{type}}" rangeKey="{{type[index]}}" value="{{type[index]}}">
                    <view class="picker">
            {{type[type_index]?type[type_index]:type_value}}
          </view>
                </picker>
            </form-group>
            <form-group class="">
                <view class="title">联系人</view>
                <input class="radius" name="name" placeholder=""></input>
            </form-group>
            <form-group class="">
                <view class="title">联系方式</view>
                <input class="radius" name="phone" placeholder="" value="{{phone}}"></input>
                <button bindgetphonenumber="getPhoneNumber" class="line-blue sm" openType="getPhoneNumber">获取电话</button>
            </form-group>
            <form-group>
                <view class="title">上门地址</view>
                <input class="radius" disabled="true" name="address" placeholder="" value="{{address}}"></input>
                <button bindtap="tomap" class="line-blue sm">获取地址</button>
            </form-group>
            <form-group>
                <view class="title">详细地址</view>
                <input class="radius" name="address_detail" placeholder=""></input>
            </form-group>
            <form-group>
                <view class="title">上门时间</view>
                <date-selector beginTime="{{beginTime}}" bind:datechange="datechange" endTime="{{endTime}}" id="dateSelector" selectTime="{{selectTime}}">
                    <view class="picker" name="go_time">{{ca.strHandle(selectTime)}}</view>
                </date-selector>
            </form-group>
            <form-group class="cu-form-group top">
                <view class="title">详细描述</view>
                <textarea maxlength="-1" name="remark" placeholder="请描述您的具体情况或特殊要求,以便更好的为您服务" placeholderClass="placeholder"></textarea>
            </form-group>
        </item>
    </card>
    <card class="case">
        <item class="shadow">
            <view class=" margin">
                <view class="grid col-3 grid-square flex-sub">
                    <view class="padding-xs bg-img" style="background-image:url({{item.all}});" wx:for="{{imgList}}" wx:key="{{index}}">
                        <view bindtap="deleteImg" class="cu-tag bg-red" data-id="{{index}}">
                            <text class="icon-close"></text>
                        </view>
                    </view>
                    <view bindtap="uplaod" class="padding-xs solids" wx:if="{{imgList.length<6}}">
                        <text class="icon-cameraadd" wx:if="{{loading}}"></text>
                        <text class="icon-loading2 iconfont-spin" wx:else></text>
                    </view>
                </view>
            </view>
        </item>
    </card>
    <view class="padding flex flex-direction" wx:if="{{price>0}}">
        <button class="bg-cyan lg" formType="submit">（{{price}}元）预约</button>
    </view>
    <view class="padding flex flex-direction" wx:else>
        <button class="bg-cyan lg" formType="submit">预约</button>
    </view>
</form>
<view class="padding " wx:if="{{tip}}">
    <text class="text-left text-grey" style="line-height:1.2em">{{tip}}</text>
</view>
<view class="cu-modal {{userblack=='1'?'show':''}}">
    <view class="cu-dialog">
        <view class="cu-bar bg-white justify-end">
            <view class="content">你的账号已被封号</view>
            <view bindtap="hideModal" class="action"></view>
        </view>
        <view class="padding-xl">
            <view>到期时间：{{userblack_info.black_time}}</view>
            <view>封号原因：{{userblack_info.reject}}</view>
        </view>
    </view>
</view>
<import src="/pages/template/login.wxml"></import>
<template is="login" data="{{isShow:isShow}}"></template>
<wxs module="ca" src="index.wxs" />