<view class="me shadow-blur">
    <view class="userinfo">
        <view class="cu-avatar xl round margin-top-xl margin-bottom" style="background-image:url({{detail.logo}});"></view>
        <view>{{detail.name}}</view>
    </view>
</view>
<list class="menu no-padding margin-tb  margin-bottom-xl">
    <item class="arrow" wx:for="{{list}}">
        <view bindtap="rich" class="content" data-id="{{item.id}}">
            <icon class="icon-question text-cyan"></icon>
            <text class="text-grey">{{item.title}}</text>
        </view>
        <view class="action"></view>
    </item>
</list>
