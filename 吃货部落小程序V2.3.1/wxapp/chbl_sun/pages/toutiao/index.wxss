page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    width: 750rpx;
}

.toutiaoItem {
    display: flex;
    align-items: center;
    height: 210rpx;
    background-color: #fff;
    width: 750rpx;
    margin-top: 20rpx;
}

.shotImg {
    width: 150rpx;
    height: 150rpx;
    margin-left: 30rpx;
}

.rightWord {
    width: 515rpx;
    height: 150rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    position: relative;
}

.newsTitle {
    color: #999;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.newsTitle {
    color: #000;
    font-size: 30rpx;
}

.newsContent {
    color: #999;
    font-size: 28rpx;
    margin-top: 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

rich-text {
    height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.newsDate {
    font-size: 26rpx;
    color: #999;
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
}