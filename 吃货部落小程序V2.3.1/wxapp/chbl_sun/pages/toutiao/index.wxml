<view class="container">
    <view bindtap="goDetails" class="toutiaoItem" data-lid="{{item.id}}" wx:for="{{toutiao}}">
        <image class="shotImg" mode="center" src="{{url}}{{item.imgs}}"></image>
        <view class="rightWord">
            <view class="newsTitle">{{item.title}}</view>
            <view class="newsContent">
                <view>{{item.jianjie}}</view>
            </view>
            <view class="newsDate">{{item.time}}</view>
        </view>
    </view>
</view>
