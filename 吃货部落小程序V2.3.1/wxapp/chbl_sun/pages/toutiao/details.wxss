page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    background-color: #fff;
    width: 750rpx;
    margin-top: 20rpx;
}

.bodyWrap {
    width: 100%;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bodyMes {
    width: 690rpx;
}

.bodyPic {
    width: 690rpx;
    height: 425rpx;
    display: flex;
    margin: 30rpx 0rpx;
}

.bodyWord {
    color: #666;
    font-size: 26rpx;
    margin-bottom: 30rpx;
}

.artMes {
    width: 690rpx;
    display: flex;
    flex-direction: column;
}

.artTitle {
    color: #000;
    font-size: 30rpx;
    margin-top: 40rpx;
    word-break: break-all;
}

.artDate {
    color: #999;
    font-size: 26rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.visitorRow {
    height: 105rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.visitorsImg {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    margin-left: -15rpx;
}

.lastRow {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-bottom: 1rpx solid #eee;
}

.moreVisitors {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    justify-content: space-around;
    font-weight: bold;
    color: #fff;
    font-size: 30rpx;
    margin-left: -15rpx;
    border-radius: 100%;
    background-color: #cfcfcf;
}

.zanNum {
    color: #999;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.zanPic {
    width: 90rpx;
    height: 90rpx;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
}

rich-text {
    width: 750rpx;
    word-break: break-all;
}

rich-text p {
    width: 750rpx;
}