page {
    background-color: #fff;
}

.header_box {
    padding: 30rpx 30rpx 20rpx;
    background-color: #ffb826;
    color: #fff;
}

.user-mes {
    display: -webkit-flex;
    justify-content: space-between;
    flex: 1 1 auto;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 750rpx;
    font-size: 32rpx;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 30rpx;
    color: #fff;
    margin: 0rpx 20rpx;
}

.people_num {
    min-width: 120rpx;
    height: 50rpx;
    border-radius: 10rpx;
    background-color: rgba(255,255,255,.5);
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
}

.had-yhq-box {
    display: -webkit-flex;
    margin: 40rpx 0rpx 0rpx 0rpx;
    text-align: center;
    font-size: 26rpx;
}

.yhq_box {
    width: 50%;
}

.yhq_box:nth-child(2) {
    border-left: 1rpx solid #fff;
}

.num {
    font-size: 36rpx;
    margin: 0rpx 0rpx 10rpx 0rpx;
}

.footer_box {
    background-color: #fff;
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    background-color: #fff;
}

.status-box {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    display: -webkit-box;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    width: 50%;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.status_label.active {
    border-bottom: 4rpx solid #ce0000;
}

.shops_item {
    padding: 30rpx 30rpx 20rpx;
    background-color: #fff;
    font-size: 26rpx;
    color: #999;
}

.goodsImg_box {
    width: 210rpx;
    height: 200rpx;
}

.goodsImg {
    width: 210rpx;
    height: 200rpx;
    display: flex;
}

.right_box {
    width: 450rpx;
    margin-left: 30rpx;
}

.one_row {
    font-size: 30rpx;
    color: #000;
    justify-content: space-between;
}

.one_row_left {
    display: -webkit-flex;
    align-items: flex-start;
}

.syhq_icon {
    width: 30rpx;
    height: 30rpx;
}

.two_row {
    margin: 10rpx 0rpx;
}

.dw_dis {
    color: #ffb826;
    margin-left: 20rpx;
}

.four_row {
    margin: 5rpx 0rpx;
}

.dw_box {
    width: 26rpx;
    height: 26rpx;
    margin: 0rpx 10rpx 0rpx 0rpx;
}

.dw-icon {
    width: 26rpx;
    height: 26rpx;
}

.swiper {
    width: 100%;
    background-color: transparent;
}

.heig780 {
    height: 780rpx;
}

.swScroY {
    max-height: 780rpx;
}

.lq-btn {
    width: 140rpx;
    height: 50rpx;
    border-radius: 10rpx;
    background-color: #ce0000;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 50rpx;
}