<view>
    <view class="header_box">
        <view class="user-mes flex-center">
            <view class="flex-center">
                <view style="width:100rpx;height:100rpx;">
                    <image class="userinfo-avatar" src="{{user_info.avatarUrl}}"></image>
                </view>
                <text class="userinfo-nickname">{{user_info.nickName}}</text>
            </view>
            <view class="people_num">{{allUserCoupon.length}}人在抢</view>
        </view>
        <view class="had-yhq-box">
            <view catchtap="goYhqList" class="yhq_box">
                <view class="num">{{Mycoupon.length}}</view>
                <view>已抢优惠券（张）</view>
            </view>
            <view class="yhq_box">
                <view class="num" hidden="{{!Mycoupon[0].money}}">{{Mycoupon[0].money}}</view>
                <view class="num" hidden="{{Mycoupon[0].money}}">0</view>
                <view>可为您节省（元）</view>
            </view>
        </view>
    </view>
    <view class="wall"></view>
    <view class="footer_box">
        <view class="border_bottom border_b border_t">
            <view class="status-box">
                <view bindtap="statusTap" class="status_label {{index==currentType?'active':''}}" data-index="{{index}}" wx:for="{{statusType}}" wx:key="index">
              {{item}}
            <view class="{{tabClass[index]}}"></view>
                </view>
            </view>
        </view>
        <view>
            <scroll-view>
                <view bindtap="goToStore" class="shops_item flex border_b" data-id="{{item.id}}" wx:for="{{couponList}}">
                    <view class="goodsImg_box">
                        <image class="goodsImg" src="{{url}}{{item.image[0]}}"></image>
                    </view>
                    <view class="right_box">
                        <view class="one_row flex">
                            <view class="one_row_left">
                                <view style="width:30rpx;height:30rpx; margin: 0rpx 10rpx 0rpx 0rpx;">
                                    <image class="syhq_icon" src="../../resource/images/first/syhq.png"></image>
                                </view>
                                <text>{{item.num}}张优惠券</text>
                            </view>
                            <view class="lq-btn">立即领取</view>
                        </view>
                        <view class="four_row flex-center">
                            <view class="dw_box">
                                <image class="dw-icon" src="../../resource/images/first/dh.png"></image>
                            </view>
                            <view>{{item.tel}}</view>
                        </view>
                        <view class="three_row flex-center">
                            <view class="dw_box">
                                <image class="dw-icon" src="../../resource/images/first/dw.png"></image>
                            </view>
                            <text class="dw_word dot">{{item.address}}</text>
                            <text class="dw_dis" hidden="{{!item.distance}}">{{item.distance}}km</text>
                        </view>
                        <view class="five_row flex-center">
                            <view class="dw_box">
                                <image class="dw-icon" src="../../resource/images/first/dp.png"></image>
                            </view>
                            <view class="dot">{{item.store_name}}</view>
                        </view>
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>
</view>
