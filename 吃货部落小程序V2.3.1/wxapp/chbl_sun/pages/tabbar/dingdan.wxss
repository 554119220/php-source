}

.diyTabss {
    width: 60rpx;
    height: 54rpx;
    background: url(http://oydnzfrbv.bkt.clouddn.com/shezhi.png) no-repeat 0rpx 5rpx;
    background-size: contain;
}

.diyTabss.active {
    width: 60rpx;
