page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    width: 750rpx;
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-top: 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eeeeee;
}

.status-box {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.status_label.active {
    border-bottom: 4rpx solid #ce0000;
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}

.orderTitle {
    width: 690rpx;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #000;
}

.order-number {
    color: #666;
    font-size: 26rpx;
}

.statusWord {
    color: #ce0000;
    font-size: 28rpx;
}

.goodsList {
    width: 690rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0rpx 30rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.goodsImg {
    width: 130rpx;
    height: 130rpx;
}

.goodsMes {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.goodsName {
    font-size: 30rpx;
    color: #000;
}

.price-guige {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.price {
    font-size: 32rpx;
    color: #ce0000;
}

.num {
    color: #999;
    font-size: 26rpx;
    position: absolute;
    right: 30rpx;
}

.statusButton {
    height: 90rpx;
    width: 690rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 28rpx;
}

.btn {
    width: 180rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
}

.cancel-btn {
    color: #333;
    border: 1rpx solid #333;
}

.topay-btn {
    color: #ce0000;
    border: 1rpx solid #ce0000;
}

.no-order {
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
}

.no-order-img {
    width: 200rpx;
    height: 200rpx;
    display: flex;
    margin: 80rpx auto 30rpx;
}

.no-order .text {
    font-size: 28rpx;
    color: #999;
}

.footer-box {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-top: 1rpx solid #eee;
    background-color: #fff;
}

.diyItem {
    width: 80rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #000;
}

.diyTab {
    width: 60rpx;
    height: 54rpx;
    background: url(http://oydnzfrbv.bkt.clouddn.com/gongzuotai.png) no-repeat 0rpx 5rpx;
    background-size: contain;
}

.diyTab.active {
    background: url(http://oydnzfrbv.bkt.clouddn.com/gongzuotai-h.png) no-repeat 0rpx 5rpx;
