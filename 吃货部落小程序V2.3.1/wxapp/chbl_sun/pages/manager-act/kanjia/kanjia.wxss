page {
    background-color: #f2f2f2;
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    background-color: #fff;
}

.status-box {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.status_label.active {
    border-bottom: 4rpx solid #ce0000;
}

.item_box {
    padding: 20rpx 30rpx;
    background-color: #fff;
    justify-content: space-between;
}

.item_img {
    width: 150rpx;
    height: 150rpx;
}

.img {
    width: 150rpx;
    height: 150rpx;
    display: flex;
}

.item_mes {
    width: 370rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.name {
    color: #000;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price {
}

.tuan_price {
    font-size: 30rpx;
    color: #ce0000;
}

.orig_price {
    font-size: 26rpx;
    color: #999;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.join_num {
    font-size: 26rpx;
    color: #999;
}

.join_num text {
    color: #ce0000;
}

.btn {
    font-size: 30rpx;
    margin-right: 0rpx;
}

.deta_btn {
    width: 140rpx;
    height: 50rpx;
    border-radius: 10rpx;
    background-color: #ce0000;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
}

.gai_btn {
    width: 140rpx;
    height: 50rpx;
    border-radius: 10rpx;
    border: 1rpx solid #ce0000;
    color: #ce0000;
    text-align: center;
    line-height: 50rpx;
    margin-top: 20rpx;
}