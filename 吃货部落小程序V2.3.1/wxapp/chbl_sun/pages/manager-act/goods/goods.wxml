<view>
    <view class="border_bottom border_b border_t">
        <view class="status-box">
            <view bindtap="statusTap" class="status_label {{index==currentType?'active':''}}" data-index="{{index}}" wx:for="{{statusType}}" wx:key="index">
              {{item}}
              <view class="{{tabClass[index]}}"></view>
            </view>
        </view>
    </view>
    <view></view>
    <view class="item_box flex-center border_b" wx:for="{{GoodsList}}">
        <view class="item_img">
            <image class="img" src="{{url}}{{item.lb_imgs}}"></image>
        </view>
        <view class="right_box">
            <view class="name_box flex-center">
                <view class="name">{{item.goods_name}}</view>
                <view catchtap="delGoods" class="del" data-id="{{item.id}}">删除</view>
            </view>
            <view class="price">¥{{item.goods_price}}</view>
            <view class="btn flex-center">
                <view catchtap="lookGoods" class="gai_btn" data-id="{{item.id}}" wx:if="{{currentType==1}}">查看</view>
                <view class="gai_btn" wx:if="{{currentType==0}}">审核中</view>
                <view class="gai_btn" wx:if="{{currentType==2}}">已拒绝</view>
            </view>
        </view>
    </view>
</view>
