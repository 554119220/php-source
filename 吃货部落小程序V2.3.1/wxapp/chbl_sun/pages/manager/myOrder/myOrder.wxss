page {
    min-height: 100%;
    background-color: #efefef;
}

.container {
    width: 750rpx;
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    background-color: #fff;
    border-bottom: 1rpx solid #eeeeee;
}

.status-box {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.status_label.active {
    border-bottom: 4rpx solid #ff552e;
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}

.orderTitle {
    width: 690rpx;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #000;
}

.order-number {
    color: #000;
    font-size: 26rpx;
}

.statusWord {
    color: #ff552e;
    font-size: 28rpx;
}

.goodsList {
    width: 690rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 30rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.imgsBox {
    width: 190rpx;
    height: 170rpx;
}

.goodsImg {
    width: 190rpx;
    height: 170rpx;
}

.goodsMes {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.goodsName {
    width: 470rpx;
    font-size: 30rpx;
    color: #000;
    justify-content: space-between;
}

.price {
    font-size: 32rpx;
    color: #ff552e;
}

.num {
    color: #999;
    font-size: 26rpx;
}

.statusButton {
    height: 90rpx;
    width: 690rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    text-align: left;
}

.btn {
    width: 180rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
}

.cancel-btn {
    color: #999;
    border: 1rpx solid #999;
}

.topay-btn {
    color: #ffb62b;
    border: 1rpx solid #ffb62b;
}

.show-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.bianhaoBox {
    background-color: #fff;
    position: fixed;
    top: 300rpx;
    left: 30rpx;
    z-index: 6;
    width: 690rpx;
    height: 300rpx;
    border-radius: 10rpx;
}

.inputBox {
    width: 630rpx;
    height: 90rpx;
    color: #000;
    font-size: 30rpx;
}

.diyHolder {
    font-size: 26rpx;
    color: #666;
}