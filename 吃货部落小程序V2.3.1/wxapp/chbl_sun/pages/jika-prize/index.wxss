page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
    margin-top: 20rpx;
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}

.orderTitle {
    width: 690rpx;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #000;
}

.order-number {
    color: #666;
    font-size: 26rpx;
}

.statusWord {
    color: #ce0000;
    font-size: 28rpx;
}

.goodsList {
    width: 690rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0rpx 30rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.goodsImg {
    width: 130rpx;
    height: 130rpx;
}

.goodsMes {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.goodsName {
    font-size: 30rpx;
    color: #000;
}

.price-guige {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.price {
    font-size: 32rpx;
    color: #ce0000;
}

.num {
    color: #999;
    font-size: 26rpx;
    position: absolute;
    right: 30rpx;
}

.statusButton {
    height: 90rpx;
    width: 690rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 28rpx;
}

.btn {
    width: 180rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
}

.cancel-btn {
    color: #333;
    border: 1rpx solid #333;
}

.topay-btn {
    color: #ce0000;
    border: 1rpx solid #ce0000;
}