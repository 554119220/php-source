page {
    width: 100%;
    background-color: #efefef;
}

.container {
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-top: 20rpx;
    background-color: #fff;
}

.status-box {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.status_label.active {
    border-bottom: 4rpx solid #ce0000;
}

.order-list {
    width: 100%;
    display: flex;
    background-color: #fff;
}

.a-order {
    width: 100%;
}

.orderTitle {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #000;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
    padding: 0rpx 30rpx;
}

.goodsList {
    display: flex;
    margin: 20rpx 30rpx;
    position: relative;
}

.order-number {
    color: #666;
    font-size: 26rpx;
}

.statusWord {
    color: #ce0000;
    font-size: 28rpx;
}

.goodsPic {
    width: 230rpx;
    height: 200rpx;
}

.goodsMes {
    margin-left: 30rpx;
    width: 430rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.goodsName {
    font-size: 30rpx;
    color: #ce0000;
}

.goodsName.active {
    color: #000;
}

.currentNum {
    font-size: 28rpx;
    color: #000;
}

.start-endTime {
    color: #999;
    font-size: 26rpx;
    margin-top: 14rpx;
    height: 60rpx;
}

.details-btn {
    width: 140rpx;
    height: 50rpx;
    border-radius: 25rpx;
    background-color: #ce0000;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 50rpx;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}

.details-btn.active {
    color: #fff;
    background-color: #999;
}

.goodsListLast {
    width: 690rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0rpx 30rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.goodsImglast {
    width: 130rpx;
    height: 130rpx;
}

.goodsMeslast {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.goodsNamelast {
    font-size: 30rpx;
    color: #000;
}

.price-guigelast {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.pricelast {
    font-size: 32rpx;
    color: #ce0000;
}