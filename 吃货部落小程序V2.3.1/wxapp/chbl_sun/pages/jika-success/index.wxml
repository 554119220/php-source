<view class="container">
    <view class="goodsList">
        <image class="goodsImg" src="{{url}}{{active.thumb}}"></image>
        <view class="goodsMes">
            <view class="goodsName">{{active.title}}</view>
            <view class="price-guige">
                <view class="price">¥0</view>
            </view>
        </view>
    </view>
    <view class="post-get">
        <view bindtap="selectPost" class="kuaidi">
            <view>快递</view>
        </view>
        <view bindtap="selectPost" class="kuaidi kuaidiactive" data-index="1">
            <view>到店取货</view>
        </view>
        <view class="connecter">
            <view class="post">
                <view>收货人：</view>
                <view>
                    <input bindinput="consignee" class="input" placeholder="请输入您的称呼" placeholderStyle="margin-left:110rpx;" type="text"></input>
                </view>
            </view>
            <view class="post">
                <view>联系电话：</view>
                <view>
                    <input bindinput="tel" class="input" placeholder="请输入您的联系方式" placeholderStyle="margin-left:50rpx;" type="number"></input>
                </view>
            </view>
        </view>
    </view>
    <view class="spost">
        <view>买家留言：</view>
        <view>
            <input bindinput="message" class="input" placeholder="点击给商家留言" placeholderStyle="margin-left:110rpx;"></input>
        </view>
    </view>
    <text class="tips">*注:确定提交后，请凭收货人姓名和联系电话到店取货！</text>
    <view style="height:100rpx">
        <view class="footer-box">
            <view class="leftMes">
                <view class="totalPrice">实付款：<text style="color:#ce0000;font-size:30rpx">¥0</text>
                </view>
            </view>
            <view bindtap="toPay" class="jiesuan {{currentSelect==index?'active':''}}" data-consignee="{{consignee}}" data-id="{{active.id}}" data-index="{{index}}" data-msg="{{msg}}" data-tel="{{tel}}">确定提交</view>
        </view>
    </view>
</view>
