<view class="container">
    <view class="userinfo" style="background:url(http://oydnzfrbv.bkt.clouddn.com/wodebj-2.jpg) no-repeat 0rpx center;background-size: cover;">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" wx:if="{{userInfo&&userInfo.avatarUrl}}"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="myList">
        <view class="myItem">
            <image class="itemIcon" src="../../resource/images/mine/huodong.png"></image>
            <view class="itemWord">我的活动</view>
        </view>
        <view bindtap="goActivityList" class="myItem">
            <image class="arrow" src="../../resource/images/first/jiantou.png"></image>
            <view class="itemWord">集卡活动</view>
        </view>
        <view class="myItem">
            <image class="arrow" src="../../resource/images/first/jiantou.png"></image>
            <view class="itemWord">拼团活动</view>
        </view>
        <view class="myItem">
            <image class="arrow" src="../../resource/images/first/jiantou.png"></image>
            <view class="itemWord">砍价活动</view>
        </view>
        <view bindtap="goPrize" class="myItem">
            <image class="arrow" src="../../resource/images/first/jiantou.png"></image>
            <view class="itemWord">入驻商品</view>
        </view>
        <view style="width:750rpx;height:20rpx;background-color:#efefef"></view>
        <view bindtap="goAboutUs" class="sellEntr">
            <view class="usWord">关于我们</view>
            <image class="arrow" src="../../resource/images/first/jiantou.png"></image>
        </view>
    </view>
    <view class="bottom-btn">
        <view bindtap="addActivity" class="push-btn">添加活动</view>
        <view bindtap="backFirst" class="back-btn">回到首页</view>
    </view>
</view>
