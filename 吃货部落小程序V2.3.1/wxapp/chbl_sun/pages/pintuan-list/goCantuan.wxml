<view class="container">
    <view class="header">
        <view class="topMes">
            <view class="left-mes">
                <image class="goodsImg" src="{{url}}{{details.pic}}"></image>
                <view class="goodstext">
                    <view class="goodsName">{{details.gname}}</view>
                    <view class="originPrice">原价: ¥{{details.marketprice}}</view>
                    <view class="pinPrice">拼团价:<text class="pin-price">¥{{details.shopprice}}</text>
                    </view>
                </view>
            </view>
            <view>{{details.groups_num}}人团</view>
        </view>
        <view class="bottom-mes">
            <view class="icon-row">
                <view class="tuanzhang">团长</view>
                <image class="headerImg" src="{{tuanz.img}}"></image>
                <image class="headerImg" src="{{item.img}}" wx:for="{{friendsgroups}}"></image>
                <image class="headerImg" src="../../resource/images/pintuan/mytx.png" wx:if="{{surplus_num!=0}}" wx:for="{{newH}}"></image>
                <view catchTap="moreGroups" class="more" wx:if="{{details.groups_num>5}}">...</view>
            </view>
            <view class="remainTimes" hidden="{{surplus_num==0}}">仅剩<text class="remain-num">{{surplus_num}}</text>个名额
            </view>
            <view class="remainTimes" hidden="{{surplus_num!=0}}">拼团成功，请耐心等待商家发货！</view>
            <button class="nowPin-btn" hidden="{{surplus_num!=0}}">拼团成功</button>
            <button bindtap="nowPindan" class="nowPin-btn" data-id="{{details.id}}" data-pid="1" data-userid="{{tuanz.openid}}" hidden="{{tuanzhang=='1'||surplus_num==0}}">立即拼单</button>
            <view bindtap="bindShareTap" class="nowPin-btn" data-id="{{details.id}}" data-pid="1" data-statu="open" data-userid="{{tuanz.openid}}" hidden="{{tuanzhang=='0'||surplus_num==0}}">邀请好友拼单</view>
        </view>
    </view>
    <view class="introduce">
        <view class="kanjia-title">活动说明</view>
        <text class="rule-contents">{{details.content}}</text>
    </view>
    <view class="liucheng-wrap">
        <view class="kanjia-title">拼团玩法</view>
        <view class="liucheng">
            <view class="item-liu">
                <image class="kanjiaImgs" src="../../resource/images/pintuan/1-1.png"></image>
                <view class="liucheng-text">支付开团或者参团</view>
            </view>
            <view class="item-liu">
                <image class="kanjiaImgs" src="../../resource/images/pintuan/2-1.png"></image>
                <view class="liucheng-text">邀请好友参团</view>
            </view>
            <view class="item-liu">
                <image class="kanjiaImgs" src="../../resource/images/pintuan/3-1.png"></image>
                <view class="liucheng-text">人数到分别发货</view>
            </view>
            <view class="item-liu">
                <image class="kanjiaImgs" src="../../resource/images/pintuan/4-1.png"></image>
                <view class="liucheng-text">人数不够自动退款</view>
            </view>
        </view>
    </view>
    <view class="details-wrap">
        <view class="kanjia-title">商品详情</view>
        <view class="contents">
            <rich-text nodes="{{details.details}}"></rich-text>
        </view>
    </view>
    <view bindtap="goBackHome" class="backHome">
        <image class="homeImg" src="../../resource/images/kanjia/home.png"></image>
    </view>
    <view bindtap="close" class="drawer_screen" data-statu="close" wx:if="{{showModalStatus}}"></view>
    <view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
        <button class="shareFriend" data-id="{{details.id}}" data-pid="1" data-userid="{{tuanz.openid}}" openType="share">发给好友</button>
        <view bindtap="createPoster" class="actionList border_t" data-userid="{{tuanz.openid}}">生成卡片</view>
        <view bindtap="close" class="actionList" data-statu="close">取消</view>
    </view>
</view>
<login bindtogetuserinfo="updateUserInfo" modalHidden="{{is_modal_Hidden}}"></login>
