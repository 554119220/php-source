<view class="big-box">
    <view class="wall"></view>
    <form bindsubmit="bindSave">
        <view class="label_Row flex-center border_b">
            <text>活动标题：</text>
            <input class="input" name="title" placeholder="请输入活动标题" placeholderClass="diyHolder"></input>
        </view>
        <view class="label_Row flex-center border_b">
            <text>活动副标题</text>
            <input class="input" name="subtitle" placeholder="请输入活动副标题" placeholderClass="diyHolder"></input>
        </view>
        <view class="wall"></view>
        <view class="label_Row flex-center border_b">
            <text>活动说明：</text>
            <input class="input" name="content" placeholder="请填写活动说明" placeholderClass="diyHolder"></input>
        </view>
        <view class="label_Row flex-center border_b">
            <text>商品数量：</text>
            <input class="input" name="active_num" placeholder="请填写活动商品数量" placeholderClass="diyHolder" type="number"></input>
        </view>
        <view class="wall"></view>
        <view class="label_Row flex-center border_b">
            <view>是否属于会员商品：</view>
            <radio-group bindchange="radioChange" class="radio-group flex-center">
                <label class="radio flex-center" wx:for="{{items}}">
                    <radio checked="{{item.checked}}" class="radios" color="#999" value="{{item.name}}"></radio>{{item}}
        </label>
            </radio-group>
        </view>
        <view class="wall"></view>
        <view class="label_Row flex-center border_b">
            <text>活动时间：</text>
            <picker bindchange="bindTimeChange" class="picker" data-statu="start" mode="date">
                <input disabled name="astime" placeholder="活动开始时间" value="{{stime}}"></input>
            </picker>
            <text class="role">—</text>
            <picker bindchange="bindTimeChange" class="picker" data-statu="end" mode="date">
                <input disabled name="antime" placeholder="活动结束时间" value="{{etime}}"></input>
            </picker>
        </view>
        <view class="wall"></view>
        <view class="label_Row flex-center border_b">
            <text>集卡次数：</text>
            <input class="times" name="num" placeholder="初始次数" placeholderClass="diyHolder"></input>
            <text class="role">—</text>
            <input class="times" name="share_plus" placeholder="转发获得次数" placeholderClass="diyHolder"></input>
            <text class="role">—</text>
            <input class="times" name="sharenum" placeholder="每日分享次数" placeholderClass="diyHolder"></input>
        </view>
        <view class="banner_Row">
            <view class="advice_wid">
        活动主图（750x550,仅限上传一张）
      </view>
            <view class="upload">
                <view bindtap="previewImage" class="content_add rel" data-index="{{index}}" data-list="{{pics}}" wx:for="{{pics}}" wx:key="*this">
                    <view catchtap="deleteImage" class="delete ab" data-index="{{index}}">
                        <image class="ab" mode="widthFix" src="../../../resource/images/entr/close.png"></image>
                    </view>
                    <image class="add_img" mode="aspectFill" src="{{item}}"></image>
                </view>
                <view bindtap="chooseImage" class="content_add">
                    <image class="add_img noBorder" src="../../../resource/images/entr/add.png"></image>
                </view>
            </view>
        </view>
        <view class="wall"></view>
        <view class="banner_Row">
            <view class="adv_width">商品详情图（690宽，高不限）</view>
            <view class="upload">
                <view bindtap="previewImage" class="content_add rel" data-index="{{index}}" data-list="{{picss}}" wx:for="{{picss}}" wx:key="*this">
                    <view catchtap="deleteImage1" class="delete ab" data-index="{{index}}">
                        <image class="ab" mode="widthFix" src="../../../resource/images/entr/close.png"></image>
                    </view>
                    <image class="add_img" mode="aspectFill" src="{{item}}"></image>
                </view>
                <view bindtap="chooseImage1" class="content_add">
                    <image class="add_img noBorder" src="../../../resource/images/entr/add.png"></image>
                </view>
            </view>
        </view>
        <view style="background-color:#f2f2f2;padding:40rpx 0rpx 40rpx;">
            <button class="big-btn" formType="submit">下一步</button>
        </view>
    </form>
</view>
