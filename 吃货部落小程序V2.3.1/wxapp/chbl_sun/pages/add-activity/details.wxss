page {
    width: 100%;
}

.container {
    width: 100%;
}

.wall {
    width: 100%;
    height: 20rpx;
    background-color: #efefef;
}

.actList {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.diyHolder {
    font-size: 26rpx;
    color: #999;
}

.actItem {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    color: #000;
    font-size: 30rpx;
    margin-left: 30rpx;
}

.actItem:first-child {
    margin-top: 30rpx;
}

.leftBox {
    width: 490rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1rpx solid #eee;
    box-sizing: border-box;
}

.rightText {
    width: 180rpx;
    height: 100%;
    display: flex;
    align-items: center;
    border: 1rpx solid #eee;
    box-sizing: border-box;
    margin-left: 20rpx;
}

.leftInput {
    margin-left: 30rpx;
}

.activity-icon {
    width: 70rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.push-btn {
    width: 600rpx;
    height: 90rpx;
    border-radius: 10rpx;
    background-color: #ffb825;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
    margin-top: 20rpx;
}

button:after {
    border: none;
}

.show-popup {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 4;
}

.popup-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5;
    background-color: rgba(0,0,0,0.5);
}

.succContents {
    width: 690rpx;
    height: 300rpx;
    background-color: #fff;
    position: fixed;
    top: 430rpx;
    left: 30rpx;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.paySuccess {
    color: #ce0000;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 30rpx;
}

.payText {
    color: #999;
    font-size: 26rpx;
    margin: 20rpx 0rpx 10rpx 0rpx;
}

.kapian {
    font-size: 24rpx;
    text-align: center;
    color: #999;
}