.header {
    padding: 30rpx;
    background: #fff;
}

.header .header_content {
    height: 300rpx;
    border-radius: 10rpx;
    background: #e62431;
    box-shadow: 0px 0px 7px #ccc;
    background-image: linear-gradient(90deg,#FF533D 0%,#E62431 100%);
}

.today_payment {
    padding: 30rpx 30rpx 20rpx 30rpx;
    color: #fff;
    height: 140rpx;
}

.today_payment .price {
    font-size: 45rpx;
    font-weight: bold;
    margin: 15rpx 0;
}

.data_info {
    padding: 0 30rpx;
    color: #fff;
}

.data_info_box {
    width: 33.33%;
}

.data_info_box view {
    margin-top: 10rpx;
}

.content {
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    background: #fff;
}

.content .send {
    border-right: 1rpx solid #ccc;
}

.content .send,.content .after {
    width: 50%;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    color: #666;
}

.content .send .num,.content .after .num {
    margin-left: 15rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
}

.admin_nav {
    margin-top: 20rpx;
    background: #fff;
    padding: 30rpx 0;
}

.navbox {
    width: 25%;
    text-align: center;
}

.navbox .pic {
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
}

.navbox image {
    width: 60rpx;
    height: 60rpx;
}

.navbox .name {
    margin-top: 20rpx;
}

.goHmoe {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 150rpx;
    right: 30rpx;
    z-index: 2;
}

.goHmoe image {
    width: 100rpx;
    height: 100rpx;
}