.express_list {
}

.express_name {
    padding-left: 80rpx;
}

.secroll-H {
    width: 100%;
    height: calc(100% - 110rpx);
    overflow: hidden;
}

.search {
    height: 70rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #fff;
    position: relative;
}

.search input {
    height: 70rpx;
    line-height: 70rpx;
    background: #f5f7f6;
    padding: 0 8rpx;
    text-align: center;
}

.search_text {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-left: 18rpx;
}

.search_icon image {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 17rpx;
    left: calc(50% - 54rpx);
    z-index: 2;
}

.searchLeft input {
    text-align: left;
}

.searchLeft .search_text {
    text-align: left!important;
    margin-left: 54rpx;
}

.searchLeft .search_icon image {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 17rpx;
    left: 54rpx;
    z-index: 2;
}

.search_header {
    background: #fff;
    padding: 20rpx 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
}

.search_header input {
    padding-left: 70rpx;
}

.search_header .searchLeft .search_text {
    text-align: left!important;
    margin-left: 0rpx;
}

.search_btn {
    width: 120rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 24rpx;
    color: #666;
    background: #ededed;
    border-radius: 5rpx;
    margin-left: 20rpx;
}

.scroll_list {
    width: 100%;
    flex-wrap: wrap;
    background: #fff;
    padding-bottom: 30rpx;
    padding-top: 100rpx;
}

.list_item {
    flex-wrap: wrap;
    width: 50%;
    box-sizing: border-box;
}

.list_item text {
    margin-left: 30rpx;
    display: block;
    width: calc(100% - 30rpx);
    height: 100%;
    border-bottom: 1rpx solid #ccc;
    padding: 20rpx 0;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.list_item .active {
    background: #ad0e11;
    color: #fff;
}

.list_search text {
    border: none;
}