@import "../order_refund/order_refund.wxss";

.boguan {
    padding-bottom: 100rpx;
}

.page {
    margin-bottom: 0;
    margin-top: 20rpx;
}

.order_address {
    padding: 30rpx;
    background: #fff;
    font-size: 26rpx;
    margin-bottom: 20rpx;
}

.address_ico image {
    width: 30rpx;
    height: 38rpx;
}

.address_ico {
    padding-right: 30rpx;
    margin-top: 66rpx;
}

.address_info {
    margin-top: 30rpx;
}

.send {
    background: #fff;
}

.send_type {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ccc;
}

.send_type_btn {
    border-radius: 10rpx;
    text-align: center;
    overflow: hidden;
    border: 1px solid #ad0e11;
    color: #ad0e11;
}

.send_type_btn text {
    padding: 8rpx 25rpx;
}

.send_type_btn .active {
    background: #ad0e11;
    color: #fff;
}

.express {
    padding: 20rpx 30rpx;
}

.express_name,.express_number {
    height: 80rpx;
    line-height: 80rpx;
}

.express input {
    padding-left: 20rpx;
}

.send_submit_btn {
    width: 100%;
    padding: 15rpx 0;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.send_submit {
    width: 70%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 20rpx;
    margin: 0 auto;
    background: #ad0e11;
    color: #fff;
    font-size: 32rpx;
}

.dont_need {
    padding: 40rpx 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: #666;
}

.express_name_input {
    position: relative;
}

.express_name_input::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -8rpx;
    display: block;
    transform: rotate(135deg);
    border-left: 3rpx solid #666;
    border-top: 3rpx solid #666;
}

.express_number image {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
}

.order_header .order_type {
    font-weight: bold;
    padding-bottom: 5rpx;
}