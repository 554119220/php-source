.edit {
    padding: 0 20rpx;
    background: #fff;
}

.edit_lab {
    padding: 30rpx 0;
    border-top: 1rpx solid #ededed;
}

.edit_lab input {
    width: 100%;
}

.edit .label {
    width: 180rpx;
    color: #666;
}

.tips {
    font-size: 26rpx;
    color: #ccc;
}

.region_tips {
    font-size: 26rpx;
    color: #dea648;
}

.btn {
    padding: 50rpx 30rpx;
    background: #fff;
    text-align: center;
    border-top: 1rpx solid #ededed;
    font-size: 32rpx;
}

.wechat {
    background: #333333;
    color: #fff;
    width: 50%;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.submit {
    background: #ad0e11;
    width: 50%;
    color: #fff;
}

.submit button {
    background: transparent;
    color: #fff;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.submit button::after {
    border: none;
}