@import "../../../../wxParse/wxParse.wxss";

page {
    background: #fff;
}

.boguan {
    padding-bottom: 100rpx;
}

.content {
    padding-bottom: 30rpx;
}

.bottom {
    width: 100%;
    position: fixed;
    bottom: 0;
    height: 100rpx;
    background: #fff;
    box-sizing: border-box;
    border-top: 1rpx solid #ededed;
}

.new_icon {
    width: 34rpx;
    height: 34rpx;
    margin-right: 15rpx;
}

.share_btn,.collection_btn {
    font-size: 26rpx;
    background: #fff;
}

.share_btn::after {
    border: none;
}

.recommended_btn {
    padding-right: 30rpx;
}

.recommended_btn text {
    background: #c13b38;
    color: #fff;
    padding: 15rpx 20rpx;
    border-radius: 30rpx;
    text-align: right;
    font-size: 26rpx;
}

.news_header {
    padding: 0 20rpx;
}

.news_title {
    padding: 30rpx 0rpx;
    font-weight: bold;
    color: #000;
    font-size: 30rpx;
}

.news_time {
    color: #999;
    font-size: 24rpx;
    padding-bottom: 30rpx;
}