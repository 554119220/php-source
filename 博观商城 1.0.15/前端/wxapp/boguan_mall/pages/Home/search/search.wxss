@import "../../resources/commons/search/search.wxss";

@import "../coupon/coupon_goods/coupon_goods.wxss";

.search_header {
    background: #fff;
}

.search_header input {
    padding-left: 70rpx;
}

.search_cancel {
    padding-right: 30rpx;
    color: #c13b38;
}

.search_header .searchLeft .search_text {
    text-align: left!important;
    margin-left: 0rpx;
}

.tips {
    color: #999;
    text-align: center;
    margin-top: 30rpx;
}

.back_index {
    width: 250rpx;
    height: 50rpx;
    border: 1rpx solid #ad0e11;
    color: #ad0e11;
    margin: 0 auto;
    font-size: 24rpx;
    text-align: center;
    line-height: 50rpx;
    margin-top: 50rpx;
}

.collection_tab {
    background: #fff;
    border-bottom: 1rpx solid #ededed;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.collection_tab text {
    height: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    padding: 0 20rpx;
    position: relative;
}

.collection_tab text.active::after {
    background: #c13b38;
    content: "";
    width: 100%;
    height: 1px;
    position: absolute;
    bottom: -1px;
    left: 0;
}

.news-item {
    padding: 20rpx 30rpx;
    background: #fff;
    border-bottom: 1px solid #ececec;
}

.news-item .news-follow {
    font-size: 22rpx;
    color: #bfbfbf;
    display: flex;
}

.news-item .news-follow.ptop40 {
    padding-top: 40rpx;
}

.news-item .news-follow view {
    align-self: flex-end;
    margin-right: 30rpx;
}

.news-item .news-follow image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 5rpx;
}

.news-item .title {
    font-size: 28rpx;
    color: #333;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    text-overflow: ellipsis;
    font-family: PingFangSC-Regular;
}

.news-item .news-pic {
    position: relative;
}

.news-item .news-pic image {
    width: 100%;
    height: 100%;
}

.newStlye-0 .news-pic {
    width: 250rpx;
    height: 150rpx;
}

.newStlye-0 .news-text {
    padding: 0 0rpx 0rpx 25rpx;
}

.newStlye-0 .news-text .title {
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.product-num {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    background: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 22rpx;
    padding: 5rpx 10rpx;
}