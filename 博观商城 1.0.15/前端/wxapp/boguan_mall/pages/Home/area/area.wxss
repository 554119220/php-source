.boguan {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
}

.store_area {
    width: 100%;
    height: calc(100% - 130rpx);
}

#area_map {
    width: 100%;
    height: 100%;
}

.store_area_address {
    width: 100%;
    height: 130rpx;
    background: #fff;
    padding: 0rpx 30rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.store_logo {
    width: 95rpx;
    height: 95rpx;
}

.store_logo image {
    width: 95rpx;
    height: 95rpx;
    border-radius: 50%;
}

.store_phone {
    width: 50rpx;
    height: 50rpx;
}

.store_phone image {
    width: 50rpx;
    height: 50rpx;
}

.store_info {
    padding: 0 30rpx;
}

.store_name {
    width: 100%;
    font-size: 30rpx;
    color: #000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.store_address {
    width: 100%;
    font-size: 26rpx;
    color: #999;
    padding-top: 10rpx;
    line-height: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}