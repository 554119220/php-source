@import "../../resources/commons/search/search.wxss";

.tabbar_box+.boguan {
    padding-bottom: 120rpx;
}

.recommended {
    background: #fff;
    padding: 0rpx 20rpx;
}

.recommended .product_list {
    flex-wrap: wrap;
}

.recommended .product_item {
    width: 50%;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.recommended .product_item:nth-child(odd) {
    padding-right: 10rpx;
}

.recommended .product_item:nth-child(even) {
    padding-left: 10rpx;
}

.recommended .product_pic {
    width: 100%;
    height: 364rpx;
}

.recommended .product_price {
    margin-top: 10rpx;
}

.recommended .product_price .price {
    font-size: 32rpx;
    color: #c13b38;
}

.recommended .product_price .o_price {
    font-size: 22rpx;
    color: #666;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.recommended .product_pic image {
    width: 100%;
    height: 100%;
}

.recommended .product_title {
    font-size: 26rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 75rpx;
    padding-top: 10rpx;
}

.recommended .product_describe {
    font-size: 24rpx;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color: #999;
    padding-top: 10rpx;
    height: 90rpx;
}

.product_info {
    padding: 0 15rpx;
}

.scroll-view_X {
    white-space: nowrap;
    overflow: hidden;
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.list_item {
    display: inline-block;
    font-size: 22rpx;
    background: #fafafa;
    padding: 12rpx 22rpx;
    margin-right: 20rpx;
    color: #333;
    border-radius: 3rpx;
}

.list_item:last-child {
    margin-right: 0rpx;
}

.list_item.active {
    color: #c13b38;
    background: #fef5f5;
}

.section_gap {
    margin-bottom: 20rpx;
}