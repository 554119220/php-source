.boguan {
    padding-bottom: 100rpx;
}

.order_concent {
    border-bottom: 1rpx solid #ededed;
    background: #fff;
    padding: 20rpx 0;
}

.orderProducts {
    padding: 10rpx 30rpx;
    background: #fafafa;
    margin-bottom: 10rpx;
}

.orderProducts:last-child {
    margin-bottom: 0rpx;
}

.orderProduct_pic {
    width: 150rpx;
    height: 150rpx;
}

.orderProduct_pic image {
    width: 100%;
    height: 100%;
}

.orderProduct_tit {
    padding: 0 20rpx;
    font-size: 24rpx;
    line-height: 40rpx;
}

.orderProduct_tit .name {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    text-overflow: ellipsis;
}

.orderProduct_tit .spec {
    line-height: 35rpx;
    margin-top: 10rpx;
}

.orderProduct_tit .spec text {
    color: #8e8e8e;
    font-size: 24rpx;
}

.orderProduct_tit .spec text:last-child {
    display: none;
}

.orderProduct_tit .spec text:last-child {
    margin-right: 0rpx;
}

.orderProduct_info {
    width: 200rpx;
    text-align: right;
    line-height: 40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
}

.orderProduct_info .o_price {
    color: #c13b38;
    font-size: 24rpx;
}

.orderProduct_info .price {
    font-size: 24rpx;
}

.orderProduct_info .freight {
    color: #969696;
    font-size: 22rpx;
}

.orderProduct_info .number {
    font-size: 24rpx;
}

.goods_count {
    text-align: right;
    padding: 10rpx 30rpx;
}

.count {
    font-size: 22rpx;
    color: #999;
    margin-right: 20rpx;
}

.count_title {
    font-size: 26rpx;
}

.goods_count_price {
    color: #c13b38;
    font-weight: bold;
    font-size: 26rpx;
}

.verification_edit {
    width: 100%;
    position: fixed;
    bottom: 0;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
}

.verification_edit .cancel {
    width: 50%;
    background: #989898;
    height: 100rpx;
}

.verification_edit .confirm {
    width: 50%;
    background: #ad0e11;
    height: 100rpx;
}

.auth_btn {
    width: 100%;
    position: fixed;
    bottom: 0;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    border-radius: 0;
    background: #04c160;
}

.auth_btn::after {
    border: none;
}