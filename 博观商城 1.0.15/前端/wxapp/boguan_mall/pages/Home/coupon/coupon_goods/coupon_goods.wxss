.recommended {
    background: #fff;
    padding: 0 1%;
}

.recommended_top {
    margin-top: 20rpx;
}

.recommended_title {
    font-size: 32rpx;
    color: #333;
    text-align: center;
    line-height: 80rpx;
    font-family: PingFangSC-Regular;
}

.recommended .product_list {
    display: flex;
    flex-wrap: wrap;
}

.recommended .product_item {
    width: 48%;
    margin: 1%;
    padding-bottom: 10rpx;
    box-sizing: border-box;
    border: 1rpx solid #ededed;
    border-radius: 4rpx;
}

.recommended .product_pic {
    width: 100%;
    height: 364rpx;
}

.recommended .product_price {
    margin: 12rpx 0;
    color: #ad0e11;
    font-family: PingFangSC-Regula;
    height: 40rpx;
    line-height: 1;
}

.recommended .product_price .price_icon {
    font-size: 22rpx;
}

.recommended .product_price .price {
    font-size: 32rpx;
}

.recommended .product_price .o_price {
    font-size: 22rpx;
    color: #666;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.recommended .product_pic image {
    width: 100%;
    height: 100%;
}

.recommended .product_title {
    font-size: 26rpx;
    color: #333;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    text-overflow: ellipsis;
    font-family: PingFangSC-Regular;
    height: 75rpx;
    padding-top: 10rpx;
}

.recommended .product_describe {
    font-size: 24rpx;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color: #999;
    padding-top: 10rpx;
    height: 90rpx;
}

.product_info {
    padding: 0 15rpx 10rpx 15rpx;
}