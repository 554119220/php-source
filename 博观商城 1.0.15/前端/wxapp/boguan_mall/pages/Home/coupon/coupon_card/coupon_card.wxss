page {
    background: #f1f3f6;
}

.card_info {
    margin: 30rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,.1);
    border-radius: 10rpx;
}

.card_header {
    padding: 40rpx 30rpx;
    color: #fff;
    position: relative;
}

.price {
    font-size: 35rpx;
}

.price text {
    font-size: 22rpx;
}

.apply {
    font-size: 26rpx;
}

.ling-btn {
    background: #fff;
    padding: 5rpx 10rpx;
    border-radius: 8rpx;
    color: rgb(255,85,0);
    margin-left: 20rpx;
    font-size: 24rpx;
}

.card_bg {
    height: 8rpx;
    width: 100%;
    position: absolute;
    bottom: 0rpx;
    left: 0;
    z-index: 9;
}

.card_bottom {
    color: #333;
    background: #fff;
    border-radius: 10rpx;
}

.card_goods {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ececec;
}

.card_goods image {
    width: 11rpx;
    height: 18rpx;
}

.card_explain {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ececec;
}

.explain_tit {
    padding-right: 50rpx;
}

.explain_text {
    color: #666;
    font-size: 24rpx;
    line-height: 1;
}

.card_header::after {
    width: 26rpx;
    height: 26rpx;
    border-radius: 50%;
    content: "";
    background: #f9f9f9;
    position: absolute;
    bottom: -13rpx;
    left: -13rpx;
    z-index: 10;
}

.card_header::before {
    width: 26rpx;
    height: 26rpx;
    border-radius: 50%;
    content: "";
    background: #f1f3f6;
    position: absolute;
    bottom: -13rpx;
    right: -13rpx;
    z-index: 10;
}

.coupon_zhe {
    font-size: 35rpx;
}

.coupon_zhe .zhe {
    font-size: 25rpx;
}

.ling-btn .receive {
    color: #ccc;
}