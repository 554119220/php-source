.userLocation_Modal {
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    background: rgba(0,0,0,0.5);
}

.userLocation_Modal_content {
    background: #fff;
    border-radius: 10rpx;
    width: 550rpx;
    height: 220rpx;
    position: absolute;
    top: calc(50% - 110rpx);
    left: calc(50% - 275rpx);
}

.Modal_tips {
    height: 130rpx;
    line-height: 130rpx;
    text-align: center;
    color: #666;
    border-bottom: 1rpx solid #e6e5e8;
}

.Modal_options {
    width: 100%;
    height: 90rpx;
}

.Modal_cancel,.Modal_confirm {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #000;
    font-size: 34rpx;
}

.Modal_options .Modal_cancel {
    border-right: 1rpx solid #e6e5e8;
}

.Modal_options .Modal_confirm {
    color: #ff5629;
    background: #fff;
    border-radius: 10rpx;
    padding: 0;
}

.Modal_options .Modal_confirm::after {
    border: none;
}