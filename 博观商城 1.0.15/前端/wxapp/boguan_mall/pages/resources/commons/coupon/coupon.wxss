.coupon_header {
    padding: 20rpx 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
}

.coupon_ico image {
    width: 48rpx;
    height: 48rpx;
}

.coupon_tit {
    color: #666;
    font-size: 24rpx;
}

.coupon_scroll {
    width: 100%;
    white-space: nowrap;
}

.coupon_li {
    width: 280rpx;
    height: 130rpx;
    position: relative;
    display: inline-block;
    margin-left: 20rpx;
}

.coupon_content {
    padding: 20rpx 0rpx;
    background: #fff;
}

.coupon_li image {
    width: 100%;
    height: 100%;
}

.coupon_item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: #fff;
}

.coupon_left {
    width: 200rpx;
    height: 100%;
    padding: 0rpx 0 0 20rpx;
    box-sizing: border-box;
}

.coupon_price {
    width: 200rpx;
    height: 50rpx;
    line-height: 60rpx;
    white-space: nowrap;
    overflow: hidden;
}

.coupon_name {
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    white-space: nowrap;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}

.coupon_type {
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    white-space: nowrap;
    overflow: hidden;
}

.coupon_right {
    width: 60rpx;
    height: 100%;
    display: table;
    font-size: 24rpx;
    line-height: 30rpx;
    padding: 15rpx 18rpx;
    box-sizing: border-box;
    writing-mode: vertical-rl;
    text-align: center;
}

.coupon_right text {
    display: table-cell;
    vertical-align: auto;
}

.coupon_price .zhe {
    font-size: 22rpx;
}