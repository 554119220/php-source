.nav {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    background: #fff;
}

.nav_box {
    height: 170rpx;
    padding: 10px 10px;
    box-sizing: border-box;
    width: 20%;
}

.nav_box image {
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 10rpx;
}

.nav_box text {
    font-size: 24rpx;
    display: block;
    text-align: center;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.nav_Scroll {
    width: 100%;
}

.nav_Scroll .nav_swiper {
    background: #fff;
    position: relative;
}

.navNum3 .nav_box {
    width: 33.33%;
}

.navNum4 .nav_box {
    width: 25%;
}

.circle image {
    border-radius: 50%;
    overflow: hidden;
}

.wane image {
    border-radius: 15rpx;
    overflow: hidden;
}