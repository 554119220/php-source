.news {
    background: #fff;
}

.news-item {
    padding: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #ededed;
}

.news-item .news-follow {
    font-size: 20rpx;
    color: #bfbfbf;
    display: flex;
}

.news-item .news-follow view {
    align-self: flex-end;
    margin-right: 20rpx;
}

.news-item .news-follow image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 5rpx;
}

.news-item .title {
    font-size: 28rpx;
    color: #333;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    text-overflow: ellipsis;
    font-family: PingFangSC-Regular;
}

.news-item .news-pic {
    position: relative;
}

.news-item .news-pic image {
    width: 100%;
    height: 100%;
}

.newStlye-1 .news-pic,.newStlye-2 .news-pic {
    width: 250rpx;
    height: 150rpx;
}

.newStlye-1 .news-text {
    padding: 0 25rpx 0 0rpx;
}

.newStlye-1 .news-text .title,.newStlye-2 .news-text .title {
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.newStlye-2 .news-text {
    padding: 0 0 0 25rpx;
}

.newStlye-3 {
    padding: 15rpx 20rpx;
}

.newStlye-3 .news_time {
    padding-left: 50rpx;
    font-size: 24rpx;
}

.newStlye-5 {
    padding: 20rpx 20rpx 0 20rpx;
    background: #fff;
}

.newStlye-5:last-child {
    padding-bottom: 20rpx;
}

.newStlye-5 .news_img {
    width: 100%;
    height: 375rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.newStlye-5 .news_img:last-child {
    margin-bottom: 0;
}

.newStlye-5 .news_img image {
    width: 100%;
    height: 100%;
}

.newStlye-5 .news_img .news_title {
    width: 100%;
    text-align: center;
    color: #fff;
    padding: 0rpx 20rpx;
    height: 55rpx;
    line-height: 55rpx;
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
}

.news-list_flex {
    display: flex;
    flex-wrap: wrap;
}

.news-list_flex navigator {
    width: 50%;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
}

.newStlye-4 .news_content_list {
    flex-wrap: wrap;
}

.newStlye-4 .news_item {
    box-sizing: border-box;
}

.newStlye-4 .news_item .news_img {
    height: 204rpx;
}

.newStlye-4 .news_item .news_img image {
    width: 100%;
    height: 100%;
}

.newStlye-4 .news_item .news_title {
    font-size: 26rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 5rpx 20rpx;
}

.news-list_flex navigator:nth-child(even) {
    padding-left: 10rpx;
}

.news-list_flex navigator:nth-child(odd) {
    padding-right: 10rpx;
}

.omit {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    text-overflow: ellipsis;
    font-family: PingFangSC-Regular;
}

.product-num {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    background: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 8pt;
    padding: 5rpx 10rpx;
}

.news_header {
    position: relative;
    padding: 25rpx 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid #ededed;
}

.news_title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 32rpx;
    color: #000;
}

.news_header .news_title_after {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -8rpx;
    display: block;
    transform: rotate(135deg);
    border-left: 3rpx solid #000;
    border-top: 3rpx solid #000;
}