.banner-swiper {
    width: 100%;
}

.banner-swiper .swiper-item {
    width: 100%;
    height: 100%;
}

.banner-swiper image {
    width: 100%;
    height: 100%;
    display: block;
}

.dot_square .wx-swiper-dot {
    display: inline-flex;
    justify-content: space-between;
    border-radius: 0;
}

.dot_square .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
}

.dot_square .wx-swiper-dot-active::before {
    background: rgba(0,0,0,0);
    border-radius: 0;
}

.dot_rectangle .wx-swiper-dot {
    display: inline-flex;
    justify-content: space-between;
    width: 30rpx;
    height: 8rpx;
    border-radius: 5rpx;
}

.dot_rectangle .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
}

.dot_rectangle .wx-swiper-dot-active::before {
    background: rgba(0,0,0,0);
    border-radius: 0;
}