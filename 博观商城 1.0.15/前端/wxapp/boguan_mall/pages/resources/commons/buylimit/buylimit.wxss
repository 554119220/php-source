.buylimit {
    margin-bottom: 10rpx;
}

.buylimit_tab {
    text-align: center;
    padding: 30rpx 0;
    background: #fff;
    color: #8c8c8c;
    border-bottom: 1rpx solid #ededed;
}

.buylimit_tab .line {
    width: 1px;
    background: #8c8c8c;
}

.buylimit_tab .active {
    color: #bc2c28;
}

.buylimit_content {
    background: #fff;
    padding: 0 30rpx;
}

.buylimit_header {
    padding: 35rpx 0 20rpx 0;
}

.buylimit_title {
    font-family: PingFang-SC-Bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 34rpx;
    color: #333333;
}

.buylimit_endtime {
    font-size: 24rpx;
    margin-top: 15rpx;
}

.buylimit_lasttime {
    margin-top: 0;
    min-width: 250rpx;
    text-align: right;
}

.buylimit_endtime text {
    color: #bc2c28;
}

.buylimit_num {
    text-align: right;
}

.buylimit_num .user_num {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #d35e5b;
    margin-right: 13rpx;
}

.buylimit_num text {
    margin-right: 10rpx;
}

.user_pic image {
    width: 54rpx;
    height: 54rpx;
    display: inline-block;
    overflow: hidden;
    position: relative;
    border-radius: 100%;
}

.user_pic image:first-child {
    z-index: 9;
    background-color: pink;
    right: -20%;
}

.user_pic image:nth-child(2) {
    z-index: 9;
    background-color: pink;
    right: -10%;
}

.user_pic image:nth-child(3) {
    z-index: 9;
    background-color: pink;
    right: 0;
}

.buylimit_goods {
    padding: 30rpx 0;
    box-sizing: border-box;
    width: 100%;
}

.buylimit_goods_pic {
    width: 260rpx;
    height: 260rpx;
}

.buylimit_goods_pic image {
    width: 100%;
    height: 100%;
}

.buylimit_goods_info {
    position: relative;
    width: calc(100% - 260rpx);
    height: 260rpx;
    margin-left: 30rpx;
}

.buylimit_goods_name {
    text-align: left;
    font-size: 28rpx;
    color: #333;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: PingFangSC-Regular;
}

.buylimit_goods_price {
    position: absolute;
    bottom: 0rem;
    left: 0;
    color: #ad0e11;
}

.buylimit_goods_price-txt {
    font-size: 24rpx;
    color: #ad0e11;
}

.buylimit_goods_price-num {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    margin-left: 4rpx;
    margin-right: 4rpx;
}

.buylimit_goods_addition-info {
    position: absolute;
    font-size: 24rpx;
    color: #999;
    right: 0;
    bottom: 62rpx;
    text-align: right;
}

.buylimit_goods_addition-btn {
    position: absolute;
    bottom: 0;
    right: 0;
    height: 52rpx;
    width: 136rpx;
    background-color: #c13b38;
    border-radius: 6rpx;
}

.buylimit_goods_addition-btn-txt {
    width: 100%;
    line-height: 52rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    display: block;
}

.buylimit_goods_addition-will-btn {
    font-family: PingFangSC-Regular;
    width: 130rpx;
    height: 52rpx;
    border-radius: 6rpx;
    font-size: 26rpx;
    color: #fff;
    background: #7db49d;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.buylimit_goods_addition-will-btn-txt {
    font-size: 33rpx;
    transform: scale(0.8);
    transform-origin: 0 center;
}

.icon_remind {
    display: inline-block;
    margin-right: 10rpx;
    width: 28rpx;
    height: 28rpx;
}

.buylimit_goods_ellips text {
    display: inline-block;
    background: #d87672;
    border-radius: 3rpx;
    padding: 4rpx 5rpx;
    color: #fff;
    margin: 2rpx 4rpx 0 0;
    font-size: 20rpx;
    line-height: 1;
}