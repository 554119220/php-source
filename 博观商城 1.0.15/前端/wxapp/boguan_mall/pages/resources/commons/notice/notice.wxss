.notice {
    padding: 15rpx 30rpx;
    overflow: hidden;
    font-family: PingFangSC-Regular;
}

.notice_icon {
    width: 80rpx;
    height: 44rpx;
}

.notice_scroll {
    position: relative;
    overflow: hidden;
    padding-left: 10rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.notice_item {
    position: absolute;
    top: 0rpx;
    left: 10rpx;
}

.notice_item {
    white-space: nowrap;
    overflow: hidden;
    animation: 20s 0s myfirst infinite linear;
    transform: translateX(0%);
}

@-webkit-keyframes myfirst {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100%);
    }
}

@keyframes myfirst {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100%);
    }
}

.notice_mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background: rgba(0,0,0,0.5);
}

.notice_show {
    margin-top: -120rpx;
}

.notice_img {
    width: 620rpx;
    height: 124rpx;
}

.notice_content {
    width: 620rpx;
    max-height: 280rpx;
    background: #fff;
    margin-left: 0rpx;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: -12rpx;
    border-radius: 0 0 10rpx 10rpx;
}

.notice_text {
    max-height: 220rpx;
}

.notice__close image {
    width: 74rpx;
    height: 74rpx;
    display: block;
    margin: 0 auto;
    margin-top: 50rpx;
}

.notice_swiper text {
    height: 44rpx;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}