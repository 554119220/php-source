@import "../../../../../__wuBaseWxss__/18.wxss";

.newCoupon {
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    z-index: 9998;
}

.newCoupon_content {
    width: 580rpx;
    border-radius: 20rpx;
    margin-top: 70rpx;
}

.new_header_pic image {
    width: 580rpx;
    height: 260rpx;
    display: block;
}

.new_header_tips {
    padding: 20rpx 20rpx;
    text-align: center;
    line-height: 1.4;
    background: #eff3f6;
}

.newCoupon_scroll {
    overflow: hidden;
    max-height: 440rpx;
    padding-bottom: 30rpx;
    background: #eff3f6;
    border-bottom-right-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
}

.newCoupon_scroll .coupon_list .coupon_item {
    margin-bottom: 20rpx;
    margin-top: 0;
    border-radius: 10rpx;
    overflow: hidden;
    padding-bottom: 2rpx;
    position: relative;
}

.newCoupon_scroll .coupon_list .coupon_item:last-child {
    margin-bottom: 0rpx;
}

.newCoupon_scroll .coupon_list {
    padding: 0 20rpx;
}

.newCoupon_scroll .coupon_list .item_header {
    padding: 10rpx 0;
}

.newCoupon_scroll .coupon_list .item_bottom {
    padding: 10rpx 30rpx;
}

.newCoupon_close {
    margin-top: 70rpx;
}

.newCoupon_close image {
    width: 74rpx;
    height: 74rpx;
    display: block;
    margin: 0 auto;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}