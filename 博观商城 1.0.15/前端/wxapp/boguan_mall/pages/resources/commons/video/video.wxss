.video {
    position: relative;
    margin-bottom: 20rpx;
}

video {
    width: 100%;
    height: 100%;
}

.play_bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.play_bg .img {
    width: 100%;
    height: 100%;
}

.play_btn {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: calc(50% - 40rpx);
    left: calc(50% - 40rpx);
    z-index: 8;
}

.play_btn .img {
    width: 80rpx;
    height: 80rpx;
}