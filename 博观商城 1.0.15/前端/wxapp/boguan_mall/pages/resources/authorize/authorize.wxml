<template name="authorize">
    <cover-view class="authorize {{infoAuth?'infoAuthHide':'infoAuthShow'}}">
        <cover-view class="authorize_view">
            <cover-image src="{{platform.info.logo?platform.info.logo:'/boguan_mall/pages/img/round_bg.png'}}"></cover-image>
            <cover-view class="authorize_name">{{platform.info.name}}</cover-view>
            <cover-view class="authorize_ds">申请获取您的昵称、头像信息,用于个人中心、分享卡片使用</cover-view>
            <button bindgetuserinfo="getUserInfo" class="authorize_button" openType="getUserInfo">授权信息</button>
        </cover-view>
    </cover-view>
</template>
