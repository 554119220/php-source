.authorize {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    display: flex;
    -ms-flex-align: center;
    -ms-grid-row-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.authorize_view {
    width: 500rpx;
    height: 480rpx;
    padding: 40rpx 30rpx;
    background: #fff;
    border-radius: 5rpx;
}

.authorize_view cover-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0rpx auto;
    margin-bottom: 40rpx;
}

.authorize_name {
    text-align: center;
    color: #333;
    white-space: pre-wrap;
    font-size: 32rpx;
    height: 40rpx;
}

.authorize_ds {
    white-space: pre-wrap;
    padding: 60rpx 0;
    text-align: center;
    line-height: 1.5;
    color: #7f7f7f;
    font-size: 26rpx;
}

.authorize_button {
    width: 440rpx;
    background: #ad0e11;
    color: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
}

.infoAuthShow {
    display: flex;
}

.infoAuthHide {
    display: none;
}