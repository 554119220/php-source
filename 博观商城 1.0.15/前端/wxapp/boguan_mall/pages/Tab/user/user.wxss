@import "../../Home/coupon/coupon_goods/coupon_goods.wxss";

@import "../../resources/authorize/authorize.wxss";

.tabbar_box+.boguan {
    padding-bottom: 121rpx;
}

page {
    height: 100%;
    width: 100%;
}

.no-scroll {
    height: 100%!important;
    overflow-y: hidden;
}

.user_header .shezhi {
    width: 100%;
    height: 44rpx;
}

.user_header .shezhi image {
    width: 44rpx;
    height: 44rpx;
    float: right;
}

.user_pic {
    width: 106rpx;
    height: 106rpx;
    border: 2px solid #fff;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 40rpx 0 10rpx;
}

.user_pic image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
}

.member_info {
    padding: 30rpx 15rpx;
    font-size: 24rpx;
    color: #666;
    border-left: 1px solid #f8f8fa;
}

.member_integral {
    margin-top: 10rpx;
}

.user_name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}

.order {
    background: #fff;
    text-align: center;
    font-size: 26rpx;
    color: #666;
    padding: 20rpx 20rpx;
}

.order_icon {
    border-right: 1rpx solid #e9e9e9;
    position: relative;
}

.order_icon:last-child {
    border-right: none;
}

.order_icon image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 10rpx;
}

.order_num {
    position: absolute;
    top: 0;
    right: 35%;
    background: #ad0e11;
    color: #fff;
    display: block;
    width: 20rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    font-size: 20rpx;
    padding: 6rpx;
    border-radius: 50%;
}

.big_banner {
    margin-top: 20rpx;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
}

.big_banner image {
    width: 100%;
    height: 100%;
}

.my_service {
    margin-top: 20rpx;
    background: #fff;
}

.my_service_tit {
    font-size: 30rpx;
    padding: 30rpx 30rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.service_list {
    padding-top: 30rpx;
    flex-wrap: wrap;
}

.icon_service {
    width: 25%;
    text-align: center;
    font-size: 26rpx;
    color: #666;
    margin-bottom: 30rpx;
}

.icon_service image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 0rpx;
}

.member_product .title {
    font-size: 34rpx;
    color: #333;
    text-align: center;
    line-height: 100rpx;
    background: #fff;
}

.icon_service button {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: transparent;
}

.icon_service button::after {
    border: none;
}

.agent {
    background: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.agent_ico {
    border-bottom: 1rpx solid #ededed;
    padding-bottom: 10rpx;
    font-size: 30rpx;
}

.agent_ico image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.area_price {
    padding: 20rpx 0 0 0;
    text-align: center;
    font-size: 30rpx;
}

.area_price image {
    width: 40rpx;
    height: 38rpx;
    margin-right: 10rpx;
}

.disabled text {
    color: #ccc;
}

.user_header {
    position: relative;
    width: 100%;
    height: 340rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background-size: 100% 100%;
    background: #f2f2fa;
}

.header_bottom {
    padding: 30rpx 0;
    text-align: center;
}

.header_bottom .collection {
    border-right: 1px solid #d3d6d9;
    width: 33.33%;
}

.header_bottom .zuji {
    border-right: 1px solid #d3d6d9;
    width: 33.33%;
}

.header_bottom .jifen {
    border-right: 1px solid transparent;
    width: 33.33%;
}

.wechat_img {
    width: 64rpx;
    height: 64rpx;
    margin-right: 40rpx;
}

.wechat_img image {
    width: 100%;
    height: 100%;
}

.vip_member {
    background: #fff;
    height: 80rpx;
    padding: 0 30rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    font-size: 26rpx;
}

.vip_buy image {
    width: 12rpx;
    height: 22rpx;
    margin-left: 10rpx;
}

.console {
    padding: 20rpx 30rpx;
    margin-top: 20rpx;
    background: #fff;
}

.console image {
    width: 12rpx;
    height: 22rpx;
}

.user_author_btn button {
    width: 180rpx;
    border: 1px solid #ad0e11;
    background: transparent;
    border-radius: 30rpx;
    padding: 12rpx 0;
    color: #ad0e11;
    font-size: 26rpx;
    margin: 0;
    line-height: 1;
}

.user_author_btn button::after {
    border: none;
}