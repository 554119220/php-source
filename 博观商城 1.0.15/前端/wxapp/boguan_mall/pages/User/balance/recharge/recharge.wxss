page {
    background: #fff;
}

.recharge_header {
    border-bottom: 1rpx solid #ededed;
}

.balance_detail {
    height: 50rpx;
    padding: 15rpx 30rpx;
}

.balance_detail navigator {
    display: block;
    float: right;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    background: #c8ad7a;
    color: #fff;
    border-radius: 5rpx;
    text-align: center;
}

.balance_info {
    text-align: center;
}

.my_balance {
    color: #c13b38;
    font-size: 35rpx;
    padding: 15rpx 0;
}

.recharge_title {
    text-align: center;
    padding: 30rpx 0;
}

.recharge_list {
    flex-wrap: wrap;
    align-content: center;
}

.recharge_box {
    width: calc(50% - 80rpx);
    padding: 20rpx 0;
    height: 120rpx;
    box-sizing: border-box;
    text-align: center;
    border: 1rpx solid #b0b0b0;
    border-radius: 8rpx;
    margin: 0rpx 40rpx 30rpx 40rpx;
    flex-wrap: wrap;
}

.recharge_box.active {
    border: 1rpx solid #c13b38;
}

.recharge_box .price {
    width: 100%;
    color: #000;
    font-size: 32rpx;
}

.recharge_box .price text {
    color: #666;
}

.recharge_box .giving {
    color: #b0b0b0;
    font-size: 26rpx;
}

.recharge_input {
    flex-wrap: nowrap;
}

.recharge_input input {
    text-align: right;
    font-size: 32rpx;
}

.recharge_input text {
    padding: 0 40rpx 0 10rpx;
    color: #666;
}

.recharge_input .input_tips {
    text-align: right;
    font-size: 28rpx;
}

.submit {
    padding: 50rpx;
}

.agree {
    margin-top: 30rpx;
    font-size: 26rpx;
}

.agree_text navigator {
    display: inline-block;
    color: #c13b38;
}

checkbox .wx-checkbox-input {
    border-radius: 3rpx;
    height: 26rpx;
    width: 26rpx;
    margin-top: -4rpx;
}