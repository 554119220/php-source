.order_evaluate {
    background: #fff;
    padding: 30rpx;
}

.goods_evaluate {
    border-bottom: 1rpx dashed #ededed;
    padding-bottom: 20rpx;
}

.goods_pic {
    width: 100rpx;
    height: 100rpx;
}

.goods_info {
    padding-left: 20rpx;
}

.goods_name {
    padding-bottom: 10rpx;
    color: #666666;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.goods_summary {
    font-size: 22rpx;
    color: #999999;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.star {
    text-align: center;
    border-bottom: 1rpx dashed #ededed;
}

.star_tit {
    font-size: 32rpx;
    color: #666666;
    padding: 30rpx 0;
}

.comment_Star image {
    width: 45rpx;
    height: 45rpx;
    margin-left: 15rpx;
}

.star_tips {
    color: #999;
    padding: 10rpx 0 30rpx 0;
}

.evaluate_input {
    padding: 30rpx 0;
}

.evaluate_input textarea {
    width: 100%;
    height: 80rpx;
}

.textarea_tips {
    color: #9999;
}

.upload {
    margin-top: 10rpx;
    flex-wrap: wrap;
}

.upload image {
    width: 160rpx;
    height: 160rpx;
}

.pic_show {
    width: 160rpx;
    height: 160rpx;
    position: relative;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.pic_show .close {
    width: 40rpx;
    height: 40rpx;
    padding: 10rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.evaluate_btn {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #c13b38;
    color: #fff;
    text-align: center;
}