.pickUp_day {
    width: 100%;
    background: #fff;
    white-space: nowrap;
    padding: 15rpx 0;
    font-size: 22rpx;
}

.day_item {
    text-align: center;
    display: inline-block;
    padding: 0rpx 22rpx;
    border-right: 1rpx solid #f2f2f2;
}

.day_item .week {
    line-height: 1.2;
}

.day_item.active {
    color: #c13b38;
}

.dayrest {
    color: #999;
}

.rest {
    color: #999;
    background: #e5e5e5;
}

.pickUp_hours {
    font-size: 24rpx;
}

.hours_title {
    background: #e5e5e5;
    text-align: center;
    margin: 20rpx 0;
    color: #999;
    padding: 10rpx 0;
}

.hours_list {
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
}

.hours_item {
    width: calc(100% / 4);
    box-sizing: border-box;
    padding-left: 20rpx;
}

.hours_item:nth-child(4n) {
    padding-right: 20rpx;
}

.hours_item text {
    display: block;
    text-align: center;
    background: #fff;
    border-radius: 5rpx;
    padding: 15rpx 0;
    margin-bottom: 20rpx;
}

.hours_item.active text {
    color: #fff;
    background: #c13b38;
}

.hours_item text.rest {
    background: #e5e5e5;
}

.day_list {
    font-size: 24rpx;
    border-top: 1rpx solid #f2f2f2;
}

.day_list .day_item {
    width: 25%;
    background: #fff;
    box-sizing: border-box;
    padding: 20rpx 0;
    border-right: 1px solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
}

.am_pm {
    padding: 10rpx 0;
}

.am_pm_itme {
    background: #fff;
    border-radius: 5rpx;
    margin: 20rpx 30rpx;
    font-size: 22rpx;
    text-align: center;
}

.am_pm_itme view {
    border-right: 1rpx solid #fff;
    padding: 15rpx 20rpx;
    box-sizing: border-box;
}

.am_pm_itme .active {
    background: #c13b38;
    color: #fff;
}

.am_pm_itme view:first-child {
    width: 20%;
}

.am_pm_itme view:last-child {
    border: 0;
}

.rest_time_tips {
    text-align: center;
    color: #999;
    padding-top: 50rpx;
}