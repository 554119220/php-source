.order_page {
    background: #fff;
}

.order_header {
    background: #fff;
    padding: 20rpx;
}

.order_no,.status_txt {
    font-size: 26rpx;
}

.status_txt {
    color: #ae0e11;
}

.orderProducts {
    padding: 20rpx 20rpx;
}

.orderProduct_pic {
    width: 158rpx;
    height: 158rpx;
}

.orderProduct_pic image {
    width: 100%;
    height: 100%;
}

.orderProduct_tit {
    padding: 0 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
}

.orderProduct_tit .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.orderProduct_tit .spec text {
    display: inline-block;
    font-size: 24rpx;
    color: #525252;
}

.orderProduct_tit .spec text:last-child {
    margin-right: 0rpx;
    display: none;
}

.orderProduct_info {
    width: 150rpx;
    text-align: right;
    line-height: 40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.orderProduct_info .freight {
    color: #969696;
    font-size: 22rpx;
}

.orderProduct_info .number {
    font-size: 24rpx;
}

.refund {
    background: #fff;
    margin-top: 30rpx;
}

.refund_reason,.refund_price {
    padding: 20rpx;
    border-bottom: 1rpx solid #ededed;
}

.refund_pic {
    padding: 20rpx;
}

.refund .lable_tit {
    width: 160rpx;
}

.refund_reason textarea {
    height: 150rpx;
}

.refund_price .price {
    color: #c13b38;
}

.upload {
    margin-top: 10rpx;
    flex-wrap: wrap;
}

.upload image {
    width: 160rpx;
    height: 160rpx;
}

.pic_show {
    width: 160rpx;
    height: 160rpx;
    position: relative;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.pic_show .close {
    width: 40rpx;
    height: 40rpx;
    padding: 10rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.refund_btn button {
    border-radius: 0;
    background: #c13b38;
    font-size: 32rpx;
    color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 10rpx 0;
}

.refund_btn button::after {
    border: none;
}

.refund_tips {
    padding: 20rpx;
    color: #c13b38;
    text-align: center;
    background: #fff;
    margin: 20rpx 0;
}

.refund_pass {
    padding: 20rpx;
    background: #fff;
    margin: 20rpx 0;
}

.refund_pass .express {
    padding: 10rpx 0;
    border-bottom: 1rpx solid #ededed;
}

.refund_pass .express input {
    height: 70rpx;
}

.refund_detail {
    padding: 30rpx;
    background: #fff;
}

.remark_text {
    margin: 20rpx;
}

.refund_remark {
    border-bottom: 1rpx solid #ededed;
}

.store_boss {
    margin-bottom: 10rpx;
}

.upload_img {
    margin-top: 30rpx;
}

.upload_img image {
    width: 130rpx;
    height: 130rpx;
    margin: 20rpx 20rpx;
}

.store_info {
    padding: 30rpx;
    background: #fff;
}

.store_tips {
    padding: 20rpx;
    font-size: 22rpx;
    color: #969696;
}