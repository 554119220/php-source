.order_search {
    background: #fff;
    padding-bottom: 20rpx;
}

.searchLeft input {
    padding-left: 70rpx;
}

.searchLeft .search_text {
    text-align: left;
    margin: 0;
}

.page {
    margin-bottom: 30rpx;
}

.order_status {
    text-align: center;
    height: 75rpx;
    line-height: 75rpx;
    border-top: 1rpx solid #f0f0f0;
    border-bottom: 1rpx solid #f0f0f0;
    background: #fff;
}

.status text {
    padding: 0 20rpx;
    line-height: 75rpx;
    position: relative;
    display: inline-block;
}

.status.active {
    color: #ae0e11;
}

.status.active text::after {
    content: '';
    width: 100%;
    height: 1px;
    background: #ae0e11;
    position: absolute;
    bottom: 0;
    left: 0;
}

.order_page {
    margin-top: 30rpx;
}

.order_header {
    background: #fff;
    padding: 20rpx;
}

.order_no,.status_txt {
    font-size: 26rpx;
}

.status_txt {
    color: #ae0e11;
}

.orderProducts {
    padding: 20rpx 20rpx;
    background: #f9f9f9;
}

.orderProduct_pic {
    width: 158rpx;
    height: 158rpx;
}

.orderProduct_pic image {
    width: 100%;
    height: 100%;
}

.orderProduct_tit {
    padding: 0 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
}

.orderProduct_tit .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.orderProduct_tit .spec text {
    font-size: 24rpx;
    color: #525252;
}

.orderProduct_tit .spec text:last-child {
    display: none;
}

.orderProduct_info {
    width: 150rpx;
    text-align: right;
    line-height: 40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.orderProduct_info .freight {
    color: #969696;
    font-size: 22rpx;
}

.orderProduct_info .number {
    font-size: 24rpx;
}

.order_tips {
    text-align: right;
    padding: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}

.order_tips text {
    color: #c13b38;
}

.order_btn {
    text-align: right;
    padding: 20rpx;
    background: #fff;
}

.order_btn text {
    padding: 6rpx 15rpx;
    display: inline-block;
    font-size: 26rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
}

.cancel {
    border: 1px solid #666666;
    color: #333;
}

.topay {
    border: 1px solid #c13b38;
    color: #c13b38;
}

.not_order {
    padding: 200rpx 0;
}

.not_order image {
    width: 250rpx;
    height: 250rpx;
    display: block;
    margin: 0 auto;
}

.not_order_tips {
    display: block;
    font-size: 22rpx;
    color: #999;
    text-align: center;
    margin-top: 30rpx;
}

.not_order_btn {
    border: 1rpx solid #666;
    font-size: 24rpx;
    padding: 8rpx 10rpx;
    text-align: center;
    display: block;
    width: 130rpx;
    margin: 30rpx auto;
    border-radius: 5rpx;
    color: #666;
}

.store_info {
    background: #fff;
    padding: 20rpx 20rpx 0rpx 20rpx;
}

.shop-logo image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.shop-sm image {
    width: 12rpx;
    height: 22rpx;
}

.look_more {
    background: #fff;
    text-align: center;
    color: #c13b38;
    padding: 15rpx 0;
    font-size: 26rpx;
}

.order_list {
    height: 398rpx;
    overflow: hidden;
}

.weui-cell-rot {
    height: auto;
}