.pickUp_code {
    padding: 30rpx;
}

.pickUp {
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    padding: 30rpx;
}

.ziti_info {
    padding-bottom: 50rpx;
}

.ziti_tit {
    margin-bottom: 15rpx;
    line-height: 1;
}

.ziti_name {
    font-size: 30rpx;
    line-height: 35rpx;
}

.ziti_icon {
    color: #ff9e9e;
    font-size: 20rpx;
    border: 1rpx solid #ff9e9e;
    border-radius: 5rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding: 0rpx 5rpx;
    margin-left: 10rpx;
}

.ziti_address {
    margin-top: 10rpx;
    font-size: 26rpx;
}

.ziti_address image {
    width: 40rpx;
    height: 40rpx;
}

.ziti_time {
    margin-top: 10rpx;
    font-size: 26rpx;
}

.ziti_time image {
    width: 40rpx;
    height: 40rpx;
}

.code_content {
    position: relative;
}

.barcode {
    padding: 60rpx 0;
    text-align: center;
    font-size: 28rpx;
}

.barcode image {
    width: 514rpx;
    height: 134rpx;
    display: block;
    margin: 0 auto;
}

.barcode_number {
    margin-top: 20rpx;
}

.wechat_qrcode {
    padding: 40rpx 0;
}

.wechat_qrcode image {
    width: 420rpx;
    height: 420rpx;
    display: block;
    margin: 0 auto;
}

.wechat_tit {
    text-align: center;
    margin-top: 60rpx;
}

.goods {
    padding: 60rpx 0;
    font-size: 26rpx;
}

.goods_num {
    padding-left: 30rpx;
}

.detail text {
    width: 131rpx;
    text-align: center;
    padding: 12rpx 20rpx;
    border-radius: 10rpx;
    display: block;
    margin: 0 auto;
    border: 1rpx solid #ccc;
}

.qrcode_opacity {
    opacity: 0.3;
}

.send {
    position: absolute;
    top: 100rpx;
    right: 50rpx;
    z-index: 99;
}

.send image {
    width: 158rpx;
    height: 158rpx;
}

.send_time {
    text-align: center;
    color: #000;
    font-size: 30rpx;
}