.art_swith {
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #ededed;
}

.art_swith text {
    position: relative;
    height: 85rpx;
    line-height: 85rpx;
    display: inline-block;
    padding: 0 10rpx;
}

.art_swith .active text {
    color: #ad0e11;
}

.art_swith text::after {
    width: 100%;
    height: 5rpx;
    content: "";
    background: transparent;
    position: absolute;
    bottom: 0rpx;
    left: 0;
}

.art_swith .active text::after {
    background: #ad0e11;
}

.detail_item {
    border-bottom: 1rpx solid #ededed;
}

.detail_item {
    padding: 20rpx 30rpx;
    background: #fff;
}

.price_time .price text {
    color: #ad0e11;
}

.price_time .time {
    font-size: 24rpx;
    color: #999;
}

.status {
    color: #ad0e11;
    font-size: 26rpx;
}

.tips {
    font-size: 22rpx;
    color: #999;
    text-align: center;
    margin-top: 30rpx;
}