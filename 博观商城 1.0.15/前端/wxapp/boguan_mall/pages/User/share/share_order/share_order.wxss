.art_swith {
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #ededed;
}

.art_swith text {
    position: relative;
    height: 85rpx;
    line-height: 85rpx;
    display: inline-block;
    padding: 0 10rpx;
}

.art_swith .active text {
    color: #ad0e11;
}

.art_swith text::after {
    width: 100%;
    height: 5rpx;
    content: "";
    background: transparent;
    position: absolute;
    bottom: 0rpx;
    left: 0;
}

.art_swith .active text::after {
    background: #ad0e11;
}

.share_order {
    padding: 0 30rpx;
    background: #fff;
    margin-top: 30rpx;
}

.order {
    padding: 20rpx 0;
    font-size: 24rpx;
    border-bottom: 1rpx solid #ededed;
}

.order_status {
    color: #ad0e11;
}

.user_info {
    padding: 20rpx 0;
    font-size: 24rpx;
}

.user_logo {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    overflow: hidden;
}

.user_logo image {
    width: 100%;
    height: 100%;
}

.user_name {
    margin-left: 20rpx;
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user_price {
    text-align: right;
}

.user_price text {
    color: #ad0e11;
}

.share_goods {
    font-size: 24rpx;
    border-top: 1rpx solid #ededed;
    padding: 10rpx 0;
    color: #999;
}

.share_goods image {
    width: 18rpx;
    height: 18rpx;
}

.goods {
    border-bottom: 1rpx solid #ededed;
    padding: 10rpx 0;
    display: none;
    width: 100%;
    flex-wrap: wrap;
}

.goods.active {
    display: flex;
}

.goods:last-child {
    border: 0;
}

.goods_pic {
    width: 80rpx;
    height: 80rpx;
}

.goods_pic image {
    width: 100%;
    height: 100%;
}

.goods_name {
    font-size: 22rpx;
    padding: 0 10rpx 0 20rpx;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 38rpx;
}

.goods_num {
    font-size: 22rpx;
}

.goods_list {
    width: 100%;
    padding: 10rpx 0;
    border-bottom: 1rpx solid #ededed;
}

.tips {
    font-size: 22rpx;
    color: #999;
    text-align: center;
    margin-top: 30rpx;
}