.balance {
    border-bottom: 1rpx solid #ededed;
    padding: 20rpx 30rpx;
    background: #fff;
}

.balance text {
    font-size: 34rpx;
}

.forward_price {
    padding: 20rpx 30rpx;
    background: #fff;
}

.forward_price .icon {
    color: #ad0e11;
    font-size: 34rpx;
}

.forward_price input {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 20rpx;
    font-size: 34rpx;
}

.forward_price .priceTips {
    font-size: 28rpx;
}

.tips {
    padding: 30rpx 30rpx;
    font-size: 22rpx;
    color: #666;
}

.forward_type {
    padding: 30rpx 28rpx;
    background: #fff;
}

.forward_type .title {
    margin-bottom: 10rpx;
}

.type {
    flex-wrap: wrap;
}

.type {
    position: relative;
    border: 1rpx solid #666;
    padding: 12rpx 17rpx;
    margin-right: 20rpx;
}

.type :last-child {
    margin-right: 0;
}

.type .type_icon image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.type .name {
    line-height: 1;
    font-size: 26rpx;
}

.type .active {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
}

.type.active {
    border-color: #ad0e11;
}

.forward_page {
    padding: 0 30rpx;
    margin-top: 30rpx;
    background: #fff;
}

.forward_page input {
    padding-left: 20rpx;
    height: 70rpx;
}

.Alipay .Alipay_name {
    border-bottom: 1rpx solid #ededed;
}

.Alipay_name,.Alipay_number {
    padding: 10rpx 0;
}

.input_tips {
    font-size: 26rpx;
    color: #999;
}

.card_name,.card_bank {
    border-bottom: 1rpx solid #ededed;
}

.card_name,.card_bank,.card_number {
    padding: 10rpx 0;
}

.card_name text,.card_bank text,.card_number text {
    width: 110rpx;
}

.forward_button {
    padding: 30rpx;
    margin-top: 80rpx;
}

.forward_btn::after {
    border: none;
}

.forward_btn {
    background: #ad0e11;
    color: #fff;
    font-size: 28rpx;
    padding: 5rpx 0;
}