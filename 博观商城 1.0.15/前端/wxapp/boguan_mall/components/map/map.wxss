.map_title {
    padding: 20rpx 20rpx;
    display: flex;
    position: relative;
    align-items: center;
}

.map_text {
    flex-grow: 1;
}

.map_ico {
    width: 11rpx;
    height: 18rpx;
}

.map_content {
    position: relative;
    height: 400rpx;
    overflow: hidden;
}

map {
    width: 100%;
    height: auto;
}

.map {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
}

.mapHide {
    display: none;
}

.map_title .map_title_after {
    content: "";
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -8rpx;
    display: block;
    transform: rotate(135deg);
    border-left: 3rpx solid #666;
    border-top: 3rpx solid #666;
}