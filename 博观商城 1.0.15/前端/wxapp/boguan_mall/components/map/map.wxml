<view bindtap="openLocation" class="map_title flex-row" data-address="{{mapAarry.markers[0].address}}" data-latitude="{{mapAarry.markers[0].latitude}}" data-longitude="{{mapAarry.markers[0].longitude}}" data-name="{{mapAarry.markers[0].callout.content}}" style="background:{{mapAarry.bgColor}};color:{{mapAarry.titColor}}">
    <view class="map_text">{{mapAarry.titName}}</view>
    <text class="map_title_after" style="border-color:{{mapAarry.titColor}}"></text>
</view>
<view class="map_content {{mapAarry.stylediy=='true'?'mapShow':'mapHide'}}">
    <map class="map" id="map" latitude="{{mapAarry.markers[0].latitude}}" longitude="{{mapAarry.markers[0].longitude}}" markers="{{mapAarry.markers}}" scale="14" style="width: 100%; height: 400rpx;"></map>
</view>
