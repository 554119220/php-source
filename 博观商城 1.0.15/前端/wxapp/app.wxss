@import "boguan_mall/pages/resources/tabbar/tabbar.wxss";

@import "boguan_mall/pages/resources/backicon/backicon.wxss";

@import "boguan_mall/pages/resources/loading/loading.wxss";

@import "boguan_mall/pages/resources/modal/modal.wxss";

page {
    width: 100%;
    height: 100%;
    display: block;
    font-family: PingFangSC-Regular,-apple-system-font,'Helvetica Neue',Helvetica,'Microsoft YaHei',sans-serif;
    font-size: 28rpx;
    background: #f2f2f2;
    color: #333;
}

.word_button,.project_button,.selectart_btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #189a88;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    font-size: 35rpx;
}

.disabled {
    background: rgba(0,0,0,0.3)!important;
    pointer-events: none;
}

.btndisabled {
    pointer-events: none;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-grow-1 {
    min-width: 0;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-negative: 1;
    flex-shrink: 1;
}

.flex-grow-0 {
    min-width: 0;
    -webkit-box-flex: 0;
    -ms-flex-positive: 0;
    flex-grow: 0;
    -ms-flex-negative: 0;
    flex-shrink: 0;
}

.flex-col {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    flex-direction: column;
}

.flex-y-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -ms-grid-row-align: center;
    align-items: center;
}

.flex-x-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.flex-y-bottom {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: end;
    -ms-flex-align: end;
    -ms-grid-row-align: flex-end;
    align-items: flex-end;
}

.getUser {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9998;
    background: rgba(0,0,0,0.5);
}

.getUserTip {
    width: 80%;
    height: 580rpx;
    background: #fff;
    border-radius: 5px;
    position: absolute;
    z-index: 99999;
    top: calc(50% - 300rpx);
    left: 10%;
    padding: 10rpx 0;
}

.tip-text {
    text-align: center;
    font-size: 12pt;
    border-bottom: 1px solid #cecece;
    padding: 20rpx 0;
}

.tip-logo image {
    width: 120rpx;
    height: 120rpx;
    margin: 20rpx auto;
    display: block;
    border-radius: 50%;
}

.tip-info {
    margin: 0 60rpx;
}

.tip-info .tip-name {
    font-size: 11pt;
    border-bottom: 1px solid #cecece;
    padding-bottom: 20rpx;
}

.tip-content {
    font-size: 11pt;
    color: #848484;
    padding: 20rpx 0rpx;
}

.tip-btn button {
    width: 100%;
    font-size: 11pt;
    text-align: center;
    margin-top: 10rpx;
    color: #f00;
    border: none;
    background: transparent;
    border-radius: none;
    height: 45px;
    line-height: 45px;
    position: absolute;
    bottom: 0;
    left: 0;
    border-top: 1px solid #cecece;
}

.tip-btn button::after {
    border: none;
    border-radius: none;
}

.product_vip {
    border: 1px solid #e0ce94;
    display: table;
    border-radius: 5rpx;
    color: #a17832;
    font-size: 20rpx;
    margin-top: 5rpx;
    padding-right: 5rpx;
}

.vipPrice-left {
    background-image: linear-gradient(-180deg,#faf9f1 0%,#eee4c0 100%);
    padding: 0rpx 5rpx;
    display: inline-block;
}

.vip_price {
    margin: 0 5rpx;
}

.submit-btn {
    background: #c13b38;
    color: #fff;
    font-size: 30rpx;
}

.submit-btn::after {
    border: none;
    border-radius: none;
}

.soldOut .soldOut_img {
    position: relative;
}

.soldOut .soldOut_img::after {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    content: '';
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
}

.soldOut .soldOut_img::before {
    content: '已售罄';
    position: absolute;
    width: 100%;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
    z-index: 2;
    color: #fff;
    text-align: center;
}

.soldOut .buylimit_goods_addition-btn {
    background: rgba(0,0,0,0.3)!important;
    pointer-events: none;
}

.soldOut .buylimit_goods_ellips text {
    background: rgba(0,0,0,0.3)!important;
}