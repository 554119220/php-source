.coupon_list {
    padding: 0 30rpx;
}

.coupon_list .coupon_item {
    margin-top: 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
    padding-bottom: 2rpx;
}

.coupon_list .item_header {
    padding: 20rpx 0;
    color: #fff;
}

.coupon_list .coupon_price {
    font-size: 30rpx;
    width: 190rpx;
    text-align: center;
    border-right: 1px dashed #fff;
    padding: 10rpx 0;
    overflow: hidden;
}

.coupon_list .coupon_price text {
    font-size: 20rpx;
}

.coupon_list .apply_type {
    padding-left: 30rpx;
    font-size: 24rpx;
}

.coupon_list .apply_type view {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.coupon_list .ling-btn {
    padding: 0 30rpx;
}

.coupon_list .ling-btn text {
    display: block;
    background: #fff;
    padding: 5rpx 10rpx;
    border-radius: 8rpx;
    color: rgb(255,85,0);
    font-size: 22rpx;
}

.coupon_list .card_bg {
    height: 8rpx;
    width: 100%;
    display: block;
}

.coupon_list .item_bottom {
    color: #999;
    padding: 15rpx 30rpx;
    background: #fff;
    font-size: 24rpx;
}

.ling-btn .receive {
    color: #ccc!important;
}