.swiper {
    width: 750rpx;
    height: 300rpx;
    position: relative;
}

.swiper-view-tab {
    width: 670rpx;
    height: 100rpx;
    color: #ffffff;
    font-weight: bold;
    background: #2c282e;
    position: absolute;
    z-index: 100;
    top: 20rpx;
    left: 40rpx;
}

.lunbo-left-img {
    width: 16rpx;
    height: 30rpx;
    padding: 30rpx;
    transform: rotate(180deg);
    position: absolute;
    left: 0;
    top: 40rpx;
}

.lunbo-right-img {
    width: 16rpx;
    height: 30rpx;
    padding: 30rpx;
    position: absolute;
    right: 0;
    top: 40rpx;
}

.swiper-view-item {
    width: 50%;
}

.circle {
    width: 18rpx;
    height: 18rpx;
    border-radius: 35px;
    border: 2px solid #ffffff;
    margin-right: 20rpx;
}

.swiper-active-cirlce {
    border: 2px solid #ffd101;
}

.swiper-active-font {
    color: #ffd101;
}

.line-c {
    width: 2px;
    height: 40rpx;
    background: #ffffff;
}

.car-big-box {
    width: 100%;
    padding: 20rpx 0;
}

.car-box {
    width: 670rpx;
    background: #ffffff;
}

.scroll-view {
    width: 670rpx;
    padding: 20rpx;
    background: #ffffff;
    overflow: hidden;
    white-space: nowrap;
    box-sizing: border-box;
}

.scroll-item {
    width: 160rpx;
    display: inline-block;
    text-align: center;
}

.scroll-item-img {
    width: 50rpx;
    height: 32rpx;
}

.scroll-font {
    font-size: 24rpx;
    color: #54575e;
    margin-top: 20rpx;
}

.swiper-car {
    width: 100%;
    height: 240rpx;
}

.car-param-box {
    width: 100%;
    padding: 20rpx 90rpx 20rpx 140rpx;
    position: absolute;
    bottom: 0;
}

.car-param-name {
    font-size: 24rpx;
    font-weight: bold;
}

.car-param {
    color: #9f9f9f;
    font-size: 24rpx;
}

.address-sign {
    padding: 40rpx;
    font-weight: bold;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #f7f7f7;
    background: #ffffff;
}

.goods-title {
    font-weight: bold;
}

.address-des {
    color: #808088;
    font-size: 24rpx;
    width: 580rpx;
}

.city-item-box {
    width: 100%;
    background: #ffffff;
    padding: 0 40rpx;
}

.param-item {
    width: 100%;
    padding: 20rpx 0;
}

.weight-img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
}

.footer {
    width: 100%;
    background: #ffffff;
    margin: 20rpx 0;
}

.price-predict-font {
    margin-top: 40rpx;
}

.price-predict-money {
    font-size: 50rpx;
    font-weight: bold;
}

.price-des {
    color: #808088;
    font-size: 24rpx;
    margin: 10rpx 0;
}

.confirm-btn {
    width: 670rpx;
    height: 70rpx;
    font-size: 36rpx;
    background: #ffd101;
    border-radius: 35px;
    margin: 50rpx 0 30rpx 0;
}

.confirm-btn:after {
    border: 0;
}

.carbg-active {
    color: #ffd101;
}