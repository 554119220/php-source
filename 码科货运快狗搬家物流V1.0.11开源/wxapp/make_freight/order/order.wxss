.address-sign {
    padding: 40rpx;
    font-weight: bold;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #f7f7f7;
    background: #ffffff;
}

.address-sign-des {
    color: #808088;
    font-size: 20rpx;
}

.address-img {
    width: 31rpx;
    height: 31rpx;
    margin-right: 40rpx;
}

.item-box {
    padding: 0 40rpx;
    width: 100%;
    background: #ffffff;
}

.address-item {
    padding: 30rpx 0;
}

.address-des {
    color: #808088;
    font-size: 24rpx;
}

.item-right-font {
    color: #808088;
    margin-right: 20rpx;
}

.view-line-box {
    width: 100%;
    padding-left: 70rpx;
}

.line {
    width: 100%;
    height: 1px;
    background: #f7f7f7;
}

.item-view {
    width: 100%;
    background: #ffffff;
    padding-left: 40rpx;
}

.f-w {
    font-size: 34rpx;
}

.item {
    width: 100%;
    padding: 30rpx 40rpx 30rpx 0;
    border-top: 1px solid #f7f7f7;
}

.item-right {
    color: #808088;
}

.item-right-input {
    text-align: right;
}

.item-right-img {
    width: 14rpx;
    height: 24rpx;
    margin-left: 20rpx;
}

.item-left-font-des {
    color: #ffd101;
    font-size: 24rpx;
}

.item-left-des {
    color: #808088;
    font-size: 24rpx;
}

.price-des-img {
    width: 26rpx;
    height: 26rpx;
}

.f-r {
    color: #ff0000;
}

.footer {
    width: 100%;
    padding: 70rpx 0 40rpx 0;
}

.confirm-btn {
    width: 670rpx;
    height: 90rpx;
    font-size: 36rpx;
    background: #ffd101;
    border-radius: 35px;
    margin: 50rpx 0 30rpx 0;
}

.confirm-btn:after {
    border: 0;
}

.no-use {
    border: 1px solid #ffd101;
    padding: 10rpx 20rpx;
    border-radius: 35px;
    color: #808080;
    font-size: 24rpx;
    margin-right: 20rpx;
}