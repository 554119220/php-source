page {
    padding-bottom: 100rpx;
}

.banner {
    width: 100%;
    height: 350rpx;
}

.mdFooter {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    height: 98rpx;
    border-top: 1rpx solid #eee;
    background: #fff;
}

.server image {
    width: 44rpx;
    height: 36rpx;
}

.buy image {
    width: 36rpx;
    height: 36rpx;
}

.server image,.buy image {
    margin-top: 16rpx;
}

.server,.buy {
    width: 145rpx;
    font-size: 24rpx;
    text-align: center;
}

.mdFooter view:nth-child(3),.mdFooter view:nth-child(4),.gobuy {
    margin: 24rpx 10rpx 24rpx 10rpx;
    width: 40%;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: #2082ac;
}

.mdFooter view:nth-child(4),.gobuy {
    background: #e85443;
}

.mdiTit {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
}

.mdiTit view:nth-child(1) {
    margin-left: 20rpx;
    font-size: 36rpx;
}

.mdiTit view:nth-child(2) {
    margin: 1rpx 0 0 20rpx;
    padding: 2rpx 10rpx;
    font-size: 24rpx;
    border: 1rpx solid #3daddd;
    color: #3daddd;
}

.mdiTit view:nth-child(3) {
    flex: 1;
    text-align: right;
    font-size: 24rpx;
    color: #f1b000;
}

.mdiTit view:nth-child(4) {
    margin-right: 20rpx;
    font-size: 36rpx;
    color: #f1b000;
    font-family: Arial,Helvetica,sans-serif;
}

.mdiCont {
    margin: 20rpx 20rpx 0 20rpx;
    padding-bottom: 20rpx;
    font-size: 26rpx;
    color: #999;
    border-bottom: 1rpx solid #eee;
}

.mdtit {
    margin-top: 20rpx;
    font-size: 30rpx;
    text-align: center;
}

.wxParse-p {
    margin-top: 10rpx;
    padding: 0 30rpx 30rpx 30rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #eee;
}

.wxParse-p image {
    margin-top: 12rpx;
}