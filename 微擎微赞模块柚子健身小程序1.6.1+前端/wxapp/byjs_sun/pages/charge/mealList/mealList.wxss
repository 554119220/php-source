page {
    padding-bottom: 100rpx;
}

.oshow {
    display: block;
}

.ohide {
    display: none;
}

.flexSb {
    display: flex;
    justify-content: space-between;
}

.swiper-tab {
    display: flex;
    height: 80rpx;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.tab-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
}

.tab-item.active {
    color: #3daddd;
}

.borderBlue {
    height: 30rpx;
    width: 0;
    border-right: 1rpx solid #3daddd;
}

.mealList {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.mealRig {
    flex: 1;
    margin-right: 20rpx;
}

.mealLef {
    width: 340rpx;
    height: 240rpx;
    margin: 0 20rpx;
}

.mealTit {
    font-size: 30rpx;
}

.mealName {
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    font-size: 26rpx;
    color: #999;
}

.mealrBot,.mealrBot1 {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.mealrBot view:nth-child(1) {
    padding: 3rpx 10rpx;
    font-size: 24rpx;
    color: #3daddd;
    border: 1rpx solid #3daddd;
}

.mealrBot view:nth-child(2) {
    margin-top: 5rpx;
    flex: 1;
    text-align: right;
    font-size: 24rpx;
    color: #f1b000;
}

.mealrBot view:nth-child(3) {
    font-size: 36rpx;
    color: #f1b000;
}

.residue {
    flex: 1;
}

.residue>view {
    width: 110rpx;
    padding: 3rpx 10rpx;
    font-size: 24rpx;
    color: #f1b000;
    border: 1rpx solid #f1b000;
    text-align: center;
}

.mealrBot1 navigator:nth-child(2),.book {
    height: 50rpx;
    line-height: 50rpx;
    background: #e85443;
    padding: 0 14rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 10rpx;
}