.shoppingCart {
    border-top: 1rpx solid #f5f5f5;
    padding-top: 50rpx;
}

.shoppingCart-list {
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 30rpx;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.checkbox {
    margin-right: 30rpx;
    width: 36rpx;
    height: 36rpx;
}

.check {
    width: '';
    height: 100%;
    max-width: 100%;
}

.shoppingCart-img-box {
    width: 200rpx;
    height: 220rpx;
}

.shoppingCart-text {
    padding-top: 10rpx;
    padding-left: 30rpx;
    width: 420rpx;
    position: relative;
}

.shoppingCart-text-type {
    padding-top: 20rpx;
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.shoppingCart-text-type text:nth-child(2) {
    padding-left: 90rpx;
}

.shoppingCart-text-title {
    padding-bottom: 30rpx;
    font-size: 26rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 350rpx;
}

.shoppingCart-text-picer {
    font-size: 30rpx;
    color: #f1b000;
    margin-top: 20rpx;
}

.clear {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
}

.count {
    display: flex;
    flex-direction: row;
    width: 186rpx;
    height: 50rpx;
    text-align: center;
    align-items: center;
    border: 1rpx solid #f5f5f5;
    border-radius: 10rpx;
}

.icon-main {
    width: 30rpx;
    height: 4rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.icon-add {
    width: 30rpx;
    height: 30rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.count-text {
    width: 100rpx;
    font-size: 24rpx;
    border-left: 1rpx solid #ddd;
    border-right: 1rpx solid #ddd;
    height: 50rpx;
    line-height: 50rpx;
}

.shoppingCart-footer {
    height: 131rpx;
}

.shoppingCart-footer-list {
    height: 70rpx;
    width: 700rpx;
    border-top: 1rpx solid #f5f5f5;
    padding: 30rpx 20rpx 30rpx 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.count-number {
    font-size: 28rpx;
}

.count-number .col {
    font-size: 30rpx;
    color: #f1b000;
}

.count-number view:nth-child(2) {
    padding-top: 10rpx;
}

.allCheckbox {
    padding-right: 20rpx;
    font-size: 28rpx;
}

.clearing {
    position: absolute;
    right: 20rpx;
    width: 320rpx;
    height: 70rpx;
    border-radius: 10rpx;
    background: #e85544;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
}

.num-box {
    display: flex;
    border-radius: 10rpx;
    width: 170rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.num-box-munus {
    width: 51rpx;
    text-align: center;
    line-height: 50rpx;
}

.num-box-add {
    width: 52rpx;
    text-align: center;
}

.minus-btn {
    width: 51rpx;
    height: 50rpx;
}

.flex-0-0 {
    flex: 0 0 auto;
}

.num-input {
    text-align: center;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    height: 50rpx;
    line-height: 50rpx;
    box-sizing: border-box;
    min-height: 50rpx;
    font-size: 28rpx;
}