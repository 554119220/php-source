    text-overflow: ellipsis;
}

.price {
    font-size: 34rpx;
    color: #f1b000;
    line-height: 50rpx;
    margin-bottom: 10rpx;
}

.list-box {
    display: flex;
    flex-wrap: wrap;
    padding-left: 25rpx;
    padding-top: 25rpx;
}