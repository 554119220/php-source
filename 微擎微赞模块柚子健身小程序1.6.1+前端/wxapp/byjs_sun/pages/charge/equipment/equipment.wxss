page {
    line-height: 0;
}

.img {
    width: 340rpx;
    height: 240rpx;
}

.list {
    width: 340rpx;
    margin-right: 20rpx;
    line-height: 44rpx;
    box-sizing: border-box;
}

.list-img {
    width: 340rpx;
