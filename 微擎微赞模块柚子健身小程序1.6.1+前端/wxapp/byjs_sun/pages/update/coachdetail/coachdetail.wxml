<view class="fixed-right">
    <view bindtap="toIndex">
        <image src="../../../resource/images/index/homepage.png"></image>
    </view>
</view>
<view class="container">
    <image class="slide-image" src="{{url}}{{list.background}}"></image>
    <view bindtap="goCoachbooking" class="coach_wrap" data-coach="{{list.coach_name}}" data-id="{{list.id}}" data-img="{{list.logo}}" data-money="{{list.appmoney}}">
        <view bindtap="goCoachdetail" class="coach_list">
            <image src="{{url}}{{list.logo}}"></image>
            <view class="flex-1-1">
                <view class="font-28 eellipsis">{{list.coach_name}}</view>
                <view class="font-26 color_999 eellipsis">{{list.msg}}</view>
                <view class="font-26 color_999 eellipsis">预约价：{{list.appmoney}} 元</view>
            </view>
            <button>预约Ta</button>
        </view>
    </view>
    <view class="title">
        <image class="icon_title" src="../../../resource/images/update/msg.png"></image>
      基本信息
    </view>
    <view class="msg">
        <view class="flex-0-0">
            <view>星级：{{list.star}}星</view>
            <view>好评率：{{list.parise}}</view>
            <view>工作年龄: {{list.life}}年</view>
        </view>
        <view class="flex-1-1">{{list.detail}}</view>
    </view>
    <view class="title" wx:if="{{coachList.length!=0}}">
        <image class="icon_title" src="../../../resource/images/update/coach.png"></image>
    授课课程
  </view>
    <view bindtap="goCourseGoInfo" class="coachList" data-cid="{{item.cid}}" data-id="{{item.cid1}}" wx:for="{{coachList}}">
        <view>{{item.course_name}}</view>
        <view class="font-30 color_e85544">¥ {{item.course_price}}</view>
    </view>
    <view class="title">
        <image class="icon_title" src="../../../resource/images/update/fengcai.png"></image>
    教练风采
  </view>
    <rich-text nodes="{{list.coach_detail}}"></rich-text>
</view>
<login bindtogetuserinfo="updateUserInfo" modalHidden="{{is_modal_Hidden}}"></login>
