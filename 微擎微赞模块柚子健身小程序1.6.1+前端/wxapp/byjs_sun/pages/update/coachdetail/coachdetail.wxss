.slide-image {
    width: 100%;
    height: 300rpx;
}

swiper {
    padding: 30rpx;
}

.coach_wrap {
    border-bottom: 10rpx solid #f5f5f5;
    padding: 30rpx;
}

.fixed-right {
    position: fixed;
    right: 0rpx;
    bottom: 180rpx;
    z-index: 10;
}

.fixed-right>view>image {
    height: 80rpx;
    width: 80rpx;
}

.coach_list {
    display: flex;
    align-items: center;
    padding: 30rpx;
    overflow: hidden;
    position: relative;
    border: 1rpx solid #ddd;
    line-height: 58rpx;
}

.coach_list .flex-1-1 {
    position: relative;
    overflow: hidden;
}

.coach_list image {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    flex: 0 0 auto;
    margin-right: 30rpx;
}

.coach_list button {
    font-size: 30rpx;
    color: #fff;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #e85544;
    border-radius: 20rpx;
    flex: 0 0 auto;
    margin-left: 30rpx;
    padding: 0;
}

.title {
    display: flex;
    height: 88rpx;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
    margin: 0 30rpx;
    font-size: 30rpx;
}

.icon_title {
    height: 36rpx;
    width: 36rpx;
    margin-right: 20rpx;
}

.msg {
    display: flex;
    font-size: 28rpx;
    padding: 0 30rpx;
    border-bottom: 10rpx solid #f5f5f5;
    align-items: center;
}

.msg .flex-0-0 {
    line-height: 56rpx;
    width: 210rpx;
    border-right: 1rpx solid #ddd;
    height: 200rpx;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
}

.msg .flex-1-1 {
    line-height: 52rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
}

.color_e85544 {
    color: #e85544;
}

.coachList {
    display: flex;
    height: 88rpx;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
    margin: 0 30rpx;
    font-size: 28rpx;
    justify-content: space-between;
}