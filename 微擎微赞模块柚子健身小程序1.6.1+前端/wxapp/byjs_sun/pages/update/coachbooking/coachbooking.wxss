.top {
    font-size: 28rpx;
    background: #f5f5f5;
    height: 60rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.list {
    height: 88rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    font-size: 28rpx;
}

.list input {
    flex: 1 1 auto;
    font-size: 28rpx;
}

.picker {
    height: 88rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.title {
    display: flex;
    height: 88rpx;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
    padding: 0 30rpx;
    font-size: 30rpx;
}

.icon_title {
    height: 36rpx;
    width: 36rpx;
    margin-right: 20rpx;
}

.radio_list {
    border-bottom: 1rpx solid #ddd;
    height: 86rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
    font-size: 28rpx;
}

.textarea_box {
    padding: 30rpx;
}

textarea {
    width: 100%;
    background: #f5f5f5;
    font-size: 28rpx;
    height: 250rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.btn {
    margin: 30rpx;
    color: #fff;
    font-size: 34rpx;
    background: #3daddd;
}