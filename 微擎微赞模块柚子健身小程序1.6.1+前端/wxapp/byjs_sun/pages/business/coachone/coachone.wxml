<view class="container">
    <view class="top-box">
        <image class="top-box_bg" src="{{url}}{{user.background}}"></image>
        <view class="top-container">
            <view class="flex-0-0">
                <image src="{{url}}{{user.logo}}"></image>
            </view>
            <view class="flex-1-1 color_fff font-32">{{user.coach_name}}</view>
        </view>
    </view>
    <view class="font-28 top_list-box">
        <view>
            <view class="">今日预约</view>
            <view class="color_ff5046">{{today}}</view>
        </view>
        <view>
            <view class="">总预约量</view>
            <view class="color_ff5046">{{total}}</view>
        </view>
    </view>
    <view class="list-tile font-28">
        <image class="width36" src="../../../resource/images/business/icon-order.png"></image>课程预约管理
  </view>
    <view class="list1">
        <view bindtap="goBespoke" data-id="0" data-state="1">
            <view>
                <image class="width360" src="../../../resource/images/business/icon-waitingList.png"></image>
            </view>
            <view class="font-26">
                <text class="color_999999">未确认 </text>
                <text class="color_ff5046">{{noSure2}}</text>
            </view>
        </view>
        <view bindtap="goBespoke" data-id="0" data-state="2">
            <view>
                <image class="width360" src="../../../resource/images/business/icon-goSuccess.png"></image>
            </view>
            <view class="font-26">
                <text class="color_999999">已确认  </text>
                <text class="color_ff5046">{{Sure2}}</text>
            </view>
        </view>
    </view>
    <view class="list-tile font-28">
        <image class="width36" src="../../../resource/images/business/icon-order.png"></image>教练预约管理
  </view>
    <view class="list1">
        <view bindtap="goBespoke" data-id="1" data-state="1">
            <view>
                <image class="width360" src="../../../resource/images/business/icon-waitingList.png"></image>
            </view>
            <view class="font-26">
                <text class="color_999999">未确认 </text>
                <text class="color_ff5046">{{noSure1}}</text>
            </view>
        </view>
        <view bindtap="goBespoke" data-id="1" data-state="2">
            <view>
                <image class="width360" src="../../../resource/images/business/icon-goSuccess.png"></image>
            </view>
            <view class="font-26">
                <text class="color_999999">已确认  </text>
                <text class="color_ff5046">{{Sure1}}</text>
            </view>
        </view>
    </view>
    <button bindtap="loginout" class="btn5 color_fff font-34">退出登录</button>
</view>
