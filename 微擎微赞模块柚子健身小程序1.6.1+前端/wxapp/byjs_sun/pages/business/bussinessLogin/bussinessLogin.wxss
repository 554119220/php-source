.business-login-back {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.business-block {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    width: 610rpx;
    height: 172rpx;
    background: rgba(245,245,245,0.6);
    font-size: 26rpx;
    border-radius: 10rpx;
    border: 1rpx solid rgba(42,174,253,0.6);
}

.icon-user {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.business-input-pow,.business-input-user {
    height: 85rpx;
    line-height: 85rpx;
    padding-left: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.business-input-user {
    border-bottom: 1rpx solid #2aaefd;
}

.business-input {
    width: 500rpx;
    height: 85rpx;
}

.icon-login {
    margin-top: 60rpx;
    width: 610rpx;
    height: 86rpx;
    line-height: 86rpx;
    background: #2aaefd;
    border-radius: 10rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
}