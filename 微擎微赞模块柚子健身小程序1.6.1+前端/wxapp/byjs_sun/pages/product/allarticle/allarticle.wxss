page {
    border-top: 1rpx solid #ddd;
}

.allcourse {
    line-height: 0;
    font-size: 0;
}

.allcourse>view {
    padding: 20rpx 20rpx 0 20rpx;
    border-bottom: 10rpx solid #f5f5f5;
}

.allcourse>view image {
    width: 100%;
    height: 200rpx;
}

.allcourse-name {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #000;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}