.footer {
    height: 90rpx;
}

.padding_bottom_98 {
    padding-bottom: 98rpx;
}

.footer-button {
    position: fixed;
    background: #fff;
    height: 98rpx;
    bottom: 0;
    left: 0;
    right: 0;
    border-top: 1rpx solid #dddddd;
    display: flex;
}

.share {
    flex: 0 0 auto;
    width: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 34rpx;
    border-radius: 0;
}

.goProductInfo {
    flex: 1 1 auto;
    font-size: 34rpx;
    background: #e85544;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.img-36 {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.fixed-right {
    position: fixed;
    right: 0rpx;
    bottom: 180rpx;
}

.fixed-right>view>image {
    height: 80rpx;
    width: 80rpx;
}