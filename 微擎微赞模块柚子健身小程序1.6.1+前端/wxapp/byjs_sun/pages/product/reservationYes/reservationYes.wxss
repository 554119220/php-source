.resservation {
    text-align: center;
}

.resservation-img {
    width: 180rpx;
    height: 180rpx;
    position: relative;
    margin-top: 200rpx;
    margin-bottom: 50rpx;
}

.resservation-title {
    font-size: 32rpx;
    font-weight: 600;
    padding-bottom: 50rpx;
}

.resservation-button {
    width: 690rpx;
    height: 80rpx;
    font-size: 34rpx;
    color: #fff;
    background: #2aaefd;
    border-radius: 20rpx;
    text-align: center;
    line-height: 80rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}