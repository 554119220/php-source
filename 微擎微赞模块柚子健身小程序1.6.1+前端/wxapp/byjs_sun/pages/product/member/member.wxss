@import "../../wxParse/wxParse.wxss";

.memberHeader {
    padding: 0 20rpx;
    color: #fff;
}

.mbhBanner {
    display: block;
    width: 100%;
    height: 306rpx;
    position: relative;
}

.userImg {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.iconVip {
    width: 38rpx;
    height: 35rpx;
}

.abHander {
    position: absolute;
    left: 20rpx;
    top: 0;
}

.abhName {
    margin: 40rpx 0 0 50rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
}

.abhName image {
    margin-right: 20rpx;
}

.abhCard,.abhTime {
    margin-left: 130rpx;
}

.abhCard {
    margin-top: 8rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.abhCard image {
    margin-left: 16rpx;
}

.abhTime {
    margin-top: 18rpx;
    font-size: 26rpx;
    font-family: Arial,Helvetica,sans-serif;
}

.memberMain {
    margin-top: 24rpx;
    padding: 50rpx 30rpx 0 30rpx;
    border-top: 10rpx solid #f2f2f2;
    font-size: 26rpx;
}

.jieshao {
    font-size: 40rpx;
    text-align: center;
}