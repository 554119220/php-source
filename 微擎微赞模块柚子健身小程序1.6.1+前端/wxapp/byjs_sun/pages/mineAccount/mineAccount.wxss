page {
    background-color: #f2f2f2;
}

.bigWrap {
}

.tabRow {
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #000;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
}

.tabItem:nth-child(2) {
    border-left: 2rpx solid #2aaefd;
}

.tabItem {
    width: 50%;
    text-align: center;
    margin: 30rpx 0;
    box-sizing: border-box;
}

.tabItem.active {
    color: #2aaefd;
}

.item {
    display: flex;
    font-size: 30rpx;
    padding: 30rpx;
    border-bottom: 1rpx solid #ddd;
    background-color: #fff;
}

.typeIn {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 100%;
    color: #e85545;
    border: 2rpx solid #e85545;
    box-sizing: border-box;
}

.typeIn.out {
    color: #3daddd;
    border: 2rpx solid #3daddd;
}

.textRight {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0 0 0 30rpx;
}

.intro {
    display: flex;
    justify-content: space-between;
}

.numIn {
    color: #e85545;
}

.numOut {
    color: #3daddd;
}

.time {
    font-size: 26rpx;
}

.topBox {
    padding: 30rpx 60rpx;
    background-color: #3daddd;
    color: #fff;
}

.moneyRow {
    padding: 30rpx 0 40rpx;
    border-bottom: 1rpx dashed #fff;
}

.money {
    font-size: 48rpx;
}

.start {
    line-height: 30rpx;
    padding: 30rpx 0 0;
}

.input {
    text-align: right;
    margin: 0 20rpx 0 0;
}

.pushRow {
    padding: 20rpx 30rpx;
    margin: 10rpx 0;
    background-color: #fff;
}

.notice {
    background-color: #fff;
    padding: 30rpx;
}

.title {
    padding: 0 30rpx;
    border-left: 2rpx solid #3daddd;
    line-height: 30rpx;
    margin: 0 0 20rpx;
}

.text {
    font-size: 26rpx;
    color: #999;
}

.deterPush {
    width: 400rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    background-color: #3daddd;
    color: #fff;
    font-size: 36rpx;
    margin: 40rpx auto;
}

button::after {
    border: none;
}