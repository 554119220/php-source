.talentBlock {
    padding: 30rpx 20rpx;
    border-bottom: 10rpx solid #f5f5f5;
}

.talentBlock-head {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.talentBlock-head-info {
    flex-direction: row;
    display: inline-flex;
    align-items: center;
}

.talentBlock-head-info-img {
    width: 97rpx;
    height: 97rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.talentBlock-head-info-text .name {
    font-size: 26rpx;
    color: #000;
    padding-bottom: 10rpx;
}

.talentBlock-head-info-text .time {
    font-size: 24rpx;
    color: #999;
}

.talentBlock-center {
    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
}

.talentBlock-center-img-block {
    width: 384rpx;
    height: 218rpx;
    overflow: hidden;
}

.talentBlock-center-img {
    width: '';
    max-width: 384rpx;
    height: 100%;
}

.talentBlock-center-img-tow {
    max-width: 150rpx;
    max-height: 220rpx;
    width: '';
    height: 100%;
}

.talentBlock-center-img-block .talentBlock-center-img-tow:nth-child(1) {
    margin-right: 20rpx;
}

.talentBlock-center-right {
    width: 286rpx;
    padding-left: 20rpx;
    font-size: 24rpx;
    position: relative;
}

.talentBlock-center-right .title {
    line-height: 40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.right-bottom {
    display: flex;
    flex-direction: row;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.right-bottom .love {
    margin-right: 70rpx;
}

.love,.comment {
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    align-items: flex-end;
}

.icon-love {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.talentBlock-sex {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
}

.talentBlock-head-info-img-block {
    position: relative;
}

.talentBlock-head .attention {
    font-size: 26rpx;
    border: 1rpx solid #ddd;
    color: #999;
    text-align: center;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
}