.allcourse {
  display: flex;
  flex-wrap: wrap;
  padding-left: 25rpx;
}

.allcourse>view {
  width: 340rpx;
  height: 300rpx;
  margin-right: 20rpx;
  position: relative;
 
  margin-top: 20rpx;
}

.allcourse>view image {
  width: 340rpx;
  height: 300rpx;
}

.allcourse-name {
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #fff;
  font-size: 36rpx;
  text-align: center
}
