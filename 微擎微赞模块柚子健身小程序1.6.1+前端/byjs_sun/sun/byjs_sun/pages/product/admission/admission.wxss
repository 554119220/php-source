.admission-img-block{
  width:750rpx;
  height:400rpx;
  text-align: center;
  padding-top: 24rpx;
}
.admission-img{
  width:'';
  height:100%;
  max-width:100%;
}
.admission-title{
  font-size:28rpx;
  padding-top:20rpx;
  padding-left:20rpx;
  padding-bottom:30rpx;
}

.book-now{
  padding-left:20rpx;
  font-size:28rpx;
}
.book-now-userInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.book-now-userInfo .input{
  border: none;
  width:400rpx;
  height:50rpx;
  margin-left: 30rpx;
  flex: 1 1 auto
}
.admission-type-title{
  padding-top:20rpx;
  padding-left:20rpx;
  font-size:28rpx;
 
}

.admission-type-list{
  padding:20rpx;
  position: relative;
  display: flex
}
.admission-type-list-left, .admission-type-list-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:34rpx;
}
.admission-type-list-left-img-block{
  width:300rpx;
  height:100rpx;
  margin-right:30rpx;
}
.admission-type-list-left-img{
  width:'';
  height:100%;
  max-width:100%;
}
.admission-type-list-right{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translateY(-50%);
  color:#f1b000;
}
.admission-type-list-right .checkbox{
  width:54rpx;
  height:54rpx;
  margin-left:20rpx;
}
.goSubmit{
  width:690rpx;
  height:88rpx;
  border-radius: 10rpx;
  background:#e85544;
  text-align: center;
  line-height:88rpx;
  color:#fff;
  position: relative;
  left:50%;
  transform: translateX(-50%);
  margin-top:10rpx;
  margin-bottom:20rpx;
}
radio {
  margin-left: 20rpx;
}