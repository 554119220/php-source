.zoreBasis-img-block{
  width:750rpx;
  height:470rpx;
  text-align: center;
  padding-top: 24rpx;
}
.zoreBasis-img{
  width: '';
  height:100%;
  max-width:100%;
}
.zoreBasis-block{
  font-size:28rpx;
  padding-left:20rpx;
  padding-top:20rpx;
  padding-right:20rpx;
  position: relative;
}
.zoreBasis-footer{
  padding-top:62rpx;
  text-align: center;
}
.zoreBasis-button{
  width:690rpx;
  height:88rpx;
  line-height:88rpx;
  border-radius:10rpx;
  background:#e85544;
  color:#fff;
  text-align: center;
  position: relative;
  left:50%;
  transform: translateX(-50%);
}
.zoreBasis-block-list{
  padding-bottom:10rpx;
  line-height:40rpx;
}
.noPrice-title{
  position: absolute;
  right: 30rpx;
  top:30rpx;
  font-size:30rpx;
  font-weight: 600;
  color: #f1b000;
}
.zoreBasis-block-img-list{
  width: 220rpx;
  flex: 0 0 auto
}
.zoreBasis-block-img{
  display: flex;
  flex-direction: row;
  border-bottom:1rpx solid #f5f5f5;
  font-size: 28rpx;
  flex-wrap: wrap;
}
.zoreBasis-block-img .zoreBasis-block-img-list:nth-child(2){
  margin-left:25rpx;
  margin-right:25rpx;
}
.zoreBasis-block-img-list .img{
  width:220rpx;
  height:200rpx;
  margin-bottom:20rpx;
}
.zoreBasis-block-img-list .title{
  padding-top:20rpx;
  padding-bottom:20rpx;
  overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}