.mF-head-img{
  width: 750rpx;
  height:300rpx;
}
.mF-head-img-block{
  width:100%;
  height:'';
  max-height: 100%;
}

.chargeSportswear-screen{
  border-top:1rpx solid #f5f5f5;
  border-bottom:1rpx solid #f5f5f5;
  line-height:64rpx;
  height:64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size:26rpx;
  align-items: center;
}
.screen-line{
  width:2rpx;
  height:26rpx;
  background:#ddd;
}
.icon-screen{
  width:18rpx;
  height:26rpx;
  margin-left:20rpx;
}
.screen-list{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fight-list-title{
  padding:20rpx;
  font-size:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.fight-list{
  padding:20rpx;
  display: flex;
  flex-wrap: wrap;
}
.fight-list .fight-list-block:nth-child(2n){
  margin-right:0;
}
.fight-list-block{
  width:300rpx;
  margin-right:110rpx;
}
.fight-list-img{
  width:300rpx;
  height:200rpx;
}
.fight-list-block-img{
  width: '';
  height:100%;
  max-width:100%;
}
.fight-list-block-title{
  padding-left:10rpx;
  padding-right:10rpx;
  height:62rpx;
  line-height:62rpx;
  font-size:26rpx;
  background:#fff;
}
.fight-list-block .picer{
  font-size:30rpx;
  color:#f1b000;
  padding-bottom:40rpx;
}
