<view class="fill-base b-1px-b">
    <view class="reserve-list">
        <view catchtap="goUrl" class="child flex-center" data-url="/longbing_card/enroll/pages/detail/detail?id={{data.id}}">
            <image class="img bg-f4f6f8 br-10" mode="aspectFill" src="{{data.cover}}"></image>
            <view class="flex-1">
                <view class="f-title clamp2" style="min-height:84rpx;">{{data.title}}</view>
                <view class="f-icontext c-paragraph-sm ellipsis mt-sm mb-sm">{{data.start_time}} ～ {{data.end_time}}</view>
            </view>
        </view>
    </view>
</view>
<view class="space-md"></view>
<view catchtap="goUrl" class="flex-center fill-base b-1px-tb" data-url="/longbing_card/enroll/pages/more/more?id={{data.id}}" style="padding:36rpx 3% 36rpx 4%;">
    <view class="c-title f-title">报名客户<block wx:if="{{data.type!=1}}">{{data.type==2?'活动已开始':'活动已结束'}}</block>
    </view>
    <view class="tr c-caption f-caption flex-1">
        <i class="c-error">已报名{{data.sign_number}}</i> / 限额人数{{data.sign_limit}}</view>
</view>
<view catchtap="goUrl" class="f-caption flex-center fill-base b-1px-b" data-url="/longbing_card/enroll/pages/staff/info/info?id={{param.activity_id}}&uid={{item.user_id}}&name={{item.nickName}}" style="padding:20rpx 4%;" wx:for="{{dataList.list}}">
    <image class="bg-f4f6f8 mr-lg br-8 avatar" src="{{item.avatarUrl}}"></image>
    <view class="c-title flex-1 ellipsis">
        <view class="ellipsis">{{item.nickName}}</view>
        <view class="ellipsis">{{item.create_time}}</view>
    </view>
</view>
<loading isWq="{{dataList.current_page?'':'isWq'}}" list="{{dataList}}" loading="{{loading}}"></loading>
<view class="space-xxl {{$gd.isIphoneX?'isIphoneX':''}}"></view>
<view class="common-view fix flex {{$gd.isIphoneX?'isIphoneX':''}}" style="bottom:0rpx;height:110rpx;" wx:if="{{data.type==1}}">
    <view class="flex100-5">
        <button catchtap="goUrl" data-method="redirectTo" data-url="/longbing_card/enroll/pages/staff/add/add?id={{data.id}}" formType="submit" hoverClass="none">
            <i class="iconfont icon-icon_set_up c-error"></i>
            <view class="f-caption c-title">编辑活动</view>
        </button>
    </view>
    <view class="flex100-5">
        <button hoverClass="none" openType="share">
            <i class="iconfont icon-WeChat c-success"></i>
            <view class="f-caption c-title">微信好友</view>
        </button>
    </view>
</view>
