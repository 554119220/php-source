.product-detail-swiper-sec {
    height: 750rpx;
    overflow: hidden;
}

swiper {
    width: 100%;
    height: 100%;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.product-detail-info-sec {
    margin-bottom: 0rpx;
}

.product-detail-info-sec .title {
    padding: 40rpx 130rpx 40rpx 30rpx;
    font-size: 34rpx;
    line-height: 40rpx;
    color: #232323;
    border: transparent;
}

.product-detail-info-sec .introduce {
    line-height: 40rpx;
    padding: 30rpx;
    font-size: 26rpx;
}

.detail-title {
    color: #323232;
    font-size: 32rpx;
    padding: 0rpx 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: white;
}

.product-detail-fixed-bottom {
    height: auto;
    z-index: 91;
}

.product-detail-fixed-bottom .flex100-2 view {
    width: 100%;
    font-size: 26rpx;
    color: #838591;
}

.product-detail-fixed-bottom .return-img {
    width: 40rpx;
    height: 40rpx;
    top: 6rpx;
    display: inline-block;
}