page {
    background: #f4f4f4;
}

.pay-main {
    width: 92%;
    padding: 0rpx 4%;
    background: white;
}

.bg-f4f6f8 {
    background: #f4f6f8;
}

.company-info {
    padding: 60rpx 0rpx;
}

.company-info .logo {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.company-info .flex-1 {
    max-width: 500rpx;
}

.company-info .flex-1 .name {
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 5rpx;
}

.company-info .flex-1 .text {
    font-size: 24rpx;
    color: #888888;
}

.company-info .flex-1 .text i {
    font-size: 28rpx;
    color: #75ca35;
    margin-right: 5rpx;
}

.input-pay {
    height: 110rpx;
    line-height: 110rpx;
    padding: 0rpx 20rpx;
    color: #888888;
    font-size: 30rpx;
    background: #f4f4f4;
}

.input-pay input {
    height: 110rpx;
    line-height: 110rpx;
    width: 500rpx;
    font-size: 48rpx;
    color: #313131;
}

.pay-num {
    font-size: 32rpx;
    color: #323232;
    height: 130rpx;
    line-height: 130rpx;
}

.pay-num em {
    font-size: 48rpx;
    color: #fc3c3b;
}

.pay-num em text {
    font-size: 28rpx;
}

.flex-1 {
    flex: 1;
}

.flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
}

.form-keyboard {
    width: 100%;
    height: auto;
    display: block;
    bottom: 0rpx;
}

.form-keyboard .child-f {
    width: 75%;
    height: auto;
    float: left;
}

.form-keyboard .child-r {
    width: 25%;
    height: auto;
    float: right;
}

button {
    width: 100%;
    padding: 0rpx;
    font-size: 48rpx;
    background: white;
    border-radius: 0rpx;
}

.form-keyboard .child {
    height: 140rpx;
    line-height: 140rpx;
    background: white;
}

.form-keyboard .child-f .child {
    width: 33.3%;
    float: left;
    border-right: 1rpx solid #f3f2f6;
    border-bottom: 1rpx solid #f3f2f6;
}

.form-keyboard .child.zero {
    width: 66.6%;
}

.form-keyboard .child.dian {
    font-size: 50rpx;
}

.form-keyboard .child-r .child {
    height: 138rpx;
    line-height: 138rpx;
}

.form-keyboard .child.toPay text {
    line-height: 60rpx;
    padding: 150rpx 0rpx;
    color: white;
    font-size: 42rpx;
}

.form-keyboard .child.toPay {
    height: auto;
    height: 420rpx;
    background: #fa3c49;
    border-top: 1rpx solid #f3f2f6;
}

.form-keyboard .child i {
    font-size: 62rpx;
    line-height: 80rpx;
}

button.btn-hover {
    opacity: 0.6;
}

.showModal {
    width: 560rpx;
    height: auto;
    display: inline-block;
    background: white;
    border-radius: 8rpx;
    z-index: 999999999;
    top: 50%;
    left: 95rpx;
    transform: translate(0,-50%);
}

.showModal .img {
    width: 348rpx;
    height: 287rpx;
    margin: 45rpx auto 0rpx auto;
}

.showModal .text1,.showModal .text2 {
    margin: 0rpx 4%;
}

.showModal .text1 {
    font-size: 32rpx;
    color: #000000;
}

.showModal .text2 {
    font-size: 28rpx;
    color: #888888;
}

.showModal .line {
    width: 100%;
    height: 1rpx;
    background: #e4e4e4;
    margin-top: 30rpx;
}

.toCancel,.toConfirm {
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #cccccc;
}

.toConfirm {
    color: #fc3c3b;
    border-left: 1rpx solid #e4e4e4;
}