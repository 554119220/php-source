page {
    background: #f1f1f1;
}

button {
    display: block;
    overflow: initial;
}

.fixed-right-sec {
    width: auto;
    height: auto;
    top: 0rpx;
    right: 5%;
    display: block;
}

.fixed-right-sec button,.fixed-right-sec view {
    width: auto;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    background: rgba(0,0,0,0.3);
    filter: Alpha(opacity=30);
    color: white;
    float: left;
    position: relative;
    border-radius: 40rpx;
    padding: 0rpx 24rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.fixed-right-sec button i,.fixed-right-sec view i {
    color: white;
    font-size: 32rpx;
    line-height: 32rpx;
    position: initial;
    margin-left: 0rpx;
    margin-right: 8rpx;
}

.flex .tr button {
    height: 42rpx;
    line-height: 42rpx;
    padding: 0rpx 25rpx;
    border-radius: 42rpx;
    display: inline-block;
    background: none;
}

button::after {
    display: none;
}