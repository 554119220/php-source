page {
    background: #f4f4f8;
}

view,button {
    display: block;
    overflow: initial;
}

.scroll-view-navTop-sec {
    height: 90rpx;
    line-height: 90rpx;
}

.scroll-item-de {
    height: 80rpx;
    line-height: 80rpx;
}

button[type=hasbg] {
    color: #e6e6e6;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 26rpx;
    border: 1px solid #e6e6e6;
    background-color: #f8f8f8;
    border-radius: 0rpx;
}

button[type=hasbg][plain] {
    color: #e6e6e6;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 26rpx;
    border: 1px solid #e6e6e6;
    background-color: #f8f8f8;
    border-radius: 0rpx;
}

button.nobor::after {
    border: none;
}

.btn-hover {
    opacity: 0.8;
}

.fixed-right-sec {
    width: auto;
    height: auto;
    top: 0rpx;
    right: 5%;
    display: block;
}

.fixed-right-sec button,.fixed-right-sec view {
    width: auto;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    background: rgba(0,0,0,0.3);
    filter: Alpha(opacity=30);
    color: white;
    float: left;
    position: relative;
    border-radius: 40rpx;
    padding: 0rpx 24rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.fixed-right-sec button i,.fixed-right-sec view i {
    color: white;
    font-size: 32rpx;
    line-height: 32rpx;
    position: initial;
    margin-left: 0rpx;
    margin-right: 8rpx;
}

.flex .tr button {
    height: 42rpx;
    line-height: 42rpx;
    padding: 0rpx 25rpx;
    border-radius: 42rpx;
    display: inline-block;
    background: none;
}

button::after {
    display: none;
}

.company-nav-sec.shop-cate .fl image {
    width: 96rpx;
    height: 96rpx;
}

.company-nav-sec.shop-cate .fl .title {
    color: #2e2e2e;
}

.shop-search-new {
    width: 100%;
    height: auto;
    display: block;
    padding: 16rpx 0rpx;
    background: #f6f5fa;
}

.shop-search-new .text {
    width: 626rpx;
    height: 72rpx;
    line-height: 72rpx;
    padding: 0rpx 30rpx;
    font-size: 28rpx;
    color: #cccccc;
    background: white;
    border-radius: 36rpx;
    margin: 0rpx auto;
}

.space-xxl {
    height: 120rpx;
}

.company-nav-sec.shop-cate .fl .title {
    padding: 0rpx 10rpx;
}