<block wx:if="{{detailData.title}}">
    <video autoplay="{{true}}" binderror="binderror" bindwaiting="bindwaiting" class="abs" controls="{{true}}" customCache="{{false}}" loop="{{false}}" poster="{{detailData.cover[0]}}" src="{{detailData.content}}" style="width: 100%; height: 100%;top:0rpx;bottom:0rpx;" wx:if="{{paramData.status=='toPlayVideo'}}"></video>
    <block wx:else>
        <view class="company-introduce-sec">
            <view class="detail-title-sec">
                <view class="title">{{detailData.title}}</view>
                <view class="time"> {{detailData.info.name?detailData.info.name:paramData.companyName}}
                        <em style="padding:{{isStaff=='true'?'0':'20'}}rpx;">{{detailData.create_time1}}</em>
                    <em class="fr" wx:if="{{type!=3&&detailData.view_count}}">
                        <i class="iconfont icon-chakan2"></i>
                            {{detailData.view_count}}
                        </em>
                </view>
            </view>
            <block wx:if="{{from_id||isStaff!='false'}}">
                <view style="padding:20rpx 4%;" wx:if="{{detailData.user_id!=0&&detailData.cover.length>0}}">
                    <image bindtap="{{preview_switch==1?'toPreviewImg':''}}" data-src="{{item}}" mode="widthFix" src="{{item}}" style="width:100%;margin-bottom:12rpx;" wx:for="{{detailData.cover}}" wx:key="key"></image>
                </view>
            </block>
            <htmltowxml bindWxmlTagATap="wxmlTagATap" json="{{detailData.content}}" showLoading="{{false}}" wx:if="{{detailData.user_id==0}}"></htmltowxml>
            <text class="detail-text" decode="emsp" wx:if="{{detailData.user_id!=0}}">{{detailData.content}}</text>
        </view>
        <auth bindgetAuthInfoSuc="getAuthInfoSuc" forceAuth="{{false}}" logo="{{cardIndexData.info.myCompany.logo}}" openType="{{openType}}" userInfo="{{userInfo}}" wx:if="{{userInfo&&!userInfo.avatarUrl||!userInfo.phone&&userInfo.force_phone==1}}"></auth>
        <copyright copyright="{{copyright}}"></copyright>
        <block wx:if="{{paramData.from_id&&isStaffAdd}}">
            <view class="fix-addNews-btn fix {{isIphoneX?'isIphoneX':''}}" style="width:92%;padding:0rpx 4%;{{isIphoneX?'padding-bottom:68rpx':''}}" wx:if="{{cardIndexData.info.is_staff==1}}">
                <view class="flex" style="height:100rpx;line-height:100rpx;">
                    <view class="flex100-5">
                        <image class="circle mr-20 rel fl" src="{{cardIndexData.info.avatar}}" style="width:70rpx;height:70rpx;display:inline-block;top:15rpx;"></image>
                        <view class="fl ellipsis" style="max-width:240rpx;">{{cardIndexData.info.name}}</view>
                    </view>
                    <form bindsubmit="formSubmit" class="flex100-5 tr" reportSubmit="true">
                        <button class="fr share ml-20 rel" data-status="toShare" formType="submit" hoverClass="none" openType="share" style="border-radius:8rpx;top:30rpx;">
                                转发
                            </button>
                        <button catchtap="goUrl" class="fr share ml-20 rel" data-url="/longbing_card/pages/index/index?to_uid={{paramData.to_uid}}&from_id={{paramData.from_id}}&currentTabBar=toCard" formType="submit" hoverClass="none" style="border-radius:8rpx;top:30rpx;">
                                看名片
                            </button>
                    </form>
                </view>
            </view>
        </block>
        <form bindsubmit="formSubmit" class="fixed-right-sec fixed-shop-right-sec fix" reportSubmit="true">
            <button catchtap="goUrl" class="circle tc" data-method="reLaunch" data-url="/longbing_card/pages/index/index?to_uid={{paramData.to_uid}}&from_id={{paramData.from_id}}&currentTabBar=toCard" formType="submit" hoverClass="none" wx:if="{{paramData.fromshare}}">
                <i class="abs iconfont icon-shouye"></i>
            </button>
            <button class="circle tc" formType="submit" hoverClass="none" openType="share">
                <i class="iconfont icon-fenxiang"></i>
            </button>
        </form>
    </block>
</block>
<view class="{{isIphoneX?'isIphoneX':''}}" style="height:100rpx"></view>
