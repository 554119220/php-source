@import "../../../../__wuBaseWxss__/0.wxss";

@import "../../../../__wuBaseWxss__/1.wxss";

@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: white;
}

.shop-banner-sec {
    width: 100%;
    height: 400rpx;
}

.shop-company-approve {
    width: 100%;
    height: 180rpx;
    display: block;
}

.shop-company-approve .content {
    width: 84%;
    height: auto;
    bottom: 20rpx;
    left: 4%;
    padding: 33rpx 4%;
    background: white;
    box-shadow: 0 0 10rpx #e0e0e0;
}

.shop-company-approve .content image {
    width: 133rpx;
    height: 133rpx;
    border: 2rpx solid #f4f4f8;
}

.shop-company-approve .content .name {
    font-size: 34rpx;
    color: #343434;
    line-height: 50rpx;
    margin-bottom: 18rpx;
}

.shop-company-approve .content .approve {
    font-size: 24rpx;
    color: #404040;
}

.shop-company-approve .content .approve i {
    font-size: 28rpx;
    color: #77cb38;
}

.fixed-right-sec {
    width: auto;
    height: auto;
    top: 0rpx;
    right: 5%;
    display: block;
}

.fixed-right-sec button,.fixed-right-sec view {
    width: auto;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    background: rgba(0,0,0,0.3);
    filter: Alpha(opacity=30);
    color: white;
    float: left;
    position: relative;
    border-radius: 40rpx;
    padding: 0rpx 24rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.fixed-right-sec button i,.fixed-right-sec view i {
    color: white;
    font-size: 36rpx;
    line-height: 36rpx;
    position: initial;
    margin-left: 0rpx;
    margin-right: 8rpx;
}

.flex .tr button {
    height: 42rpx;
    line-height: 42rpx;
    padding: 0rpx 25rpx;
    border-radius: 42rpx;
    display: inline-block;
    background: none;
}

button::after {
    display: none;
}

.mini-share-sec {
    width: 94%;
    padding: 0rpx 3%;
    height: 80rpx;
    border: 1rpx solid #efefef;
    border-left: transparent;
    border-right: transparent;
    background: white;
    top: 0rpx;
    z-index: 9999999;
}

.mini-share-sec .flex100-5 {
    color: #2e2e2e;
}

.mini-share-sec .tr view,.mini-share-sec .tr button {
    float: right;
    margin-left: 30rpx;
    color: #959595;
}

.mini-share-sec .tr button i {
    font-size: 34rpx;
}

.mini-share-sec .tr view i {
    font-size: 40rpx;
}

.fixed-message-sec {
    width: 110rpx;
    height: 110rpx;
    bottom: 300rpx;
    right: 5%;
    font-size: 22rpx;
    color: white;
    background: rgba(23,162,52,1);
    z-index: 9999999;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.05);
}

.fixed-message-sec i {
    font-size: 40rpx;
    line-height: 44rpx;
    color: white;
    top: 20rpx;
}

.fixed-message-sec view {
    top: 25rpx;
}

.fixed-message-sec em.dot {
    position: absolute;
    display: flex;
    width: 34rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
    background: #fc3c3b;
    border-radius: 100px;
    color: #fff;
    z-index: 999;
    font-size: 20rpx;
    top: 5rpx;
    right: -10rpx;
}

.fixed-message-sec em.dotbig {
    position: absolute;
    display: flex;
    width: 50rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
    background: #fc3c3b;
    border-radius: 100px;
    color: #fff;
    z-index: 999;
    font-size: 20rpx;
    top: 5rpx;
    right: -20rpx;
}