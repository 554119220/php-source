@import "../../../../../__wuBaseWxss__/0.wxss";

@import "../../../../../__wuBaseWxss__/1.wxss";

page {
    background: #f6f5fa;
}

.max-450 {
    max-width: 450;
}

.max-600 {
    max-width: 600rpx;
}

.no-data i {
    font-size: 100rpx;
    color: #ee234e;
}

.detail-auth-time {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    display: block;
}

.detail-auth-time em {
    max-width: 50%;
}

.card-mini {
    width: 620rpx;
    height: auto;
    margin: 0rpx auto;
    padding: 30rpx 40rpx;
}

.card-mini-user-img {
    width: 100rpx;
    height: 100rpx;
}

.card-mini-qr {
    width: 200rpx;
    height: 200rpx;
    top: 50rpx;
    right: 40rpx;
}

.card-mini-btn {
    width: 130rpx;
    height: 64rpx;
    line-height: 64rpx;
    display: block;
    background: #ee234e;
}

.article-child {
    padding: 30rpx 4%;
}

.article-img {
    width: 130rpx;
    height: 130rpx;
    display: block;
}

.article-title {
    line-height: 36rpx;
    height: 72rpx;
}

.article-text,.article-text i {
    color: #c8c8c8;
}

.detail-share {
    width: 100%;
    height: auto;
    bottom: 0rpx;
    display: block;
    padding-top: 30rpx;
    background: #f0f0f0;
    z-index: 91;
}

.detail-share button {
    width: 25%;
    height: auto;
    display: inline-block;
    background: none;
    border-radius: 0rpx;
}

.detail-share.w-33 button {
    width: 33.3%;
}

button::after {
    border: none;
}

.detail-share-img {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0rpx auto;
}

.detail-share-img image {
    width: 50rpx;
    height: 50rpx;
}

.to-create-my-article {
    width: 92%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0rpx auto;
    background: #ee234e;
}

.rich_pages {
    max-width: 100%;
    overflow: hidden;
}