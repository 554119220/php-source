page {
    background: #f6f5fa;
}

.flex-x-around .tc {
    width: 50%;
}

.flex-x-around .tc.b-1px-b::after {
    border-top: 2px solid #21bf34;
    color: #21bf34;
}

.rank-img {
    width: 33rpx;
    height: 30rpx;
    top: 80rpx;
}

.rank-order {
    width: 120rpx;
    height: 50rpx;
}

.article-child {
    padding: 30rpx 4%;
}

.article-count {
    padding: 30rpx 4% 30rpx 0rpx;
}

.article-img {
    width: 130rpx;
    height: 130rpx;
    display: block;
}

.article-title {
    line-height: 38rpx;
    height: 76rpx;
}

.article-text,.article-text i {
    color: #c8c8c8;
}

.article-text text {
    width: 100rpx;
    height: 42rpx;
    line-height: 42rpx;
    border-radius: 8rpx;
    background: #eeeeee;
    display: block;
}

.b-1px-t:before {
    border-top: 1px solid rgba(238,238,238,1);
    color: rgba(238,238,238,1);
}