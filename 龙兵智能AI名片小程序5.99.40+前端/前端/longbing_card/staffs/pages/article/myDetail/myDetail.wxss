@import "../../../../../__wuBaseWxss__/0.wxss";

@import "../../../../../__wuBaseWxss__/1.wxss";

.article-child {
    padding: 30rpx 4%;
}

.article-img {
    width: 130rpx;
    height: 130rpx;
    display: block;
}

.article-title {
    line-height: 36rpx;
    height: 72rpx;
    max-width: 520rpx;
}

.p13-0 {
    padding: 13rpx 0rpx;
    width: 33.3%;
}

.p30-0 {
    padding: 30rpx 0rpx;
    width: 25%;
}

.p30-0.b-1px-b::after {
    border-bottom: 2px solid #11c95e;
}

.fx-text {
    line-height: 36rpx;
}

.form-btn {
    padding: 32rpx 0rpx;
}

.form-btn button {
    width: 160rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 30rpx;
}

button[type=default] {
    background: #eee;
    color: #333;
}

button {
    line-height: initial;
    background: none;
    margin: 0rpx;
}

.detail-share {
    width: 100%;
    height: auto;
    bottom: 0rpx;
    display: block;
    padding-top: 30rpx;
    background: #f0f0f0;
    z-index: 91;
}

.detail-share button {
    width: 25%;
    height: auto;
    display: inline-block;
    background: none;
    border-radius: 0rpx;
}

.detail-share.w-33 button {
    width: 33.3%;
}

button::after {
    border: none;
}

.detail-share-img {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0rpx auto;
}

.detail-share-img image {
    width: 50rpx;
    height: 50rpx;
}