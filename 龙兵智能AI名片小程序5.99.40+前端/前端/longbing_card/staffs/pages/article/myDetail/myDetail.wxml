<view class="article-list fill-base">
    <view catchtap="goUrl" class="article-child flex-center b-1px-b" data-url="/longbing_card/staffs/pages/article/detail/detail?id={{article_id}}&uid={{to_uid}}" style="padding:30rpx;">
        <image class="article-img bg-f4f6f8" mode="aspectFill" src="{{article.cover}}"></image>
        <view class="flex-1 ml-lg">
            <view class="f-title c-title clamp2 article-title">{{article.title}}</view>
            <view class="flex mt-md">
                <view class="f-icontext c-caption ellipsis" style="max-width:490rpx;">
                    {{article.create_time2}}发布
                </view>
            </view>
        </view>
    </view>
</view>
<view class="space-lg"></view>
<view class="fill-base flex-x-around">
    <form bindsubmit="formSubmit" catchtap="toSetTab" class="tc flex-between flex-column p30-0 {{index==param.type?'b-1px-b':''}}" data-index="{{index}}" data-key="type" reportSubmit="true" wx:for="{{order}}" wx:key="key">
        <button formType="submit" hoverClass="none">
            <view class="text-bold f-title-xl c-paragraph  ellipsis" style="color:{{index==param.type?color:''}}">
                    {{item.count||0}}
                </view>
            <view class="f-icontext c-paragraph ellipsis" style="color:{{index==param.type?color:''}}">
                    {{item.title}}
                </view>
        </button>
    </form>
</view>
<view class="fill-base flex-x-around form-btn">
    <form bindsubmit="formSubmit" class="tc flex-between flex-column" reportSubmit="true" wx:for="{{orderDay}}" wx:key="key">
        <button catchtap="toSetTab" class="tc" data-index="{{index}}" data-key="count" formType="submit" type="{{index==param.count?'primary':'default'}}">
                {{item}}
            </button>
    </form>
</view>
<view class="article-list fill-base">
    <view class="article-child flex-center b-1px-b" wx:for="{{list.data}}" wx:key="key">
        <image class="avatar bg-f4f6f8 br-8" mode="aspectFill" src="{{item.avatarUrl||$gd.userDefault}}"></image>
        <view class="flex-1 ml-lg max-w560">
            <view class="f-title c-title ellipsis">{{item.nickName}}</view>
            <view class="flex mt-md">
                <view class="f-caption c-caption ellipsis" style="max-width:200rpx;">{{item.update_time}}</view>
                <view class="f-caption c-caption ellipsis flex-1 tr" style="max-width:360rpx;">共<em style="color:{{color}}">{{item.countId}}</em>次<block wx:if="{{param.type==0}}">　总时长<em style="color:{{color}}">{{item.viewLength}}</em>秒</block>
                </view>
            </view>
        </view>
    </view>
</view>
<loading isWq="{{list.current_page?'':'isWq'}}" list="{{list}}" loading="{{loading}}"></loading>
<view class="{{$gd.isIphoneX?'isIphoneX':''}}" style="height:250rpx;"></view>
<form bindsubmit="formSubmit" class="detail-share tc fix {{$gd.isIphoneX?'isIphoneX':''}}" reportSubmit="true">
    <button openType="share">
        <view class="detail-share-img br-10 fill-base flex-center">
            <image mode="widthFix" src="/longbing_card/resource/images/article/1.png"></image>
        </view>
        <view class="f-icontext c-caption mt-sm">发给好友</view>
    </button>
    <button bindcontact="contactCallback" openType="contact" sendMessageImg="{{article.cover}}" sendMessagePath="/longbing_card/staffs/pgaes/article/detail/detail?id={{article.id}}&uid={{to_uid}}" sendMessageTitle="{{article.title}}" showMessageCard="true">
        <view class="detail-share-img br-10 fill-base flex-center">
            <image mode="widthFix" src="/longbing_card/resource/images/article/2.png"></image>
        </view>
        <view class="f-icontext c-caption mt-sm">生成文章链接</view>
    </button>
    <button catchtap="goUrl" data-url="/longbing_card/staffs/pages/article/share/share">
        <view class="detail-share-img br-10 fill-base flex-center">
            <image mode="widthFix" src="/longbing_card/resource/images/article/3.png"></image>
        </view>
        <view class="f-icontext c-caption mt-sm">生成海报</view>
    </button>
    <button catchtap="toSyncMyNews">
        <view class="detail-share-img br-10 fill-base flex-center">
            <image mode="widthFix" src="/longbing_card/resource/images/article/4.png"></image>
        </view>
        <view class="f-icontext c-caption mt-sm">同步到动态</view>
    </button>
</form>
