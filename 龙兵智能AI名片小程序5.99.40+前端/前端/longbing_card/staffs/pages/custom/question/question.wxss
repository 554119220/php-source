page {
    background: #f4f4f8;
}

view,button {
    display: block;
    overflow: initial;
}

.question-title {
    padding: 30rpx 4%;
    font-size: 28rpx;
    color: #5b5b5b;
    background: white;
    margin-bottom: 20rpx;
}

.question-sec {
    width: 100%;
    background: white;
    display: inline-block;
}

.question-sec .child {
    width: 92%;
    margin: 0rpx auto;
}

.question-sec .child .question {
    font-size: 28rpx;
    color: #5b5b5b;
    padding: 28rpx 0rpx;
}

.question-sec .child input {
    height: 50rpx;
    line-height: 50rpx;
    padding: 10rpx 20rpx;
    outline: none;
    color: #333;
    min-height: 30rpx;
    font-size: 28rpx;
    background: #f5f5f8;
    border: 1rpx solid #e8e8ee;
    margin-bottom: 28rpx;
}

.bt1 {
    width: 100%;
    overflow: hidden;
    border-top: 1rpx solid #eeeeee;
}