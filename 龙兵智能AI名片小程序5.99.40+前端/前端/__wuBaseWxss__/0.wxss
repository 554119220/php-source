.show-share-box {
    right: 0rpx;
    top: 22rpx;
    padding: 0rpx 30rpx;
    background: none;
    border: transparent;
}

.show-share-box i {
    font-size: 45rpx;
    line-height: 55rpx;
    display: block;
    color: #21bf34;
}

.show-share-box view.text {
    font-size: 24rpx;
    line-height: 30rpx;
    color: #646464;
}

.reserve-list {
    width: 92%;
    margin: 0rpx auto;
}

.reserve-list .child {
    padding: 28rpx 0rpx;
}

.reserve-list .child .tag {
    left: 0rpx;
    bottom: 28rpx;
    width: 130rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 20rpx;
    border-radius: 0rpx 0rpx 10rpx 10rpx;
    background: rgba(0,0,0,0.3);
}

.reserve-list .child .img {
    width: 130rpx;
    height: 130rpx;
    margin-right: 20rpx;
}

.reserve-list .child .f-caption {
    max-width: 520rpx;
}

.reserve-list .child .f-icontext {
    max-width: 260rpx;
}

.reserve-list .child .flex-1 {
    max-width: 550rpx;
}

.reseve-order-list .child .title {
    padding: 0rpx 4%;
    height: 95rpx;
}

.reseve-order-list .child .title .c-paragraph {
    max-width: 600rpx;
}

.reseve-order-list .child .title em.active {
    color: #fc3c3b;
}

.reseve-order-list .reserve-list {
    padding: 0rpx 4%;
    margin: 0rpx;
    background: #f8f8f8;
}

.reseve-order-list .reserve-list .f-icontext {
    max-width: 100%;
}

.reseve-order-list .child .reserve-btns {
    width: 92%;
    padding: 30rpx 4%;
}

.reseve-order-list .child .reserve-btns .btn {
    width: 160rpx;
    height: 60rpx;
    margin-left: 20rpx;
    color: #515151;
    background: white;
    border: 1rpx solid #c9c9c9;
}

.reseve-order-list .child .reserve-btns .btn.active {
    color: white;
    background: #fc3c3b;
    border: 1rpx solid #fc3c3b;
}

.reseve-order-list .child .order {
    padding: 25rpx 4%;
}

.reseve-order-list .child .order .flex-center {
    padding: 6rpx 0rpx;
}

.reseve-order-list .child .order .flex-center view {
    line-height: 30rpx;
}