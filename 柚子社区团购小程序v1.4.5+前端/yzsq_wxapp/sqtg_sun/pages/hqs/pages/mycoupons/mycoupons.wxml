<view class="swiper-tab {{shouldFiexd?'shouldFiexd':''}}">
    <view bindtap="swichNav" class="tab-item {{tabArr.curHdIndex==0?'active':''}}" data-index="0" data-status="2">{{tab1}}</view>
    <view bindtap="swichNav" class="tab-item {{tabArr.curHdIndex==1?'active':''}}" data-index="1" data-status="1">{{tab2}}</view>
    <view bindtap="swichNav" class="tab-item {{tabArr.curHdIndex==2?'active':''}}" data-index="2" data-status="3">{{tab3}}</view>
</view>
<view class="session {{tabArr.curBdIndex!=9?'oshow':'ohide'}}" wx:for="{{coupon}}" wx:key="itemarr1">
    <view class="couponsItem">
        <view class="couponsLef {{status!=1?'couponsLefPass':''}}">
            <view class="couponsSale">
                <text>￥</text>{{item.mj_price}}</view>
            <view class="couponsSatisfy">满{{item.m_price}}元可用</view>
        </view>
        <view class="couponsRig {{status!=1?'couponsRigPass':''}}">
            <view class="couponsTit">{{item.name}}</view>
            <view class="couponsTime">{{zhy.filterTime(item.lq_time_d)}}~{{zhy.filterTime(item.end_time_d)}}</view>
            <view class="couponsLimit">{{item.detail.info}}</view>
        </view>
    </view>
</view>
<wxs module="zhy" src="../../resource/js/filterTime.wxs" />