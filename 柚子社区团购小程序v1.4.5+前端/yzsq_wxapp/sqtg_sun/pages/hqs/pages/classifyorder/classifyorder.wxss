page {
    background: #f2f2f2;
    padding-bottom: 120rpx;
}

.address-btn {
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    width: 100%;
    font-size: 26rpx;
    line-height: 1.25;
    color: #666;
}

.sgoFooter {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    background-color: #fff;
    z-index: 2;
}

.sgoFooter view {
    flex: 3;
    padding-left: 30rpx;
    font-size: 30rpx;
}

.sgoFooter button {
    flex: 1;
    border: 0;
    border-radius: 0;
    background: #f87d6d;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}

.shopname {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ececec;
    font-weight: 700;
}

.right-icon {
    height: 22rpx;
    width: 12rpx;
    margin-left: 20rpx;
}

.pay-footer {
    border-top: 1rpx solid #ececec;
    padding: 15rpx 20rpx;
}

.pay-footer>button {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #f87d6d;
    font-size: 34rpx;
    color: #fff;
    border-radius: 16rpx;
}

.coupon-cont {
    min-height: 300rpx;
    max-height: 500rpx;
    overflow-y: auto;
    overflow-x: hidden;
}

.couponsItem {
    display: flex;
    margin: 0 30rpx;
    margin-bottom: 30rpx;
}

.couponsLef {
    width: 200rpx;
    height: 150rpx;
    background: #f87d6d;
    text-align: center;
    color: #fff;
}

.couponsLefPass {
    background-color: #666;
}

.couponsRig {
    flex: 1;
    background: #ffdbd6;
    padding-left: 30rpx;
    overflow: hidden;
}

.couponsRigPass {
    background-color: #ccc;
}

.couponsSale {
    margin-top: 30rpx;
    font-size: 42rpx;
}

.couponsSale text,.couponsSatisfy,.couponsTime,.couponsLimit {
    font-size: 24rpx;
}

.couponsTit {
    margin-top: 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.couponsTime,.couponsLimit {
    margin-top: 6rpx;
}

.couponsLimit {
    width: 90%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.choicePay {
    animation: showModel 0.3s ease-in-out;
}

@keyframes showModel {
    0% {
        transform: translateY(1000rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}

.choose-type {
    padding: 20rpx 20rpx;
    margin-top: 20rpx;
    background-color: #fff;
}

radio .wx-radio-input {
    height: 26rpx;
    width: 26rpx;
}

.radio-group>label {
    margin-right: 30rpx;
}

.radio-group>label>radio {
    vertical-align: 2rpx;
}

.shop-addr {
    display: inline-block;
    width: 500rpx;
    text-align: right;
}