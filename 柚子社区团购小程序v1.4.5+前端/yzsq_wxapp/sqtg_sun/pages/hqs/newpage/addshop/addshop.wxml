<view>
    <form bindsubmit="formBindsubmit">
        <view class="heiRad90">
            <picker bindchange="bindPickerChange" range="{{classifyArra}}" value="{{index}}">
                <view class="picker">
                    <text>商品分类：</text>
                    <text>{{classifyArra[index]}}</text>
                </view>
            </picker>
        </view>
        <view class="heiRad90">
            <view>名称：</view>
            <input name="name" placeholder="请输入商品名称" placeholderStyle="text-align: right" value="{{commodityInfo.name}}"></input>
        </view>
        <view class="heiRad90">
            <view>销售价：</view>
            <input name="price" placeholder="请输入销售价" placeholderStyle="text-align: right" value="{{commodityInfo.price}}"></input>
        </view>
        <view class="heiRad90">
            <view>市场价：</view>
            <input name="original_price" placeholder="请输入市场价" placeholderStyle="text-align: right" value="{{commodityInfo.original_price}}"></input>
        </view>
        <view class="heiRad90">
            <view>重量：</view>
            <input name="weight" placeholder="请输入重量" placeholderStyle="text-align: right" value="{{commodityInfo.weight}}"></input>
        </view>
        <view class="heiRad90">
            <view>单位：</view>
            <input name="unit" placeholder="请输入单位" placeholderStyle="text-align: right" value="{{commodityInfo.unit}}"></input>
        </view>
        <view class="heiRad90">
            <view>首页标签：</view>
            <input name="customer_tag" placeholder="请输入首页标签" placeholderStyle="text-align: right" value="{{commodityInfo.customer_tag}}"></input>
        </view>
        <view class="heiRad90">
            <view>库存：</view>
            <input name="stock" placeholder="请输入库存" placeholderStyle="text-align: right" value="{{commodityInfo.stock}}"></input>
        </view>
        <view class="heiRad90">
            <view>虚拟销量：</view>
            <input name="virtual_num" placeholder="请输入虚拟销量" placeholderStyle="text-align: right" value="{{commodityInfo.virtual_num}}"></input>
        </view>
        <view class="heiRad90">
            <view>限购（0为不限制）：</view>
            <input name="limit" placeholder="0" placeholderStyle="text-align: right" value="{{commodityInfo.limit}}"></input>
        </view>
        <view class="heiRad90">
            <picker bindchange="bindStartDate" end="" mode="date" start="" value="{{date}}">
                <view class="picker">
                    <text>开始日期：</text>
                    <text>{{startDate}}</text>
                </view>
            </picker>
            <picker bindchange="bindStartTime" end="" mode="time" start="" value="{{time}}">
                <view class="picker">
                    <text>开始时间：</text>
                    <text>{{startTime}}</text>
                </view>
            </picker>
        </view>
        <view class="heiRad90">
            <picker bindchange="bindEndDate" end="" mode="date" start="" value="{{date}}">
                <view class="picker">
                    <text>结束日期：</text>
                    <text>{{endDate}}</text>
                </view>
            </picker>
            <picker bindchange="bindEndTime" end="" mode="time" start="" value="{{time}}">
                <view class="picker">
                    <text>结束时间：</text>
                    <text>{{endTime}}</text>
                </view>
            </picker>
        </view>
        <view class="heiRad90">
            <picker bindchange="bindDeliveryDate" end="" mode="date" start="" value="{{date}}">
                <view class="picker">
                    <text>配送日期：</text>
                    <text>{{deliveryDate}}</text>
                </view>
            </picker>
            <picker bindchange="bindDeliveryTime" end="" mode="time" start="" value="{{time}}">
                <view class="picker">
                    <text>配送时间：</text>
                    <text>{{deliveryTime}}</text>
                </view>
            </picker>
        </view>
        <view class="heiRad90">
            <picker bindchange="bindServiceDate" end="" mode="date" start="" value="{{date}}">
                <view class="picker">
                    <text>送达时间：</text>
                    <text>{{serviceDate}}</text>
                </view>
            </picker>
            <picker bindchange="bindServiceTime" end="" mode="time" start="" value="{{time}}">
                <view class="picker">
                    <text>配送时间：</text>
                    <text>{{serviceTime}}</text>
                </view>
            </picker>
        </view>
        <view class="heiRad90">
            <view>服务内容：</view>
            <input name="service" placeholder="请输入服务内容" placeholderStyle="text-align: right" value="{{commodityInfo.service}}"></input>
        </view>
        <view class="heiRad video-upload">
            <view>视频上传</view>
            <image bindtap="chooseVideo" src="/zhy/resource/images/add.png"></image>
            <view class="video-box" wx:if="{{video.length!=0}}">
                <video autoplay="{{false}}" class="video" controls="{{true}}" src="{{imgAddr+video}}"></video>
                <image catchtap="deleteVideo" src="/zhy/resource/images/delete.png"></image>
            </view>
        </view>
        <view class="heiRad">
            <upload bind:getArr="getImgDetailsGround" imgArr="{{imgDetails}}" imgLink="{{imgRoot}}" maxCount="9" prevent="{{prevent}}" title="商品详情图片"></upload>
        </view>
        <view class="heiRad">
            <upload bind:getArr="getImgDisplayGround" imgArr="{{imgDisplay}}" imgLink="{{imgRoot}}" maxCount="1" prevent="{{prevent}}" title="首页显示图（220*180）"></upload>
        </view>
        <view class="heiRad">
            <upload bind:getArr="getImgBackGround" imgArr="{{imgBack}}" imgLink="{{imgRoot}}" maxCount="1" prevent="{{prevent}}" title="封面图（690*300）"></upload>
        </view>
        <view class="heiRad">
            <upload bind:getArr="getImgBanGround" imgArr="{{imgBan}}" imgLink="{{imgRoot}}" maxCount="9" prevent="{{prevent}}" title="轮播图（750*750）"></upload>
        </view>
        <button class="btnRedBig" formType="submit">确定提交</button>
    </form>
</view>
