page {
    background-color: #f6f6f6;
}

.all-coin {
    width: 690rpx;
    margin: 30rpx auto 0;
    height: 100rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 30rpx;
    background: -webkit-linear-gradient(left,#fdad76,#fa8b93);
    border-radius: 10rpx 10rpx 0 0;
    display: flex;
    align-items: center;
}

.all-coin image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin-left: 25rpx;
    margin-right: 10rpx;
}

.text-r {
    font-size: 30rpx;
    font-weight: 700;
    margin-left: 10rpx;
}

.gold-coin-list {
    padding: 30rpx;
    color: #a9a9a9;
    font-size: 32rpx;
    border-bottom: 2rpx solid #f5f5f5;
    position: relative;
    height: 130rpx;
    background-color: #fff;
}

.info {
    font-size: 30rpx;
    color: #56585f;
}

.info>view {
    line-height: 60rpx;
}

.info-r {
    font-size: 28rpx;
    color: #62687e;
}

.price {
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    font-size: 30rpx;
    color: #4d4d4d;
    font-weight: 700;
}