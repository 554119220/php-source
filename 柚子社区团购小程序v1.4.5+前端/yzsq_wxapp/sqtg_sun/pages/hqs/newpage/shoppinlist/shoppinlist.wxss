page {
    background-color: #f8f8f8;
}

.tab-hd {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
}

.tab-hd .current {
    border-bottom: 2rpx solid #f6ad41;
}

.tab-bd {
    padding: 20rpx;
}

.tab-bd .shop-list {
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.tab-bd .shop-list-t {
    display: flex;
    margin-bottom: 20rpx;
}

.tab-bd .shop-img {
    margin-right: 20rpx;
}

.tab-bd .shop-img image {
    width: 160rpx;
    height: 160rpx;
    display: block;
}

.tab-bd .shop-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.tab-bd .shop-list-b {
    height: 66rpx;
    line-height: 66rpx;
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 20rpx 0;
    border-top: 2rpx solid #f6ad41;
    margin-top: 20rpx;
}

.tab-bd .shop-list-b .text {
    display: block;
    padding: 0rpx 20rpx;
    border-radius: 10rpx;
    background-color: #f6ad41;
    color: #fff;
    margin-left: 20rpx;
}

.tab-bd .shop-list-b .text1 {
    display: block;
    padding: 0rpx 20rpx;
    border-radius: 10rpx;
    background-color: #000;
    color: #fff;
    margin-left: 20rpx;
}

.addTo {
    position: fixed;
    right: 20rpx;
    bottom: 120rpx;
    width: 88rpx;
    height: 88rpx;
    border: 2rpx solid #f6ad41;
    border-radius: 50%;
    text-align: center;
    line-height: 88rpx;
}

.type-l {
    position: absolute;
    left: 20rpx;
}