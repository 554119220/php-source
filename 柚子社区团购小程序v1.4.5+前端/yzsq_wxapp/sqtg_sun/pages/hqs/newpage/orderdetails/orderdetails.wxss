.order-number {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #f0f0f0;
    padding: 0 20rpx;
}

.order-number .number-r {
    color: red;
}

.order-info {
    display: flex;
    padding: 20rpx;
    position: relative;
}

.order-info .shop-img {
    margin-right: 20rpx;
}

.shop-img image {
    width: 160rpx;
    height: 160rpx;
    display: block;
}

.order-info .shop-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.order-info .shop-price {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    color: red;
}

.head-info {
    padding: 0 20rpx;
    margin-top: 30rpx;
}

.head-info .head-info-list {
    margin-bottom: 20rpx;
}

.head-info .head-info-list text:nth-child(2) {
    color: #666;
}

.coin-ll {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}