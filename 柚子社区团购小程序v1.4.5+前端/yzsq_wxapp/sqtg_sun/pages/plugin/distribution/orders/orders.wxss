page {
    padding-top: 90rpx;
}

.swiper-tab {
    background-color: #fff;
    z-index: 1;
}

.olRig {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order-cont {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 160rpx;
}

.to-comment {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    width: 90rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 22rpx;
    border: 2rpx solid #e9472c;
    color: #e9472c;
    border-radius: 15rpx;
}

.righta-icon {
    height: 22rpx;
    width: 12rpx;
    margin-left: 20rpx;
}

.pay-footer {
    border-top: 1rpx solid #ececec;
    padding: 15rpx 20rpx;
}

.pay-footer>button {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #e9472c;
    font-size: 34rpx;
    color: #fff;
    border-radius: 16rpx;
}

.olBot {
    justify-content: flex-end;
    padding: 10rpx;
}

.commission {
    padding: 10rpx 20rpx 20rpx 20rpx;
    align-items: center;
    background: #f2f2f2;
    font-size: 24rpx;
}

.commission view {
    margin-top: 10rpx;
}

.orderItem {
    border-bottom: 0;
    margin-bottom: 50rpx;
    padding: 20rpx 20rpx 10rpx 20rpx;
}

.commission view:nth-child(1) {
    color: #999;
}

.txtBlue,.txtRed {
    margin-left: 20rpx;
}

.swiper-tab {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    display: flex;
    height: 89rpx;
    border-bottom: 1px solid #eee;
    justify-content: space-around;
}

.tab-item {
    line-height: 89rpx;
    font-size: 30rpx;
}

.on,.swiper-tab .active {
    height: 90rpx;
    line-height: 89rpx;
    border-bottom: 2rpx solid #e9472c;
    color: #e9472c;
}

.noMore {
    padding: 30rpx 0;
    text-align: center;
    color: #999;
}

.flexSB {
    display: flex;
    justify-content: space-between;
}

navigator,view,text,image {
    margin: 0;
    padding: 0;
}

.goodsImg {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}

.flex1 {
    flex: 1;
}

.orderList {
    display: flex;
    padding-bottom: 16rpx;
    align-items: center;
    padding-top: 16rpx;
    border-bottom: 1rpx solid #eee;
}

.oiTit {
    padding-bottom: 20rpx;
    font-size: 24rpx;
    color: #999;
    border-bottom: 1rpx solid #eee;
}