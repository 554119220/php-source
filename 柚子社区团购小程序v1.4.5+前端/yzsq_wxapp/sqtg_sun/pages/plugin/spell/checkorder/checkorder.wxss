.colorLine {
    margin-top: 30rpx;
}

.pay-footer {
    border-top: 1rpx solid #ececec;
    padding: 15rpx 20rpx;
}

.pay-footer>button {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #f87d6d;
    font-size: 34rpx;
    color: #fff;
    border-radius: 16rpx;
}

.count-down {
    width: 750rpx;
    height: 200rpx;
    border-bottom: 20rpx solid #efeff4;
}

.count-time {
    height: 120rpx;
    line-height: 60rpx;
    font-weight: 600;
    font-size: 50rpx;
    text-align: center;
}

.count-tilte {
    height: 100rpx;
    line-height: 140rpx;
    text-align: center;
}

.fixed-btn {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    background: #fff;
    border-top: 1px solid #efeff4;
}

.fixed-btn-p {
    width: 400rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #f87d6d;
}

.fixed-btn-b {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    background: #f87d6d;
    color: #fff;
    text-align: center;
}

.fixed-btn-a {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    background: #ccc;
    color: #fff;
    text-align: center;
}

.qr-icon {
    display: block;
    width: 360rpx;
    height: 360rpx;
    margin: 0 auto 100rpx;
}