.olBotList>view {
    padding: 0 20rpx;
    height: 56rpx;
    line-height: 56rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    margin-left: 15rpx;
}

.swiper-tab,.swiper {
    background: #fff;
    color: #000;
}

.swiper-tab {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    display: flex;
    height: 89rpx;
    border-bottom: 1px solid #eee;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
}

.swiper-tab view:nth-child(1) {
    margin-left: 30rpx;
}

.swiper-tab view:last-child {
    margin-right: 30rpx;
}

.swiper-tab>view.active {
    border-bottom: 1rpx solid #e9472c;
    color: #e9472c;
}

.swiper-tab,.swiper {
    background: #fff;
    color: #000;
}

