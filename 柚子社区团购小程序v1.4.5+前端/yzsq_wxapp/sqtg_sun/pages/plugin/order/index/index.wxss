.glNav {
    height: 100rpx;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.comprehensive,.new,.price,.sales {
    flex: 1;
}

.comprehensive,.new,.sales {
    line-height: 100rpx;
    text-align: center;
}

.price {
    display: flex;
    align-items: center;
    justify-content: center;
}

.arrowup image {
    display: block;
    width: 20rpx;
    height: 12rpx;
}

.arrowup image:nth-child(1) {
    margin-bottom: 6rpx;
}

.priceRig {
    margin-left: 6rpx;
}

.arrowdown {
    margin-top: 6rpx;
}

.glImg {
    width: 100%;
    display: 345rpx;
    height: 345rpx;
}

.goodsList {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 20rpx;
}

.goodsList navigator {
    margin-bottom: 20rpx;
}

.goodsList navigator:nth-child(odd) {
    width: 50%;
    box-sizing: border-box;
    padding-right: 10rpx;
}

.goodsList navigator:nth-child(even) {
    width: 50%;
    box-sizing: border-box;
    padding-left: 10rpx;
}

.glTit {
    margin-top: 12rpx;
    padding: 0 10rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.text1 {
    margin-right: 8rpx;
    display: inline-block;
    line-height: 36rpx;
    padding: 0 10rpx;
    background: #f87d6d;
    color: #fff;
    border-radius: 10rpx;
    font-size: 24rpx;
}

.text2 {
    padding: 0 14rpx;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    color: #999;
}

.glMoney {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    padding: 0 10rpx;
}

.glMoney view:nth-child(1) {
    color: #f87d6d;
    flex: 1;
}

.glMoney view:nth-child(2) {
    color: #999;
    font-size: 24rpx;
}

.glNav .active {
    color: #f87d6d;
}

.search-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 690rpx;
    margin: 20rpx auto 0;
}

.search-box>view:first-child {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    box-shadow: 0 0 1px #999;
    border-radius: 10rpx;
}

.search-box>view:first-child image {
    display: block;
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.search-box>view:first-child input {
    flex: 1;
}

.search-box>view:nth-child(2) {
    width: 100rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 20rpx;
    text-align: center;
    border-radius: 10rpx;
    color: #fff;
    background: #a1c0fd;
}

.glMoney view.order {
    font-size: 24rpx;
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 15rpx;
    border-radius: 18rpx;
    background: #8db4ff;
    color: #fff;
}