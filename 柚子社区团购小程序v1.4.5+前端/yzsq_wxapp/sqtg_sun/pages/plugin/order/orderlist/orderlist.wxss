page {
    padding-top: 90rpx;
}

.swiper-tab {
    background-color: #fff;
    z-index: 1;
}

.olRig {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order-cont {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 160rpx;
}

.to-comment {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    width: 90rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 22rpx;
    border: 2rpx solid #f87d6d;
    color: #f87d6d;
    border-radius: 15rpx;
}

.righta-icon {
    height: 22rpx;
    width: 12rpx;
    margin-left: 20rpx;
}

.pay-footer {
    border-top: 1rpx solid #ececec;
    padding: 15rpx 20rpx;
}

.pay-footer>button {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #f87d6d;
    font-size: 34rpx;
    color: #fff;
    border-radius: 16rpx;
}