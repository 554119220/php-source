<view class="{{padding?'foot-padding':''}}">
    <swiper autoplay circular="true" class="swiper" wx:if="{{banner.length}}">
        <swiper-item wx:for="{{banner}}" wx:key="{{index}}">
            <view bindtap="_onNavTab1" data-index="{{index}}" wx:if="{{item.types==1}}">
                <image class="banner-img" mode="aspectFill" src="{{item.icon}}"></image>
            </view>
            <navigator appId="{{item.appid}}" path="{{item.path}}" target="miniProgram" wx:if="{{item.types==2}}">
                <image class="banner-img" mode="aspectFill" src="{{item.icon}}"></image>
            </navigator>
        </swiper-item>
    </swiper>
    <form bindsubmit="formBindsubmit" reportSubmit="true">
        <view class="heiRad90">
            <view>商家名称：</view>
            <input name="storename" placeholder="请输入商家名称" placeholderClass="placeh" type="text" value="{{mystore.name}}"></input>
            <input hidden name="id" value="{{mystore.id}}"></input>
            <input hidden name="latitude" value="{{mystore.latitude}}"></input>
            <input hidden name="longitude" value="{{mystore.longitude}}"></input>
        </view>
        <view bindtap="chooseaddress" class="heiRad90">
            <view>定位：</view>
            <input disabled name="leaderchoice" placeholder="点击选择地区" placeholderClass="placeh" type="text" value="{{coordinates}}"></input>
        </view>
        <view class="heiRad90">
            <view>详细地址：</view>
            <input class="getLocatoin" name="leaderaddress" placeholder="请填写详细地址" placeholderClass="placeh" type="text" value="{{address}}"></input>
        </view>
        <view class="heiRad90">
            <view>配送范围：</view>
            <input name="distance" placeholder="请填写配送范围" placeholderClass="placeh" type="text" value="{{mystore.distance}}"></input>
            <view>km</view>
        </view>
        <view class="heiRad90">
            <view>联系方式：</view>
            <input name="storetel" placeholder="请填写您的联系方式" placeholderClass="placeh" type="text" value="{{mystore.tel}}"></input>
        </view>
        <view bindtap="tapreadFirst" class="readMe" wx:if="{{hasread}}">【请先点击阅读申请规则】</view>
        <view class="readMegay" wx:if="{{!hasread}}">【我已经阅读并了解】</view>
        <view class="mask" wx:if="{{hasreadWind}}"></view>
        <block wx:if="{{hasreadWind}}">
            <import src="../../../../../../zhy/template/wxParse/wxParse.wxml"></import>
            <view class="rule">
                <view class="ruleTit">商家申请协议</view>
                <view class="ruleCont">
                    <template is="wxParse" data="{{wxParseData:detail.nodes}}"></template>
                </view>
                <view bindtap="tapRulebtn" class="ruleBtn">我已阅读</view>
            </view>
        </block>
        <button class="btnRedBig" formType="submit" wx:if="{{mystore.check_state==0}}">确定提交</button>
        <button class="btnGrayBig" wx:if="{{mystore.check_state==1}}">待审核</button>
        <button class="btnRedBig" formType="submit" wx:if="{{mystore.check_state==3}}">重新提交</button>
        <view class="reason bgfRad" wx:if="{{mystore.check_state==3}}">
        审核失败原因：{{mystore.fail_reason}}
      </view>
    </form>
</view>
<import src="../../../../../../zhy/template/temloading/temloading.wxml"></import>
<template is="temloading" data wx:if="{{!show}}"></template>
<com-footer bind:padding="getPadding" cartCount="{{cartCount}}" wx:if="{{showFoot}}"></com-footer>
