page {
    padding-bottom: 160rpx;
    background-color: #f5f7f8;
}

.ciClose {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 30rpx;
    height: 30rpx;
}

.ciTit {
    margin: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    text-align: center;
    border-bottom: 1rpx solid #c1c1c1;
}

.ciCont {
    padding: 0 30rpx;
    box-sizing: border-box;
}

.ciList {
    margin-top: 30rpx;
    display: flex;
    height: 188rpx;
    border-radius: 8rpx;
    background: #fff;
}

.cilLef {
    width: 209rpx;
    height: 188rpx;
    box-sizing: border-box;
    color: #fff;
    text-align: center;
    position: relative;
}

.cilLef view:nth-of-type(1) {
    font-size: 48rpx;
    position: absolute;
    top: 45rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
}

.cilLef view:nth-of-type(2) {
    font-size: 18rpx;
    position: absolute;
    bottom: 55rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
}

.cilLef image {
    width: 209rpx;
    height: 188rpx;
    display: block;
}

.cilRig {
    flex: 1;
    padding-left: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.cilRig view:nth-child(1) {
    font-size: 30rpx;
    font-weight: 700;
    color: #333;
}

.cilRig view:nth-child(2) {
    margin-top: 37rpx;
    font-size: 20rpx;
    color: #999;
}

.cilRig view:nth-child(3) {
    margin-top: 10rpx;
    font-size: 20rpx;
    color: #999;
}

.ciBtn {
    margin: 0 auto;
    width: 690rpx;
    height: 96rpx;
    line-height: 96rpx;
    color: #fff;
    background: #fe5624;
    border-radius: 48rpx;
    font-size: 30rpx;
    text-align: center;
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}