{template 'common/header'}
<link rel="stylesheet" type="text/css" href="../addons/{php echo $_W['current_module']['name']}/template/style/style.css">
<style type="text/css">
	.table-responsive{border: 1px solid #e7e7eb;}
	.table-responsive th{background-color: #f4f6f9;border-right: 1px solid #e7e7eb}
	.table-responsive td{border-right: 1px solid #e7e7eb}
	.table-responsive .btn-primary{border:0; padding: 3px 8px; margin-bottom: 3px;}
</style>
<ul class="we7-page-tab">
	<li {if $_GPC['do']=='redpacket6'}class="active"{/if}><a href="{php echo $this->createWebUrl('redpacket6');}">联盟列表</a></li>
	<li {if $_GPC['do']=='redpacketadd6'}class="active"{/if}><a href="{php echo $this->createWebUrl('redpacketadd6');}">添加联盟</a></li>
	<li {if $_GPC['do']=='redpacket5'}class="active"{/if}><a href="{php echo $this->createWebUrl('redpacket5');}">商家红包列表</a></li>
	<li {if $_GPC['do']=='redpacketadd5'}class="active"{/if}><a href="{php echo $this->createWebUrl('redpacketadd5');}">添加商家红包</a></li>
</ul>
<div class="clearfix" style="margin-left: -20px;margin-right: -20px;">
	<form action="" method="post" class="we7-form" enctype="multipart/form-data" id="form1">
		<input type="hidden" name="id" value="{$info['id']}">
		
		<div class="form-group">
			<label class="col-sm-2 control-label">联盟名称</label>
			<div class="col-sm-10 form-control-static">
				<input type="text" class="form-control" name="uname" value="{$info['uname']}" required>
			</div>
		</div>

		<div class="form-group time" >
			<label class="col-xs-12 col-sm-3 col-md-2 control-label">活动开始时间</label>
			<div class="col-sm-10">
				{php echo tpl_form_field_date('ustime', $info['ustime'],$withtime=true);}
			</div>
		</div>

		<div class="form-group time" >
			<label class="col-xs-12 col-sm-3 col-md-2 control-label">活动结束时间</label>
			<div class="col-sm-10 ">
				{php echo tpl_form_field_date('uetime', $info['uetime'],$withtime=true);}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">状态</label>
			<div class="col-sm-8 form-control-static">
				<input type="radio" name="status" id="is_buyself-3" id="lower_condition-1" {if $info['status']==0 || empty($info['status'])}checked="checked"{/if} value="0">
				<label class="radio-inline" for="is_buyself-3">隐藏</label>
				<input type="radio" name="status" id="is_buyself-4" {if $info['status']==1}checked="checked"{/if} value="1">
				<label class="radio-inline" for="is_buyself-4">显示</label>
			</div>
		</div>


		<div class="form-group">
			<label class="col-xs-12 col-sm-3 col-md-2 control-label">排序</label>
			<div class="col-sm-10">
				<input type="text" name="sort" class="form-control" value="{if $info}{$info['sort']}{else}255{/if}"  style="width: 50px;"/>
			</div>
			<div class="help-block col-sm-push-2 col-sm-12">*越小越靠前，一般0~255，默认255</div>
		</div>		


		<div class="form-group">
			<input type="submit" name="submit" value="提交" class="btn btn-primary col-lg-1" />
			<input type="hidden" name="token" value="{$_W['token']}" />
		</div>
	</form>
</div>
<script>
	$(function(){
        var state= $('input[name="state"]:checked').val();
        if(state==0){
            $('#img').show();
            $('.video').hide();
        }else if(state==1){
            $('#img').hide();
            $('.video').show();
        }

        
    })
    function check() {
        var state= $('input[name="state"]:checked').val();
        if(state==0){
            $('#img').show();
            $('.video').hide();
        }else if(state==1){
            $('#img').hide();
            $('.video').show();
        }
    }
</script>
<script type="text/javascript">
	$(function(){
		$("#showdistributionset input[name='umoneytype']").on("click",function(){
			var a = $(this).val();
			if(a==2){
				$("#showdistributionset p span").html("元");
			}else{
				$("#showdistributionset p span").html("%");
			}
		})

		$("#showdistributionset2 input[name='rebatetype']").on("click",function(){
			var a = $(this).val();
			if(a==2){
				$("#showdistributionset2 p span").html("元");
			}else{
				$("#showdistributionset2 p span").html("%");
			}
		})
	})
</script>
{template 'common/footer'}