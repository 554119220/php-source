.container {
    background: #fff;
}

.comment {
    padding: 18rpx 20rpx;
    width: 710rpx;
    height: 234rpx;
    font-size: 26rpx;
    color: #999;
    line-height: 40rpx;
    background: #f8f8f8;
}

textarea {
    width: 710rpx;
    height: 234rpx;
    color: #222;
    font-size: 32rpx;
}

.picture {
    padding: 20rpx 20rpx 0rpx 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.upload {
    border: 1px solid #ececec;
    width: 160rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #999;
    margin-right: 19rpx;
    margin-bottom: 20rpx;
}

.upload:nth-child(4n) {
    margin-right: 0rpx;
}

.icon {
    width: 74rpx;
    height: 62rpx;
    margin-bottom: 14rpx;
}

.uploadPic {
    width: 160rpx;
    height: 160rpx;
}

.sub {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 60rpx;
}

.btn {
    width: 657rpx;
    height: 92rpx;
    font-size: 34rpx;
    border-radius: 10rpx;
    color: #fff;
    background-color: #ed8200;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5;
}

.popup-contents {
    top: 460rpx;
    width: 750rpx;
    height: 290rpx;
    border-radius: 20rpx;
    background-color: #f2f2f2;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    color: #000;
    line-height: 32rpx;
}

.reason {
    margin: 30rpx 0rpx;
}

block {
    display: flex;
    flex-direction: row;
}

.star-wrap {
    margin-bottom: 30rpx;
}

.starImgs {
    width: 60rpx;
    height: 60rpx;
    margin: 5rpx;
}

.deter-btn {
    width: 160rpx;
    height: 60rpx;
    border-radius: 20rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #618dfb;
    border: 1rpx solid #618dfb;
}