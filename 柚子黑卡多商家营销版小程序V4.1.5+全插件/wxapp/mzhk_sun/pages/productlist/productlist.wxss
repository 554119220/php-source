.top {
    background-color: #f9d654;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    font-size: 32rpx;
}

.top .search {
    margin: 0 30rpx;
    height: 150rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.top .search-con {
    height: 66rpx;
    background-color: #fceba3;
    border-radius: 33rpx;
    flex: 1;
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.top .search-con image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 15rpx;
}

.top .search-con input {
    flex: 1;
}

.top .switch-btn {
    margin-left: 15rpx;
}

.top .switch-btn image {
    width: 40rpx;
    height: 38rpx;
    display: block;
}

.top .tab-hd {
    height: 90rpx;
    color: #a29e79;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 30rpx;
}

.top .tab-hd .cur {
    color: #000;
    font-size: 30rpx;
    font-weight: 700;
}

.top .tab-hd>view {
    flex: 1;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top .tab-hd>view>image {
    margin-left: 10rpx;
    width: 15rpx;
    height: 29rpx;
    display: block;
}

.tab-bd {
    margin-top: 410rpx;
}

.best-sellers {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    font-size: 30rpx;
}

.best-sellers .best-sellers-shop {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.best-sellers .title-b {
    font-size: 28rpx;
    color: #666;
    margin-top: 20rpx;
}

.best-sellers .shop-list {
    width: 330rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
    color: #555;
    font-size: 28rpx;
}

.best-sellers .shop-list:nth-of-type(2n) {
    margin-right: 0rpx;
}

.best-sellers .shop-list image {
    width: 340rpx;
    height: 270rpx;
    object-fit: cover;
}

.best-sellers .shop-list .sellers-title {
    font-size: 30rpx;
    color: #333;
    height: 80rpx;
    overflow: hidden;
    margin-top: 10rpx;
    line-height: 40rpx;
}

.best-sellers .shop-list .sellers-price {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.best-sellers .shop-list .sellers-price-l {
    font-size: 26rpx;
    color: #e64b46;
    font-weight: 700;
}

.best-sellers .shop-list .sellers-price-m {
    padding: 3rpx 6rpx;
    border-radius: 5px;
    color: #fdecc0;
    font-size: 24rpx;
    background-color: #383433;
    margin: 0 10rpx;
}

.best-sellers .shop-list .sellers-price-r {
    font-size: 24rpx;
}

.best-sellers .shop-list .already-sold {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #8d8d8d;
    margin-top: 10rpx;
}

.best-sellers .shop-list .already-sold-l {
    text-decoration: line-through;
}

.typography2 {
    margin-top: 30rpx;
}

.typography2-list {
    display: flex;
    margin-bottom: 30rpx;
}

.typography2 .shop-l {
    margin-right: 30rpx;
}

.typography2 .shop-l image {
    width: 188rpx;
    height: 188rpx;
    display: block;
}

.typography2-list .shop-r {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    width: 470rpx;
}

.typography2-list .shop-r .shop-name {
    font-size: 30rpx;
    color: #333;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 500rpx;
}

.typography2-list .shop-r {
    flex: 1;
}

.typography2-list .shop-r .shop-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.typography2-list .present-price {
    font-size: 28rpx;
}

.typography2-list .original-price {
    font-size: 28rpx;
    text-decoration: line-through;
}

.typography2-list .discount {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #8d8d8d;
}

.typography2-list .discount1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.typography2-list .discount .discount1-l {
    padding: 3rpx 6rpx;
    border-radius: 5px;
    color: #fdecc0;
    font-size: 24rpx;
    background-color: #383433;
    margin: 0 10rpx;
}

.typography2-list .discount .discount1-r {
    font-size: 26rpx;
    color: #e64b46;
    font-weight: 700;
}

.classification {
    display: flex;
    flex-wrap: wrap;
}

.classification .classification-list {
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 20%;
}

.classification .classification-list image {
    width: 65rpx;
    height: 65rpx;
    border-radius: 50%;
    display: block;
    margin-bottom: 15rpx;
}

.cassifications {
    height: 165rpx;
}