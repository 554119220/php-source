page {
    font-size: 26rpx;
}

.cityHeader {
    padding-top: 20rpx;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
}

input {
    background: #fff;
    color: #999;
}

.citySearch {
    margin: 0 20rpx;
    display: flex;
    align-items: center;
    color: #999;
    position: relative;
}

.citySearch image {
    position: absolute;
    z-index: 10;
    top: 22rpx;
    left: 20rpx;
    width: 26rpx;
    height: 26rpx;
}

.citySearch input {
    padding-left: 60rpx;
    flex: 1;
    height: 70rpx;
    background: #fff;
    color: #999;
    border-radius: 10rpx;
}

.citySearch view {
    padding: 0 14rpx 0 14rpx;
    color: #f33030;
}

.c9 {
    color: #999;
}

.cityTab {
    margin-top: 20rpx;
    background: #fff;
}

.whichChoice {
    padding: 20rpx;
    color: #f33030;
}

.swiper-tab {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #eee;
    justify-content: space-around;
}

.swiper-tab .active {
    border-bottom: 2rpx solid #f33030;
}

.cityItem {
    position: fixed;
    left: 0;
    top: 265rpx;
    right: 0;
    bottom: 0;
    background: #fff;
}

.cityList {
    padding-left: 20rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #eee;
}