.banner {
    width: 750rpx;
    height: 230rpx;
}

.disFlex {
    height: 80rpx;
    background: #fff;
    margin-bottom: 10rpx;
    font-size: 32rpx;
    width: 100%;
    white-space: nowrap;
}

.disFlex view {
    padding: 20rpx;
    display: inline-block;
    text-align: center;
    box-sizing: border-box;
    height: 78rpx;
}

.disFlex .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.session {
    margin-bottom: 100rpx;
}

.list {
    padding: 24rpx;
    width: 702rpx;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    position: relative;
    padding-bottom: 5rpx;
}

.left {
    width: 222rpx;
    height: 224rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.left image {
    width: 222rpx;
    height: 222rpx;
    border-radius: 10rpx;
}

.left text {
    display: inline-block;
    padding: 0rpx 15rpx;
    height: 30rpx;
    line-height: 30rpx;
    background: #e85a5a;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    color: #fff;
    font-size: 20rpx;
}

.oldLeft text {
    background: #555;
}

.rightList {
    margin-left: 20rpx;
    margin-top: 6rpx;
    width: 460rpx;
}

.title {
    font-size: 30rpx;
    color: #000;
    line-height: 32rpx;
    overflow: hidden;
    max-height: 64rpx;
}

.mintitle {
    margin-top: 18rpx;
    color: #666;
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}

.mintitle text:first-child {
    display: inline-block;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 36rpx;
    color: #f33030;
    margin-right: 12rpx;
}

.mintitle text:nth-child(2) {
    text-decoration: line-through;
}

.lis {
    width: 460rpx;
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 10rpx;
}

.price {
    display: flex;
    color: #666;
    align-items: center;
}

.num {
    font-size: 32rpx;
    color: #f33030;
}

.old-price {
    color: #666;
}

.oldPrice text {
    display: inline-block;
    font-size: 24rpx;
    position: relative;
    color: #999;
    margin-left: 10rpx;
}

.oldPrice text::before {
    content: " ";
    display: inline-block;
    width: 100%;
    height: 2rpx;
    background: #999;
    position: absolute;
    top: 10rpx;
    left: 0rpx;
    transform: rotate(2deg);
}

.join {
    width: 182rpx;
    height: 70rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(232,90,90)0%,rgb(243,48,48)100%);
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    border-radius: 6rpx;
}

.oldJoin {
    background-image: none;
    color: #666;
    border: 1rpx solid #222;
}

swiper {
    height: 230rpx;
}

.slide-image {
    width: 750rpx;
    height: 230rpx;
}