page{ min-height: 100%; display: flex; }
.wrap { min-height: 99%; padding-bottom: 1%; flex: 1; }
.banner { }
.banner swiper, .banner-img { width: 100%; height: 340rpx; }
.nav { width: 750rpx; padding: 20rpx 0; white-space: nowrap; }
.nav-item { display: inline-block; width: 150rpx; }
.nav-item image { display: block; width: 80rpx; height: 80rpx; margin: 0 auto 20rpx; border-radius: 50%; }
.nav-item view { padding: 0 10rpx; font-size: 22rpx; text-align: center; }
.festival-name { padding: 0 20rpx; height: 84rpx; line-height: 84rpx; text-align: center; font-size: 32rpx; font-weight: 600; width: 710rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.festival-pic { display: block; width: 750rpx; height: 80rpx; }
.content { padding: 0 20rpx; padding-bottom: 120rpx; }
.list-item { display: flex; flex-direction: row; padding: 20rpx; margin-bottom: 20rpx; background: #fff; border-radius: 10rpx; }
.list-l { position: relative; width: 280rpx; height: 200rpx; margin-right: 20rpx; }
.list-l image { display: block; width: 100%; height: 100%; }
.list-icon { position: absolute; top: 0; left: 0; width: 120rpx; height: 38rpx; line-height: 38rpx; text-align: center; background: #f5ac32; color: #fff; font-size: 24rpx; border-bottom-right-radius: 20rpx; }
.list-r { position: relative; flex: 1; }
.r1 { font-size: 30rpx; font-weight: 600; color: var(--fonta); }
.r2 { position: absolute; bottom: 68rpx; left: 0; display: flex; flex-direction: row; align-items: center; justify-content: center; color: var(--fontb); }
.r2 text { flex: 1; }
.shop-icon { display: block; width: 30rpx; height: 30rpx; margin-right: 10rpx; }
.r3 { position: absolute; bottom: 0; left: 0; }
.price1 { margin-right: 10rpx; font-size: 38rpx; font-weight: 600; color: var(--skin); }
.price2 { font-size: 30rpx; text-decoration: line-through; color: var(--fontc); }
