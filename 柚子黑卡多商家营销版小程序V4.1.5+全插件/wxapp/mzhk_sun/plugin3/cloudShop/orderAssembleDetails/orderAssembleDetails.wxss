.order-list{ font-size: 28rpx; color: #0e0e0e; background-color: #fff; margin-top:20rpx; }
.order-list .list-top{ display: flex; padding: 0 30rpx; height: 74rpx; align-items: center; justify-content: space-between; border-bottom:1px solid #f5f5f5; }
.order-list .list-top .label-type{ color: #e6433a; }
.order-list .list-bottom{ display: flex; padding:30rpx; }
.order-list .list-bottom image{ width: 180rpx; height: 180rpx; display: block; margin-right:20rpx; }
.order-list .list-bottom .order-data{ display: flex; flex-direction: column; justify-content: space-between; padding:10rpx 0; position: relative; font-size: 28rpx; font-weight: 700; flex: 1; }
.order-list .list-bottom .data-num{ position: absolute; top:50%; right: 0rpx; transform: translateY(-50%); }
.list-info{ margin-top:20rpx; background-color: #fff; font-size: 30rpx; color: #999; line-height: 60rpx; padding: 20rpx; }
