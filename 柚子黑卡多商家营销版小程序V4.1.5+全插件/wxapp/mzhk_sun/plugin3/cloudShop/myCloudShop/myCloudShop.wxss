page{ padding-bottom:120rpx; }
.search{ background-color: #ffffff; width: 690rpx; margin:20rpx auto 0; height: 60rpx; line-height: 60rpx; border-radius: 30rpx; display: flex; font-size: 28rpx; align-items: center; }
.search image{ width: 38rpx; height: 38rpx; display: block; margin-right:20rpx; margin-left: 20rpx; }
.search input{ flex: 1; }
.ban{ margin-top:20rpx; height: 360rpx; }
.ban swiper{ height: 360rpx; }
.ban image{ width: 690rpx; height: 360rpx; display: flex; margin:0 auto; border-radius:20rpx; }
.shopowner{ background-color: #fff; border-radius: 20rpx; padding:30rpx; margin-top:20rpx; display: flex; margin-left: 30rpx; margin-right: 30rpx; }
.shopowner .user-img{ margin-right:20rpx; }
.shopowner .user-img image{ width: 130rpx; height: 130rpx; display: block; border-radius: 50%; }
.shopowner .user{ flex: 1; display: flex; flex-direction: column; justify-content: space-between; font-size: 28rpx; color: #212121; }
.shopowner .user-name{ display: flex; align-items: center; font-size: 30rpx; color: #1f1f1f; }
.shopowner .user-name .name-l{ font-weight: 700; }
.shopowner .user-name .name-r{ font-weight: 700; background: -webkit-linear-gradient(top, #ff7e42 , #f65451); margin-left:30rpx; color: #fff; padding: 5rpx 15rpx; border-radius: 40rpx; }
.tab-goods{ margin-top:20rpx; }
.tab-hd{ height: 88rpx; background-color: #fff; display: flex; align-items: center; padding:0 30rpx; font-size: 28rpx; color: #212121; box-sizing: border-box; }
.tab-hd > view{ height: 56rpx; line-height: 56rpx; width: 20%; text-align: center; }
.tab-hd .cur{ background: -webkit-linear-gradient(right, #ff7e42 , #f65451); border-radius: 28rpx; height: 56rpx; color: #fff; }
.best-sellers{ padding:0 30rpx; margin-bottom:30rpx; font-size: 30rpx; }
.best-sellers .best-sellers-shop { display: flex; align-items: center; flex-wrap: wrap; }
.best-sellers .title-b{ font-size:28rpx; color: #666; margin-top:20rpx; }
.best-sellers .shop-list { width:330rpx; margin-top:30rpx; margin-right: 30rpx; color: #555; font-size: 28rpx; }
.best-sellers .shop-list:nth-of-type(2n){ margin-right: 0rpx; }
.best-sellers .shop-list image{ width:330rpx; height:270rpx; object-fit: cover; }
.best-sellers .shop-list .sellers-title{ font-size: 30rpx; color: #333; height: 80rpx; overflow: hidden; margin-top:10rpx; line-height: 40rpx; }
.best-sellers .shop-list .sellers-price{ display: flex; align-items: center; margin-top:20rpx; }
.best-sellers .shop-list .sellers-price-l{ font-size: 26rpx; color: #e64b46; font-weight: 700; }
.best-sellers .shop-list .sellers-price-m{ padding: 3rpx 6rpx; border-radius:5px; color: #fdecc0; font-size: 24rpx; background-color: #383433; margin:0 10rpx; }
.best-sellers .shop-list .sellers-price-r{ font-size: 24rpx; }
.best-sellers .shop-list .already-sold{ display: flex; align-items: center; justify-content: space-between; font-size: 28rpx; color:#8d8d8d; margin-top:10rpx; }
.best-sellers .shop-list .already-sold-l{ text-decoration: line-through; }
.bottom-nav{ display: flex; align-items: center; justify-content: space-around; height: 100rpx; border-top:1px solid #f8f8f8; position: fixed; bottom:0; left: 0; width: 100%; background-color: #fff; }
.bottom-nav .nav-list{ display: flex; flex-direction: column; align-items: center; justify-content: center; color: #818181; font-size: 26rpx; }
.bottom-nav .nav-list .cur-color{ color: #e88287; }
.bottom-nav .nav-list image{ width: 40rpx; height: 40rpx; display: block; margin-bottom:10rpx; }
