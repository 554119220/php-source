.tab-goods{ margin-top:20rpx; }
.tab-hd{ height: 88rpx; background-color: #fff; display: flex; align-items: center; padding:0 30rpx; font-size: 28rpx; color: #212121; box-sizing: border-box; }
.tab-hd > view{ width: 20%; text-align: center; line-height: 56rpx; }
.tab-hd .cur{ color: #f65451dc; }
.best-sellers{ padding:0 30rpx; margin-bottom:30rpx; font-size: 30rpx; }
.typography2{ margin-top:30rpx; }
.typography2-list{ display: flex; margin-bottom:30rpx; background-color: #fff; }
.typography2 .shop-l{ margin-right: 30rpx; }
.typography2 .shop-l image{ width: 188rpx; height: 188rpx; display: block; }
.typography2-list .shop-r{ display: flex; flex-direction: column; justify-content: space-between; padding-top:10rpx; padding-bottom:10rpx; padding-right:30rpx; box-sizing: border-box; width: 470rpx; }
.typography2-list .shop-r .shop-name{ font-size:30rpx; color:#333; line-height:40rpx; overflow:hidden; white-space: nowrap; text-overflow: ellipsis; width: 500rpx; }
.typography2-list .shop-r{ flex: 1; }
.typography2-list .shop-r .shop-price{ display: flex; justify-content: space-between; align-items: center; }
.typography2-list .present-price{ font-size: 28rpx; }
.typography2-list .original-price{ font-size: 28rpx; text-decoration:line-through; }
.typography2-list .discount{ display: flex; align-items: center; justify-content: space-between; font-size:28rpx; color:#8d8d8d; }
.typography2-list .discount1{ display:flex; align-items:center; justify-content: space-between; }
.typography2-list .discount .discount1-l{ padding:3rpx 6rpx; border-radius:5px; color:#fdecc0; font-size:24rpx; background-color:#383433; margin:0 10rpx; }
.typography2-list .discount .discount1-r{ font-size:26rpx; color:#e64b46; font-weight:700; }
.bottom-nav{ display: flex; align-items: center; justify-content: space-around; height: 100rpx; border-top:1px solid #f8f8f8; position: fixed; bottom:0; left: 0; width: 100%; background-color: #fff; }
.bottom-nav .nav-list{ display: flex; flex-direction: column; align-items: center; justify-content: center; color: #818181; font-size: 26rpx; }
.bottom-nav .nav-list .cur-color{ color: #e88287; }
.bottom-nav .nav-list image{ width: 40rpx; height: 40rpx; display: block; margin-bottom:10rpx; }
