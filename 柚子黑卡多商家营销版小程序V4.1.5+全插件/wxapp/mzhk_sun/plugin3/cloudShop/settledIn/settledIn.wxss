page{ background-color: #fff; padding-bottom:50rpx; }
.mode{ height: 100rpx; color: #2c2c2c; font-size: 32rpx; line-height: 100rpx; text-align: center; }
.mode-form{ padding-left:20rpx; font-size: 30rpx; display: block; color: #2c2c2c; }
.mode-form .mode-list{ height: 98rpx; line-height: 98rpx; border-bottom:1px solid #ececec; display: flex; justify-content: space-between; padding-right: 20rpx; align-items: center; }
.mode-form .mode-list input{ text-align: right; flex: 1; margin-left:20rpx; }
.mode-synopsis{ padding: 20rpx 0; border-bottom:1px solid #ececec; }
.mode-synopsis textarea{ width: 710rpx; height: 180rpx; background-color: #efefef; margin-top:20rpx; padding:20rpx; box-sizing: border-box; }
.mode-upload{ }
.submit-btn { margin-top:40rpx; padding-right:20rpx; }
.submit-btn button{ background-color: #fb4d46; color: #fff; height:88rpx; line-height: 88rpx; text-align: center; border-radius:8rpx; font-size: 28rpx; }
.picture{ padding:20rpx 20rpx 10rpx 0rpx; display: flex; flex-wrap: wrap; }
.upload{ border:1px solid #ececec; width:160rpx; height:160rpx; display: flex; flex-direction: column; justify-content: center; align-items: center; font-size:20rpx; color:#999; margin-right:19rpx; margin-bottom:20rpx; }
.upload:nth-child(4n){ margin-right:0rpx }
.icon{ width:74rpx; height:62rpx; margin-bottom:14rpx; }
.uploadPic{ width:160rpx; height:160rpx; }
