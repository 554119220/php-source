.tan-hd{ color: #6d6d6d; font-size: 30rpx; display: flex; justify-content: space-around; align-items: center; height: 90rpx; border-bottom: 1px solid #f1f1f1; background-color: #fff; }
.tan-hd .cur{ color: #b35746; }
.tan-bd{ padding:0 20rpx; }
.tan-bd .goods-list{ background-color: #fff; border-radius:10rpx; padding:20rpx; margin-top:20rpx; }
.tan-bd .goods-list .goods-info{ display: flex; }
.tan-bd .goods-list image{ height: 200rpx; width: 200rpx; display: block; margin-right:20rpx; }
.tan-bd .goods-list-r{ display: flex; flex-direction: column; justify-content: space-between; padding-top:30rpx; padding-bottom:10rpx; position: relative; flex: 1; }
.tan-bd .title{ color: #181818; font-size: 30rpx; font-weight: 700; }
.tan-bd .num{ color: #bebebe; font-size: 26rpx; }
.tan-bd .price{ color: #b35746; font-size: 30rpx; }
.tan-bd .price text{ margin-right:10rpx; }
.tan-bd .goods-list-r .pos{ position: absolute; top: 0; right: 0; font-size: 28rpx; }
.tan-bd .choice{ padding-top:20rpx; border-top: 1px solid #f1f1f1; margin-top:20rpx; display: flex; justify-content: flex-end; }
.tan-bd .choice view{ color: #fff; background-color: #b35746; padding:10rpx 20rpx; border-radius:10rpx; font-size: 30rpx; display: inline-block; }
