.receive-people{ display: flex; flex-direction:row; height:100rpx; align-items:center; padding-left:20rpx; }
.contact-number{ display: flex; flex-direction:row; font-size:32rpx; height:100rpx; padding-left:20rpx; align-items: center; }
.telephone{ width:570rpx; font-size:32rpx; }
