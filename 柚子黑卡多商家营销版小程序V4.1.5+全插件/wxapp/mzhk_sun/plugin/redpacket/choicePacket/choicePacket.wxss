page{ background-color: #f5f7f8; }
.tips{ background-color: #ffe9c4; display: flex; align-items: center; justify-content: space-between; padding:20rpx 30rpx; }
.tips image{ width: 30rpx; height:30rpx; margin-right:12rpx; }
.tips .tips-content{ width: 650rpx; color: #ff5400; font-size: 22rpx; overflow:hidden; }
.may-use{ margin-top:36rpx; }
.may-use .may-use-t{ display: flex; justify-content: center; align-items: center; }
.may-use .use-line{ width: 168rpx; height: 1px; background-color: #8c8c8c; display: block; }
.may-use .use-title{ font-size: 26rpx; line-height: 26rpx; color: #686868; margin: 0 16rpx; }
.may-use .may-use-b{ margin-top:42rpx; padding:0 30rpx; }
.may-use .use-list{ background-color: #ff3d49; border-radius:5px; display: flex; align-items: center; margin-bottom:20rpx; }
.may-use .use-list1{ background-color: #d1d1d1; }
.may-use .use-list .use-list-l{ padding-left:5rpx; height: 170rpx; width: 490rpx; position: relative; display: flex; align-items: center; }
.may-use .use-list .use-price{ color: #fff; font-size: 50rpx; display: flex; align-items: center; }
.may-use .use-list .use-price wx-span{ font-size: 48rpx; line-height: 48rpx; }
.may-use .use-list .use-info{ margin-left:20rpx; color: #fff; }
.may-use .use-list .package-title{ font-size: 32rpx; line-height: 32rpx; }
.may-use .use-list .package-limit{ font-size: 20rpx; line-height: 20rpx; margin:12rpx 0 26rpx; }
.may-use .use-list .package-time{ font-size: 20rpx; line-height: 20rpx; }
.may-use .use-list .use-list-l::before{ content: ""; width: 20rpx; height:20rpx; background-color: #fff; border-radius: 50%; display: block; position: absolute; top:0; right: 0; transform: translate(50%,-50%); }
.may-use .use-list .use-list-l::after{ content: ""; width: 20rpx; height:20rpx; background-color: #fff; border-radius: 50%; display: block; position: absolute; bottom:0; right: 0; transform: translate(50%,50%); }
.may-use .use-list .use-list-r{ height: 170rpx; width: 200rpx; display: flex; justify-content: center; align-items: center; border-left: 1px dashed #fff; }
.use-price-man{ font-size: 24rpx; color: #fff;text-align: center; }
.use-list-r .go-use { padding: 16rpx 26rpx; border-radius: 50rpx; font-size: 32rpx; border: 1px solid #fff; color:#fff; }
