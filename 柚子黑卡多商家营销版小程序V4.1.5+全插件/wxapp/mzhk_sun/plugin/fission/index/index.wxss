page{ background-image: -webkit-linear-gradient( -148deg, rgb(250,250,250) 0%, rgb(250,250,250) 100%); }
.banner,.banner>image{ width: 750rpx; height: 270rpx; }
.list { display: flex; margin: 20rpx 20rpx 0; width: 720rpx; background:#fff; }
.left { flex: 0 0 172rpx; position: relative; width: 172rpx; height: 172rpx; margin-right: 24rpx; }
.left>image { width: 172rpx; height: 172rpx; }
.left .over image{ position: absolute; top:-15rpx; left: -34rpx; width: 170rpx; height: 52rpx; }
.list-right { flex: 1; display: flex; flex-direction: column; justify-content: space-between; overflow: hidden; max-width: 330rpx; }
.lst-up{ display: flex; justify-content: space-between; align-items: center; }
.get{ width: 135rpx; height: 40rpx; line-height: 40rpx; text-align: center; border:2rpx solid rgb(243, 72, 108); color: rgb(243, 72, 108); font-weight: 700; border-radius: 20rpx; }
.title { overflow: hidden; line-height: 32rpx; text-overflow: ellipsis; white-space: nowrap; font-size: 30rpx; font-weight: 700; }
.desc { width: 320rpx; line-height: 36rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: #f33030; font-size: 34rpx; }
.time{ color: #666; font-size: 24rpx; }
.new_left{ display: flex; flex: 1; padding: 20rpx; }
.new_right{ display: flex; flex: 0 0 150rpx; background: #b18a3d; border-left: 3rpx dashed #ffffff; position: relative; color:#ffffff; text-align: center; flex-direction: column; }
.new_right:after { content: ''; display: block; height: 10px; background-size: 20px 20px; background-repeat: repeat-x; background-image: linear-gradient(135deg, transparent 45%, #ccc 55%, transparent 60%), linear-gradient(45deg, transparent 45%, #ccc 55%, transparent 60%); position: absolute; left: -9px; top: 0; }
.icon{ width: 28rpx; height: 28rpx; flex-shrink: 0; align-self: center; margin-right: 5rpx; }
.time-i{ display: flex; text-overflow: ellipsis; white-space: nowrap; overflow: hidden; height: 41rpx; line-height: 41rpx; }
.margin-top{ margin-top: 80rpx; margin-bottom: 25rpx; }
