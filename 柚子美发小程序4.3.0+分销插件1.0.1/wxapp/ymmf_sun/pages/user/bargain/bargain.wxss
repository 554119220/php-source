.container {
    justify-content: flex-start;
    min-height: 100%;
}

.order-nav {
    width: 750rpx;
    height: 94rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 94rpx;
}

.order-nav view {
    width: 375rpx;
    height: 94rpx;
    text-align: center;
    font-size: 32rpx;
    color: #666;
    font-weight: 500;
}

.nav {
    display: inline-block;
    height: 94rpx;
}

.on {
    box-sizing: border-box;
    color: #f92c53;
    border-bottom: 4rpx solid #f92c53;
}

.order-cont {
    margin-top: 20rpx;
    background: #fff;
}

.list {
    padding: 30rpx 20rpx 28rpx;
    display: flex;
    font-size: 28rpx;
    position: relative;
    border-bottom: 1rpx solid #ececec;
}

.img {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
}

.title {
    color: #222;
}

.price {
    font-size: 30rpx;
    color: #f33030;
    margin-top: 48rpx;
}

.actual {
    display: inline-block;
    margin-left: 20rpx;
    color: #666;
    font-size: 26rpx;
    position: relative;
}

.actual::after {
    content: " ";
    display: block;
    width: 100%;
    height: 2rpx;
    background: #666;
    position: absolute;
    bottom: 14rpx;
    transform: rotate(1deg);
}

.cur {
    text-align: right;
    color: #f92c53;
    position: absolute;
    right: 20rpx;
}

.no {
    height: 270rpx;
    width: 750rpx;
}