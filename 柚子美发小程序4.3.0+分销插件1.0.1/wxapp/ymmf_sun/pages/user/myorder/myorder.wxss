.container {
    justify-content: flex-start;
    min-height: 100%;
}

.order-nav {
    width: 750rpx;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 90rpx;
}

.order-nav text {
    width: 375rpx;
    height: 90rpx;
    text-align: center;
    font-size: 32rpx;
    color: #999;
    font-weight: 500;
}

.order-nav .on {
    font-weight: 700;
    color: #222;
}

.order-cont {
    padding: 0rpx 20rpx;
}

.list {
    width: 710rpx;
    height: 320rpx;
    border-radius: 12rpx;
    box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(4,0,0,0.07);
    margin-top: 20rpx;
}

.item {
    height: 222rpx;
    width: 710rpx;
    background: #ff6280;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.stylist {
    font-size: 32rpx;
    color: #fff;
    padding-left: 30rpx;
    line-height: 52rpx;
}

.cancel {
    font-size: 32rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-right: 50rpx;
}

.cancel image {
    width: 28rpx;
    height: 28rpx;
    margin-bottom: 10rpx;
}

.cancel view {
    width: 160rpx;
    height: 62rpx;
    line-height: 62rpx;
    text-align: center;
    border-radius: 10rpx;
    border: 1rpx solid #fff;
    margin: 10rpx;
    font-size: 28rpx;
}

.time {
    height: 98rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 32rpx;
    color: #666;
}

.time image {
    width: 36rpx;
    height: 34rpx;
    margin: 4rpx 24rpx 0rpx 30rpx;
}

.no {
    display: flex;
    justify-content: center;
    margin-top: 100rpx;
}

.no image {
    width: 358rpx;
    height: 296rpx;
}