.container {
    justify-content: flex-start;
    min-height: 100%;
    font-size: 28rpx;
}

.order-nav {
    width: 750rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 80rpx;
}

.order-nav view {
    width: 375rpx;
    height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #666;
    font-weight: 500;
}

.nav {
    height: 80rpx;
    display: inline-block;
}

.on {
    box-sizing: border-box;
    color: #f92c53;
    border-bottom: 4rpx solid #f92c53;
}

.no {
    margin-top: 200rpx;
    height: 270rpx;
    width: 750rpx;
}

.list {
    background: #fff;
    margin-top: 20rpx;
}

.list-up {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0rpx;
    border-bottom: 1px solid #ececec;
    font-weight: 700;
}

.list-left {
    display: flex;
    padding-left: 20rpx;
}

.list-right {
    padding-right: 20rpx;
}

.left-det {
    width: 460rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
    color: #999;
    margin-top: 10rpx;
}

.left-title {
    color: #222;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.list-down {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    justify-content: flex-end;
    padding: 0rpx 20rpx;
    align-items: center;
}

.list-down .btn {
    height: 56rpx;
    font-size: 26rpx;
    color: #666;
    text-align: center;
    line-height: 56rpx;
    justify-content: center;
    border: 1rpx solid #666;
    margin-left: 14rpx;
    border-radius: 10rpx;
    background: #fff;
    margin-right: 0rpx;
    padding: 0rpx 10rpx;
}

.list-down .submit {
    color: #f92c53;
    border: 1rpx solid #f92c53;
}

.nobg {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    color: #999;
    font-weight: 700;
}

.nobg image {
    width: 170rpx;
    height: 170rpx;
    margin-top: 200rpx;
    margin-bottom: 50rpx;
}

.listHead {
    width: 710rpx;
    padding: 0rpx 20rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #ECECEC;
}