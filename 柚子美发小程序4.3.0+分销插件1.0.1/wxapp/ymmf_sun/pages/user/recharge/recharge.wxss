.container {
    justify-content: flex-start;
    min-height: 100%;
}

.cont {
    margin: 30rpx 20rpx;
    width: 710rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(4,0,0,0.078);
}

.section {
    background: #fff;
    font-size: 28rpx;
    color: #222;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
}

.recharge {
    border-bottom: 1px solid #ececec;
}

.recharge-desc {
    display: flex;
    justify-content: space-between;
}

.money {
    height: 106rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    font-weight: 700;
    font-size: 36rpx;
    position: relative;
    margin-top: 15rpx;
    margin-bottom: 32rpx;
}

.money text {
    position: absolute;
    bottom: 4rpx;
}

.money input {
    height: 116rpx;
    font-size: 96rpx;
    position: absolute;
    left: 36rpx;
}

.cur {
    color: #999;
    font-size: 24rpx;
    padding-top: 20rpx;
}

.btn-area {
    margin-top: 40rpx;
    color: #fff;
}

.btn {
    background: rgb(26,173,25);
    color: #fff;
    font-size: 36rpx;
    height: 92rpx;
}

.notice {
    height: 66rpx;
    display: flex;
    align-items: center;
    padding: 0rpx 20rpx;
    font-size: 26rpx;
    color: #999;
}

.notice image {
    height: 28rpx;
    width: 28rpx;
    margin-right: 18rpx;
}

.discount {
    padding: 30rpx 20rpx;
    background: #fff;
    font-size: 26rpx;
    color: #999;
    border-top: 1rpx solid #ececec;
    border-bottom: 1rpx solid #ececec;
}

.list {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-top: 30rpx;
    color: #f92c53;
    font-size: 34rpx;
    font-weight: 500;
}

.item {
    width: 208rpx;
    height: 120rpx;
    border-radius: 10rpx;
    border: 2rpx solid #f92c53;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
    margin-right: 16rpx;
}

.item:nth-child(3n) {
    margin-right: 0rpx;
}

.item text:last-child {
    font-size: 22rpx;
    font-weight: 500;
    margin-top: 16rpx;
}

.gobackindex {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}