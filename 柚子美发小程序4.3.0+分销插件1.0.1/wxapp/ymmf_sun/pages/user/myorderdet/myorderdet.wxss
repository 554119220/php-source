.container {
    line-height: 26rpx;
    font-size: 28rpx;
}

.order-state {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 122rpx;
    padding: 0rpx 20rpx;
    background: #f94668;
    color: #fff;
}

.order-state>view:first-child {
    font-size: 32rpx;
    line-height: 32rpx;
}

.order-state>view:last-child {
    width: 142rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 6rpx;
    border: 1rpx solid #fff;
    font-size: 30rpx;
    text-align: center;
}

.session {
    margin-top: 20rpx;
    background: #fff;
}

.listShop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
}

.concat {
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    background: #fff;
    font-size: 28rpx;
}

.shopname {
    font-weight: 700;
    font-size: 30rpx;
}

.icon {
    width: 38rpx;
    height: 34rpx;
    vertical-align: text-top;
    margin-right: 16rpx;
}

.list {
    padding: 18rpx 20rpx;
    line-height: 28rpx;
    background: #fff;
    display: flex;
    align-items: center;
}

.list-left {
    width: 180rpx;
    color: #666;
}

.list-right {
    font-weight: 700;
}

.order-time {
    font-weight: 700;
    font-size: 32rpx;
    color: #f52c53;
}

.remark {
    padding: 32rpx 20rpx;
    line-height: 36rpx;
}

.remark-right {
    font-weight: 500;
}

.pay {
    padding: 32rpx 20rpx;
    justify-content: space-between;
    font-weight: 700;
}

.pay-left {
    font-weight: 700;
    color: #222;
    font-size: 26rpx;
}

.list-order {
    font-size: 24rpx;
    padding: 0rpx 20rpx;
    margin-top: 20rpx;
}

.list-order:first-child {
    padding-top: 30rpx;
}

.qrcode {
    width: 320rpx;
    margin: 0rpx auto;
    margin-top: 40rpx;
    padding-bottom: 50rpx;
}

.qrcode>canvas {
    width: 320rpx;
    height: 320rpx;
}