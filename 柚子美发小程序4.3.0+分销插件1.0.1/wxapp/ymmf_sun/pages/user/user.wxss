page {
    min-height: 100%;
}

.container {
    justify-content: flex-start;
    min-height: 100%;
}

.user-header {
    background-size: 750rpx 500rpx;
    background-repeat: no-repeat;
    height: 500rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.user-info {
    display: flex;
    flex-direction: column;
    font-size: 0rpx;
    width: 750rpx;
    justify-content: center;
    align-items: center;
}

.thumb {
    width: 156rpx;
    height: 156rpx;
    margin-top: 60rpx;
    border-radius: 50%;
    font-size: 0rpx;
    border: 2px solid #fff;
    box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0,0,0,0.11);
}

.user-info text {
    font-size: 28rpx;
    color: #fff;
    margin-top: 30rpx;
    letter-spacing: 4rpx;
}

.user-count {
    width: 690rpx;
    height: 150rpx;
    background: rgba(255,255,255,.7);
    position: absolute;
    bottom: 0rpx;
    left: 30rpx;
    border-radius: 8rpx 8rpx 0rpx 0rpx;
    display: flex;
    flex-direction: row;
}

.user-money {
    display: flex;
    flex-direction: column;
    width: 500rpx;
    font-size: 32rpx;
    color: rgb(249,44,83);
    margin-top: 24rpx;
    margin-left: 26rpx;
}

.user-money text:nth-child(2) {
    font-size: 34rpx;
    font-weight: 700;
    margin-top: 8rpx;
}

.user-recharge {
    margin-top: 44rpx;
    margin-right: 30rpx;
    width: 160rpx;
    height: 68rpx;
    background-color: rgb(249,44,83);
    border-radius: 10rpx;
    box-shadow: 0rpx 3rpx 4rpx 0rpx rgba(216,38,72,0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.user-recharge text {
    color: #fff;
    font-size: 30rpx;
    margin-right: 24rpx;
}

.user-recharge image {
    height: 32rpx;
    width: 33rpx;
    margin-top: 1rpx;
}

.user-card {
    width: 710rpx;
    padding: 0rpx 20rpx;
    background: #fff;
}

.card-list {
    display: flex;
    flex-direction: row;
}

.card-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #222;
    font-weight: 700;
}

.card-item image {
    width: 44rpx;
    height: 36rpx;
    margin-top: 28rpx;
    margin-bottom: 24rpx;
}

.card-item {
    padding-bottom: 18rpx;
}

.block {
    background: #fff;
    margin-top: 20rpx;
}

.block-cata {
    height: 102rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #222;
    font-weight: 700;
    position: relative;
}

.block-icon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.block-down {
    width: 18rpx;
    height: 12rpx;
    position: absolute;
    right: 20rpx;
}

.block-right {
    transform: rotate(-90deg);
}

.block-cont {
    font-weight: 500;
    color: #666;
    border-top: 1px solid #ececec;
}

.block-icon2 {
    width: 12rpx;
    height: 18rpx;
    margin-left: 50rpx;
    margin-right: 30rpx;
}

#styleSecond .session1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx 26rpx;
    margin-top: 30rpx;
}

#styleSecond .session {
    width: 650rpx;
    margin-left: 20rpx;
    background: #fff;
    box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(5,2,2,0.078);
    border-radius: 10rpx;
}

#styleSecond .session1 .lst {
    display: flex;
    align-items: center;
}

#styleSecond .session1 .lst>image {
    height: 88rpx;
    width: 88rpx;
    margin-right: 70rpx;
    border-radius: 50%;
    box-shadow: 1.5rpx 2.598rpx 8rpx 0rpx #f92c53;
    border: 2rpx solid #fff;
}

#styleSecond .session1 .toFx {
    width: 128rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    background: #f92c53;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    margin-right: 0px;
}