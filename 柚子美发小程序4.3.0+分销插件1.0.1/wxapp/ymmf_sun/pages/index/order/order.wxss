.container {
    justify-content: flex-start;
    position: relative;
}

.user {
    font-size: 28rpx;
    color: #666;
    height: 84rpx;
    line-height: 84rpx;
}

.user text {
    margin-left: 20rpx;
}

.username {
    color: #222;
}

.project {
    padding: 30rpx 0rpx 0rpx;
    background: #fff;
}

.project-head {
    padding: 0rpx 20rpx 26rpx;
    font-size: 32rpx;
    color: #222;
}

.project-head text {
    color: #999;
}

.project-list {
    padding: 0rpx 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    border-bottom: 1px solid #ececec;
}

.project-item {
    min-width: 120rpx;
    min-height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #222;
    border: 1px solid #bcbcbc;
    margin-right: 18rpx;
    margin-bottom: 20rpx;
    background: #fff;
    position: relative;
    padding: 20rpx;
}

.project-item:nth-child(4n) {
    margin-right: 0rpx;
}

.project-item icon {
    position: absolute;
    top: -24rpx;
    right: -10rpx;
    display: none;
}

.on {
    background: rgba(249,44,83,.3);
    color: #f92c53;
    border: 1px solid #f92c53;
}

.on icon {
    display: block;
}

.project-time {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.choosetime {
    display: flex;
    flex-direction: row;
}

.pickertime {
    position: absolute;
    right: 52rpx;
    top: 28rpx;
    font-size: 32rpx;
    color: #222;
}

.righticon {
    width: 12rpx;
    height: 18rpx;
    position: absolute;
    top: 40rpx;
}

.project-num {
    border: 0px solid #fff;
}

.choose {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

#chooseNum {
    display: inline-block;
    width: 92rpx;
    height: 50rpx;
    border: 1px solid #ececec;
    text-align: center;
    margin: 0rpx 8rpx;
    min-height: 0rpx;
    color: #222;
    font-weight: 700;
}

.choose view {
    width: 60rpx;
    height: 50rpx;
    border: 1px solid #ececec;
    color: #ececec;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.choose .add {
    border: 1px solid #f92c53;
}

.icna {
    width: 29rpx;
    height: 30rpx;
}

.icnr {
    width: 29rpx;
    height: 3rpx;
}

.project-phone {
    margin-top: 20rpx;
    background: #fff;
}

.project-phone input {
    font-size: 32rpx;
}

._remark {
    padding-bottom: 120rpx;
}

.remark input {
    font-size: 28rpx;
    width: 100%;
}

.order {
    position: fixed;
    bottom: 0rpx;
    padding: 0rpx 20rpx;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    line-height: 120rpx;
    background: #fff;
    z-index: 1001;
}

.order-X {
    position: fixed;
    bottom: 0rpx;
    padding: 0rpx 20rpx;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    line-height: 120rpx;
    background: #fff;
    z-index: 1001;
    padding-bottom: 68rpx;
}

.order-group {
    position: relative;
    width: 710rpx;
}

.order-total {
    position: absolute;
    top: 0rpx;
    font-size: 28rpx;
    color: #f92c53;
}

.order-total text:nth-child(2) {
    color: #f33030;
    font-weight: 700;
    margin-left: 10rpx;
}

.order-btn {
    position: absolute;
    top: 20rpx;
    right: 10rpx;
}

.order-btn button {
    width: 208rpx;
    height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: rgba(249,44,83,.7);
    border-radius: 0rpx;
}

.order-btn .sure {
    background: rgba(249,44,83,1);
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
}

.drawer_title {
    font-size: 32rpx;
    line-height: 30rpx;
    color: #222;
    font-weight: 700;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.cancel {
    width: 30rpx;
    height: 30rpx;
}

.drawer_content {
    height: 500rpx;
    overflow-y: scroll;
}

.choose-pay {
    background: #fff;
}

.section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
}

.radio {
    width: 730rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 32rpx;
    color: #999;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
    padding-right: 20rpx;
}

.radio radio {
    width: 48rpx;
    height: 48rpx;
}

.radio:last-child {
    border-bottom: 0rpx solid #ececec;
}

.det {
    display: flex;
    align-items: center;
}

.wxicon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 24rpx;
    margin-right: 20rpx;
}

.drawer-foot {
    border-top: 1rpx solid #acacac;
    height: 130rpx;
    padding: 20rpx 20rpx;
}

.drawer-foot button {
    height: 90rpx;
    background: #f92c53;
    font-size: 34rpx;
    color: #fff;
}