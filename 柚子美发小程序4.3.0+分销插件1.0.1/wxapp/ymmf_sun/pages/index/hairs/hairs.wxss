.container {
    justify-content: flex-start;
}

.hair {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.hair-list {
    flex: 0 0 50%;
    height: 366rpx;
}

.hair-item {
    height: 366rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-right: 1rpx solid #cbcbcb;
    border-bottom: 1rpx solid #cbcbcb;
    font-size: 30rpx;
    color: #222;
}

.hair-list:nth-child(1) .hair-item,.hair-list:nth-child(2) .hair-item {
    border-top: 1rpx solid #cbcbcb;
}

.hair-list:nth-child(even) .hair-item {
    border-right: 1rpx solid #fff;
}

.hair-item image {
    height: 112rpx;
    width: 112rpx;
    margin-top: 20rpx;
    border-radius: 50%;
}

.hair-name {
    margin: 30rpx 0rpx 0rpx;
}

.hair-name text {
    display: inline-block;
    margin: 0rpx 14rpx;
}

.bookNum {
    height: 26rpx;
    font-size: 26rpx;
    color: #666;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 28rpx;
}

.bookNum image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    margin-top: 0rpx;
}

.bookOpera {
    width: 160rpx;
    height: 62rpx;
    border-radius: 30rpx;
    background: #f92c53;
    color: #fff;
    text-align: center;
    line-height: 62rpx;
    font-size: 26rpx;
    margin-top: 18rpx;
}