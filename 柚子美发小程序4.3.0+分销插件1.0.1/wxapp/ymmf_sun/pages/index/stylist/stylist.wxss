page {
    min-height: 100%;
}

.container {
    justify-content: flex-start;
    min-height: 100%;
    position: relative;
}

.avatar {
    position: relative;
    height: 310rpx;
    width: 750rpx;
}

.avatar-bg {
    width: 750rpx;
    height: 310rpx;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    filter: blur(6rpx);
}

.avatar-bg:after {
    content: " ";
    height: 310rpx;
    width: 750rpx;
    background: rgba(0,0,0,0.5);
}

.stylist-avatar {
    position: absolute;
    top: 40rpx;
    left: 20rpx;
    display: flex;
    flex-direction: row;
    color: #fff;
}

.avatar-photo {
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    margin-right: 24rpx;
}

.stylist-name {
    font-size: 32rpx;
    margin-bottom: 16rpx;
}

.stylist-work {
    font-size: 24rpx;
}

.stars image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 4rpx;
}

.star {
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    margin-right: 4rpx;
}

.stylist-order {
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    height: 80rpx;
    background: rgba(249,44,83,0.6);
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
}

.stylist-order text {
    display: inline-block;
    width: 374rpx;
    text-align: center;
}

.stylist-order text:nth-child(2) {
    width: 2rpx;
}

.service-list {
    padding: 10rpx 20rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #222;
    border-bottom: 1px solid #ececec;
}

.service-list>text:first-child {
    display: inline-block;
}

.right {
    width: 12rpx;
    height: 18rpx;
}

.price {
    white-space: nowrap;
    color: #f92c53;
    font-weight: 700;
}

.works {
    margin-top: 20rpx;
    background: #fff;
    padding: 0rpx 20rpx;
}

.works-title {
    height: 90rpx;
    padding: 0rpx 0rpx;
}

.works-detail {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.works-list {
    width: 347rpx;
    height: 406rpx;
    box-shadow: 0rpx 0rpx 4rpx 0rpx rgba(4,0,0,0.157);
    margin-top: 20rpx;
    border-radius: 6rpx;
    position: relative;
}

.works-list:nth-child(odd) {
    margin-right: 16rpx;
}

.works-list image {
    width: 347rpx;
    height: 336rpx;
}

.works-list text {
    display: block;
    height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    color: #222;
}

.works-list .number {
    display: block;
    position: absolute;
    top: 0px;
    left: 20rpx;
    width: 58rpx;
    height: 36rpx;
    background: rgba(0,0,0,.5);
    color: #fff;
    font-size: 24rpx;
}

.footer {
    margin-top: 74rpx;
    background: #fff;
    width: 750rpx;
    height: 120rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #d2d2d2;
    position: fixed;
    bottom: 0rpx;
}

.footer-X {
    margin-top: 74rpx;
    background: #fff;
    width: 750rpx;
    height: 120rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #d2d2d2;
    position: fixed;
    bottom: 0rpx;
    padding-bottom: 68rpx;
}

.footer button {
    width: 710rpx;
    height: 90rpx;
    background: #f92c53;
    color: #fff;
}

.foot {
    margin-top: 100rpx;
}

.footer-X button {
    width: 710rpx;
    height: 90rpx;
    background: #f92c53;
    color: #fff;
}