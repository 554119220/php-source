.container {
    justify-content: flex-start;
    min-height: 100%;
    position: relative;
}

.user {
    height: 230rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(249,44,83)0%,rgb(249,108,135)100%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0rpx 30rpx 0rpx 22rpx;
    font-size: 28rpx;
    color: #fff;
}

.user-info {
    display: flex;
}

.nickname {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
}

.user-name {
    margin-bottom: 12rpx;
}

.thumb {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
}

.scan {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon {
    margin-bottom: 14rpx;
    width: 38rpx;
    height: 38rpx;
}

.session {
    background: #fff;
    font-size: 28rpx;
    color: #222;
    border-bottom: 1px solid #cbcbcb;
}

.session-cont {
    display: flex;
    flex-wrap: wrap;
}

.list {
    height: 120rpx;
    width: 335rpx;
    border-bottom: 1px solid #cbcbcb;
    padding: 20rpx;
    font-size: 28rpx;
    color: #222;
    display: flex;
    flex-direction: column;
}

.list:nth-child(odd) {
    width: 334rpx;
    border-right: 1px solid #cbcbcb;
}

.list-item {
    font-size: 52rpx;
    font-weight: 700;
    text-align: center;
    margin-top: 6rpx;
}

.order {
    margin-top: 20rpx;
    width: 750rpx;
    height: 162rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #CBCBCB;
    border-bottom: 1rpx solid #CBCBCB;
}

.orderIcon {
    height: 82rpx;
    width: 82rpx;
    margin-bottom: 16rpx;
}

.orderList {
    width: 375rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #222;
}

.off {
    background: #fff;
    margin-top: 20rpx;
    padding: 0rpx 30rpx 30rpx;
}

.offTitle {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 30rpx;
}

.ordernum {
    border: 1rpx solid #ececec;
    width: 670rpx;
    border-radius: 8rpx;
    height: 72rpx;
    font-size: 28rpx;
    color: #222;
    padding-left: 20rpx;
}

.submit {
    height: 64rpx;
    line-height: 64rpx;
    width: 200rpx;
    font-size: 28rpx;
    color: #fff;
    margin-top: 20rpx;
    background: #f92c53;
}

.outLogin {
    width: 750rpx;
    margin-top: 50rpx;
    display: flex;
    justify-content: center;
}

.outLogin button {
    width: 688rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    font-size: 32rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(249,77,110)0%,rgb(255,158,177)100%);
}