page {
    min-height: 100%;
}

.container {
    justify-content: flex-start;
    min-height: 100%;
}

.category {
    background: #fff;
    padding: 0rpx 46rpx;
    display: flex;
    white-space: nowrap;
    width: 658rpx;
}

.cate-nav {
    padding-right: 90rpx;
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    color: #666;
    font-size: 30rpx;
}

.cate-nav.on {
    color: #f92c53;
}

.cate-cont {
    margin-top: 20rpx;
    background: #fff;
    padding-bottom: 50rpx;
}

.cate-list {
    width: 750rpx;
    padding-top: 30rpx;
    display: flex;
    flex-direction: row;
    position: relative;
}

.cate-detail {
    width: 398rpx;
    font-size: 24rpx;
    color: #666;
    display: flex;
    flex-direction: column;
}

.cate-image {
    width: 272rpx;
    height: 272rpx;
    margin-left: 20rpx;
    margin-right: 40rpx;
}

.cate-detail .title {
    font-size: 28rpx;
    color: #222;
    font-weight: 700;
    margin-bottom: 10rpx;
}

.cate-detail .describe {
    display: -webkit-box!important;
    line-height: 46rpx;
    width: 398rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.price {
    position: absolute;
    bottom: -10rpx;
    font-size: 30rpx;
    font-weight: 700;
    color: #f33030;
}