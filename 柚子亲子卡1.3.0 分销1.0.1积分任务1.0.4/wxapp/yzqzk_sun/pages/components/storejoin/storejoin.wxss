.mask {
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0rpx;
    right: 0rpx;
    left: 0rpx;
    bottom: 0rpx;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
}

.joinIco {
    width: 360rpx;
    height: 180rpx;
    margin-top: 74rpx;
}

.joinCont {
    z-index: 1001;
    position: fixed;
    padding-bottom: 30rpx;
    background: #fff;
    width: 600rpx;
    top: 4%;
    left: 75rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.show {
    animation: showModel 0.5s 1;
}

@keyframes showModel {
    from {
        transform: scale(0.6);
    }

    to {
        transform: scale(1);
    }
}

.joinHead {
    height: 284rpx;
    width: 720rpx;
    border-radius: 50%;
    background: #ff5e5e;
    display: flex;
    justify-content: center;
    margin-left: -60rpx;
    margin-top: -58rpx;
}

.joinBody {
    padding: 0rpx 20rpx;
    width: 560rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.joinTitle {
    padding: 50rpx 0rpx 30rpx;
    font-weight: 700;
    text-align: center;
}

.joinBody>view {
    margin-bottom: 30rpx;
    width: 560rpx;
    background: #f6f5f5;
    border-radius: 10rpx;
}

.joinBody input {
    width: 540rpx;
    height: 72rpx;
    padding-left: 20rpx;
    font-size: 24rpx;
    background: #f6f5f5;
    border-radius: 10rpx;
}

.join-time {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    width: 560rpx;
    background: #f6f5f5;
    border-radius: 10rpx;
}

.join-time>text {
    margin-left: 20rpx;
}

.join-time>input {
    width: 350rpx;
}

.subMsg {
    padding-left: 35rpx;
    padding-right: 35rpx;
    background: #ff5e5e;
    font-size: 30rpx;
    color: #fff;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 10rpx;
    font-weight: 700;
    margin-top: 14rpx;
}

.joinBody>view.pay {
    text-align: center;
    background: #fff;
}

.joinBody>view.joinTitle {
    background: #fff;
}

.pay>text {
    font-size: 34rpx;
    font-weight: 700;
    color: #ff5e5e;
}