.block {
    background: #fff;
    padding: 20rpx 20rpx 10rpx;
}

.comment {
    width: 710rpx;
    height: 210rpx;
    font-size: 28rpx;
    color: #999;
    line-height: 40rpx;
}

textarea {
    width: 710rpx;
    height: 230rpx;
    color: #222;
}

.picture {
    display: flex;
    flex-wrap: wrap;
}

.upload {
    width: 196rpx;
    height: 196rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #999;
    margin-right: 40rpx;
    margin-bottom: 20rpx;
    background: #f2f2f2;
}

.upload:nth-child(3n) {
    margin-right: 0rpx;
}

.icon {
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 14rpx;
}

.uploadPic {
    width: 196rpx;
    height: 196rpx;
}

.img {
    position: relative;
}

.deleIcon {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    z-index: 11;
}

.sub {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 60rpx;
}

.btn {
    width: 657rpx;
    height: 92rpx;
    font-size: 34rpx;
    border-radius: 10rpx;
    color: #fff;
    background-color: #ed8200;
}

.btn {
    width: 750rpx;
    height: 128rpx;
    border-top: 1rpx solid #acacac;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 11;
}

.btn>button {
    height: 98rpx;
    width: 710rpx;
    color: #fff;
    font-size: 34rpx;
    background: #ff5e5e;
    line-height: 98rpx;
    border-radius: 6rpx;
}