.nav {
    width: 750rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    white-space: nowrap;
}

.nav-view {
    display: inline-block;
    flex: 0 0 auto;
    padding: 0 30rpx;
    text-align: center;
    position: relative;
}

.nav-view:before {
    content: "";
    position: absolute;
    right: 0;
    height: 40rpx;
    background: #ddd;
    width: 1rpx;
}

.nav-view:last-child:before {
    background: #fff;
}

.nav-view image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
    vertical-align: -5rpx;
}

.txt {
    width: 690rpx;
    height: 150rpx;
    padding: 30rpx;
    font-size: 26rpx;
}

.btn {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin-top: 30rpx;
    color: #fff;
    background: #57d3fd;
}