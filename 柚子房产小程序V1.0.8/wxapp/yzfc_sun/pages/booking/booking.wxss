.img {
    width: 230rpx;
    height: 170rpx;
    margin-right: 20rpx;
}

.top {
    padding: 30rpx;
    line-height: 55rpx;
}

.name {
    margin-bottom: 24rpx;
}

.list {
    height: 88rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    font-size: 28rpx;
}

.list input {
    flex: 1 1 auto;
    font-size: 28rpx;
}

.picker {
    height: 88rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.btn {
    margin: 60rpx 30rpx;
}

.fl {
    float: left;
}

.play_box {
    position: fixed;
    z-index: 11;
    bottom: 0;
    left: 0;
    right: 0;
    max-height: 70%;
}

.checkbox {
    padding: 0 30rpx;
    height: 88rpx;
}

.play_box button {
    border-radius: 0;
}

.play_title {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 30rpx;
}