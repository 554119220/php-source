.container {
    padding-bottom: 120rpx;
}

.slide-image {
    width: 100%;
    height: 350rpx;
}

.tip>view {
    font-size: 24rpx;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.tip_1 {
    border: 1rpx solid #f2507d;
    color: #f2507d;
}

.tip_2 {
    border: 1rpx solid #36c5f7;
    color: #36c5f7;
}

.tip_3 {
    border: 1rpx solid #558af7;
    color: #558af7;
}

.icon_36 {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
    vertical-align: -5rpx;
}

.icon_44 {
    width: 44rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.fix_bottom {
    display: flex;
    align-items: center;
    background: #fff;
    position: fixed;
    z-index: 8;
    left: 0;
    right: 0;
    bottom: 0;
    border-top: 1rpx solid #ddd;
    box-sizing: border-box;
    height: 98rpx;
    font-size: 32rpx;
}

.fix_bottom button {
    height: 98rpx;
    color: #fff;
    margin: 0;
    padding: 0;
    border-radius: 0;
    width: 250rpx;
    border-left: 1rpx solid #fff;
}

.fix_bottom .flex-1-1 {
    position: relative;
}

.cBtn {
    position: absolute;
    top: 10rpx;
    opacity: 0;
}

.box1 {
    padding: 30rpx;
    line-height: 48rpx;
}

.box2 {
    padding: 10rpx 30rpx;
    line-height: 48rpx;
}

.box3 {
    padding: 0 30rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.box4>view {
    width: 50%;
    box-sizing: border-box;
    padding: 0 30rpx;
    line-height: 46rpx;
}

.box4-img {
    width: 230rpx;
    height: 220rpx;
    border: 1rpx solid #ddd;
    margin-top: 10rpx;
}

.box4>view image {
    width: 100%;
    height: 100%;
}