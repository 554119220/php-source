.interlocution {
    padding: 20rpx 30rpx;
    line-height: 50rpx;
}

.interlocution text {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    flex: 0 0 auto;
    line-height: 48rpx;
    margin-right: 20rpx;
}

.top {
    display: flex;
}

.bottom {
    display: flex;
}

.icon-48 {
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
}

.classity {
    height: 108rpx;
    margin-left: 30rpx;
}

.border-5 .interlocution:last-child {
    border: none;
}

.nav {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #ddd;
}

.nav-item {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
}

.choose {
    color: #005aff;
}

.none {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}