@import "../common/wxParse/wxParse.wxss";

page {
    width: 750rpx;
    height: 100%;
    background: #f5f5f5;
}

.card-swiper {
    position: relative;
}

.slide-image {
    width: 100%;
    height: 360rpx;
}

.card-swiper-box {
    box-sizing: border-box;
    height: 140rpx;
    border: 1rpx solid #DF2323;
    padding: 10rpx;
    border-radius: 10rpx;
    position: absolute;
    bottom: -80rpx;
    left: 80rpx;
    right: 80rpx;
    background: #fff;
}

.card-swiper-box-border {
    box-sizing: border-box;
    border: 1rpx solid #DF2323;
    height: 100%;
    text-align: center;
    border-radius: 10rpx;
    line-height: 46rpx;
    padding-top: 10rpx;
}

.card-time-detail {
    position: absolute;
    top: 40rpx;
    left: 40rpx;
    color: #fff;
    z-index: 2;
    width: 50%;
    height: 100rpx;
}

.fl {
    float: left;
}

.display-cell {
    display: table-cell;
}

.txt-box {
    padding: 20rpx;
    margin: 0 30rpx 30rpx;
    border-radius: 10rpx;
}

.title {
    margin-bottom: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}

.txt-list {
    line-height: 38rpx;
}

.play_box {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -400rpx;
    margin-left: -295rpx;
    width: 590rpx;
    height: 750rpx;
    background: url('http://bmvqgd.img48.wal8.com/img48/17288183_20180408105809/152316799312.png');
    background-size: cover;
    z-index: 11;
}

.paly_img {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 150rpx;
}

.play_box_img {
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.paly_btn {
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    border-radius: 25rpx;
    background: #fff;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn3 {
    background: #df2323;
    height: 80rpx;
    line-height: 80rpx;
    width: 400rpx;
    border-radius: 25rpx;
    color: #fff;
    text-align: center;
}

.play-txt {
    height: 100rpx;
    line-height: 100rpx;
    font-weight: bold;
}

.play_box_colse {
    position: absolute;
    bottom: -90rpx;
    z-index: 12;
    width: 60rpx;
    height: 60rpx;
    left: 50%;
    margin-left: -30rpx;
}

.fiche-box {
    margin: 100rpx 30rpx 20rpx;
    padding: 40rpx;
    background: #fff;
    border-radius: 10rpx;
}

.fiche-list-box {
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
}

.addone {
    position: absolute;
    top: -12rpx;
    right: -12rpx;
}

.fiche-list {
    position: relative;
    margin: 15rpx 11rpx;
}

.filter {
    filter: grayscale(100%);
}

.fiche-list image {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}

.btn4 {
    background: #fba444;
    height: 80rpx;
    line-height: 80rpx;
    width: 400rpx;
    border-radius: 25rpx;
}

.btn5 {
    width: 170rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 50rpx;
    padding: 0;
}

.countDownTimeText {
    min-width: 40rpx;
    line-height: 30rpx;
    height: 30rpx;
    text-align: center;
    margin-top: 15rpx;
}

.w_20 {
    width: 20rpx;
}

.shadow-gray {
    box-shadow: 2px 0px 20px rgba(0,0,0,0.2);
}