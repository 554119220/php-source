page {
    background: #fff;
}

.item {
    display: flex;
    flex-direction: row;
    padding: 30rpx;
    border-bottom: 1px solid #f5f5f5;
}

.l {
    width: 230rpx;
    height: 170rpx;
    margin-right: 30rpx;
}

.l image {
    width: 230rpx;
    height: 170rpx;
}

.r {
    flex: 1;
}

.r>view:nth-child(1) {
    margin-bottom: 30rpx;
    font-size: 30rpx;
    color: #000;
}

.r>view:nth-child(2),.r>view:nth-child(3) {
    position: relative;
    color: #999;
    padding-left: 46rpx;
}

.r>view:nth-child(2) {
    margin-bottom: 30rpx;
}

.r>view>image {
    position: absolute;
    top: 6rpx;
    left: 0;
    width: 26rpx;
    height: 26rpx;
}