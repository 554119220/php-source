.container {
    padding-bottom: 98rpx;
}

.top {
    background: #005aff;
    flex-direction: column;
    height: 300rpx;
    box-sizing: border-box;
    padding-bottom: 50rpx;
}

.top image {
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
}

.icon-48 {
    width: 48rpx;
    height: 48rpx;
}

.nav {
    margin: -70rpx 30rpx 0 30rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.3);
    font-size: 30rpx;
    height: 158rpx;
    border-radius: 20rpx;
    position: relative;
    background: #fff;
}

.nav>view {
    width: 33.3%;
    text-align: center;
}

.list {
    height: 98rpx;
    padding: 0 30rpx;
}

