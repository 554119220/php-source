.mask-ad {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 3;
}

.mask-img,.mask-content {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 10rpx;
    z-index: 3;
}

.mask-content {
    width: 600rpx;
    padding-top: 50rpx;
}

.mask-item {
    position: relative;
    width: 520rpx;
    height: 130rpx;
    padding: 20rpx;
    margin: 0 auto 20rpx;
    background: #fff;
}

.mask-item-a {
    width: 400rpx;
    color: #ef4444;
    font-weight: 600;
    font-size: 30rpx;
}

.mask-item-b {
    line-height: 58rpx;
    color: #999;
}

.mask-item-c {
    font-size: 30rpx;
}

.mask-item-d {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    background: #ef4444;
    color: #fff;
}

.mask-img,.mask-img image {
    position: relative;
    width: 530rpx;
    height: 640rpx;
    border-radius: 10rpx;
}

.icon {
    position: absolute;
    top: -60rpx;
    right: 0;
    color: #fff;
}

.ellips1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.box-in {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
}

.img-box,.item image {
    width: 530rpx;
    height: 640rpx;
}

.button-hover {
    opacity: 0.8;
}