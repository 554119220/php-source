.load-img {
    padding: 0 20rpx;
    background: #fff;
}

.load-name {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: rgba(33,43,102,0.6);
}

.load-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.img-item,.img-add {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 20rpx;
}

.img-item {
    margin-right: 20rpx;
}

.img-item image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.icon {
    position: absolute;
    top: 0;
    right: 0;
}