<view class="container">
    <image class="bg" src="../../resource/images/manage.jpg"></image>
    <view class="mask"></view>
    <view class="input-box">
        <view class="input-list">
            <image class="img" src="../../resource/images/my/ad.png"></image>
            <input bindinput="getAccount" placeholder="请输入账号" placeholderClass="color_000" type="text" value="{{account}}"></input>
        </view>
        <view class="input-list">
            <image class="img" src="../../resource/images/my/mima.png"></image>
            <input bindinput="getPsw" placeholder="请输入密码" placeholderClass="color_000" type="text" value="{{psw}}"></input>
        </view>
    </view>
    <button bindtap="onLoginTab" class="color_fff font-32">登录</button>
</view>
