<view class="wrap">
    <view class="title">自定义</view>
    <view class="cal-item">
        <input bindinput="getRateTab" type="digit" value="{{i==0?c.a.rate:c.b.rate}}"></input>
        <view>% X</view>
        <input bindinput="getRatesTab" type="digit" value="{{i==0?c.a.rates:c.b.rates}}"></input>
        <view>倍 = {{i==0?c.a.rate*c.a.rates:c.b.rate*c.b.rates}}%</view>
        <button bindtap="onCheckTab">确定</button>
    </view>
    <view class="title">或选择贷款利率</view>
    <view wx:if="{{i==0}}">
        <view bindtap="onGetRateTab" class="item {{choose==index?'choose':''}}" data-idx="{{index}}" wx:for="{{rateA}}" wx:key="{{index}}">{{item.title}}</view>
    </view>
    <view wx:if="{{i==1}}">
        <view bindtap="onGetRateTab" class="item {{choose==index?'choose':''}}" data-idx="{{index}}" wx:for="{{rateB}}" wx:key="{{index}}">{{item.title}}</view>
    </view>
</view>
