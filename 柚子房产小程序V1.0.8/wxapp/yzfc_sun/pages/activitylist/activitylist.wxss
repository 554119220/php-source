.wrap {
    border-top: 1px solid #F5F5F5;
}

.item {
    display: flex;
    flex-direction: row;
    padding: 10rpx 20rpx;
    border-bottom: 10rpx solid #F5F5F5;
}

.l {
    width: 190rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.l image {
    width: 100%;
    height: 100%;
}

.r {
    position: relative;
    flex: 1;
}

.r>view:nth-child(1) {
    font-size: 28rpx;
    color: #000;
}

.bottom {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.bottom view:nth-child(1) {
    font-size: 24rpx;
    line-height: 46rpx;
}

.bottom view:nth-child(2) {
    line-height: 46rpx;
    font-size: 24rpx;
    color: #999;
}

.status {
    position: absolute;
    right: 0;
    bottom: 20rpx;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    color: #fff;
    text-align: center;
}

.s-a {
    background: #DF2323;
}

.s-b {
    background: #999;
}

.button-hover {
    opacity: 0.8;
}