<view class="wrap" wx:if="{{!remove}}">
    <view class="recommend">
        <view class="recommend-l">
            <image src="{{imgLink+info.cardinfo.img_cover}}"></image>
        </view>
        <view class="recommend-r">
            <view class="r-title ellips2">{{info.cardinfo.prizename}}</view>
            <view class="r-btn">数量： 1件</view>
        </view>
    </view>
    <view class="mail">
        <view class="mail-title">{{info.type==1?'到店自取：':'快递寄送：'}}</view>
        <view class="name">
            <view>{{info.name}}</view>
            <view>{{info.tel}}</view>
        </view>
        <view class="address">{{info.address}}</view>
    </view>
    <view class="mail">
        <view class="mail-title">订单信息：</view>
        <view class="address">分店名称：{{info.branch.name}}</view>
        <view class="address">联系方式：{{info.branch.tel}}</view>
        <view class="address">联系地址：{{info.branch.address}}</view>
        <view class="address">配送方式：{{info.type==1?'到店自取':'快递寄送'}}</view>
        <view class="address">订单编号：{{info.ordernum}}</view>
    </view>
    <view class="foot">
        <button bindtap="onCheckTab">确认核销</button>
    </view>
</view>
