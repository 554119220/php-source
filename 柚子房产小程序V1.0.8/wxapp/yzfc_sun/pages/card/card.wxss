.wrap {
    padding: 30rpx 0;
}

.recommend {
    padding: 15rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 10rpx;
    border-bottom: 10rpx solid #F5F5F5;
}

.recommend-l {
    margin-right: 20rpx;
}

.recommend-l,.recommend-l image {
    width: 240rpx;
    height: 180rpx;
}

.recommend-r {
    position: relative;
    flex: 1;
    height: 180rpx;
}

.r-title {
    font-size: 30rpx;
    color: #383838;
}

.r-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: #969696;
}

.mail {
    padding: 0 30rpx 30rpx 30rpx;
    margin: 30rpx 0 0;
    border-radius: 10rpx;
    background: #fff;
    border-bottom: 10rpx solid #F5F5F5;
}

.name {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mail-title {
    padding-bottom: 50rpx;
}

.mail-title,.name>view:nth-child(1) {
    line-height: 40rpx;
    font-size: 30rpx;
    color: #383838;
}

.address,.name>view:nth-child(2) {
    line-height: 40rpx;
    font-size: 26rpx;
    color: #969696;
}

.foot {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
}

.foot button {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-top: 15rpx;
    font-size: 34rpx;
    color: #fff;
    background: #EC1D27;
}

.qr-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 120rpx;
}

.qr-center image {
    width: 200rpx;
    height: 200rpx;
}

.button-hover {
    opacity: 0.8;
}