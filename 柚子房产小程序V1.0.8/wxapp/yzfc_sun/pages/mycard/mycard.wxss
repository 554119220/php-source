.first,.firsts {
    align-items: center;
    justify-content: center;
}

.first {
    border-top: 1rpx solid #ddd;
}

.nav {
    height: 90rpx;
    font-size: 30rpx;
    background: #fff;
}

.nav>view {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    position: relative;
    width: 33.3%;
}

.nav>view::before {
    content: "";
    position: absolute;
    top: 35rpx;
    bottom: 35rpx;
    right: 0;
    background: #ddd;
    width: 1rpx;
}

.nav>view:last-child::before {
    background: #fff;
}

.item {
    padding: 0 30rpx 30rpx;
    border-bottom: 10rpx solid #f5f5f5;
}

.top {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #f5f5f5;
}

.bottom {
    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
}

.l {
    width: 200rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.l image {
    width: 200rpx;
    height: 150rpx;
}

.r {
    flex: 1;
    position: relative;
}

.r>view:nth-child(1) {
    font-size: 28rpx;
}

.r>view:nth-child(2) {
    position: absolute;
    bottom: 0;
    color: #999;
}

.check {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    background: #df2323;
    color: #fff;
    text-align: center;
}

.none {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}