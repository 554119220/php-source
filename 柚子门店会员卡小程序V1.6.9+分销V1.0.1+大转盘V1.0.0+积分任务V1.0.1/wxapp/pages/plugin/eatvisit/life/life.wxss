.container {
    padding-bottom: 120rpx;
    height: auto;
}

.banner {
    width: 750rpx;
    height: 230rpx;
}

.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #999;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 30rpx;
}

.list {
    display: flex;
    margin: 20rpx 20rpx 0;
    padding: 20rpx;
    width: 670rpx;
    background: #fef3e0;
    border-radius: 10rpx;
}

.left {
    flex: 0 0 240rpx;
    position: relative;
    width: 240rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.left>image {
    width: 240rpx;
    height: 200rpx;
}

.left>text {
    display: inline-block;
    position: absolute;
    left: 0rpx;
    top: 0;
    width: 120rpx;
    height: 38rpx;
    line-height: 38rpx;
    background: rgba(245,172,50,1);
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    border-radius: 0 0 19rpx 0;
}

.left .over {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(0,0,0,0.5);
}

.left .over image {
    width: 180rpx;
    height: 150rpx;
    margin-left: 30rpx;
    margin-top: 25rpx;
}

.list-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 200rpx;
}

.list-right>view {
    width: 410rpx;
}

.title {
    width: 100%;
    overflow: hidden;
    line-height: 32rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    font-weight: 700;
}

.desc {
    display: -webkit-box!important;
    margin-top: 20rpx;
    line-height: 36rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.price {
    color: #fe433f;
    font-weight: 700;
    font-size: 38rpx;
}

.old-price {
    margin-left: 30rpx;
    color: #666666;
    font-size: 30rpx;
    text-decoration: line-through;
}

.slide-image {
    width: 750rpx;
    height: 230rpx;
}

.isMask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
}

#isLogin {
    position: fixed;
    width: 480rpx;
    height: 320rpx;
    background: #fff;
    top: 30%;
    left: 85rpx;
    z-index: 1001;
    padding: 50rpx 50rpx;
}

.isLoginBtn {
    display: flex;
    justify-content: space-around;
}

.isLoginBtn button {
    background: #fff;
    width: 100%;
    height: 68repx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-right: 0rpx;
    margin-left: 0rpx;
    font-size: 28rpx;
    margin-top: 50rpx;
    color: #4bad37;
}

.loginTitle {
    font-size: 34rpx;
}

.shopImg {
    height: 80rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.shopImg>image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.isAgary {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
    margin-top: 30rpx;
}

.isAgary>text {
    margin-right: 20rpx;
}