[is="zhy/component/comFooter/comFooter"] {
    font-size: 20rpx;
}

page {
    background-color: #f8f8f8;
    height: 100%;
    font-family: "Microsoft YaHei","Helvetica Neue","Hiragino Sans GB","\9ED1\4F53",Arial;
    font-size: 0rpx;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 26rpx;
    color: #222;
}

.rightIcon {
    width: 12rpx;
    height: 18rpx;
}

.tab {
    position: fixed;
    width: 100%;
    bottom: 0rpx;
    background: #fff;
    border-top: 2rpx solid #acacac;
    height: 92rpx;
    padding-bottom: 4rpx;
    z-index: 99999;
}

.ipx {
    padding-bottom: 68rpx;
}

.tabnav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tablist {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #8c8c8c;
}

.tabimg {
    width: 60rpx;
    height: 60rpx;
    margin-top: 8rpx;
    margin-bottom: 0rpx;
}

.badge {
    position: relative;
}

.badge_text {
    position: absolute;
    top: -72rpx;
    right: -26rpx;
    height: 60rpx;
    min-width: 60rpx;
    line-height: 40rpx;
    padding: 13rpx;
    font-size: 47rpx;
    border-radius: 30rpx;
    background: #f44;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    transform: translateX(50%) scale(.5);
    transform-origin: center;
    z-index: 10;
    box-shadow: 0 0 0 5rpx #fff;
    box-sizing: border-box;
}

.foot {
    height: 200rpx;
}

.cartbtn {
    height: 76rpx;
    width: 76rpx;
}

.indexHome {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    box-shadow: 0px 0px 18px 0px rgba(4,0,0,0.055);
    z-index: 90;
    position: fixed;
    bottom: 75rpx;
    right: 52rpx;
}

.indexHome>image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}