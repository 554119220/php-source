page {
    background: #fff;
}

.banner,.banner image {
    width: 750rpx;
    height: 340rpx;
}

.recharge {
    display: flex;
    flex-wrap: wrap;
    padding: 40rpx 45rpx 20rpx;
    background: #fff;
}

.list {
    width: 300rpx;
    height: 140rpx;
    border-radius: 20rpx;
    color: #666;
    font-size: 22rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border: 2rpx solid #ccc;
}

.on {
    background-image: -webkit-linear-gradient(-45deg,rgb(255,100,15) 0%,rgb(249,122,128)100%);
    border: 2rpx solid #dcdcdc;
    color: #fff;
}

.list:nth-child(even) {
    margin-left: 60rpx;
}

.money {
    font-size: 34rpx;
    margin-bottom: 10rpx;
}

.block {
    height: 160rpx;
    padding: 0rpx 20rpx;
    padding-top: 40rpx;
    background: #f8f8f8;
}

.notice {
    width: 28rpx;
    height: 28rpx;
    margin-right: 18rpx;
}

.rechargeBtn {
    background: #ff640f;
    color: #fff;
    height: 92rpx;
    line-height: 92rpx;
}

.noticeMsg {
    height: 68rpx;
    display: flex;
    font-size: 26rpx;
    color: #999;
    align-items: center;
}

.session {
    background: #fff;
    padding: 0rpx 20rpx 50rpx 20rpx;
}

.session-title {
    font-size: 30rpx;
    color: #666;
    padding: 40rpx 0rpx 28rpx;
}

.cont {
    line-height: 36rpx;
    font-size: 26rpx;
    color: #666;
}