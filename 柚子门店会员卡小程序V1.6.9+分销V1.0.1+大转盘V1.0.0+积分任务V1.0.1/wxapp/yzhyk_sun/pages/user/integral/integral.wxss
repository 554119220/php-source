.head {
    background-image: -webkit-linear-gradient(90deg,rgb(255,128,58)0%,rgb(255,100,15)100%);
    height: 300rpx;
    width: 750rpx;
}

.headBg {
    height: 300rpx;
    width: 750rpx;
    background-image: url("http://cgkqd.img48.wal8.com/img48/569611_20170429191245/15244506421.png");
    background-size: contain;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: 700;
}

.integral {
    font-size: 80rpx;
    line-height: 80rpx;
    margin-bottom: 26rpx;
}

.block {
    width: 690rpx;
    background: #FFF;
    padding: 0rpx 30rpx 30rpx 30rpx;
}

.block>view:first-child {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 160rpx;
}

.remark {
    font-size: 26rpx;
    margin-top: -10rpx;
}

.remark>text:first-child {
    font-weight: 700;
}

.blockLeft {
    display: flex;
    align-items: center;
}

.stars {
    width: 100rpx;
    height: 100rpx;
    background: #ffccb0;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}

.stars view {
    width: 70rpx;
    height: 70rpx;
    background: #ff640f;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}

.starIcon {
    width: 51rpx;
    height: 49rpx;
    border-radius: 50%;
}

.det {
    font-size: 30rpx;
    font-weight: 700;
}

.det view:last-child {
    font-size: 26rpx;
    font-weight: 500;
    color: #999;
    margin-top: 20rpx;
}

.blockRight {
    width: 180rpx;
    height: 66rpx;
    color: #fff;
    border-radius: 33rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(255,190,93)0%,rgb(255,100,15)100%);
    text-align: center;
    line-height: 66rpx;
}

.order-nav {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 100rpx;
    margin-top: 20rpx;
}

.order-nav view {
    width: 375rpx;
    height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: 700;
    border-bottom: 1rpx solid #cbcbcb;
}

.nav {
    display: inline-block;
    height: 100rpx;
}

.order-nav .on {
    display: inline-block;
    color: #ff640f;
    box-sizing: border-box;
    border-bottom: 3rpx solid #ff640f;
}

.session {
    margin-top: 10rpx;
    width: 690rpx;
    padding: 0rpx 30rpx;
    background: #fff;
}

.list {
    width: 690rpx;
    display: flex;
    justify-content: space-between;
    height: 140rpx;
    align-items: center;
    border-bottom: 1rpx solid #dcdcdc;
}

.list:last-child {
    border-bottom: 1rpx solid #fff;
}

.listLeft {
    font-size: 32rpx;
}

.time {
    font-size: 26rpx;
    color: #999;
    font-weight: 700;
    margin-top: 18rpx;
}

.listRight {
    font-weight: 700;
    font-size: 30;
}