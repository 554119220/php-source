.cards {
    margin: 20rpx 20rpx 30rpx;
    font-size: 24rpx;
    background: #fff1e9;
}

.card-prices {
    padding: 6rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: cneter;
    border: 1rpx solid #ff640f;
    color: #ff640f;
    border-bottom: 1rpx dashed #ff640f;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    position: relative;
    box-shadow: 0rpx -3rpx 3rpx 0rpx rgba(180,180,180,0.212);
}

.card-prices:before,.card-prices:after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    border-radius: 50%;
    position: absolute;
    bottom: -12rpx;
    border: 1rpx solid #ff640f;
    z-index: 99;
    border-left: 1rpx solid transparent;
    border-bottom: 1rpx solid transparent;
}

.card-prices:before {
    left: -10rpx;
    transform: rotate(45deg);
}

.card-prices:after {
    transform: rotate(-135deg);
    right: -10rpx;
}

.card-time {
    border: 1rpx solid #ff640f;
    border-top: 1rpx dashed #ff640f;
    border-radius: 0rpx 0rpx 12rpx 12rpx;
    height: 118rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    line-height: 40rpx;
    color: #666;
}

.price {
    display: flex;
    line-height: 92rpx;
    margin-top: 16rpx;
}

.price text:nth-child(1) {
    font-size: 42rpx;
    margin-top: 16rpx;
}

.price text:nth-child(2) {
    font-size: 92rpx;
}

.right {
    width: 12rpx;
    height: 22rpx;
    margin-left: 22rpx;
}

.use {
    margin-top: 54rpx;
    font-weight: 700;
}