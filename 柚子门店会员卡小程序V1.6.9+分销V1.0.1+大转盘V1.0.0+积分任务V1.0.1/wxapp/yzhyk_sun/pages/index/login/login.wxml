<view class="container" style="background-image:url('../../../../style/images/bgLogin.png')">
    <view class="wrap">
        <view class="tip">
            <view>{{tip1}}</view>
            <view>{{tip2}}</view>
        </view>
        <view class="session" wx:if="{{isWx}}">
            <button bindtap="wxLogin" class="phoneLog" openType="getPhoneNumber">使用手机号快捷登录</button>
            <view class="fixBot">
                <view class="other">
                    <text>使用其他手机号登录</text>
                </view>
                <view bindtap="toOther">
                    <image class="phoneIcon" src="../../../../style/images/phonebtn.png"></image>
                </view>
            </view>
        </view>
        <view class="session" wx:if="{{!isWx}}">
            <form bindsubmit="formSubmit" class="form">
                <view class="loginForm">
                    <view>
                        <input name="phone" placeholder="输入手机号" placeholderStyle="color:#222" type="number" value="{{phoneNum}}"></input>
                        <image bindtap="delPhone" class="delIcon" src="../../../../style/images/icon44.png"></image>
                    </view>
                    <view>
                        <input name="code" placeholder="输入验证码" placeholderStyle="color:#222" type="number"></input>
                        <view bindtap="receCode" class="receCode">获取验证码</view>
                    </view>
                    <button class="phoneLog subLog" formType="submit">立即登录</button>
                </view>
            </form>
        </view>
    </view>
</view>
