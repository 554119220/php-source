<view class="container">
    <view>
        <view class="goods">
            <view>
                <image class="goodsImg" src="{{imgroot}}{{goods.img}}"></image>
            </view>
            <view class="goodsRight">
                <view class="title">{{goods.title}}</view>
                <view class="price">
                    <view>拼团省{{goods.oldprice-goods.price}}元</view>
                    <view>￥{{goods.price}}</view>
                </view>
            </view>
        </view>
        <view bindtap="toGrouppro" class="description">
            <view>
                <view class="descTit">拼团流程<text>（若人数不足将自动退款）</text>
                </view>
                <view class="process">
                    <view>
                        <text>1</text>支付开团/参团</view>
                    <view>
                        <text>2</text>邀请参团</view>
                    <view>
                        <text>3</text>人满成团</view>
                </view>
            </view>
            <view class="descRight">
                <text>说明</text>
                <image class="rightIcon" src="../../../../style/images/right3.png"></image>
            </view>
        </view>
        <view class="member">
            <view class="joinuser">
                <view class="uthumb {{index<goods.num?'thumb':''}}" wx:for="{{user}}">
                    <image src="{{item}}"></image>
                </view>
            </view>
            <button bindtap="toJoin" class="btn" wx:if="{{goods.status==2}}">参与活动</button>
            <button class="btn over" wx:if="{{goods.status==0}}">已失效</button>
            <button class="btn" openType="share" wx:if="{{goods.status==1}}">邀请好友</button>
        </view>
        <view bindtap="toIndex" class="indexHome">
            <image src="../../../../style/images/indexHome.png"></image>
        </view>
    </view>
</view>
