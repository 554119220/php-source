<view class="container">
    <view>
        <view class="banner">
            <image src="{{imgroot}}{{setting.group_pic2}}"></image>
        </view>
        <view class="session">
            <view bindtap="toGroupdet" class="goodsList" data-id="{{item.id}}" wx:for="{{goodsList}}">
                <view class="goodsImg">
                    <image class="goods-img" src="{{imgroot}}{{item.src}}"></image>
                    <image class="remind" src="{{remind}}"></image>
                </view>
                <view class="goodsRight">
                    <view class="goodsTitle">{{item.title}}</view>
                    <view class="goodsUser">{{item.userNum}}人团 立减￥{{item.discount}}元</view>
                    <view class="goodsDet">
                        <view>
                            <view class="price">￥{{item.price}}</view>
                            <view class="bookNum">已团{{item.groupNum}}件</view>
                        </view>
                        <view class="toBook">
              去开团
            </view>
                    </view>
                </view>
            </view>
            <view class="more" wx:if="{{!hasMore&&curPage!=1}}">没有更多数据了~</view>
        </view>
    </view>
</view>
