.topTags {
    padding: 0 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 50;
    box-shadow: 0px 1px 3px #999;
}

.topTags .tagList {
    padding: 20rpx 0;
    font-size: 30rpx;
    color: #999;
    white-space: nowrap;
}

.topTags .tagBox {
    display: inline-block;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 20rpx;
    border: 1rpx solid #fff;
    border-radius: 25rpx;
}

.topTags .tagBox.curr {
    border-color: #79d5c1;
    color: #77D3BF;
}

.topBlank {
    height: 102rpx;
}

.list {
    font-size: 4vw;
    line-height: 4.5vw;
}

.list .item {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 20rpx 30rpx;
}

.list .item+.item {
    margin-top: 6rpx;
}

.list .item .simg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    display: block;
}

.list .item .itemC {
    margin-left: 20rpx;
    flex: 1;
    width: 570rpx;
}

.list .item .itemC .sp1 {
    font-size: 4.5vw;
    line-height: 6.5vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .itemC .sp2 {
    margin-top: 10rpx;
    color: #999999;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .itemC .sp2>text {
    padding: 5rpx 20rpx;
    color: #fff;
    border-radius: 50rpx;
    margin-right: 4rpx;
}

.list .item .itemC .sp3 {
    display: flex;
    margin-top: 10rpx;
}

.list .item .itemC .sp3>view:nth-child(1) {
    flex: 1;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}