.body {
    background: #fff;
}

.limit {
    display: flex;
    padding: 20rpx;
    background: #ffeee4;
    justify-content: center;
    color: #d94949;
    align-items: center;
    font-size: 4vw;
    line-height: 6vw;
}

.limit .box {
    height: 50rpx;
    line-height: 50rpx;
    width: 60rpx;
    text-align: center;
    background: #fff;
    margin: 0 10rpx;
    border-radius: 8rpx;
    color: #333;
}

.title {
    margin-top: 30rpx;
    position: relative;
}

.title .text {
    position: absolute;
    top: 50%;
    width: 100%;
    transform: translate(0,-50%);
    text-align: center;
    color: #fff;
    font-size: 5vw;
    line-height: 7vw;
    box-sizing: border-box;
    padding: 0 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list {
    overflow: hidden;
    padding-top: 50rpx;
    font-size: 3.5vw;
    line-height: 5.5vw;
}

.list .item {
    width: 44%;
    float: left;
    background: #ffeee4;
    margin-left: 4%;
    margin-bottom: 40rpx;
    position: relative;
}

.list .item .itemT {
    border: #e84c35 4rpx dotted;
    box-sizing: border-box;
    padding: 4rpx;
}

.list .item .itemT .bimg {
    width: 100%;
    height: 288rpx;
    box-sizing: border-box;
    padding: 20rpx;
    border: #d17c79 2rpx solid;
}

.list .item .itemT .name {
    padding: 10rpx 20rpx 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
    box-sizing: border-box;
}

.list .item .itemB {
    padding: 20rpx 0;
}

.list .item .itemB .btn {
    width: 150rpx;
    height: 50rpx;
    text-align: center;
    color: #fff;
    background: #ea4736;
    border-radius: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    box-shadow: #000 5rpx 5rpx 20rpx;
}

.list .tip {
    width: 150rpx;
    height: 36rpx;
    position: absolute;
    top: 16rpx;
    left: -10%;
    transform: rotateZ(-30deg);
}

.list .tip>view {
    color: #fff;
    position: absolute;
    text-align: center;
    top: 0;
    left: 0;
    width: 150rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 3vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}