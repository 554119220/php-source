.banner {
    font-size: 4vw;
    line-height: 6vw;
    padding: 40rpx 30rpx;
    position: relative;
}

.banner>view:nth-child(1) {
    color: #99E3D8;
}

.banner>view:nth-child(2) {
    color: #fff;
    font-size: 10vw;
    line-height: 12vw;
    margin-top: 10rpx;
}

.banner .box {
    position: absolute;
    top: 40rpx;
    right: 0;
    background: #fff;
    width: 180rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx 0 0 80rpx;
}

.nav {
    margin-top: 10rpx;
    display: flex;
    font-size: 4vw;
    line-height: 6vw;
    background: #fff;
    border-bottom: #f7f7f7 4rpx solid;
}

.nav>view {
    flex: 1;
    color: #999999;
    text-align: center;
    line-height: 100rpx;
    box-sizing: border-box;
    margin: 0 60rpx;
}

.list {
    font-size: 4vw;
    line-height: 6vw;
    padding: 0 30rpx;
    background: #fff;
}

.list .item {
    padding: 30rpx 0;
}

.list .item+.item {
    border-top: #ddd 2rpx dotted;
}

.list .item .item_t {
    display: flex;
}

.list .item .item_t>view:nth-child(1) {
    padding: 0 20rpx;
    line-height: 44rpx;
    height: 44rpx;
    color: #fff;
    border-radius: 44rpx;
}

.list .item .item_t>view:nth-child(2) {
    flex: 1;
    box-sizing: border-box;
    padding: 0 10rpx;
}

.list .item .item_t>view:nth-child(3) {
    color: #999999;
}

.list .item .item_t .sp1 {
    background: #FF9326;
}

.list .item .item_t .sp2 {
    background: #73B9FF;
}

.list .item .item_t .sp3 {
    display: none;
}

.list .item .item_b {
    display: flex;
    margin-top: 10rpx;
    color: #999;
}

.list .item .item_b>view:nth-child(1) {
    flex: 1;
}

.list .item .item_b>view:nth-child(2) {
    color: #FF9226;
}