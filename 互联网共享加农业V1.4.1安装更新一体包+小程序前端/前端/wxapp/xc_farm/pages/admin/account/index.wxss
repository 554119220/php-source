.banner {
    font-size: 4vw;
    line-height: 6vw;
    padding: 40rpx 30rpx;
    position: relative;
}

.banner>view:nth-child(1) {
    color: #99E3D8;
}

.banner>view:nth-child(2) {
    color: #fff;
    font-size: 10vw;
    line-height: 12vw;
    margin-top: 10rpx;
}

.banner .box {
    position: absolute;
    top: 40rpx;
    right: 0;
    background: #fff;
    width: 180rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx 0 0 80rpx;
}

.nav {
    margin-top: 10rpx;
    display: flex;
    font-size: 4vw;
    line-height: 6vw;
    background: #fff;
    border-bottom: #f7f7f7 4rpx solid;
}

.nav>view {
    flex: 1;
    color: #999999;
    text-align: center;
    line-height: 100rpx;
    box-sizing: border-box;
    margin: 0 60rpx;
}

.list {
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    background: #fff;
    display: flex;
    line-height: 100rpx;
    align-items: center;
    padding: 0 30rpx;
}

.list .item+.item {
    border-top: #f7f7f7 4rpx solid;
}

.list .item>view:nth-child(1) {
    width: 200rpx;
}

.list .item>input {
    flex: 1;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.list .box {
    background: #fff;
    margin-top: 10rpx;
    padding: 0 30rpx;
}

.list .box .item_t {
    color: #999999;
    padding: 20rpx 0;
}

.list .box .item_c {
    padding: 20rpx 0;
    display: flex;
    border-bottom: #ddd 2rpx solid;
    font-size: 10vw;
    line-height: 12vw;
}

.list .box .item_c>input {
    line-height: 12vw;
    height: 12vw;
}

.list .box .item_b {
    padding: 20rpx 0;
    color: #FF4C4C;
    font-size: 3vw;
}

.list .btn {
    margin: 20rpx;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
}