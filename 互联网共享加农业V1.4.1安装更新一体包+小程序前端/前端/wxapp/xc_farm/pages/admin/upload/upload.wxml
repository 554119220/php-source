<view class="body">
    <view class="banner" wx:if="{{type==1}}">
        <image class="tou" src="{{img}}"></image>
        <view>LOGO头像预览</view>
    </view>
    <view class="banner" wx:if="{{type==2}}">
        <image class="back" src="{{img}}"></image>
        <view>背景图片预览</view>
    </view>
    <view bindtap="upload" class="upload">
        <image src="../../../images/icon15.png"></image>
        <view>点击上传</view>
    </view>
    <view bindtap="submit" class="btn" style="background:{{theme.color}};">确认提交</view>
</view>
