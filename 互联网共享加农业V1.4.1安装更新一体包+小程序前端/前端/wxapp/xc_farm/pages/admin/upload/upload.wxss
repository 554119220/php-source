.banner {
    background: #fff;
    text-align: center;
    color: #DDDDDD;
    padding: 40rpx 0;
}

.banner .tou {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
    display: block;
    border-radius: 100%;
}

.banner .back {
    width: 100%;
    display: block;
    height: 270rpx;
}

.banner>view {
    margin-top: 40rpx;
}

.upload {
    color: #999999;
    font-size: 4vw;
    line-height: 6vw;
    text-align: center;
    padding: 30rpx 0;
    background: #fff;
    margin-top: 10rpx;
}

.upload>image {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
    display: block;
}

.btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 4.5vw;
    margin-top: 10rpx;
}