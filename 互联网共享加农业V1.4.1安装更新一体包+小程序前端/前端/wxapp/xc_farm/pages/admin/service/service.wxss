.banner {
    width: 100%;
    padding: 40rpx 0;
    box-sizing: border-box;
    text-align: center;
}

.banner>image {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    border-radius: 100%;
    display: block;
    border: #a4e6dc 6rpx solid;
    margin-bottom: 20rpx;
}

.banner>view {
    color: #fff;
}

.list {
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    height: 100rpx;
    line-height: 100rp;
    background: #fff;
    display: flex;
    align-items: center;
}

.list .item>input,.list .item>picker {
    text-align: center;
    box-sizing: border-box;
    width: 100%;
    padding: 0 30rpx;
}

.list .item+.item {
    margin-top: 10rpx;
}

.list .item.curr {
    height: auto;
}

.list .item .upload {
    padding: 30rpx 0;
    text-align: center;
    width: 100%;
    color: #999;
}

.list .item .upload>image {
    width: 100rpx;
}

.list .item>image {
    width: 100%;
}

.list .item .text {
    margin: 30rpx;
    width: 100%;
    border: #efefef 2rpx solid;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 20rpx;
}

.list .btn {
    width: 100%;
    text-align: center;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 4.5vw;
    margin-top: 10rpx;
}

