.banner {
    padding: 30rpx;
    text-align: center;
    font-size: 4vw;
    line-height: 6vw;
    color: #fff;
}

.banner>image {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 0 auto 10rpx;
}

.detail {
    background: #fff;
    padding: 20rpx 30rpx;
    font-size: 4vw;
    line-height: 6vw;
}

.detail .item_c {
    margin-top: 10rpx;
    color: #999999;
}

.detail .item_b {
    display: flex;
    color: #999999;
    margin-top: 10rpx;
}

.detail .item_b>view:nth-child(1) {
    flex: 1;
}

.detail .item_b>view:nth-child(2) {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    color: #fff;
    text-align: center;
}

.detail .item_b view.sp1 {
    background: #49ccb9;
}

.detail .item_b view.sp2 {
    background: #ffc926;
}

.detail .item_b view.sp3 {
    background: #fd5b68;
}

.nav {
    background: #fff;
    margin-top: 10rpx;
    font-size: 4vw;
    color: 999;
    display: flex;
}

.nav>view {
    line-height: 90rpx;
    flex: 1;
    text-align: center;
    margin: 0 80rpx;
}

.list {
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    background: #fff;
    border-top: #f7f7f7 4rpx solid;
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
}

.list .item .item_l {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    border: #efefef 2rpx solid;
}

.list .item .item_c {
    flex: 1;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.list .item .item_c>view:nth-child(2) {
    color: #999999;
}

.list .item .item_r {
    color: #999;
}

.list .item .item_r>view:nth-child(1) {
    width: 150rpx;
    text-align: center;
    line-height: 50rpx;
    color: #fff;
    background: #cccccc;
    border-radius: 50rpx;
}

.edCont4 {
    padding: 20rpx 25rpx;
    border-top: #f7f7f7 4rpx solid;
}

.edCont4 .title {
    padding: 20rpx 0;
    position: relative;
    margin-bottom: 5rpx;
}

.edCont4 .title .border {
    width: 360rpx;
    height: 2rpx;
    background-color: #77D4C0;
    position: absolute;
    left: 50%;
    margin-left: -180rpx;
    top: 46rpx;
    z-index: 1;
}

.edCont4 .title .cl {
    border-left: 10rpx solid transparent;
    border-bottom: 54rpx solid #77D4C0;
}

.edCont4 .title .text {
    padding: 0 25rpx;
    height: 54rpx;
    line-height: 54rpx;
    background-color: #77D4C0;
    font-size: 32rpx;
    color: #fff;
    position: relative;
    z-index: 2;
}

.edCont4 .title .cr {
    border-right: 10rpx solid transparent;
    border-top: 54rpx solid #77D4C0;
}

.edCont4 .edit {
    font-size: 26rpx;
    line-height: 40rpx;
    text-indent: 2em;
}

.edCont4 .edit image {
    max-width: 100%;
    display: block;
    margin: 0 auto 20rpx;
}

.edCont4 .edit>view {
    margin-bottom: 20rpx;
}