.banner {
    width: 100%;
    padding-bottom: 30rpx;
    font-size: 4vw;
    line-height: 6vw;
}

.banner .title {
    text-align: center;
    color: #fff;
    padding: 40rpx 0;
    font-size: 6vw;
}

.banner .banner_box {
    background: #fff;
    display: flex;
    align-items: center;
    margin: 0 30rpx;
    padding: 0 20rpx;
    height: 90rpx;
    border-radius: 10rpx;
}

.banner .banner_box>image {
    width: 60rpx;
    height: 60rpx;
    display: block;
}

.banner .banner_box>input {
    flex: 1;
    padding: 0 20rpx;
    text-align: center;
}

.nav {
    font-size: 4vw;
    line-height: 6vw;
    background: #fff;
    margin-top: 10rpx;
    display: flex;
}

.nav>view {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    flex: 1;
    color: #999999;
}

.list {
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    padding: 20rpx 30rpx;
    display: block;
    background: #fff;
    border-top: #f7f7f7 4rpx solid;
    position: relative;
}

.list .item .item_c {
    margin-top: 10rpx;
    color: #999999;
}

.list .item .item_b {
    display: flex;
    color: #999999;
    margin-top: 10rpx;
}

.list .item .item_b>view:nth-child(1) {
    flex: 1;
}

.list .item .item_b>view:nth-child(2) {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    color: #fff;
    text-align: center;
}

.list .item .item_b view.sp1 {
    background: #49ccb9;
}

.list .item .item_b view.sp2 {
    background: #ffc926;
}

.list .item .item_b view.sp3 {
    background: #fd5b68;
}

.list .item .imgshade {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}

.list .item .imgshade image {
    width: 204rpx;
    height: 170rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -85rpx 0 0 -102rpx;
}

.bottomBlank2 {
    height: 111rpx;
}