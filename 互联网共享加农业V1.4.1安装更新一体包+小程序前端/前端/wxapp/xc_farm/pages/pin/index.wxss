.topTags {
    padding: 0 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 50;
    box-shadow: 0px 1px 3px #999;
}

.topTags .tagList {
    padding: 20rpx 0;
    font-size: 30rpx;
    color: #999;
    white-space: nowrap;
}

.topTags .tagBox {
    display: inline-block;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 40rpx;
    border: 1rpx solid #fff;
    border-radius: 25rpx;
}

.topTags .tagBox.curr {
    border-color: #79d5c1;
    color: #77D3BF;
}

.topBlank {
    height: 102rpx;
}

.list {
    padding: 10rpx 22rpx;
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    background: #fff;
}

.list .item+.item {
    margin-top: 20rpx;
}

.list .item .simg {
    width: 100%;
    display: block;
    height: 320rpx;
}

.list .item .itemPrice {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 24rpx;
    color: #fff;
}

.list .item .sp1 {
    font-size: 6vw;
}

.list .item .itemC {
    padding: 20rpx 22rpx;
}

.list .item .itemC .title {
    color: #222222;
}

.list .item .itemC .tip {
    font-size: 3vw;
    line-height: 5.5vw;
    color: #535353;
    margin-top: 10rpx;
}

.list .item .itemC .tip>text {
    background: #f7f7f7;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
    padding: 0 10rpx;
}

.list .item .progress {
    margin-top: 10rpx;
    text-align: right;
}

.list .item .itemB {
    margin-top: 10rpx;
}

.list .item .imgs {
    overflow: hidden;
    width: 200rpx;
}

.list .item .imgs>image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 100%;
    display: block;
    float: left;
}

.list .item .sp2 {
    color: #AAAAAA;
}

.list .item .btn {
    width: 140rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    background: #f7f7f7;
    text-align: center;
}