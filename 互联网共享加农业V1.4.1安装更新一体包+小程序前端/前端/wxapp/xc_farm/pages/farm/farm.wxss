.farmCont2 {
}

.farmCont2 .listBox {
    padding: 30rpx;
    margin-bottom: 2px;
}

.farmCont2 .listBox .icon {
    width: 55rpx;
    height: 55rpx;
    line-height: 55rpx;
    text-align: center;
    font-size: 28rpx;
    border-radius: 50%;
}

.farmCont2 .listBox .icon1 {
    color: #A52C01;
    background-color: #FEC0AA;
}

.farmCont2 .listBox .icon2 {
    color: #116759;
    background-color: #77D4C0;
}

.farmCont2 .listBox .icon3 {
    color: #004791;
    background-color: #99CCFF;
}

.farmCont2 .listBox .text {
    margin: 0 30rpx;
    overflow: hidden;
    line-height: 1.3;
}

.farmCont2 .listBox .text .h1 {
    font-size: 28rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 20rpx;
}

.farmCont2 .listBox .text .h2 {
    font-size: 24rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.farmCont2 .listBox .text .sp1 {
    color: #333;
}

.farmCont2 .listBox .other {
    text-align: right;
    font-size: 24rpx;
    color: #BABABA;
}

.farmCont2 .listBox .other .imgBlock {
    height: 40rpx;
    margin-bottom: 15rpx;
}

.farmCont2 .listBox .other image {
    width: 40rpx;
    height: 40rpx;
}

.farmCont2 .listBox .other .sp2 {
    color: #49CCB9;
}