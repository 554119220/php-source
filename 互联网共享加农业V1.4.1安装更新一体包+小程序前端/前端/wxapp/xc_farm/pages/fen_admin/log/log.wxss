.banner {
    font-size: 4vw;
    line-height: 6vw;
    padding: 40rpx 30rpx;
    position: relative;
    color: #fff;
}

.banner>view:nth-child(2) {
    color: #fff;
    font-size: 10vw;
    line-height: 12vw;
    margin-top: 10rpx;
}

.banner .box {
    position: absolute;
    top: 40rpx;
    right: 0;
    background: #fff;
    width: 180rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx 0 0 80rpx;
}

.list {
    padding: 20rpx 0;
    font-size: 4vw;
    line-height: 6vw;
}

.list .item {
    overflow: hidden;
    color: #fff;
    line-height: 80rpx;
    height: 80rpx;
}

.list .item+.item {
    margin-top: 20rpx;
}

.list .item .itemL {
    background: #aaaaaa;
    display: flex;
    float: left;
    box-sizing: border-box;
    padding: 0 10rpx 0 30rpx;
}

.list .item .itemL>view:nth-child(1) {
    flex: 1;
}

.list .item .itemR {
    background: #fff;
    float: left;
    height: 80rpx;
}