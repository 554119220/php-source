.back {
    width: 100%;
    position: relative;
    font-size: 4vw;
    line-height: 6vw;
}

.back .back_img {
    width: 100%;
    height: 270rpx;
    display: block;
}

.back .back_l {
    position: absolute;
    background: #fff;
    top: 50rpx;
    left: 0;
    display: flex;
    align-items: center;
    padding: 0 30rpx 0 20rpx;
    color: #999;
    height: 70rpx;
    border-radius: 0 70rpx 70rpx 0;
    z-index: 2;
}

.back .back_l>image {
    width: 44rpx;
    height: 44rpx;
    display: block;
    margin-left: 10rpx;
}

.back .back_r {
    position: absolute;
    background: #fff;
    top: 50rpx;
    right: 0;
    display: flex;
    align-items: center;
    padding: 0 20rpx 0 30rpx;
    color: #999;
    height: 70rpx;
    border-radius: 70rpx 0 0 70rpx;
    z-index: 2;
}

.back .back_r>image {
    width: 44rpx;
    height: 44rpx;
    display: block;
    margin-right: 10rpx;
}

.back .shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1;
}

.banner {
    margin: -100rpx 30rpx 0;
    background: #fff;
    height: 200rpx;
    position: relative;
    z-index: 33;
    font-size: 4vw;
    line-height: 6vw;
    padding-top: 80rpx;
    box-sizing: border-box;
}

.banner .img {
    width: 130rpx;
    height: 130rpx;
    border: #f7f7f7 6rpx solid;
    border-radius: 100%;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: -71rpx;
}

.banner .img .logo {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 100%;
}

.banner .img .tip {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 100%;
    background: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 3.5vw;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.banner .img .tip>image {
    width: 50rpx;
}

.banner .name {
    display: flex;
    align-items: center;
    justify-content: center;
}

.banner .name image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin-left: 10rpx;
}

.banner .name .tip {
    background: #aaa;
    color: #fff;
    width: 120rpx;
    text-align: center;
    line-height: 44rpx;
    border-radius: 44rpx;
    margin-left: 10rpx;
}

.banner .name .tip.curr {
    background: #FFA64D;
}

.banner .nick {
    text-align: center;
    color: #B7B7B7;
    font-size: 3.5vw;
    margin-top: 4rpx;
}

.list {
    background: #fff;
    padding: 0 30rpx;
    margin-top: 20rpx;
    font-size: 4vw;
    line-height: 6vw;
}

.list .title {
    padding: 20rpx 0;
}

.list .service .item {
    padding: 20rpx 0;
    border-top: #ddd 2rpx dotted;
}

.list .service .item .item_t {
    display: flex;
}

.list .service .item .item_t>view:nth-child(1) {
    flex: 1;
    padding-right: 30rpx;
}

.list .service .item .item_t>view:nth-child(2) {
    background: #FD5B68;
    color: #fff;
    line-height: 50rpx;
    border-radius: 50rpx;
    width: 150rpx;
    text-align: center;
}

.list .service .item .item_b {
    display: flex;
    color: #B7B7B7;
    margin-top: 10rpx;
}

.list .service .item .item_b>view:nth-child(1) {
    flex: 1;
}

.list .service .item .item_b>view:nth-child(2) {
    flex: 2;
}

.list .service .item .item_b .sp1 {
    color: #47CCB8;
}

.list .service .item .item_b .sp2 {
    color: #FCC500;
}

.shade {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 100;
}

.hbLayer {
    width: 586rpx;
    position: fixed;
    left: 50%;
    margin-left: -293rpx;
    top: 50%;
    transform: translateY(-50%);
}

.hbLayer .closeBtn {
    text-align: right;
    margin-bottom: 30rpx;
}

.hbLayer .closeBtn image {
    width: 40rpx;
    height: 40rpx;
}

.hbLayer .hbimg {
    margin-bottom: 20rpx;
}

.hbLayer .dlBtn {
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #77d4c0;
    border-radius: 10rpx;
}

.hbLayer .dlBtn image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    vertical-align: baseline;
}