.detailCont1 {
    height: 360rpx;
}

.detailCont2 {
    margin-bottom: 5rpx;
    padding: 30rpx 30rpx 0;
    position: relative;
    background: #fff;
}

.detailCont2 .h1 {
    font-size: 30rpx;
    color: #555;
    line-height: 40rpx;
    margin-bottom: 10rpx;
    padding-right: 60rpx;
}

.detailCont2 .h2 {
    font-size: 24rpx;
    line-height: 34rpx;
    margin-bottom: 15rpx;
    padding-right: 60rpx;
}

.detailCont2 .p {
    display: flex;
    font-size: 26rpx;
    color: #999;
    padding-right: 60rpx;
    margin-bottom: 30rpx;
}

.detailCont2 .p .sp1 {
    font-size: 30rpx;
}

.detailCont2 .p .sp2 {
    color: #333;
    margin-right: 10rpx;
}

.detailCont2 .p .sp3 {
    text-decoration: line-through;
    margin-right: 10rpx;
}

.detailCont2 .shareBlock {
    width: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #999;
}

.detailCont2 .shareBlock image {
    height: 50rpx;
    margin-bottom: 10rpx;
}

.detailCont2 .shareBlock button {
    display: none;
}

.detailCont2 .list {
    font-size: 4vw;
    line-height: 6vw;
    margin-top: 40rpx;
    padding-bottom: 10rpx;
}

.detailCont2 .list .listT>image {
    width: 20rpx;
}

.detailCont2 .list .listT>image.curr {
    transform: rotate(-90deg);
}

.detailCont2 .list .listT .sp1 {
    font-size: 3vw;
    padding: 0 10rpx;
}

.detailCont2 .list .progress {
    margin-top: 20rpx;
    position: relative;
    margin-bottom: 40rpx;
}

.detailCont2 .list .sp2 {
    position: absolute;
    line-height: 20px;
    text-align: center;
    width: 100%;
    top: 0;
    left: 0;
}

.detailCont2 .list .item {
    background: #f7f7f7;
    padding: 10rpx 22rpx;
}

.detailCont2 .list .item+.item {
    margin-top: 6rpx;
}

.detailCont2 .list .item .itemL {
    width: 70rpx;
    height: 70rpx;
    border-radius: 100%;
    display: block;
}

.detailCont2 .list .item .itemC {
    padding: 0 20rpx;
}

.detailCont2 .list .item .sp3 {
    font-size: 3.5vw;
}

.detailCont2 .numBlock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    border-radius: 10rpx;
}

.detailCont2 .numBlock .nbtn {
    width: 50rpx;
    height: 60rpx;
    color: #fff;
}

.detailCont2 .numBlock .input {
    height: 50rpx;
    overflow: hidden;
    padding: 5rpx 0;
}

.detailCont2 .numBlock .input input {
    height: 50rpx;
    vertical-align: top;
    padding: 0;
    width: 50rpx;
    color: #fff;
}