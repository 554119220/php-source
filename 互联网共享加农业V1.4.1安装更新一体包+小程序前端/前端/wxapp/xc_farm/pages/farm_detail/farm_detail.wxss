.fdCont1 {
    padding: 0 40rpx 30rpx;
    margin-bottom: 5rpx;
}

.cfbTitle {
    font-size: 28rpx;
    color: #999;
    text-align: center;
    padding: 30rpx 0;
    border-bottom: 1px dotted #ccc;
}

.cfbTitle .border {
    width: 38rpx;
    height: 3rpx;
    background-color: #77D4C0;
    margin: 10rpx auto 0;
}

.listBox {
    padding: 30rpx 0;
    border-bottom: 1px dotted #ccc;
    font-size: 28rpx;
    line-height: 1.2;
}

.listBox .name {
    color: #999;
    margin-right: 40rpx;
    overflow: hidden;
}

.listBox .text {
    color: #666;
    overflow: hidden;
}

.listBox .text.sp1 {
    color: #333;
}

.listBox .numBlock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
}

.listBox .numBlock .nbtn {
    width: 60rpx;
    height: 60rpx;
    color: #fff;
    border-radius: 50%;
    background-color: #77D4C0;
}

.listBox .numBlock .input {
    height: 50rpx;
    overflow: hidden;
    padding: 5rpx 0;
}

.listBox .numBlock .input input {
    height: 50rpx;
    vertical-align: top;
    padding: 0;
    width: 70rpx;
    color: #77D4C0;
}

.listBox .text input {
    width: 100%;
    border: none;
    text-align: center;
    font-size: 28rpx;
}

.listBox .text.sp2 {
    color: #77D4C0;
}

.listBox1 .name {
    line-height: 40rpx;
}

.listBox .text .textBox {
    line-height: 40rpx;
    margin-bottom: 20rpx;
}

.listBox .text .textBox .flex-flex1 {
    overflow: hidden;
    margin-right: 20rpx;
}

.listBox .text .textBox .imgBlock {
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;
}

.listBox .text.sp3 {
    color: #FFB872;
}

.listBox .bztext {
    text-align: center;
    color: #999;
}

.listBox .notext {
    color: #EDEDED;
}