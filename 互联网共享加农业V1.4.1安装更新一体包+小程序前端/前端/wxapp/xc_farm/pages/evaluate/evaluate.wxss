.imgBlock {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    padding-top: 50rpx;
    margin-bottom: 20rpx;
}

.imgBlock image {
    border-radius: 50%;
}

.h1 {
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 35rpx;
}

.h2 {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 50rpx;
}

.h2 .border {
    width: 125rpx;
    height: 1px;
    background-color: #cdcdcd;
}

.h2 .text {
    margin: 0 30rpx;
}

form {
    width: 100%;
    display: block;
}

.formBlock {
    padding: 0 50rpx;
}

.formBlock textarea {
    width: 100%;
    box-sizing: border-box;
    border: 1px solid #e5e5e5;
    border-radius: 10rpx;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    height: 230rpx;
    line-height: 34rpx;
    color: #666;
    margin-bottom: 25rpx;
}

.formBlock .weui-uploader__img {
    width: 79px;
    height: 79px;
}

.formBlock checkbox-group {
    margin: 25rpx 0 110rpx;
}

.formBlock .checkBox {
    color: #999;
}

.formBlock .submitBtn {
    display: block;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    background-color: #77d4c0;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    margin-top: 110rpx;
}

.formBlock .submitBtn button {
    display: none;
}