.topTags {
    padding: 0 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 50;
    box-shadow: 0px 1px 3px #999;
}

.topTags .tagList {
    padding: 20rpx 0;
    font-size: 30rpx;
    color: #999;
    white-space: nowrap;
}

.topTags .tagBox {
    display: inline-block;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 40rpx;
    border: 1rpx solid #fff;
    border-radius: 25rpx;
}

.topTags .tagBox.curr {
    border-color: #79d5c1;
    color: #77D3BF;
}

.topBlank {
    height: 102rpx;
}

.list {
    margin-bottom: 8rpx;
}

.list .listBox {
    margin-bottom: 10rpx;
    width: 340rpx;
    padding: 25rpx 10rpx 15rpx 25rpx;
}

.list .listBox:nth-of-type(2n) {
    padding: 25rpx 25rpx 15rpx 10rpx;
}

.list .listBox .imgBlock {
    position: relative;
    width: 340rpx;
    height: 230rpx;
    margin-bottom: 20rpx;
}

.list .listBox .imgBlock .icon {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -40rpx 0 0 -40rpx;
}

.list .listBox .text {
    font-size: 28rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}