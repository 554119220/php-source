.banner {
    width: 100%;
    height: 500rpx;
}

.video {
    width: 100%;
    height: 500rpx;
}

.top {
    background: #fff;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    line-height: 5vw;
}

.top>view:nth-child(2) {
    color: #999;
    margin-top: 10rpx;
}

.detailCont5 {
    padding: 20rpx 30rpx;
    margin-top: 10rpx;
}

.detailCont5 .title {
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.detailCont5 .title .border {
    width: 38rpx;
    height: 3rpx;
    background-color: #77D4C0;
    margin: 10rpx auto;
}

.detailCont5 .title .p {
    background-position: left center;
    background-repeat: repeat-x;
    background-size: 2px 2px;
    color: #ccc;
}

.detailCont5 .title .b {
    display: inline-block;
    padding: 0 20rpx;
}

.detailCont5 .edit {
    padding: 30rpx 0 1rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    text-indent: 2em;
}

.detailCont5 .edit image {
    max-width: 100%;
    display: block;
    margin: 0 auto 20rpx;
}

.detailCont5 .edit>view {
    margin-bottom: 20rpx;
}

.detailCont5 .dcnav {
    border-bottom: 1px solid #e6e6e6;
}

.detailCont5 .dcnav .navBox {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    border-bottom: 1px solid transparent;
}

.detailCont5 .dcnav .navBox.curr {
    color: #77d4c0;
    border-color: #77d4c0;
}

.detailCont5 .dcnav .border {
    width: 1px;
    height: 30rpx;
    background-color: #e6e6e6;
}

.detailCont5 .dcnav .border:last-child {
    display: none;
}

.detailCont5 .list {
    padding-top: 15rpx;
}

.detailCont5 .listBox {
    padding: 15rpx 0;
    font-size: 26rpx;
    line-height: 1.3;
}

.detailCont5 .listBox image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10rpx;
}

.detailCont5 .listBox .name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.detailCont5 .listBox .time {
    margin: 0 10rpx;
    font-size: 24rpx;
}

.detailCont5 .listBox .info {
    text-align: right;
    color: #77d4c0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}