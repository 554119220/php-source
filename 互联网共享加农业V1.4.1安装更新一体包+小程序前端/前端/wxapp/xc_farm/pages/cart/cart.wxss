.cartList {
}

.listBox {
    padding: 25rpx;
    margin-bottom: 5rpx;
}

.listBox .closeBtn {
    width: 40rpx;
    height: 40rpx;
    padding: 20rpx 0;
    margin-right: 15rpx;
}

.listBox .closeBtn image {
    width: 40rpx;
    height: 40rpx;
}

.listBox .imgBlock {
    width: 160rpx;
    height: 140rpx;
    margin-right: 15rpx;
}

.listBox .text {
    overflow: hidden;
}

.listBox .text .h1 {
    font-size: 26rpx;
    line-height: 1.2;
    margin-bottom: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.listBox .text .p {
    font-size: 26rpx;
    color: #999;
}

.listBox .text .p+.p {
    margin-top: 20rpx;
}

.listBox .text .p .flex-flex1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.listBox .text .p .numBlock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    border: 1px solid #999;
    border-radius: 10rpx;
}

.listBox .text .p .numBlock .nbtn {
    width: 60rpx;
    height: 60rpx;
    color: #999;
}

.listBox .text .p .numBlock .input {
    height: 50rpx;
    overflow: hidden;
    padding: 5rpx 0;
    border-left: 1px solid #999;
    border-right: 1px solid #999;
}

.listBox .text .p .numBlock .input input {
    height: 50rpx;
    vertical-align: top;
    padding: 0;
    width: 70rpx;
    color: #77D4C0;
}

.buyBlock {
    height: 100rpx;
    box-shadow: 0 -1px 3px #999;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 100rpx;
    z-index: 50;
}

.buyBlock .btn {
    width: 250rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.buyBlock .btn.bg2 {
    background-color: #77D4C0;
}

.buyBlock .btn2 {
    width: 170rpx;
    color: #ccc;
    font-size: 40rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.buyBlock .info {
    margin: 0 30rpx;
    text-align: right;
    font-size: 26rpx;
    color: #77D3BF;
}

.buyBlock .info .sp1 {
    font-size: 38rpx;
}