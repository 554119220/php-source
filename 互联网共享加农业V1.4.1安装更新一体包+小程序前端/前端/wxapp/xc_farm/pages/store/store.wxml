<import src="../common/common.wxml"></import>
<view class="body">
    <view class="nav">
        <view class="back">
            <image class="back_img" src="{{list.back}}"></image>
            <view bindtap="code" class="code" style="background:{{theme.color}};" wx:if="{{list.code_status==1}}">
                <image src="../../images/icon21.png"></image>
            </view>
        </view>
        <view class="banner">
            <view class="img">
                <image class="logo" src="{{list.logo}}"></image>
            </view>
            <view class="name">
                <view>{{list.cname}}</view>
                <view>
                    <view class="tip" wx:if="{{list.status==1}}">已认证</view>
                </view>
            </view>
            <view class="nick">{{list.name}} {{list.mobile}}</view>
        </view>
        <view class="topTags" style="background-color:#fff">
            <scroll-view scrollX class="tagList">
                <view bindtap="tagChange1" class="tagBox {{index==tagCurr1?'curr':''}}" id="{{index}}" style="color:{{index==tagCurr1?theme.color:''}};border-color:{{index==tagCurr1?theme.color:''}};" wx:for="{{tagList1}}" wx:key="{{index}}">{{item}}</view>
            </scroll-view>
        </view>
    </view>
    <view class="topBlank"></view>
    <view class="list clearfix" wx:if="{{tagCurr1==0}}">
        <navigator class="listBox fl" style="background-color:#fff" url="../detail/detail?&id={{item.id}}" wx:for="{{xc}}" wx:key="unique">
            <view class="imgBlock">
                <image mode="aspectFill" src="{{item.simg}}"></image>
                <view class="tags">
                    <view class="tag {{item.type==1?'bg1':''}} {{item.type==3?'bg2':''}} {{item.type==2?'bg3':''}}" wx:if="{{item.type==1}}">团</view>
                    <view class="tag {{item.type==1?'bg1':''}} {{item.type==3?'bg2':''}} {{item.type==2?'bg3':''}}" wx:if="{{item.type==2}}">砍</view>
                    <view class="tag {{item.type==1?'bg1':''}} {{item.type==3?'bg2':''}} {{item.type==2?'bg3':''}}" wx:if="{{item.type==3}}">限</view>
                </view>
            </view>
            <view class="h1">{{item.name}}</view>
            <view class="p flex-display flex-alignC">
                <view class="flex-flex1">已有
            <text class="sp1" style="color:{{theme.color}};">{{item.discuss}}</text>人评论</view>
                <view>已售：
            <text class="sp1" style="color:{{theme.color}};">{{item.sold}}</text>
                </view>
            </view>
            <view class="info flex-display flex-alignC">
                <view class="flex-flex1" style="color:{{theme.color}};">￥{{item.price}}</view>
                <view class="btn" style="background-color:{{theme.color}};">购买</view>
            </view>
        </navigator>
    </view>
    <view class="list2" wx:if="{{tagCurr1==1}}">
        <navigator class="listBox" style="background-color:#fff;" url="../event_detail/event_detail?&id={{item.id}}" wx:for="{{xc}}" wx:key="unique">
            <view class="imgBlock">
                <image mode="aspectFill" src="{{item.bimg}}"></image>
                <view class="imgshade" wx:if="{{item.end==-1}}">
                    <image src="../../images/event_end.png"></image>
                </view>
                <view class="imgshade" wx:if="{{item.end==2}}">
                    <image src="../../images/event_start.png"></image>
                </view>
            </view>
            <view class="h1">{{item.name}}</view>
            <view class="h2">活动时间：<text class="sp1">{{item.active_start}}~{{item.active_end}}</text>
            </view>
            <view class="other flex-display flex-alignC">
                <view class="flex-flex1">人数：<text class="sp1" style="color:{{theme.color}};">{{item.member}}</text>
                </view>
                <view class="flex-flex1">费用：<text class="sp1" style="color:{{theme.color}};">{{item.price}}</text>
                </view>
                <view class="btn" style="background:{{theme.color}};">
                    <text wx:if="{{item.end==1}}">报名中</text>
                    <text wx:if="{{item.end==-1}}">已结束</text>
                    <text wx:if="{{item.end==2}}">未开始</text>
                </view>
            </view>
        </navigator>
    </view>
    <view class="jwCont" style="background-color:#fff;" wx:if="{{tagCurr1==2}}">
        <view>
            <form bindsubmit="formSubmit" class="formBlock">
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">企业类型：</view>
                    <view class="input flex-flex1">{{list.type_name}}</view>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">企业名称：</view>
                    <view class="input flex-flex1">{{list.cname}}</view>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">联系地址：</view>
                    <view class="input flex-flex1">{{list.address}}</view>
                    <image bindtap="map" src="../../images/mapping.png"></image>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">企业法人：</view>
                    <view class="input flex-flex1">{{list.coname}}</view>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">联系人：</view>
                    <view class="input flex-flex1">{{list.name}}</view>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">联系电话：</view>
                    <view class="input flex-flex1">{{list.mobile}}</view>
                    <image bindtap="call" src="../../images/phone2.png"></image>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">主营业务：</view>
                    <view class="input flex-flex1">{{list.content}}</view>
                </view>
                <view class="inputBlock flex-display flex-alignC">
                    <view class="name">服务项目：</view>
                    <view class="input flex-flex1">
                        <text class="sp1" style="background:{{item.color?item.color:theme.color}};" wx:for="{{list.service_list}}" wx:key="idx">{{item.name}}</text>
                    </view>
                </view>
                <view class="inputBlock flex-display">
                    <view class="name">相关证件：</view>
                    <view class="input flex-flex1">
                        <image bindtap="previewImage" class="upload" data-index="{{index}}" mode="widthFix" src="{{item}}" wx:for="{{list.imgs}}" wx:key="idx"></image>
                    </view>
                </view>
            </form>
        </view>
    </view>
    <view class="shade" hidden="{{!showhb}}">
        <view class="hbLayer">
            <view class="closeBtn">
                <image bindtap="closehb" src="../../images/close.png"></image>
            </view>
            <image class="hbimg" mode="widthFix" src="{{code}}"></image>
            <view bindtap="dlimg" class="dlBtn" style="background:{{theme.color}};">
                <image src="../../images/dl.png"></image>保存图片</view>
        </view>
    </view>
    <template is="footer" data="{{footer:footer,footerCurr:footerCurr,theme:theme}}"></template>
    <template is="getuserinfo" data="{{shadow:shadow,get_userinfo:get_userinfo,app_step1:app_step1,app_step2:app_step2,config:config}}"></template>
</view>
