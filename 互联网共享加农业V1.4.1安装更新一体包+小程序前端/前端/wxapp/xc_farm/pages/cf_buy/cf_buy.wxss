.mainBlock {
    padding: 0 40rpx 30rpx;
    margin-bottom: 5rpx;
}

.cfbTitle {
    font-size: 28rpx;
    color: #999;
    text-align: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #ccc;
}

.cfbTitle .border {
    width: 38rpx;
    height: 3rpx;
    background-color: #77D4C0;
    margin: 10rpx auto 0;
}

.listBox {
    padding: 30rpx 0;
    border-bottom: 1px solid #ccc;
    font-size: 28rpx;
    line-height: 1.2;
}

.listBox .name {
    color: #999;
    margin-right: 40rpx;
    overflow: hidden;
}

.listBox .text {
    color: #666;
    overflow: hidden;
}

.listBox .text.sp1 {
    color: #333;
}

.listBox .numBlock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
}

.listBox .numBlock .nbtn {
    width: 60rpx;
    height: 60rpx;
    color: #fff;
    border-radius: 50%;
    background-color: #77D4C0;
}

.listBox .numBlock .input {
    height: 50rpx;
    overflow: hidden;
    padding: 5rpx 0;
}

.listBox .numBlock .input input {
    height: 50rpx;
    vertical-align: top;
    padding: 0;
    width: 70rpx;
    color: #77D4C0;
}

.listBox .text input {
    width: 100%;
    border: none;
    text-align: center;
    font-size: 28rpx;
}

.listBox .text.sp2 {
    color: #77D4C0;
}

.listBox1 .name {
    line-height: 40rpx;
}

.listBox .text .textBox {
    line-height: 40rpx;
    margin-bottom: 20rpx;
}

.listBox .text .textBox .flex-flex1 {
    overflow: hidden;
    margin-right: 20rpx;
}

.buyBlock {
    height: 100rpx;
    box-shadow: 0 -1px 3px #999;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 50;
    display: flex;
    align-items: center;
}

.buyBlock .text {
    width: 260rpx;
    text-align: center;
    padding: 0 35rpx;
    font-size: 30rpx;
    color: #999;
}

.buyBlock .text .sp1 {
    color: #77D4C0;
}

.buyBlock .bb2 {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    background-color: #77D4C0;
    color: #fff;
    margin: 0;
    padding: 0;
    border-radius: 0;
    border: none;
}

.buyBlock .bb2::after {
    display: none;
    content: "";
    border: none;
    border-radius: 0;
}