.trCont {
    padding: 0 30rpx;
}

.trCont .listBox {
    padding: 25rpx 0;
    border-bottom: 1px dotted #dcdcdc;
    font-size: 26rpx;
    line-height: 1.3;
}

.trCont .listBox:last-child {
    border-bottom: none;
}

.trCont .listBox .name {
    width: 5em;
    color: #999;
}

.trCont .listBox .text {
    color: #666;
}

.trCont .listBox .text .sp1 {
    color: #47CCB8;
}

.trCont .listBox .btn {
    margin-left: 20rpx;
    font-size: 26rpx;
    color: #77D4C0;
}

.trCont .listBox .btn image {
    width: 50rpx;
    height: 50rpx;
}

.trCont .btnBlock {
    padding: 30rpx 0;
}

.trCont .btnBlock .btn {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #77D4C0;
    font-size: 28rpx;
    color: #fff;
}