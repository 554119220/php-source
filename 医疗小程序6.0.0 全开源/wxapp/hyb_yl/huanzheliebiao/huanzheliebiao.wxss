page {
    background: #F5F4F4;
    padding-bottom: 110rpx;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.taocan {
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #F1F1F1;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}

.taocan view {
    padding: 15rpx 20rpx;
    display: inline-block;
}

.taocan view text:first-child {
    font-size: 26rpx;
    color: #4E4E4E;
}

.taocan view text:last-child {
    margin: 0 auto;
    display: block;
    width: 30rpx;
    border-bottom: 5rpx solid transparent;
    position: relative;
    top: 15rpx;
    z-index: 11111;
}

.taocan view.onon text:first-child {
    font-size: 31rpx;
    color: #000;
    font-weight: bold;
}

.taocan view.onon text:last-child {
    border-bottom: 5rpx solid #242424;
}

.serve {
    width: 100%;
    padding: 0 20rpx;
    background: #fff;
    margin-top: 85rpx;
}

.serve-bottom {
    width: 100%;
    overflow: hidden;
}

.expert-list {
    width: 100%;
    padding: 20rpx;
    border-bottom: 1rpx solid #ebebeb;
    overflow: hidden;
}

.expert-list-left {
    float: left;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.expert-list-left image {
    border-radius: 50%;
}

.expert-list-right {
    float: right;
    width: 77%;
    margin-left: 20rpx;
}

.expert-list-right view {
    font-size: 26rpx;
    color: #999;
}

.expert-num {
    margin: 20rpx 0;
    overflow: hidden;
}

.expert-num view {
    display: inline-block;
    margin-right: 30rpx;
}

.expert-num view text {
    color: #83b900;
}

.expert-list-right .expert-name {
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    margin-top: 10rpx;
}

.expert-list-right .expert-jianjie {
    letter-spacing: 3rpx;
    line-height: 40rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.expert-list-right .huanzhe-name {
    margin-top: -5rpx;
    float: left;
}

.expert-list-right .huanzhe-time {
    float: right;
    margin-right: 0;
}

.expert-list-right .huanzhe-bingqing {
    letter-spacing: 3rpx;
    line-height: 40rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

view.show {
    display: block;
}

view.hide {
    display: none;
}