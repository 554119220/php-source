page {
    background-color: #F8F8F8;
    font-size: 24rpx;
}

.forum_scroll {
    padding: 0 30rpx;
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    font-size: 0;
    white-space: nowrap;
}

.forum_scroll_view {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #fff;
    color: #434343;
    font-size: 28rpx;
    display: inline-block;
    width: 100rpx;
    margin: 0 36rpx;
    text-align: center;
}

.forum_scroll_view_on {
    color: #ff6f2f;
    border-bottom: 2rpx solid #ff6f2f;
}

.list {
    box-sizing: border-box;
    padding: 30rpx;
    background: #fff;
    margin-bottom: 16rpx;
}

.list:last-child {
    margin-bottom: 0;
}

.list .top {
    display: flex;
}

.list .top .avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 88rpx;
    border: 2rpx solid #efefef;
    display: block;
    margin-right: 26rpx;
}

.list .top .nickname {
    font-size: 28rpx;
    font-weight: bold;
    color: #434343;
}

.list .top .time {
    font-size: 24rpx;
    color: #969696;
    font-family: Arial,Helvetica,sans-serif;
    margin-top: 6rpx;
}

.evalute_class {
    padding-top: 20rpx;
}

.evalute_class_left {
    color: #838383;
    font-size: 22rpx;
}

.content {
    line-height: 42rpx;
    margin-bottom: 20rpx;
}

.bottom {
    display: flex;
    margin-top: 20rpx;
}

.imgs img:last-child {
    margin-right: 0;
}

.func {
    min-width: 110rpx;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    border: 2rpx solid #eeeeee;
    border-radius: 20rpx;
    text-align: center;
    color: #434343;
    margin-left: 16rpx;
    overflow: hidden;
}

.func .iconfont {
    float: left;
    margin-left: 14rpx;
    font-size: 28rpx;
    color: #969696;
}