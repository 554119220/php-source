<view class="head mb-20">
    <view class="headBgColor" style="background:#434550;">
        <image mode="widthFix" src="{{bg_img}}"></image>
    </view>
    <image class="head_bg w-750" mode="widthFix" src="/sudu8_page/resource/img/bg.png"></image>
    <view class="head_content radius-20">
        <view>
            <text style="font-size:36rpx;">开通即享会员权益</text>
        </view>
        <view class="line">
            <view></view>
            <text style="font-size:24rpx;">多买多省钱</text>
            <view></view>
        </view>
        <view class="equity_show">
            <view wx:for="{{shows}}">
                <view class="show">
                    <image src="/sudu8_page/resource/img/VIP1.png"></image>
                </view>
                <text class="show_text">{{item}}</text>
            </view>
        </view>
        <button bindtap="toregister" class="btn1">
            <view>立即开通</view>
        </button>
    </view>
    <view class="head_margin radius-20">
        <view class="logo">
            <open-data type="userAvatarUrl"></open-data>
        </view>
        <view>
            <open-data style="display:block;height:55rpx;line-height:55rpx;color:#434343;" type="userNickName"></open-data>
            <text>普通用户</text>
        </view>
        <view>
            <image src="/sudu8_page/resource/img/huangguan.png"></image>
        </view>
    </view>
</view>
