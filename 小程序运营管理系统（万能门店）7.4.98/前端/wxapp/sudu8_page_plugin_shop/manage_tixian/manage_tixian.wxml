<view class="container">
    <view class="wallet-top">
        <view class="row">
            <view class="col-xs-12">
                <image class="img-responsive center-block wallet-img" src="../img/bgimg.png"></image>
            </view>
        </view>
        <view class="row">
            <view class="col-xs-12 wallet-info text-center">可用余额</view>
        </view>
        <view class="row">
            <view class="col-xs-12 wallet-money text-center">
                <span class="wallet-sum">{{money}}</span> 元</view>
        </view>
        <view class="row">
            <view class="col-xs-12">
                <button bindtap="goTx" class="btn btn-default center-block btn-lg">提现</button>
            </view>
        </view>
    </view>
</view>
<view class="container-fluid">
    <view class="row ">
        <view class="col-xs-6 center-block text-center">
            <view bindtap="goSzjl" class="wallet-tool center-block">
                <image class="record-box" src="../img/list.png"></image>
                <view bindtap="goSzjl" class="col-xs-7 center-block text-center tool-text">
          收支记录
        </view>
            </view>
        </view>
        <view class="col-xs-6  center-block text-center">
            <view class="wallet-tool center-block">
                <image class="record-box" src="../img/money.png"></image>
                <view bindtap="goTxjl" class="col-xs-7 center-block text-center tool-text">
          提现记录
        </view>
            </view>
        </view>
    </view>
</view>
