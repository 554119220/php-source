.container {
    padding: 30rpx;
    font-size: 26rpx;
}

.formtitle {
    color: #000;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.formcon {
    margin-bottom: 30rpx;
}

input,.picker {
    margin: 0;
}

.textarea {
    border: solid 1px #eee;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    height: 200rpx;
}

.image {
    width: 140rpx;
    height: 140rpx;
    float: left;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    border: 2rpx solid #fff;
    position: relative;
}

.image image {
    width: 100%;
    height: 100%;
}

button {
    background: #09BB07;
    color: #fff;
}

.delimg {
    position: absolute;
    right: 0;
    top: 0;
    background: #ee3333;
    color: #fff;
    font-size: 22rpx;
    padding: 2rpx 6rpx;
}

.choosebtn {
    margin: 0;
    padding: 3rpx 6rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    border-radius: 6rpx;
    border: none;
}

.choosebtn::after {
    border: none;
}