.container {
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: #ffffff;
    font-family: "Microsoft Yahei";
    padding: 0;
    font-size: 13px;
}

.order_nav_single_on {
    color: #6671E4;
    border-bottom: 4rpx solid #6671E4;
}

.order_nav {
    border-bottom: 20rpx solid #F6F6F6;
}

.line {
    height: 8px;
    background-color: #F6F6F6;
    width: 100%;
}

.main-products {
    padding-top: 10px;
    height: 120px;
    border-bottom: 8px solid #F6F6F6;
}

.title {
    font-size: 12px;
    display: flex;
    flex-direction: row;
    padding-bottom: 12px;
    border-bottom: 1px solid #EEEEEE;
}

.title-time {
    color: #9A9A9A;
    margin-left: 10px;
    width: 70%;
}

.title-edit {
    margin-right: 20px;
    text-align: right;
    width: 30%;
    flex-direction: row;
    display: flex;
    justify-content: flex-end;
}

.title-edit .button {
    margin-left: 20px;
}

.title-edit image {
    width: 12px;
    height: 12px;
}

.main {
    display: flex;
    flex-direction: row;
    margin-top: 15px;
    margin-left: 15px;
}

.main image {
    width: 62px;
    height: 62px;
}

.main-mid {
    width: 200px;
    margin-left: 13px;
}

.main-mid-top {
    font-size: 14px;
}

.main-mid-foot {
    flex-direction: row;
    font-size: 12px;
    color: #9A9A9A;
    margin-top: 7px;
}

.main-mid-foot text {
    margin-right: 30px;
}

.main-money {
    margin-left: 20px;
    color: #EA2525;
}

.money-sign {
    font-size: 9px;
}

.flex-button {
    float: right;
    position: fixed;
    bottom: 20px;
    right: 10px;
    border: 0 solid #fff;
    border-radius: 500px;
    box-shadow: 2px 2px 5px #6671E4;
    background-color: #6671E4;
    width: 40px;
    height: 40px;
    overflow: hidden;
}

.flex-button image {
    width: 20px;
    height: 20px;
    margin: 10px;
}