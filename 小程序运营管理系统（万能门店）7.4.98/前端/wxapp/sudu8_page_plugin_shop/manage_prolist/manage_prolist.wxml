<view class="container">
    <scroll-view scrollX class="order_nav">
        <view bindtap="changflag" class="order_nav_single {{flag==1?'order_nav_single_on':''}}" data-flag="1">已审核</view>
        <view bindtap="changflag" class="order_nav_single {{flag==0?'order_nav_single_on':''}}" data-flag="0">待审核</view>
    </scroll-view>
    <view class="weui-tab__content">
        <view class="main-products" wx:for="{{prolist}}">
            <view class="title">
                <view class="title-time">
          发布时间：{{item.createtime}}
        </view>
                <view class="title-edit">
                    <view bindtap="prodel" class="button" data-pid="{{item.id}}">
                        <image src="../img/del.png"></image>删
          </view>
                    <view bindtap="proedit" class="button" data-pid="{{item.id}}">
                        <image src="../img/edit.png"></image>编
          </view>
                </view>
            </view>
            <navigator url="/sudu8_page_plugin_shop/goods_detail/goods_detail?id={{item.id}}">
                <view class="main">
                    <view>
                        <image src="{{item.thumb}}"></image>
                    </view>
                    <view class="main-mid">
                        <view class="main-mid-top">
              {{item.title}}<span style="color:#ee3333;margin-left:20rpx;font-size:20rpx;" wx:if="{{item.flag==0}}">(未上架)</span>
                        </view>
                        <view class="main-mid-foot">
                            <text>库存：{{item.storage}}</text>
                            <text>销量：{{item.sales}}</text>
                        </view>
                    </view>
                    <view class="main-money">
                        <text class="money">
                            <text class="money-sign">￥</text>{{item.sellprice}}</text>
                    </view>
                </view>
            </navigator>
        </view>
    </view>
    <navigator class="flex-button" url="../manage_pro/manage_pro">
        <image bindtap="" src="../img/add.png "></image>
    </navigator>
</view>
