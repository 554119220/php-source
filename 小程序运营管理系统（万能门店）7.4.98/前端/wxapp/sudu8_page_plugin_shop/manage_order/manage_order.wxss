.container {
    box-sizing: border-box;
    background-color: #ffffff;
    font-size: 28rpx;
}

.hide {
    display: none;
}

.show {
    display: block;
}

.order_nav_single_on {
    color: #6671E4;
    border-bottom: 4rpx solid #6671E4;
}

.order_nav {
    border-bottom: 20rpx solid #F6F6F6;
}

.line {
    height: 16rpx;
    background-color: #F6F6F6;
    width: 100%;
}

.main-products {
    padding-top: 20rpx;
    border-bottom: 16rpx solid #F6F6F6;
}

.main-products-btn {
    height: 150px;
    border-bottom: 16rpx solid #F6F6F6;
}

.title {
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    padding-bottom: 24rpx;
    border-bottom: 2rpx solid #EEEEEE;
}

.title-two {
    font-size: 24rpx;
    border-top: 2rpx solid #eee;
    padding: 20rpx 0;
}

.title-time {
    color: #9A9A9A;
    margin-left: 20rpx;
    width: 70%;
}

.title-edit {
    margin-right: 40rpx;
    text-align: right;
    width: 30%;
    flex-direction: row;
    display: flex;
    justify-content: flex-end;
}

.dd-state {
    color: #6671E4;
}

.dd-btn {
    float: right;
    margin-right: 40rpx;
    border: 2rpx solid #6671E4;
    border-radius: 6rpx;
    color: #6671E4;
    padding: 6rpx 10rpx;
    font-size: 24rpx;
}

.fahuo {
    border: 2rpx solid #ee3333;
    color: #ee3333;
}

.main {
    display: flex;
    flex-direction: row;
    margin: 20rpx 30rpx;
}

.main image {
    width: 120rpx;
    height: 120rpx;
}

.main-mid {
    width: 400rpx;
    margin-left: 26rpx;
}

.main-mid-top {
    font-size: 28rpx;
}

.main-mid-foot {
    flex-direction: row;
    font-size: 24rpx;
    color: #9A9A9A;
    margin-top: 14rpx;
}

.main-money {
    margin-left: 40rpx;
    color: #ee3333;
}

.money-sign {
    font-size: 26rpx;
}

.fahuoBox {
    position: absolute;
    left: 0;
    top: 100rpx;
    background: #fff;
    width: 100%;
    z-index: 9999;
    box-sizing: border-box;
    padding: 30rpx;
}

.btn-lg {
    background: #f60;
    border: none;
    margin-top: 30rpx;
    color: #fff;
    width: 60%;
    font-size: 26rpx;
}

.mask1 {
    background: #fff;
    opacity: 1;
}

.quxiao {
    background: #ddd;
    color: #333;
}

.hx_con {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 99999;
}

.hexiao {
    border-radius: 9rpx;
    width: 600rpx;
    height: 300rpx;
    background: #fff;
    position: absolute;
    left: 75rpx;
    top: 30%;
    z-index: 99999;
}

.hexiao .hx_tit {
    margin: 20rpx 20rpx 10rpx;
    text-align: center;
}

.hexiao .hx_ipt {
    margin: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    border: 1px solid #eee;
}

.hexiao .hx_btn {
    background-color: #f90;
    color: #fff;
    margin: 20rpx;
    margin-top: 0rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.hx_c {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 700rpx;
    left: 350rpx;
    z-index: 99999;
}

.hx_c image {
    width: 100%;
    height: 100%;
    display: block;
}