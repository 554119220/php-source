.tixian {
    padding: 30rpx;
    margin: 30rpx;
    background: #fff;
    border-radius: 14rpx;
    box-shadow: 6rpx 6rpx 6rpx #eee;
}

.txtitle {
    margin-bottom: 20rpx;
}

.txinput {
    position: relative;
}

.txinput .txl,.txinput .txr {
    position: absolute;
    top: 26rpx;
    font-size: 24rpx;
    z-index: 1000;
}

.txinput .txl {
    left: 0;
}

.txinput .txr {
    right: 0;
}

.txinput input {
    border: none;
    border-bottom: 2rpx solid #F5F5F5;
    background: transparent;
    margin: 0 0 20rpx 0;
    padding-left: 40rpx;
}

.txnotice {
    font-size: 24rpx;
    color: #9B9B9B;
    margin-bottom: 30rpx;
}

.txbox {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
}

.txrow input {
    margin: 0 0 20rpx 0;
}

button {
    width: 70%;
    background: #6671E4;
    border: none;
    font-size: 30rpx;
    padding: 4rpx 0;
    color: #fff;
    margin-top: 30rpx;
}