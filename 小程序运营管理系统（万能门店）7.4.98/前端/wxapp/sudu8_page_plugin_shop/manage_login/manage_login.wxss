page {
    background: #6671E4;
    height: 100%;
}

.th3 {
    margin-top: 60px;
    color: #fff;
    text-align: center;
    margin-bottom: 40px;
    font-size: 42rpx;
    font-weight: bold;
}

.container {
    padding: 20px 35px;
}

.row {
    color: #000;
}

.row input {
    border: 0;
    height: 40rpx;
    line-height: 40rpx;
    padding: 4px 10px;
    border-radius: 3px;
    margin-bottom: 20rpx;
}

.pull-right {
    float: right;
}

.btn {
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
}