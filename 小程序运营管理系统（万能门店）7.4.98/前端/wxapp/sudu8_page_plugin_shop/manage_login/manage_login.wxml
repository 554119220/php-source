<view class="container">
    <form bindsubmit="formSubmit">
        <view class="th3">商家管理系统</view>
        <view class="row" style="color:#eee;">用户名</view>
        <view class="row">
            <input autoFocus bindinput="bindinput" class="m-wrap placeholder-no-fix" data-name="name" placeholder="用户名" type="text"></input>
        </view>
        <view class="row" style="color:#eee;">密码</view>
        <view class="row">
            <input bindinput="bindinput" class="m-wrap placeholder-no-fix" data-name="pass" placeholder="密码" type="password"></input>
        </view>
        <view class="row" style="margin-top: 30px">
            <button class="btn pull-right" formType="submit" style="border:none;background:#da6846;color: #fff;">登录</button>
        </view>
    </form>
    <view style="text-align:center;font-size: 12px; color:#939af0;margin-top: 60px">小程序管理系统欢迎您!</view>
</view>
