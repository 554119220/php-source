page {
    background: #F8F8F8;
    height: 100%;
}

.hbj {
    line-height: 34rpx;
}

.auction_list {
    padding: 30rpx;
    margin-top: 15rpx;
    background: #FFF;
}

.auction_list_image {
    width: 265rpx;
    height: 198rpx;
    position: relative;
}

.auction_collect {
    position: absolute;
    left: 12rpx;
    top: 12rpx;
    font-size: 36rpx;
    color: #fff;
}

.auction_collect_on {
    color: #E41717;
}

.auction_list_right {
    width: 392rpx;
    margin-left: 34rpx;
}

.auction_list_title {
    font-size: 30rpx;
    color: #434343;
    font-weight: bold;
}

.auction_list_price {
    font-size: 24rpx;
    color: #e01515;
    margin-top: 12rpx;
}

.auction_list_price_text1 {
    font-size: 18rpx;
    font-weight: bold;
}

.auction_list_price_text2 {
    font-size: 30rpx;
    font-weight: bold;
    font-family: Arial,Helvetica,sans-serif;
}

.cjcs {
    font-size: 20rpx;
    color: #838383;
    margin-top: 10rpx;
}

.fgx {
    font-size: 24rpx;
    color: #eee;
    margin: 0 12rpx;
    margin-top: 10rpx;
}

.kspm {
    font-size: 24rpx;
    color: #e41717;
}

.kspm text {
    font-size: 40rpx;
    margin-right: 10rpx;
}

.auction_list_time {
    height: 50rpx;
    background-color: #E41717;
    color: #FFF;
    border-radius: 8rpx;
    margin-top: 10rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
}

.auction_list_time text {
    font-size: 28rpx;
    font-weight: bold;
    font-family: Arial,Helvetica,sans-serif;
    margin-left: 10rpx;
}

.auction_nav_box {
    padding: 0 30rpx;
    background: #fff;
}

.auction_nav {
    padding: 0 15rpx;
    height: 85rpx;
    line-height: 85rpx;
    border-bottom: 2rpx solid #fff;
    font-size: 28rpx;
    color: #434343;
    margin-left: 90rpx;
}

.auction_nav:first-child {
    margin-left: 0;
}

.auction_nav_on {
    color: #e41717;
    border-color: #e41717;
}

.remindbox {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
    position: fixed;
    left: 0;
    top: 0;
}

.remind {
    width: 525rpx;
    border-radius: 12rpx;
    position: absolute;
    margin: auto;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    height: 316rpx;
    overflow: hidden;
}

.remind_head {
    width: 100%;
    height: 70rpx;
    background-color: #eeeeee;
    text-align: center;
    line-height: 70rpx;
    font-size: 24rpx;
    color: #434343;
}

.remind_center {
    height: 180rpx;
    padding: 0 30rpx;
    background: #fff;
    box-sizing: border-box;
    padding-top: 61rpx;
}

.remind_center input {
    width: 100%;
    height: 54rpx;
    border: 2rpx solid #e5e5e5;
    line-height: 58rpx;
    padding: 0 15rpx;
    font-size: 24rpx;
    color: #434343;
    box-sizing: border-box;
}

.remind_bottom {
    height: 66rpx;
    line-height: 66rpx;
}

.remind_bottom_left {
    width: 50%;
    background-color: #eee;
    text-align: center;
    font-size: 24rpx;
    color: #939393;
}

.remind_bottom_right {
    flex: 1;
    background-color: #E41717;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
}

.auction_list_time2 {
    height: 50rpx;
    background-color: #a0a0a0;
    color: #FFF;
    border-radius: 8rpx;
    margin-top: 10rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
}

.deal {
    width: 96rpx;
    height: 36rpx;
    border: 2rpx solid #32b16c;
    color: #32b16c;
    font-size: 24rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 8rpx;
}