page {
    padding-bottom: 120rpx;
    background: #f8f8f8;
}

.header {
    position: relative;
    height: 410rpx;
    text-align: center;
}

.name {
    font-size: 30rpx;
}

.mine-bg {
    width: 100%;
    height: 410rpx;
}

.part1 {
    position: absolute;
    top: 126rpx;
    left: 30rpx;
    z-index: 2;
    width: 688rpx;
    height: 256rpx;
    border-radius: 12px;
    color: var(--white);
}

.mine-num {
    display: flex;
    justify-content: space-around;
}

.mn-list {
    width: 229rpx;
}

.mn-list .v1 {
    font-size: 34rpx;
}

.mn-list .v2 {
    font-size: 24rpx;
}

.part1 .img1 {
    margin-top: -82rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 5rpx solid rgba(255,255,255,0.5);
}

.part1 .v1 {
    margin-top: 25rpx;
}

.part2 {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 119rpx;
    z-index: 1;
}

.card-wrap {
    position: relative;
}

.card {
    padding-bottom: 30rpx;
    background: #fff;
}

.activity-tit {
    padding-left: 32rpx;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #ececec;
}

.activities {
    display: flex;
    flex-wrap: wrap;
}

.activity-list {
    width: 25%;
    padding: 30rpx 0 0 0;
    text-align: center;
    background: var(--white);
    font-size: 28rpx;
}

.activity-list .img1 {
    display: block;
    width: 45rpx;
    height: 48rpx;
    margin: 0 auto 10rpx;
}

.activity-list .icon42 {
    width: 42rpx;
}

.activity-list .coupon-icon {
    margin-top: 10rpx;
    width: 43rpx;
    height: 33rpx;
}

.activity-list .coupon-txt {
    margin-top: 15rpx;
}

.integral-mall {
    width: 52rpx;
    height: 54rpx;
}