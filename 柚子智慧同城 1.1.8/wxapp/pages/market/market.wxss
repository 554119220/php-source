@import "../active/active.wxss";

.banner-top,.nav-box {
    margin-bottom: 20rpx;
    background: var(--white);
}

.search {
    display: flex;
    flex-direction: row;
    padding: 18rpx 20rpx;
}

.search input {
    flex: 1;
    height: 64rpx;
    line-height: 64rpx;
    padding: 0 10rpx;
    margin-right: 20rpx;
    background: #f8f8f8;
    box-shadow: 0 0 1px #ccc inset;
    border-radius: 10rpx;
}

.search button {
    width: 110rpx;
    height: 64rpx;
    line-height: 64rpx;
    background: var(--skin);
    border-radius: 10rpx;
}

.van-icon-banner {
    color: #fff;
}

.check-in {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    align-items: center;
    background: #fff;
    margin-bottom: 20rpx;
}

.check-left {
    display: block;
    width: 52rpx;
    height: 46rpx;
}

.check-center {
    flex: 1;
    padding: 0 20rpx;
    height: 46rpx;
}

.check-right {
    width: 146rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    background: var(--normal);
    color: var(--white);
    font-size: 28rpx;
    border-radius: 10rpx;
}

.content {
    border-top: 10rpx solid #f8f8f8;
    padding-top: 30rpx;
    background: var(--white);
}

.item {
    padding: 20rpx 20rpx 0;
    margin: 0 20rpx 30rpx;
    box-shadow: 0 2rpx 4rpx var(--skin),0 -2rpx 4rpx var(--skin),2rpx 0 4rpx var(--skin),-2rpx 0 4rpx var(--skin);
    border-radius: 10rpx;
    background: var(--white);
}

.item-info {
    display: flex;
    flex-direction: row;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1px solid #ececec;
}

.item-info-left {
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.item-info-right {
    flex: 1;
}

.item-info-name {
    font-size: 30rpx;
    font-weight: 600;
}

.item-info-hot {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 16rpx;
}

.hot-icon {
    display: block;
    width: 22rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.item-info-hot view {
    flex: 1;
    color: var(--skin);
    font-size: 26rpx;
}

.item-info-desc {
    margin-top: 14rpx;
    color: var(--fontb);
    font-size: 26rpx;
}

.item-info-hot .tel {
    position: absolute;
    top: 0;
    right: 0;
    display: block;
    width: 60rpx;
    height: 60rpx;
}

.red {
    color: var(--skin);
}

.yellow {
    color: #ffb933;
}

.green {
    color: #54e189;
}

.item-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 20rpx;
    font-size: 26rpx;
}

.item-list-icon {
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-right: 20rpx;
    text-align: center;
    border-radius: 6rpx;
}

.red .item-list-icon {
    box-shadow: 0 0 1px var(--skin);
}

.yellow .item-list-icon {
    box-shadow: 0 0 1px #ffb933;
}

.green .item-list-icon {
    box-shadow: 0 0 1px#54E189;
}

.type-nav {
    background: #fff;
}

.type-nav swiper {
    width: 100%;
    height: 100%;
}

.swiper-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: 20rpx;
}

.nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
    padding-bottom: 20rpx;
    font-size: 24rpx;
}

.nav-item image {
    display: block;
    width: 82rpx;
    height: 82rpx;
}

.nav-item view {
    padding: 10rpx 10rpx 0;
}

.ellips2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.local-btn {
    width: 690rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background: var(--skin);
    color: var(--white);
    font-size: 34rpx;
    border-radius: 10rpx;
}