.swiper-tab {margin-top:10rpx; display: -webkit-flex; display: flex;height: 89rpx;line-height: 89rpx;text-align: center;border-bottom: 1px solid #eee;-webkit-justify-content: space-around;justify-content: space-around;background: #fff; font-size: 30rpx; color: var(--fontb)}
.on,.swiper-tab .active {height: 88rpx;line-height: 89rpx;border-bottom: 2rpx solid var(--skin);color: var(--skin); font-size: 30rpx}
.order-scroll{ white-space:nowrap; background: var(--white)}
.order-scroll .active{border-bottom:5rpx solid var(--skin); color:var(--skin);}
.order-nav{ padding:0 30rpx; line-height: 90rpx; display: inline-block; text-align: center; font-size: 30rpx}
.list{ margin-top:20rpx; padding-bottom: 10rpx; background: var(--white)}
.list-tit{ padding:0 20rpx; display: -webkit-flex; display: flex; height: 80rpx; line-height: 80rpx; border-bottom: 1rpx solid #ececec;}
.lt-lef{ -webkit-flex: 1; flex: 1;}
.lt-rig{ color: var(--skin)}
.list-cont{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; padding:20rpx 0 30rpx 20rpx; box-sizing: border-box;}
.lc-lef{ margin-right: 20rpx; width: 120rpx; height: 120rpx; border-radius: 50%;}
.lc-rig .v2{ margin-top:20rpx; color: var(--skin); font-size: 30rpx; font-weight: 600}
.commission{ margin:0 20rpx; height: 60rpx; line-height: 60rpx; text-align: center; font-size: 24rpx; background: #f8f8f8; color: var(--fontb); border-radius: 30rpx;}
.goods{ padding:20rpx; box-sizing: border-box; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center;}
.goods-lef{ margin-right: 20rpx; width: 180rpx; height: 180rpx;}
.goods-rig{ -webkit-flex: 1; flex: 1}
.godds-num{ margin:30rpx 0 0 3rpx; display: -webkit-flex; display: flex; font-size: 26rpx; color: var(--fontc)}
.godds-num .v1{ -webkit-flex: 1; flex: 1}
.goods-money{ margin-top:30rpx; color: var(--skin)}
.list-bot{ height: 60rpx; line-height: 60rpx; text-align: center;}
.down-arrow.active{-webkit-transform: rotate(360deg);transform: rotate(360deg); top:10rpx}
.lc-rig .v1{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center}
.lc-rig .v1 .txt2{ margin-left:12rpx; padding:0 12rpx; height: 36rpx; line-height: 36rpx; background: #ff9801; border-radius:6rpx; color: var(--white); font-size: 22rpx; border:1rpx solid #fe7b00;}
