page{background: var(--white);}
.swiper-tab {display: -webkit-flex;display: flex;height: 89rpx;line-height: 89rpx;text-align: center;border-bottom: 1px solid #eee;-webkit-justify-content: space-around;justify-content: space-around;background: #fff; font-size: 30rpx;}
.on,.swiper-tab .active {height: 88rpx;line-height: 89rpx;border-bottom: 2rpx solid #e9472c;color: #e9472c;}
.no-more{ padding:30rpx 0; text-align: center; color: #999}
.coupon{ border-top:20rpx solid #f8f8f8;}
.coupon-item{ margin:20rpx 0 0 20rpx; padding: 20rpx 0; width: 710rpx; box-sizing: border-box; border:1rpx solid var(--skin); border-radius: 6rpx;}
.ci-top,.cib-time,.cit-name{ display: -webkit-flex; display: flex; -webkit-align-items:center; align-items:center;}
.cit-lef{ -webkit-flex: 1; flex: 1; box-sizing: border-box; padding-right: 30rpx;}
.ci-top,.ci-bot{ box-sizing: border-box; padding:0 20rpx;}
.ci-top{padding-bottom: 20rpx}
.cit-name{ font-size: 30rpx; font-weight: 600}
.right-arrow::after{ margin-top:-5rpx; width: 12rpx; height: 12rpx;border-width: 2rpx 2rpx 0 0; border-color:#222}
.cit-title{ margin-top:18rpx; font-size: 38rpx; font-weight: 600; color: var(--skin);}
.cit-condition{ margin-top:12rpx; font-size: 24rpx; color: var(--skin)}
.cit-rig{ width: 180rpx; height: 64rpx; text-align: center; line-height: 64rpx; color: var(--white); font-size: 24rpx; font-weight: 600; border-radius: 10rpx; background: var(--skin)}
.cib-time{ margin-top:15rpx;}
.cib-limit{ padding-top:20rpx; font-size: 24rpx; color: var(--fontb)}
.cib-time .v1{ -webkit-flex: 1; flex: 1; font-size: 24rpx; color: var(--fontb)}
.cib-time .v2{ font-size: 26rpx;}
.ci-bot{ position: relative; border-top:1rpx dashed var(--skin);}
.ci-bot::before{position: absolute; content: ''; left: -8rpx; top:-8rpx; width: 16rpx; height: 16rpx; background: var(--white); border-radius: 50%; border-top:1rpx solid var(--skin); border-right:1rpx solid var(--skin); -webkit-transform: rotate(45deg); transform: rotate(45deg)}
.ci-bot::after{position: absolute; content: ''; right: -8rpx; top:-8rpx; width: 16rpx; height: 16rpx; background: var(--white); border-radius: 50%; border-top:1rpx solid var(--skin); border-right:1rpx solid var(--skin); -webkit-transform: rotate(-135deg); transform: rotate(-135deg)}
.bg-gray{ background: var(--prevent)}
