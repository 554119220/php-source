<import  src="/zhy/template/temloading/temloading.wxml"  />
<block wx:if="{{show}}">
	<view style="padding-bottom: {{padding}}rpx;">
		<scroll-view scrollX="true">
			<view class="swiper-tab">
				<block wx:for="{{navtab}}" wx:for-item="item" wx:for-index="index" >
					<view bindtap="swichNav" class="tab-item {{curHdIndex==item.id?'active':''}}" data-id="{{item.id}}">{{item.title}}</view>
				</block>
			</view>
		</scroll-view>
		<block wx:for="{{olist}}" wx:for-item="item" wx:for-index="index" >
			<view class="item-style2 bor-box rel">
				<view bindtap="toInfoTap" class="is-head flex-andmid" data-id="{{item.id}}">
					<view class="is-headimg">
						<image mode="aspectFill" src="{{item.user.avatar}}"></image>
					</view>
					<view class="is-headtitandlabel">
						<text class="is-headtit">{{item.user.nickname}}</text>
						<view class="is-headlabel dis-flex">
							<block wx:if="{{item.topcat_name}}">
								<text>{{item.topcat_name}}</text>
							</block>
							<text>{{item.cat_name}}</text>
						</view>
					</view>
				</view>
				<view class="is-mid">
					<view bindtap="toInfoTap" class="is-midtext" data-id="{{item.id}}">{{item.content}}</view>
					<block wx:if="{{item.pics.length>0}}">						<scroll-view class="is-scrollx" scrollX="true">
							<block wx:for="{{item.pics}}" wx:key="*this" wx:for-item="item" wx:for-index="idx" >
								<image bindtap="onPreviewTap" data-idx="{{idx}}" data-index="{{index}}" mode="aspectFill" src="{{imgRoot+item}}"></image>
							</block>
						</scroll-view>
					</block>
					<view class="is-address flex-andmid">
						<block wx:if="{{mes.post_address==1}}">
							<image src="/zhy/resource/images/address.png"></image>
						</block>
						<block wx:if="{{mes.post_address==1}}">
							<text class="txt1 ellips1">{{item.address}}</text>
						</block>
						<text class="txt2">{{item.create_time}}</text>
					</view>
				</view>
				<view class="is-bot flex-andmid">
					<view>
						<image class="browse-gray" src="/zhy/resource/images/browseGray.png"></image>
						<text>{{item.browse_num}}人浏览</text>
					</view>
					<view bindtap="onLikeTap" class="flex-andmid" data-id="{{item.id}}">
						<block wx:if="{{item.is_like==0}}">
							<image class="like" src="/zhy/resource/images/like.png"></image>
						</block>
						<block wx:if="{{item.is_like==1}}">
							<image class="like" src="/zhy/resource/images/like_active.png"></image>
						</block>
						<text>{{item.like_num}}人点赞</text>
					</view>
					<text bindtap="toInfoTap" class="is-details" data-id="{{item.id}}">查看详情</text>
				</view>
				<view bindtap="onTelTap" class="il-phoe ab" data-tel="{{item.phone}}">拨打电话</view>
			</view>
		</block>
		<block wx:if="{{nomore}}">
			<view class="no-more">没有更多了~</view>
		</block>
	</view>
</block>
<block wx:if="{{!show}}">
	<block></block>
</block>
<foot bind:padding="getPadding" bind:setting="getSetting" reload="true"></foot>
<block wx:if="{{share}}">
	<view class="share-box">
		<button class="share-item" openType="share">分享</button>
		<button bindtap="toggleShare" class="share-item">取消</button>
	</view>
</block>
<view class="fixed-box" style="bottom:{{padding}}rpx">
	<button bindtap="toggleShare">
		<image src="/zhy/resource/images/share.png"></image>
	</button>
</view>
