.info { position: relative; width: 710rpx; padding: 30rpx 20rpx; height: 320rpx; background: linear-gradient(to top, #fe433f, #ff9492); }
.owner { display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-align-items: center; align-items: center; -webkit-justify-content: center; justify-content: center; color: var(--white); }
.owner-left { width: 158rpx; height: 158rpx; border: 2rpx solid var(--white); border-radius: 50%; }
.owner-center { -webkit-flex: 1; flex: 1; padding: 0 20rpx; }
.owner-center view { line-height: 60rpx; }
.owner-right { display: -webkit-flex; display: flex; -webkit-flex-direction: column; flex-direction: column; -webkit-justify-content: center; justify-content: center; -webkit-align-items: center; align-items: center; width: 128rpx; }
.owner-right image { width: 40rpx; height: 40rpx; margin-bottom: 20rpx; }
.control { position: absolute; bottom: 0; left: 30rpx; display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-align-items: center; align-items: center; width: 630rpx; height: 90rpx; padding: 30rpx; border-top-left-radius: 10rpx; border-top-right-radius: 10rpx; background: rgba(255, 255, 255, 0.6); }
.money { -webkit-flex: 1; flex: 1; color: var(--skin); max-width: 340rpx; }
.money>view:nth-child(1) { font-size: 32rpx; line-height: 60rpx; }
.money>view:nth-child(2) { font-size: 34rpx; font-weight: 600; }
.control-btn { display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-align-items: center; align-items: center; -webkit-justify-content: center; justify-content: center; width: 160rpx; height: 68rpx; line-height: 68rpx; margin-left: 30rpx; text-align: center; border-radius: 10rpx; font-size: 30rpx; background: var(--skin); color: var(--white); }
.control-btn image { display: inline-block; width: 30rpx; height: 30rpx; margin-right: 10rpx; }
.msg { background: var(--white); }
.msg-item-box { display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-flex-wrap: wrap; flex-wrap: wrap; }
.msg-title { line-height: 88rpx; padding: 0 20rpx; border-bottom: 1rpx solid #ececec; }
.msg-item { width: 335rpx; padding: 0 20rpx; height: 158rpx; border-bottom: 1rpx solid #ececec; }
.msg-item:nth-of-type(odd) { width: 334rpx; border-right: 1rpx solid #ececec; }
.msg-item>view:nth-child(1) { margin-top: 30rpx; }
.msg-item>view:nth-child(2) { font-size: 52rpx; font-weight: 600; text-align: center; }
.end-time { display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-align-items: center; align-items: center; -webkit-justify-content: center; justify-content: center; height: 80rpx; line-height: 80rpx; text-align: center; }
.continue { padding: 0 10rpx; height: 40rpx; line-height: 40rpx; margin-left: 20rpx; background: var(--skin); color: var(--white); font-size: 24rpx; border-radius: 10rpx; }
.mask{position: fixed; z-index: 11; top:0; right:0; bottom:0; left: 0; background: rgba(0,0,0,0.7)}
.coupon{ padding-bottom: 30rpx; position: fixed; z-index: 12; top:50%; left: 30rpx; width:690rpx; background: var(--white); border-radius: 10rpx; -webkit-transform: translateY(-50%); transform: translateY(-50%)}
.coupon-tit{ margin-left:20rpx; padding:10rpx 0 0 3rpx; height: 70rpx; line-height: 70rpx; border-bottom:1rpx solid #ddd; font-size: 30rpx;}
.coupon-cont{ margin-left: 20rpx; padding-top: 20rpx; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center;}
.cc-lef{ margin-right: 20rpx; width:130rpx; height: 130rpx; border-radius: 50%; }
.cc-rig .v2{ margin-top:40rpx;}
.coupon-bot{ margin-top:40rpx; display: -webkit-flex; display: flex; -webkit-justify-content: space-around; justify-content: space-around}
.coupon-bot view{ width: 160rpx; height: 62rpx; line-height: 62rpx; border-radius: 10rpx; border:1rpx solid #ddd; background: var(--white); text-align: center; font-size: 26rpx;}
.coupon-bot .v2{ height: 64rpx; line-height: 64rpx; border:0; background: var(--skin); color: var(--white)}
