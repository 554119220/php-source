page{background: var(--white);}
.coupon { padding: 20rpx 20rpx 0 20rpx; }
.coupon { padding: 0 20rpx 0 20rpx; background: var(--white); }
.coupon-item-box { width: 708rpx; margin-bottom: 30rpx; border-radius: 10rpx; box-shadow: 0 2rpx 8rpx #ccc, 0 -2rpx 8rpx #ccc, 2rpx 0 8rpx #ccc, -2rpx 0 8rpx #ccc; }
.coupon-item { position: relative; display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; padding: 20rpx; background: linear-gradient(to right, #f4ad98, #f25354); border-top-left-radius: 10rpx; border-top-right-radius: 10rpx; color: var(--white); }
.coupon-item::after { content: ''; position: absolute; top: 0; left: 290rpx; width: 0; height: 100%; }
.coupon-item-left { position: relative; display: block; width: 230rpx; height: 160rpx; border-radius: 10rpx; overflow: hidden; }
.coupon-item-left image { width: 100%; height: 100%; }
.coupon-item-left view { position: absolute; bottom: 0; left: 0; width: 100%; height: 34rpx; line-height: 34rpx; font-size: 24rpx; color: var(--white); background: rgba(0, 0, 0, 0.4); text-align: center; font-weight: 600; }
.coupon-item-right { position: relative; -webkit-flex: 1; flex: 1; padding-left: 20rpx; }
.coupon-item-right>view:nth-child(1) { font-weight: 600; line-height: 28rpx; }
.coupon-item-right>view:nth-child(2) { line-height: 44rpx; font-size: 18rpx; }
.coupon-icon { display: -webkit-flex; display: flex; -webkit-flex-direction: row; flex-direction: row; -webkit-align-items: center; align-items: center; font-size: 20rpx; width: 240rpx; padding-top: 12rpx; }
.bottom-icon { position: absolute; bottom: 0; left: 20rpx; }
.coupon-icon image { width: 30rpx; height: 26rpx; margin-right: 10rpx; }
.coupon-icon text { -webkit-flex: 1; flex: 1; }
.coupon-btn { position: absolute; bottom: 0; right: 0; width: 140rpx; height: 46rpx; line-height: 46rpx; text-align: center; background: var(--white); color: var(--skin); font-size: 24rpx; border-radius: 6rpx; }
.coupon-item-pass { padding: 0 20rpx; width: 668rpx; height: 70rpx; line-height: 70rpx; font-size: 22rpx; background: #fff; border-bottom-left-radius: 10rpx; border-bottom-right-radius: 10rpx; }
.arrow-down { margin-top:10rpx; width: 0; height: 0; border-top:12rpx solid #999; border-right:10rpx solid transparent; border-left:10rpx solid transparent; border-bottom:0; }
.active .arrow-down.sub { border-top:12rpx solid var(--skin); }
.active .arrow-up.sub { border-bottom:12rpx solid var(--skin); }
.arrow-up { width: 0; height: 0; border-bottom:12rpx solid #999; border-right:10rpx solid transparent; border-left:10rpx solid transparent; border-top:0; }
.arrow-up.active{ border-bottom:12rpx solid var(--skin); }
.tabs{ height: 82rpx;}
.tabs,.tabs-list{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; -webkit-justify-content: space-around; justify-content: space-around;}
.tl-lef{ padding-right: 14rpx;}
.pop-allow{ position: fixed; top:0; right: 0; bottom: 0; left: 0; z-index: 12; background: rgba(0, 0, 0, 0.3);}
.tabs-list.active{ color: var(--skin)}
.no-more{ padding:30rpx 0; text-align: center; color: #999}
