.bdList { padding: 40rpx 30rpx; box-sizing: border-box; border-bottom: 1rpx solid #eee; background: #fff; }
.bdLtop, .bdLbot { display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; }
.bdLtop view:nth-child(1), .bdLbot view:nth-child(1) { -webkit-flex: 1; flex: 1; }
.bdLtop view:nth-child(1) { font-size: 30rpx; }
.bdLtop view:nth-child(2) { font-size: 24rpx; color: #999; }
.bdLbot view:nth-child(1) { font-size: 24rpx; }
.bdLbot view:nth-child(2) { font-size: 28rpx; color: #000; }
.none-list{ margin-top:20rpx; text-align: center;}
