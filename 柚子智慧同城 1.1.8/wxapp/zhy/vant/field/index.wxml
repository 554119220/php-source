<van-cell border="{{border}}" center="{{center}}" customClass="van-field" customStyle="{{customStyle}}" icon="{{leftIcon}}" isLink="{{isLink}}" required="{{required}}" title="{{label}}" titleWidth="{{titleWidth}}">
    <slot name="left-icon" slot="icon"></slot>
    <slot name="label" slot="title"></slot>
    <view class="van-field__body {{type==='textarea'?'van-field__body--textarea':''}}">
        <textarea adjustPosition="{{adjustPosition}}" autoHeight="{{autosize}}" bind:blur="onBlur" bind:confirm="onConfirm" bind:focus="onFocus" bindinput="onInput" class="input-class {{utils.bem( 'field__input',[ inputAlign,{disabled:disabled,error:error} ] )}}" cursorSpacing="{{cursorSpacing}}" disabled="{{disabled||readonly}}" fixed="{{fixed}}" focus="{{focus}}" maxlength="{{maxlength}}" placeholder="{{placeholder}}" placeholderClass="{{error?'van-field__input--error':'van-field__placeholder'}}" placeholderStyle="{{placeholderStyle}}" showConfirmBar="{{showConfirmBar}}" value="{{value}}" wx:if="{{type==='textarea'}}"></textarea>
        <input adjustPosition="{{adjustPosition}}" bind:blur="onBlur" bind:confirm="onConfirm" bind:focus="onFocus" bindinput="onInput" class="input-class {{utils.bem( 'field__input',[ inputAlign,{disabled:disabled,error:error} ] )}}" confirmHold="{{confirmHold}}" confirmType="{{confirmType}}" cursorSpacing="{{cursorSpacing}}" disabled="{{disabled||readonly}}" focus="{{focus}}" maxlength="{{maxlength}}" placeholder="{{placeholder}}" placeholderClass="{{error?'van-field__input--error':'van-field__placeholder'}}" placeholderStyle="{{placeholderStyle}}" type="{{type}}" value="{{value}}" wx:else></input>
        <van-icon bind:touchstart="onClear" class="van-field__clear-root" customClass="van-field__clear" name="clear" size="16px" wx:if="{{showClear}}"></van-icon>
        <view bind:tap="onClickIcon" class="van-field__icon-container" wx:if="{{icon||useIconSlot}}">
            <van-icon customClass="van-field__icon {{iconClass}}" name="{{icon}}" size="16px" wx:if="{{icon}}"></van-icon>
            <slot name="icon" wx:else></slot>
        </view>
        <view class="van-field__button" wx:if="{{useButtonSlot}}">
            <slot name="button"></slot>
        </view>
    </view>
    <view class="van-field__error-message" wx:if="{{errorMessage}}">
    {{errorMessage}}
  </view>
</van-cell>
<wxs module="utils" src="../wxs/utils.wxs" />