.tab {
    position: fixed;
    width: 100%;
    bottom: 0rpx;
    background: #fff;
    border-top: 1rpx solid #d5d5d5;
    height: 92rpx;
    padding-bottom: 4rpx;
    z-index: 99999;
}

.ipx {
    padding-bottom: 68rpx;
}

.tabnav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tablist {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #8c8c8c;
}

.tabimg {
    width: 60rpx;
    height: 60rpx;
    margin-top: 8rpx;
    margin-bottom: 0rpx;
}

.badge {
    position: relative;
}

.badge_text {
    position: absolute;
    top: -72rpx;
    right: -26rpx;
    height: 60rpx;
    min-width: 60rpx;
    line-height: 40rpx;
    padding: 13rpx;
    font-size: 47rpx;
    border-radius: 30rpx;
    background: #f44;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    transform: translateX(50%) scale(.5);
    transform-origin: center;
    z-index: 10;
    box-shadow: 0 0 0 5rpx #fff;
    box-sizing: border-box;
}