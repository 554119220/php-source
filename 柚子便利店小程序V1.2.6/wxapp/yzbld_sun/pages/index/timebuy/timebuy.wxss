.container {
    background: #ffedd8;
}

swiper {
    height: 320rpx;
}

.slide-image {
    width: 750rpx;
    height: 320rpx;
}

.session {
    background: #ffedd8;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}

.goodsList {
    margin-top: 8rpx;
    padding-bottom: 102rpx;
}

.goodsItem {
    display: flex;
    padding: 20rpx;
    background: #fff;
    margin: 0rpx 28rpx 20rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(164,89,0,0.086);
}

.goodsLft {
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx;
    border: 1rpx solid #dcdcdc;
    margin-right: 22rpx;
}

.goodsImg {
    height: 178rpx;
    width: 178rpx;
    border-radius: 10rpx;
}

.goodsRight {
    width: 454rpx;
    height: 180rpx;
    position: relative;
}

.goodsName {
    font-size: 26rpx;
    line-height: 36rpx;
}

.goodsDet {
    width: 454rpx;
    position: absolute;
    bottom: 16rpx;
    display: flex;
    justify-content: space-between;
}

.goodsPrice {
    font-size: 32rpx;
    color: #f33030;
    font-weight: 700;
    position: absolute;
    bottom: 2rpx;
}

.opear {
    display: flex;
    position: absolute;
    right: 0rpx;
    bottom: -16rpx;
    align-items: center;
}

.reduce {
    height: 56rpx;
    width: 56rpx;
    border-radius: 50%;
    border: 2rpx solid #999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.reduce image {
    width: 26rpx;
    height: 5rpx;
}

.add {
    border: 2rpx solid #ef8200;
}

.add image {
    width: 26rpx;
    height: 27rpx;
}

.goodsNum input {
    width: 60rpx;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
}

button::after {
    border: none;
}

#addCarts {
    position: fixed;
    bottom: 138rpx;
    right: 0rpx;
    z-index: 9999;
    width: 120rpx;
    height: 98rpx;
    background: rgba(255,255,255,0.9);
    border: 4rpx solid #ececec;
    border-radius: 50% 0rpx 0rpx 50%;
}

#addCarts view {
    height: 98rpx;
    display: flex;
    align-items: center;
    padding: 0rpx 13rpx;
    position: relative;
}

#addCarts text {
    position: absolute;
    top: 4rpx;
    right: 20rpx;
    display: block;
    width: 50rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(253,71,116)0%,rgb(253,194,209)100%);
    border-radius: 15rpx;
    font-weight: 700;
    color: #fff;
    text-align: center;
}