.container {
    padding-top: 10rpx;
}

.cards {
    display: flex;
    margin: 20rpx;
    width: 710rpx;
    height: 240rpx;
    background: #fff6f7;
    border: 1rpx solid #ff6c7c;
    position: relative;
}

.cards::before,.cards::after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    position: absolute;
    right: 203rpx;
    top: -6rpx;
    border-bottom: 1rpx solid #ff6c7c;
    border-left: 1rpx solid #ff6c7c;
    border-radius: 50%;
    z-index: 99;
    transform: rotate(-45deg);
}

.cards::after {
    top: 229rpx;
    transform: rotate(135deg);
}

.cardsLeft {
    width: 500rpx;
    padding-left: 26rpx;
    border-right: 1rpx dashed #DADCE3;
    box-sizing: border-box;
}

.cardsUp {
    height: 158rpx;
    box-sizing: border-box;
    border-bottom: 1rpx dashed #DADCE3;
    display: flex;
    padding-top: 68rpx;
}

.money {
    font-size: 36rpx;
    font-weight: 700;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.money text:first-child {
    font-size: 72rpx;
}

.day {
    color: #999;
    font-size: 24rpx;
    margin-top: 8rpx;
}

.remark {
    height: 82rpx;
    line-height: 82rpx;
    color: #666;
    font-size: 24rpx;
}

.cardsRight {
    height: 240rpx;
    width: 210rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cardsRight view {
    width: 164rpx;
    height: 54rpx;
    background: #ef8200;
    border-radius: 26rpx;
    text-align: center;
    line-height: 54rpx;
    color: #fff;
}

.cardsRight .out {
    background: #dbdbdb;
    color: #666;
}