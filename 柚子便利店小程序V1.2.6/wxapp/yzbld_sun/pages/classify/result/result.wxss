.searchIcon {
    height: 28rpx;
    width: 28rpx;
    padding: 0rpx 20rpx;
}

.searchForm {
    display: inline-block;
    background: #fff;
    width: 672rpx;
    height: 64rpx;
    padding: 17rpx 39rpx;
}

.search {
    display: flex;
    width: 672rpx;
    height: 64rpx;
    border-radius: 10rpx;
    align-items: center;
    background: #f8f8f8;
}

.search input {
    width: 604rpx;
    font-size: 30rpx;
}

.search button {
    padding-left: 0rpx;
    padding-right: 0rpx;
    height: 64rpx;
    display: flex;
    align-items: center;
    background: transparent;
}

.search button::after {
    border: none;
}

.session {
    background: #fff;
    margin-top: 20rpx;
}

.goodsList {
    margin-top: 8rpx;
}

.goodsItem {
    display: flex;
    padding: 20rpx 0rpx;
    border-top: 1rpx solid #ececec;
    background: #fff;
    margin-left: 20rpx;
}

.goodsItem:first-child {
    border-top: 0rpx solid #f00;
}

.goodsLft {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    border: 1rpx solid #dcdcdc;
    margin-right: 22rpx;
}

.goodsImg {
    height: 178rpx;
    width: 178rpx;
    border-radius: 10rpx;
}

.goodsRight {
    width: 504rpx;
    height: 180rpx;
    position: relative;
}

.goodsName {
    font-size: 25rpx;
    line-height: 36rpx;
}

.goodsDet {
    width: 504rpx;
    position: absolute;
    bottom: 16rpx;
    display: flex;
    justify-content: space-between;
}

.goodsPrice {
    font-size: 31rpx;
    color: #f33030;
    font-weight: 700;
    position: absolute;
    bottom: 2rpx;
}

.opear {
    display: flex;
    position: absolute;
    right: 0rpx;
    bottom: -16rpx;
    align-items: center;
}

.reduce {
    height: 56rpx;
    width: 56rpx;
    border-radius: 50%;
    border: 2rpx solid #999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.reduce image {
    width: 26rpx;
    height: 5rpx;
}

.add {
    border: 2rpx solid #ef8200;
}

.add image {
    width: 26rpx;
    height: 27rpx;
}

.goodsNum input {
    width: 60rpx;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
}

#addCarts {
    position: fixed;
    bottom: 138rpx;
    right: 0rpx;
    z-index: 9999;
    width: 120rpx;
    height: 98rpx;
    background: rgba(255,255,255,0.9);
    border: 4rpx solid #ececec;
    border-radius: 50% 0rpx 0rpx 50%;
}

#addCarts view {
    height: 98rpx;
    display: flex;
    align-items: center;
    padding: 0rpx 13rpx;
    position: relative;
}

#addCarts text {
    position: absolute;
    top: 4rpx;
    right: 20rpx;
    display: block;
    width: 50rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(253,71,116)0%,rgb(253,194,209)100%);
    border-radius: 15rpx;
    font-weight: 700;
    color: #fff;
    text-align: center;
}