<view class="container">
    <view>
        <view class="cards" wx:for="{{cards}}">
            <view class="card-price">
                <view>
                    <view class="price">
                        <text>¥ </text>
                        <text>{{item.price}}</text>
                    </view>
                    <text>{{item.minprice}}</text>
                </view>
                <view bindtap="toUse" class="use">
                    <text>立即使用</text>
                    <image class="right" src="../../../../style/images/right1.png"></image>
                </view>
            </view>
            <view class="card-time">
                <text>使用期限</text>
                <text>{{item.time}}</text>
            </view>
        </view>
    </view>
</view>
