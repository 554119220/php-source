.bgNo {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 218rpx;
    font-size: 30rpx;
    color: #999;
}

.bgNo image {
    width: 260rpx;
    height: 242rpx;
    margin-bottom: 80rpx;
}

.banner>image,.banner {
    width: 750rpx;
    height: 300rpx;
}

swiper {
    height: 320rpx;
}

.slide-image {
    width: 750rpx;
    height: 320rpx;
}

.block {
    height: 94rpx;
    width: 710rpx;
    padding: 0rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
}

.block>view:first-child {
    font-weight: 700;
    font-size: 30rpx;
}

.block>view:last-child {
    position: relative;
}

.cur {
    height: 50rpx;
    width: 180rpx;
    text-align: center;
    line-height: 50rpx;
    background-color: rgb(210,210,210);
    border-radius: 4rpx;
}

.cur>image {
    width: 16rpx;
    height: 14rpx;
    margin-left: 10rpx;
}

.typeList {
    position: absolute;
    background-color: #f4f3f3;
    width: 180rpx;
    border-radius: 0rpx 0rpx 4rpx 4rpx;
    opacity: 0;
    z-index: 100;
}

.show {
    animation: show 0.5s 1;
    animation-fill-mode: forwards;
}

@keyframes show {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.typeList>view {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}

.typeList>view.on {
    background-color: rgb(210,210,210);
}

.list {
    background: #fff;
    padding: 20rpx;
    margin-bottom: 10rpx;
    width: 710rpx;
}

.listCont {
    height: 102rpx;
    display: flex;
}

.uthumb,.uthumb>image {
    border-radius: 50%;
    width: 102rpx;
    height: 102rpx;
}

.listRight {
    width: 584rpx;
    margin-left: 24rpx;
    display: flex;
    justify-content: space-between;
}

.listRight>view {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.ordernum {
    font-size: 30rpx;
}

.time {
    font-size: 24rpx;
    color: rgb(102,102,102);
}

.price {
    font-size: 26rpx;
    color: rgb(243,48,48);
    font-weight: 700;
    text-align: right;
}

.price>text {
    font-size: 36rpx;
}

.receive {
    border-radius: 4rpx;
    background-color: rgb(239,130,0);
    width: 132rpx;
    height: 58rpx;
    text-align: center;
    line-height: 58rpx;
    color: #fff;
    font-size: 30rpx;
}

.icon1 {
    width: 18rpx;
    height: 26rpx;
    margin-right: 20rpx;
}

.icon2 {
    width: 24rpx;
    height: 26rpx;
    margin-right: 20rpx;
}

.arrow {
    width: 85rpx;
    height: 12rpx;
}

.lisstBot {
    height: 76rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 26rpx;
}

.shopname {
    width: 200rpx;
}

.addr {
    width: 312rpx;
    display: flex;
    align-items: center;
}

.addr>text {
    width: 268rpx;
    display: inline-block;
    align-items: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}