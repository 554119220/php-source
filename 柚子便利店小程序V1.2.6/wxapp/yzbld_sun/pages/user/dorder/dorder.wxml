<import src="../../template/nav/nav.wxml"></import>
<template is="tabBar" data="{{tabBar:tabBar}}"></template>
<view class="container">
    <view>
        <view class="order-nav">
            <view bindtap="bargainTap" data-index="{{index}}" wx:for="{{nav}}">
                <text class="nav {{curIndex===index?'on':''}}">{{item}}</text>
            </view>
        </view>
        <view class="wrap" wx:if="{{curIndex!=2}}">
            <view class="order-cont">
                <view wx:if="{{current==''}}">
                    <image class="no" src="../../../../style/images/barno.png"></image>
                </view>
                <view class="lists" wx:if="{{current!=''}}" wx:for="{{current}}">
                    <view class="order-num">
                        <view>订单号：{{item.ordernum}}</view>
                        <view>
                            <text wx:if="{{item.status==0}}">配送中</text>
                            <text wx:if="{{item.status==1}}">已完成</text>
                        </view>
                    </view>
                    <view bindtap="toDorderdet" class="session" data-sn="{{item.ordernum}}">
                        <view class="lists" wx:for="{{item.goods}}">
                            <view class="list-up">
                                <view class="list-left">
                                    <view class="goodsImg">
                                        <image class="img" src="{{item.img}}"></image>
                                    </view>
                                    <view class="left-det">
                                        <view class="left-title">{{item.title}}</view>
                                    </view>
                                    <view class="list-right">
                  X {{item.num}}
                </view>
                                </view>
                            </view>
                        </view>
                    </view>
                    <view class="lisstBot">
                        <view class="shopname">
                            <image class="icon1" src="../../../../style/images/icon31.png"></image>
                            <text>{{item.shopname}}</text>
                        </view>
                        <view>
                            <image class="arrow" src="../../../../style/images/icon33.png"></image>
                        </view>
                        <view class="addr">
                            <image class="icon2" src="../../../../style/images/icon32.png"></image>
                            <text>{{item.address}}</text>
                        </view>
                    </view>
                    <view class="list-down">
                        <view bindtap="toFinish" class="btn submit" data-sn="{{item.ordernum}}" wx:if="{{item.status==20}}">配送完成</view>
                        <view bindtap="toDelete" class="btn submit" data-sn="{{item.ordernum}}" wx:if="{{item.status==30}}">删除订单</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="wrap" wx:if="{{curIndex==2}}">
            <view class="wrapheader">
                <view class="acount">
                    <view>{{money}}</view>
                    <view>账户余额</view>
                </view>
                <view bindtap="toCash" class="reflect">提现</view>
            </view>
            <view class="bill">
                <view>
                    <view>{{multiArray[0][ multiIndex[0] ]}}-{{multiArray[1][ multiIndex[1] ]}}</view>
                    <view class="billDet">
                        <text>累计：￥{{amount}}</text>
                    </view>
                </view>
                <picker bindcancel="dataCancel" bindchange="dataChange" bindcolumnchange="bindMultiPickerColumnChange" mode="multiSelector" range="{{multiArray}}" value="{{multiIndex}}">
                    <image class="dateIcon" src="../../../../style/images/icon34.png"></image>
                </picker>
            </view>
            <view class="session">
                <view class="list" wx:for="{{billList}}">
                    <view>
                        <view>
              {{item.ordernum}}
            </view>
                        <view class="time">{{item.time}}</view>
                    </view>
                    <view class="money {{item.money>0?'recharge':''}}">
                        <text>{{item.money}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="foot"></view>
    </view>
</view>
