<div {{attributes|raw}}>
    <ul class="nav nav-tabs">

        {% for id,tab in tabs %}
        <li
            {% if id == active %}
                class=active
            {% endif %}
        ><a href="#tab_{{tab['id']}}" data-toggle="tab">{{tab['title']}}</a></li>
        {% endfor %}

        {% if dropDown %}
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Dropdown <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {% for link in dropDown %}
                <li role="presentation"><a role="menuitem" tabindex="-1" href="{{link['href']}}">{{link['name']}}</a></li>
                {% endfor %}
            </ul>
        </li>
        {/if}
        <li class="pull-right header">{{title}}</li>
    </ul>
    <div class="tab-content">
        {% for id,tab in tabs %}

            <div class="tab-pane
             {% if id == active %}
                active
            {% endif %}
" id="tab_{{tab['id']}}">
            {{tab['content']}}
        </div>
        {% endfor %}

    </div>
</div>