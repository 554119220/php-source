<div class="box">
    <div class="box-header">

        <h3 class="box-title"></h3>

        <div class="pull-right">

            {{ filter|raw }}
            {{ createButton|raw }}
        </div>

        <span>
            {{ headerTools|raw }}
        </span>

    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
           <tr>
               {% for column in columns %}
               <th>{{column['label']}}{{column['sorter']|raw}}</th>
               {% endfor %}
            </tr>

            {% for row in row_data %}
                <tr>
                    {% for item in row %}
                        <td>
                            {{item|raw}}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="box-footer clearfix">
        {{paginator|raw}}
    </div>
    <!-- /.box-body -->
</div>
