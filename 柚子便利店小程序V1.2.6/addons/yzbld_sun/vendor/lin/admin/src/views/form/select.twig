<div class="{{ viewClass['form-group'] }}
 {% if error != "" %}
            has-error
{% endif %}
">
    <label for="{{ id }}" class="{{ viewClass['label'] }} control-label">{{ label }}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{ viewClass['field'] }}">

        {% include 'form/error.twig' %}

        <input type="hidden" name="{{ name }}"/>

        <select class="form-control {{ class }}" style="width: 100%;" name="{{ name }}" {{ attributes|raw }} >
            {% if groups %}
                {% for group in groups %}
                    <optgroup label="{{ group['label'] }}">
                        {% for select,option in group['options'] %}
                            <option value="{{ select }}"
                                    {% if select == old %}
                                        selected
                                    {% endif %}
                            >{{ option |raw}}</option>
                        {% endfor %}
                    </optgroup>
                {% endfor %}
            {% else %}
                <option value=""></option>
                {% for select,option in options %}
                    <option value="{{ select }}"
                            {% if select == old %}
                                selected
                            {% endif %}
                    >{{ option|raw }}</option>
                {% endfor %}
            {% endif %}
        </select>

        {% include 'form/help-block.twig' %}

    </div>
</div>
