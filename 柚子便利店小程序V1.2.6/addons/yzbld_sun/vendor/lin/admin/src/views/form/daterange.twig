<div class="{{viewClass['form-group']}} ">

    <label for="{{id['start']}}" class="{{viewClass['label']}} control-label">{{label}}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{viewClass['field']}}">


        <div class="row" style="width: 370px">
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" name="{{name['start']}}" value="{{old['start']}}" class="form-control {{class['start']}}" style="width: 150px" {{attributes|raw}} />
                </div>
            </div>

            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" name="{{name['end']}}" value="{{old['end']}}" class="form-control {{class['end']}}" style="width: 150px" {{attributes|raw}} />
                </div>
            </div>
        </div>


    </div>
</div>