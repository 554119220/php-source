<div class="{{viewClass['form-group']}}">

    <label for="{{id['lat']}}" class="{{viewClass['label']}} control-label">{{label}}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{viewClass['field']}}">


        <div id="map_{{id['lat']}}{{id['lng']}}" style="width: 100%;height: 300px"></div>
        <input type="hidden" id="{{id['lat']}}" name="{{name['lat']}}" value="{{old['lat']}}" {{attributes|raw}} />
        <input type="hidden" id="{{id['lng']}}" name="{{name['lng']}}" value="{{old['lng']}}" {{attributes|raw}} />

        {% include 'form/help-block.twig' %}
    </div>

</div>
