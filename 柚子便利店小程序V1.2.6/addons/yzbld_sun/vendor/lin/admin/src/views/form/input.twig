<div class="{{viewClass['form-group']}}
 {% if error != "" %}
            has-error
{% endif %}
">

    <label for="{{id}}" class="{{viewClass['label']}} control-label">{{label}}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{viewClass['field']}}">

        {% include 'form/error.twig' %}

        <div class="input-group">

            {% if prepend%}
            <span class="input-group-addon">{{prepend|raw}}</span>
            {% endif %}

            <input {{attributes|raw}} />

            {% if append%}
            <span class="input-group-addon clearfix">{{append|raw}}</span>
            {% endif %}

        </div>


        {% include 'form/help-block.twig' %}


    </div>
</div>