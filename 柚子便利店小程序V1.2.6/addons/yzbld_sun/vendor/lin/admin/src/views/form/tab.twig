<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">

        {% for tab in tabObj %}
        <li
            {% if tab['active'] %}
                class='active'
            {% endif %}
        >
            <a href="#tab-{{tab['id']}}" data-toggle="tab">
                {{tab['title']}} <i class="fa fa-exclamation-circle text-red hide"></i>
            </a>
        </li>
        {% endfor %}

    </ul>
    <div class="tab-content fields-group">

        {% for tab in tabObj %}
        <div class="tab-pane
         {% if tab['active'] %}
                active
            {% endif %}
" id="tab-{{tab['id']}}">
            {% for field in tab['fields'] %}
            {{field|raw}}
            {% endfor %}
        </div>
        {% endfor %}

    </div>
</div>