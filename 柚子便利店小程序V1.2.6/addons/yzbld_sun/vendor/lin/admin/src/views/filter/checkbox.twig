<div class="input-group">
    {% for option,label in options %}
        {% if inline == false %}

            <div class="radio">
        {% endif %}
        <label
                {% if inline %}
                    class="radio-inline"
                {% endif %}
        >
            <input type="radio" name="{{name}}" value="{{option}}" class="minimal {{class}}"
                    {% if option == old %}
                        checked
                    {% endif %}
            />&nbsp;{{label}}&nbsp;&nbsp;
        </label>
        {% if inline == false %}
            </div>
        {% endif %}
    {% endfor %}
</div>