<div class="{{viewClass['form-group']}}
 {% if error != "" %}
            has-error
{% endif %}
">

    <label for="{{id}}" class="{{viewClass['label']}} control-label">{{label}}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{viewClass['field']}}">

        {% include 'form/error.twig' %}

        <div id="{{id}}" style="width: 100%; height: 100%;">
            <p>{{old|raw}}</p>
        </div>

        <input type="hidden" name="{{name}}" value='{{old}}' />

        {% include 'form/help-block.twig' %}


    </div>
</div>