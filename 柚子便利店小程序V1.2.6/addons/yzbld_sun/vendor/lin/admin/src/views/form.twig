<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">{{title}}</h3>

        <div class="box-tools">
            {{headerTools | raw}}
        </div>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ open |raw}}
    <div class="box-body">

        {% if tabObj %}
            {% include 'form/tab.twig' with tabObj %}
        {% else %}
        <div class="fields-group">

            {% for row in rows %}
                {{ row |raw }}
            {% endfor %}
        </div>
        {% endif %}

    </div>
    <!-- /.box-body -->
    <div class="box-footer">

        <div class="col-md-{{width['label']}}">

        </div>
        <div class="col-md-{{width['field']}}">

            {{ submitButton|raw }}
            {{ resetButton|raw }}
        </div>

    </div>


    <!-- /.box-footer -->
    {{close|raw}}
</div>

