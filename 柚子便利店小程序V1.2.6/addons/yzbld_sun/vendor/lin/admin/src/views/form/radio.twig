<div class="{{viewClass['form-group']}}
 {% if error != "" %}
            has-error
{% endif %}
">

    <label for="{{id}}" class="{{viewClass['label']}} control-label">{{label}}
        {% include 'form/required.twig' %}
    </label>

    <div class="{{viewClass['field']}}">

        {% include 'form/error.twig' %}

        {% for option,label in options %}
        {% if inline == false %}

        <div class="radio">
        {% endif %}
            <label
                {% if inline %}
                   class="radio-inline"
                {% endif %}
            >
            <input type="radio" name="{{name}}" value="{{option}}" class="minimal {{class}}"
                {% if option == old %}
                   checked
                {% endif %}
            />&nbsp;{{label}}&nbsp;&nbsp;
            </label>
            {% if inline == false %}
                </div>
            {% endif %}
        {% endfor %}

        {% include 'form/help-block.twig' %}

    </div>
</div>
