<import src="../../common/common.wxml"></import>
<view class="page">
    <scroll-view scrollX class="nav">
        <view bindtap="tab" data-index="-1" style="color:{{curr==-1?theme.color:''}};border-bottom:{{curr==-1?theme.color+' 4rpx solid':''}};">全部</view>
        <view bindtap="tab" data-index="{{idx}}" style="color:{{curr==idx?theme.color:''}};border-bottom:{{curr==idx?theme.color+' 4rpx solid':''}};" wx:for="{{nav}}" wx:for-index="idx" wx:key="idx">{{item.name}}</view>
    </scroll-view>
    <view class="nav_block"></view>
    <view class="list">
        <navigator class="item" url="../detail/index?&id={{item.id}}" wx:for="{{list}}" wx:for-index="idx" wx:key="idx">
            <image src="{{item.simg}}"></image>
            <view class="item_r">
                <view class="title">{{item.name}}</view>
                <view class="item_rr">
                    <view class="item_rl">
                        <view>到期时间：{{item.end}}</view>
                        <view style="color:{{theme.color}};">￥{{item.price}}</view>
                    </view>
                    <view class="item_btn">立即学习</view>
                </view>
            </view>
        </navigator>
    </view>
    <template is="footer" data="{{footer:footer,footerCurr:footerCurr,theme:theme,config:config,shadow:shadow,get_userinfo:get_userinfo,audio_status:audio_status,audio_on:audio_on}}"></template>
</view>
