<import src="../../common/common.wxml"></import>
<view class="page">
    <scroll-view scrollX class="nav">
        <view style="color:theme.color;border-bottom:{{theme.color}} 4rpx solid;">{{list.order.line_name}}</view>
    </scroll-view>
    <view class="nav_block"></view>
    <view class="list">
        <navigator class="item" url="../../video/detail?id={{item.id}}" wx:for="{{list.video}}" wx:key="idx">
            <image class="simg" mode="aspectFill" src="{{item.bimg}}"></image>
            <view class="itemR">
                <view class="sp1">{{item.name}}</view>
                <view class="item_t">
                    <view>讲师:{{item.teacher_name}}</view>
                    <view class="sp2">人气:{{item.click}}</view>
                    <view class="sp1" style="color:{{theme.color}};">{{item.price==0?'免费':'¥'+item.price}}</view>
                </view>
            </view>
        </navigator>
        <navigator class="item" url="../../audio/detail?id={{item.id}}" wx:for="{{list.audio}}" wx:key="idx">
            <image class="simg" mode="aspectFill" src="{{item.simg}}"></image>
            <view class="itemR">
                <view class="sp1">{{item.name}}</view>
                <view class="item_t">
                    <view></view>
                    <view class="sp2"></view>
                    <view class="sp1" style="color:{{theme.color}};">{{item.price==0?'免费':'¥'+item.price}}</view>
                </view>
            </view>
        </navigator>
    </view>
    <template is="footer" data="{{footer:footer,footerCurr:footerCurr,theme:theme,config:config,shadow:shadow,get_userinfo:get_userinfo}}"></template>
</view>
