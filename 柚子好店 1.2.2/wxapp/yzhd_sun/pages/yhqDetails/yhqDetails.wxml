<view>
    <view class="shop_header">
        <image class="shopBj ab" src="../../resource/images/shops/headerBj.jpg"></image>
        <view class="logo_box rel">
            <image class="shop_logo" src="{{url}}{{CouponInfo.logo}}"></image>
        </view>
        <view class="shopName rel">{{CouponInfo.store_name}}</view>
    </view>
    <view class="yhqMes_box flex-center-col rel">
        <view class="moneyNum">{{CouponInfo.name}}</view>
        <view class="useRule">{{CouponInfo.desc}}</view>
        <view class="xianl" wx:if="{{CouponInfo.type==1}}">满{{CouponInfo.price}}元减{{CouponInfo.dis_price}}</view>
        <view class="xianl" wx:if="{{CouponInfo.type==2}}">满{{CouponInfo.money}}元折扣{{CouponInfo.reduce_money}}%</view>
        <button bindtap="getNowTap" class="lqStatus">立即领取</button>
        <view class="periodDate">有效期至{{CouponInfo.expire_date}}</view>
    </view>
    <view class="bottom_box">
        <view class="hexiao_box" wx:if="{{qrcode}}">
            <text class="notice_title">
                <text class="left_b"></text>消费核销<text class="right_b"></text>
            </text>
            <view class="hexiao_contents flex-center-col">
                <view class="hexiao_title">核销说明：<text class="hexiao_contents">消费时，向工作人员出示下方二维码，工作人员通过扫一扫二维码完成核销。</text>
                </view>
                <image class="code_img" src="{{url}}{{qrcode}}"></image>
            </view>
        </view>
        <view class="notice_box">
            <text class="notice_title">
                <text class="left_b"></text>使用说明<text class="right_b"></text>
            </text>
            <view class="notice_contents">
                <text>{{CouponInfo.ps}}</text>
                <text wx:if="{{CouponInfo.ps==''}}">无</text>
            </view>
        </view>
        <view class="notice-box">
            <text class="notice_title">
                <text class="left_b"></text>商家信息<text class="right_b"></text>
            </text>
            <view class="shop-mes flex-center-spa">
                <view>
                    <view class="detail_mes">
                        <image class="seller_icon" src="../../resource/images/index/shangjia.png"></image>
                        <text>商家名称：{{shopInfo.name}}</text>
                    </view>
                    <view class="detail_mes">
                        <image class="seller_icon" src="../../resource/images/index/shijian.png"></image>
                        <text>营业时间：{{shopInfo.shop_time}}</text>
                    </view>
                    <view class="detail_mes">
                        <image class="seller_icon" src="../../resource/images/index/dianhua.png"></image>
                        <text>商家电话：{{shopInfo.phone}}</text>
                    </view>
                    <view class="detail_mes">
                        <image class="seller_icon" src="../../resource/images/index/dizhi.png"></image>
                        <text>商家地址：{{shopInfo.address}}</text>
                    </view>
                </view>
                <view>
                    <view bindtap="goShopTap" class="rightBtn">进店</view>
                    <view bindtap="makePhone" class="rightBtn">拨号</view>
                </view>
            </view>
        </view>
    </view>
</view>
<view class="backBox ab">
    <image catchtap="gomanagerTap" class="entrIcon" src="../../resource/images/index/back.png"></image>
</view>
