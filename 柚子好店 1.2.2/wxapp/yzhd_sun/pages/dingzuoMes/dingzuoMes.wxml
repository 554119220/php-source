<view>
    <form bindsubmit="bindSubmit">
        <view class="form_box">
            <view class="mesBox flex-center">
                <view class="mes-word">订座信息：</view>
                <input disabled class="dingzuoMes" name="hadSel" value="{{postLaterData}}/{{currNum}}/{{currSelWeizhi}}"></input>
            </view>
            <view class="bottom_mes">
                <view class="mes-title flex-center">
                    <image class="mes_icon" src="../../resource/images/shops/xinxi.png"></image>
                    <view>用餐人信息</view>
                </view>
                <view class="label_row flex-center">
                    <input class="inputbox" name="name" placeholder="请输入姓名" placeholderClass="diyholder" type="text"></input>
                </view>
                <view class="label_row flex-center">
                    <input bindinput="inputTap" class="inputbox" name="tel" placeholder="请输入电话号码" placeholderClass="diyholder" type="number"></input>
                </view>
                <view class="label_row flex-center">
                    <input class="inputbox" name="notes" placeholder="用餐备注，我们尽量满足(选填)" placeholderClass="diyholder"></input>
                </view>
            </view>
            <button class="nowdz_btn" formType="submit">立即订座</button>
        </view>
    </form>
</view>
