<view>
    <view class="shop_header rel">
        <image class="shopBj ab" src="../../resource/images/shops/headerBj.jpg"></image>
        <view class="logo_box rel">
            <image class="shop_logo rel" src="{{url}}{{shopInfo.logo}}"></image>
        </view>
        <view class="shopName rel">{{shopInfo.name}}</view>
        <view class="header_classic flex-center-aro rel">
            <view bindtap="goShopMenus" class="classic_item flex-center" data-index="0" hidden="{{openGroup}}">
                <image class="classic_icon" src="../../resource/images/shops/caidan.png"></image>
                <view>菜单</view>
            </view>
            <view bindtap="goShopMenus" class="classic_item flex-center" data-index="1" hidden="{{openBook}}">
                <image class="classic_icon" src="../../resource/images/shops/dingzuo.png"></image>
                <view>订座</view>
            </view>
            <view bindtap="goShopMenus" class="classic_item flex-center" data-index="2" hidden="{{openComment}}">
                <image class="classic_icon" src="../../resource/images/shops/pingjia.png"></image>
                <view>评价</view>
            </view>
        </view>
    </view>
    <view class="canyuRow flex-center">
        <view class="visitorRow">
            <image class="visitorsImg" src="{{item.img}}" wx:for="{{shareUserInfo}}"></image>
            <image class="visitorsImg" hidden="{{virtualHeader}}" src="{{item}}" wx:for="{{virtualArray}}"></image>
        </view>
        <view class="moreVisitors" hidden="{{shareNum}}">
            <image class="moreVis" src="../../resource/images/index/touxiang-1.png"></image>
        </view>
        <view class="canyuNum">{{shopJoinNum}}人推荐</view>
        <view class="shareBtn">
            <view bindtap="bindShareTap" class="btn" data-statu="open">推荐好店</view>
        </view>
    </view>
    <view class="noGoods" wx:if="{{shopGoods.length==0}}">暂无商品</view>
    <view bindtap="goDapaiTap" class="goodItem" data-gid="{{item.id}}" wx:for="{{shopGoods}}">
        <image class="goodsImg" src="{{url}}{{item.pic}}"></image>
        <view class="goodsDes">
            <view class="goodsTag">{{item.cate_name}}</view>
            <view class="goodsYh">{{item.goods_name}}</view>
        </view>
        <view class="bottomBox flex-center-spa">
            <view class="left_mes">
                <view class="price_box flex-center">
                    <view class="now_price">¥{{item.current_price}}</view>
                    <view class="fensika">
                        <text class="fensikaW">粉丝卡</text>
                        <text class="fensikaP">¥{{item.fans_price}}</text>
                    </view>
                </view>
                <view class="shic_price">市场价：¥{{item.original_price}}</view>
            </view>
            <view class="right_mes">
                <view class="buy_People">{{item.goods_num}}人购买</view>
                <view class="buy_Now">立即购买</view>
            </view>
        </view>
    </view>
    <view class="yhq-wrap">
        <text class="notice_title">
            <text class="left_b"></text>专属优惠<text class="right_b"></text>
        </text>
        <view bindtap="goYhqDetails" class="yhq_item border_b" data-bid="{{item.branch_id}}" data-id="{{item.id}}" wx:for="{{couponsList}}">
            <view class="yhq_box">
                <image class="yhqbj" src="../../resource/images/shops/youhuiquanbj.png"></image>
                <text class="yhq_num rel">{{item.name}}</text>
                <view class="yhq_intro flex-center-spa rel">
                    <view class="dot flex1">{{item.desc}}</view>
                    <view class="lqBtn">领券</view>
                </view>
                <view class="fans_own rel">粉丝卡会员专享</view>
            </view>
        </view>
        <view wx:if="{{couponsList.length==0}}">暂无</view>
    </view>
    <view class="taocan-wrap">
        <text class="notice_title">
            <text class="left_b"></text>套餐推荐<text class="right_b"></text>
        </text>
        <view bindtap="goMealDetails" class="taocanss_item" data-bid="{{item.branch_id}}" data-mealid="{{item.id}}" wx:for="{{mealInfo}}">
            <view class="taocan_item border_b flex-center">
                <view class="taocan_box">
                    <image class="taocan_img" src="{{url}}{{item.pic}}"></image>
                </view>
                <view class="right_box dot">
                    <view class="taocan_name">{{item.goods_name}}</view>
                    <view class="taocan_goods dot">{{item.desc}}</view>
                    <view class="yishou_mes flex-center-spa">
                        <view class="price">￥{{item.current_price}}</view>
                        <view class="yishou_num">已售{{item.goods_num}}</view>
                    </view>
                </view>
            </view>
        </view>
        <view wx:if="{{mealInfo.length==0}}">暂无</view>
    </view>
    <view class="notice-box">
        <text class="notice_title">
            <text class="left_b"></text>商家信息<text class="right_b"></text>
        </text>
        <view class="shop-mes flex-center-spa">
            <view>
                <view class="detail_mes">
                    <image class="seller_icon" src="../../resource/images/index/shangjia.png"></image>
                    <text>商家名称：{{shopInfo.name}}</text>
                </view>
                <view class="detail_mes">
                    <image class="seller_icon" src="../../resource/images/index/shijian.png"></image>
                    <text>营业时间：{{shopInfo.shop_time}}</text>
                </view>
                <view class="detail_mes">
                    <image class="seller_icon" src="../../resource/images/index/dianhua.png"></image>
                    <text>商家电话：{{shopInfo.phone}}</text>
                </view>
                <view class="detail_mes">
                    <image class="seller_icon" src="../../resource/images/index/dizhi.png"></image>
                    <text>商家地址：{{shopInfo.address}}</text>
                </view>
            </view>
            <view>
                <view bindtap="makePhone" class="rightBtn">拨号</view>
            </view>
        </view>
    </view>
    <view class="comments flex-center-col">
        <text class="notice_title">
            <text class="left_b"></text>用户评论<text class="right_b"></text>
        </text>
        <view class="noComments" wx:if="{{noComments}}">暂无评论</view>
        <view class="com_item" wx:for="{{commentsInfo}}">
            <view class="top_row">
                <view class="flex-center">
                    <view class="userBox">
                        <image class="userHeader" src="{{item.user_info.img}}"></image>
                    </view>
                    <view class="nick_box">
                        <view class="nick-name">{{item.user_info.name}}</view>
                        <view class="date-time">{{item.comment_time}}</view>
                    </view>
                </view>
                <view class="flex-center">
                    <view class="starRow">
                        <image class="starImgs" src="../../resource/images/shops/xingxing.png" wx:for="{{item.star}}"></image>
                        <image class="starImgs" src="../../resource/images/shops/kongxin.png" wx:for="{{item.kong}}"></image>
                    </view>
                </view>
            </view>
            <view class="contents">
                <text>{{item.msg}}</text>
            </view>
        </view>
    </view>
    <view class="footer-wrap">
        <view class="footer-box flex-center-spa">
            <view class="left_box flex-center-spa">
                <view bindtap="goHomeTap" class="foot_item flex-center">
                    <image class="foot_icon" src="../../resource/images/index/shouye.png"></image>
                    <text>首页</text>
                </view>
                <view class="foot_item flex-center">
                    <view bindtap="bindShareTap" class="foot-share" data-statu="open"></view>
                    <image class="foot_icon" src="../../resource/images/index/fenxiang.png"></image>
                    <text>分享</text>
                </view>
            </view>
            <view bindtap="makePhone" class="burNow-btn">联系商家</view>
        </view>
    </view>
</view>
<login bindtogetuserinfo="updateUserInfo" modalHidden="{{is_modal_Hidden}}"></login>
<poster bind:create="getposterurl" posterInfo="{{posterinfo}}"></poster>
<view bindtap="close" class="drawer_screen" data-statu="close" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
    <button class="shareFriend" data-bid="{{shopInfo.id}}" openType="share">发给好友</button>
    <view bindtap="showPoster" class="actionList border_t" data-bid="{{shopInfo.id}}">生成卡片</view>
    <view bindtap="close" class="actionList" data-statu="close">取消</view>
</view>
