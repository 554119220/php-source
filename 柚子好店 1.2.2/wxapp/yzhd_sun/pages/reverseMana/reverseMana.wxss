@import "../mine/mine.wxss";

.dingzuos_box {
    background-color: #fff;
    overflow-y: scroll;
}

.order_list {
    max-height: 100%;
}

.shopsname {
    margin: 0 0 10rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.jutiyq {
    font-size: 26rpx;
    color: #999;
    margin: 0 0 10rpx 0;
}

.dingz_status {
    font-size: 26rpx;
    color: #999;
}

.dz_price {
    font-size: 26rpx;
    color: #ff5555;
}

.btn {
    width: 118rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.refused {
    border: 1rpx solid #FF9D55;
    color: #FF9D55;
    margin: 0 20rpx;
}

.deter {
    background: rgba(255,157,85,1);
    color: #fff;
}

.btnBox {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin: 10rpx 0 0 0;
}