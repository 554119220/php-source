.bestShop_lb {
    display: inline-block;
    width: 8rpx;
    height: 36rpx;
    border-radius: 6rpx;
    background-color: #ff9d55;
    margin-right: 20rpx;
}

.bestShop_rb {
    display: inline-block;
    width: 8rpx;
    height: 36rpx;
    border-radius: 6rpx;
    background-color: #ff9d55;
    margin-left: 20rpx;
}

.swiper_box {
    width: 100%;
    height: 360rpx;
}

.slide-image {
    width: 100%;
    height: 360rpx;
}

.goodsList {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.status_box {
    margin-top: 30rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.status_item {
    font-size: 30rpx;
    color: #333;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
}

.status_item.active {
    font-size: 36rpx;
    font-weight: bold;
}

.goodItem {
    margin: 30rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0.629px 0.777px 10px 0px rgba(144,147,147,0.1);
}

.goodsImg {
    width: 100%;
    height: 420rpx;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    display: flex;
}

.goodsName {
    font-size: 26rpx;
    color: #333;
    margin: 15rpx 30rpx 5rpx;
}

.goodsDes {
    display: flex;
    margin: 10rpx 30rpx 15rpx;
    font-size: 26rpx;
    color: #999;
}

.starImgs {
    width: 30rpx;
    height: 30rpx;
    margin: 0 10rpx 0 0;
}

.renjun {
    margin: 0 40rpx 0 25rpx;
}

.goodsTag {
    width: 60rpx;
    height: 40rpx;
    background-color: yellow;
    font-size: 26rpx;
    color: #333;
    text-align: center;
    line-height: 40rpx;
    margin: 0 20rpx 0 0;
}

.goodsYh {
    font-size: 30rpx;
    color: #333;
    flex: 1;
}

.bottomBox {
    padding: 20rpx 0 20rpx;
    margin: 0 30rpx 0;
}

.dw_icon {
    width: 25rpx;
    height: 30rpx;
    margin: 0 15rpx 0 0;
}

.address {
    color: #999;
    font-size: 26rpx;
}

.distance {
    font-size: 26rpx;
    color: #ff9d55;
}

.now_price {
    font-size: 36rpx;
    color: #ff5555;
}

.left_mes {
    margin: 0 0 0 30rpx;
}

.fensika {
    min-width: 200rpx;
    height: 40rpx;
    border-radius: 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    margin: 0 0 0 30rpx;
}

.fensikaW {
    width: 50%;
    height: 100%;
    background-color: #ff9d55;
    text-align: center;
    color: #fff;
    display: inline-block;
}

.fensikaP {
    width: 50%;
    height: 100%;
    background-color: #fcd1b1;
    color: #ff9d55;
    text-align: center;
    display: inline-block;
}

.shic_price {
    font-size: 26rpx;
    color: #999;
    text-decoration: line-through;
    margin: 10rpx 0rpx 0rpx;
}

.right_mes {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin: 0 30rpx 0 30rpx;
}

.buy_People {
    font-size: 26rpx;
    color: #999;
}

.buy_Now {
    width: 150rpx;
    height: 60rpx;
    background-color: #ff5555;
    border-radius: 10rpx;
    color: #fff;
    line-height: 60rpx;
    text-align: center;
    font-size: 32rpx;
    margin: 20rpx 0rpx 0rpx;
}