@import "../orderDetails/orderDetails.wxss";

.tagText {
    flex: 1;
    margin: 0 0 0 20rpx;
    text-align: right;
}

.hexiao_box {
    background-color: #fff;
    margin: 30rpx 0;
}

.hexiao_contents {
}

.hexiao_title {
    font-size: 26rpx;
    color: #333;
}

.hexiao_contents {
    font-size: 26rpx;
    color: #999;
    margin: 0 30rpx;
    padding: 20rpx 0 30rpx;
}

.code_img {
    width: 280rpx;
    height: 280rpx;
    margin: 30rpx 0 0 0;
}

.hexiao_info {
    color: #999;
    margin: 0 30rpx;
}

.hexiao_info:nth-child(3) {
    padding: 0 0 20rpx;
}

.notice-box {
    margin: 0 0 30rpx;
    padding: 0 30rpx 30rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.shop-mes {
    width: 100%;
    margin: 20rpx 0 0;
}

.notice_title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    margin: 30rpx 30rpx 0;
}

.notice_con {
    font-size: 26rpx;
    color: #333;
    margin: 20rpx 0 0 0;
}

.detail_mes {
    font-size: 26rpx;
    color: #333;
}

.seller_icon {
    width: 25rpx;
    height: 25rpx;
    margin: 0 20rpx 0 0;
}

.rightBtn {
    width: 80rpx;
    height: 40rpx;
    border-radius: 10rpx;
    background-color: #ffde55;
    text-align: center;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 30rpx;
}